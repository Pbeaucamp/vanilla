<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom.v2">
	
	<ui:with field='label' type='bpm.fmloader.client.I18N.LabelsConstants' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.mainPanel {
			min-width: 950px;
			min-height: 550px;
			position: relative;
		}
		
		.toolbar {
			margin: 4px;
		}
		
		.dateBox {
		}
		
		.panelData {
			position: absolute;
			top: 60px;
			bottom: 0px;
			width: 100%;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			padding: 8px;
			background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<div class="flex {style.toolbar}">
			<c:LabelDateBox ui:field="dbDate" label="{label.selectedDate}" lastDateVisible="true" addStyleNames="{style.dateBox}"/>
			<c:Button ui:field="btnLoad" text="{label.LoadData}" height="25" imageSize="24" addStyleNames="inline"/>
		</div>
		<div>
			<g:Image ui:field="btnShare" resource="{resources.share_24_black}" title="{commonLabels.Share}" addStyleNames="{style.btnToolbar}" />
		</div>
		<g:SimplePanel ui:field="panelData" addStyleNames="{style.panelData}"/>
	</g:HTMLPanel>
</ui:UiBinder> 