<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.fmloader.client.panel">
	
	<ui:with field='label' type='bpm.fmloader.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.fmloader.client.images.ImageResources' />
	
	<ui:style>
		.metricsPage {
			width: 100%;
			height: 100%;	
			background-color: #E8EEF7;
		}
		
		.menuPanel {
			width: 100%;
			height: 40px;
			background: #399d93;
			box-shadow: 0 3px 10px -3px #000000;
			/*background: -webkit-gradient(linear, 0 0, 0 100%, from(#d1dff0), to(#d2e1f0));
			background: -moz-linear-gradient(#d1dff0, #d2e1f0);
			background: -o-linear-gradient(#d1dff0, #d2e1f0);
			background: linear-gradient(#d1dff0, #d2e1f0);*/
		}
		
		.content {
			margin-left: 5px;
			margin-top: 5px;
		}
		
		.menuInfo {
		    position: absolute;
		    left: 20px;
		    top: 0px;
		}
		
		.dockPanel {
			position: absolute;
			top: 55px;
			right: 5px;
			left: 5px;
			bottom: 5px;
	 		
	 	}
	 	
	 	.lblInfo {
	 		font-size: 12px;
	 		margin: 3px;
	 		color: white;
	 	}
	 	
	 	.lblTheme {
	 		font-size: 12px;
	 		font-style: italic;
	 		margin-right: 5px;
	 		color: white;
	 	}
	 	.lbl {
			float: left;
			margin: 7px 5px 5px;
		}
		.lstBox {
			width: 150px;
			margin:5px;	
		}
		.inline{
			vertical-align: middle;
			display: inline-block;
			
		}
		.lblDate{
			font-size: 1em;
			color: white;
			margin-right: 5px;
			margin-top: 10px;
		}
		.icCalendar{
			transition: 1s all;
			-webkit-transition: 1s all;
			-moz-transition: 1s all;
			cursor: pointer;
			margin: 4px;
			position: absolute;
			left: 120px;
		}
		.icCalendar:hover{
			opacity: 0.5;
		}
		.calendarPanel {
			position: absolute;
			left: 775px;
		}
	</ui:style>
	<gwt:HTMLPanel>
		<!-- Menu -->
		<gwt:AbsolutePanel addStyleNames="{style.menuPanel}">
			<gwt:Image ui:field="imgAccueil"/>
			<gwt:Image ui:field="imgLogo"/>
			<!-- <gwt:Image ui:field="imgQuery"/> -->
			
			<!-- Infos panel -->
			<gwt:HTMLPanel addStyleNames="{style.menuInfo}" ui:field="panelFilter">
			
				<!-- <gwt:HTMLPanel addStyleNames="{style.lblInfo}, {style.inline}">
		    		<gwt:Label text="{label.selectedGroup}" styleName="{style.lbl}"></gwt:Label> <gwt:ListBox ui:field="lstGroups" addStyleNames="{style.lstBox}"></gwt:ListBox>
		    	</gwt:HTMLPanel>
		    	<gwt:HTMLPanel addStyleNames="{style.lblInfo}, {style.inline}">
		    		<gwt:Label text="{label.selectedObservatoire}" styleName="{style.lbl}"></gwt:Label> <gwt:ListBox ui:field="lstObs" addStyleNames="{style.lstBox}"></gwt:ListBox>
		    	</gwt:HTMLPanel>
		    	<gwt:HTMLPanel addStyleNames="{style.lblInfo}, {style.inline}">
		    		<gwt:Label text="{label.selectedTheme}" styleName="{style.lbl}"></gwt:Label> <gwt:ListBox ui:field="lstThemes" addStyleNames="{style.lstBox}"></gwt:ListBox>
		    	</gwt:HTMLPanel> -->
			
			<!-- 	<table>
					<tr>
						<td><gwt:Label ui:field="lblUsername" styleName="{style.lblInfo}"/></td>
						<td><gwt:Label ui:field="lblObs" styleName="{style.lblInfo}"/></td>
					</tr>
					<tr>
						<td><gwt:Label ui:field="lblCollectivity" styleName="{style.lblInfo}"/></td>
						<td><gwt:HorizontalPanel><gwt:Label ui:field="lblTheme" styleName="{style.lblTheme}"/>
						<gwt:ListBox ui:field="lstThemes"></gwt:ListBox></gwt:HorizontalPanel></td>
					</tr>
				</table> -->
			</gwt:HTMLPanel>
			
			<gwt:HTMLPanel addStyleNames="{style.calendarPanel}">
				<gwt:Image resource="{resources.calendar}" ui:field="lblDatePicker" addStyleNames="{style.icCalendar}" title="{label.changeDate}"/>
				<gwt:Label ui:field="lblDateTitle" text="Date" addStyleNames="{style.inline} {style.lblDate}"></gwt:Label>
			</gwt:HTMLPanel>
			
			
		</gwt:AbsolutePanel>
		
		<gwt:DockLayoutPanel ui:field="dockPanel" addStyleNames="{style.dockPanel}">
			<gwt:west size="350">
				<gwt:StackLayoutPanel ui:field="stackMetricPanel">
					
				</gwt:StackLayoutPanel>
			</gwt:west>
		
			<gwt:center>
				<gwt:SimplePanel ui:field="tableContentPanel">
					
					<!-- <my:CustomTabLayoutPanel ui:field="tabPanel"/> -->
				</gwt:SimplePanel>
			</gwt:center>
		
		</gwt:DockLayoutPanel>
		
	</gwt:HTMLPanel>
</ui:UiBinder> 