<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fmloader.client.I18N.LabelsConstants' />
	
	<ui:style>
		.contentPanel {
			overflow: auto;
			height: 100%;
			width: 100%;
		}
		.imgSave {
			float: right;
			margin-right: 35px;
		}
		.bottomBtn {
		    border: 1px solid #555555;
		    color: #FFFFFF;
		    cursor: pointer;
		    display: inline-block;
		    height: 40px;
		    margin: 10px;
		    transition: all 1s ease 0s;
		    width: 45%;
		    background: none repeat scroll 0 0 #399d93;
		}
		.btnPanel {
			text-align:center;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" styleName="{style.contentPanel}">
		<g:HTMLPanel ui:field="gridPanel"></g:HTMLPanel>
		<g:HTMLPanel styleName="{style.btnPanel}">
			<g:Button ui:field="imgCancelChange" text="{label.cancelChanges}" addStyleNames="{style.bottomBtn}"></g:Button>
			<g:Button ui:field="imgSave" text="{label.saveChanges}" addStyleNames="{style.bottomBtn}"></g:Button>
		</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 