<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.panels">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
			min-width: 1024px;
		}
		
		.topToolbar {
			position: absolute;
			height: 60px;
			top: 0px;
			left: 0px;
			right: 0px;
			line-height: 60px;
			z-index: 1;
		}
		
		.navigationPanel {
		    bottom: 35px;
		    overflow: auto;
		    position: absolute;
		    top: 0;
			-webkit-box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.42);
			-moz-box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.42);
			box-shadow: 0px 2px 5px 0px rgba(50, 50, 50, 0.42);
			display:none;
		}
		
		.contentPanel {
		    background: none repeat scroll 0 0 #FFFFFF;
		    bottom: 35px;
		    left: 0px;
		    overflow: auto;
		    position: absolute;
		    right: 0;
		    top: 65px;
		}
		
		.footer {
		    bottom: 0;
		    height: 30px;
		    left: 0;
		    line-height: 30px;
		    position: absolute;
		    text-align: center;
		    width: 100%;
		}
		
		.panelBottom {
			text-align: center;
			padding: 5px;
		}
		
		.copyright {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:SimplePanel addStyleNames="{style.topToolbar}">
			<my:TopToolbar ui:field="topToolbar"/>
		</g:SimplePanel>
		<my:NavigationMenuPanel ui:field="navigationPanel" addStyleNames="{style.navigationPanel}"/>
		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
		<g:SimplePanel ui:field="footerPanel" addStyleNames="{style.footer}">
			<g:Label text="{labels.Copyright}" addStyleNames="{style.copyright}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 