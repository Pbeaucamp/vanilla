<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	
	<ui:style>
		.lbl {
	    	margin: 35px 10px 10px;
		}
	
		.margin {
	    	margin-left: 10px;
		}
		
		.lstColumns {
			width: 215px;
		}
	
		.lst {
			width: 150px;
		}
		
		.txt {
			width: 200px;
		}
		
		.radio {
		    display: block;
    		margin-top: 10px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label text="{labels.DefinitionRuleColumnComparison}" addStyleNames="{style.lbl}"/>
		<g:HTMLPanel>
			<p:ListBoxWithButton ui:field="lstColumns" addStyleNames="inline, vertical, {style.margin}, {style.lstColumns}"/>
			<p:ListBoxWithButton ui:field="lstOperators" addStyleNames="inline, vertical, {style.lst}"/>
			<p:LabelTextBox ui:field="txtValue" addStyleNames="inline, vertical, {style.txt}"/>
		</g:HTMLPanel>
		<g:Label ui:field="lblIn" text="{labels.SeparateValuesWithSemicolon}" addStyleNames="{style.lbl}"/>
		<g:HTMLPanel>
			<g:RadioButton ui:field="radioNull" name="radioCondition" text="{labels.IfConditionIsMetColumnMustNotBeEmpty}" value="true" addStyleNames="{style.radio}"/>
			<g:RadioButton ui:field="radioEqualTo" name="radioCondition" text="{labels.IfConditionIsMetColumnMustBeEqualTo}" addStyleNames="{style.radio}"/>
			<p:LabelTextBox ui:field="txtMainValue" addStyleNames="inline, vertical, {style.txt}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 