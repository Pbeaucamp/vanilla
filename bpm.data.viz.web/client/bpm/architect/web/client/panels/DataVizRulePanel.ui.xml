<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commonResources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.architect.web.client.panels.DataVizRulePanel.MyStyle">
		
		.mainPanel {
			width: 300px;
			height: 100%;
			display: inline-block;
		}
		
		.btn {
			background-color: lightgray;
		    border: 1px solid #D3D3D3;
		    border-radius: 5px 5px 5px 5px;
		    cursor: pointer;
		    display: inline-block;
		    height: 40px !important;
		    line-height: 40px;
		    margin-right: 3px;
		    text-align: center;
		    vertical-align: top;
		    width: 110px;
		}
		
		.btn:HOVER {
	        background: none repeat scroll 0 0 #D0E4F6;
		}
		
		.btnSelected {
	        background: none repeat scroll 0 0 #D0E4F6;
		}
		
		.text {
	        display: inline-block;
		    vertical-align: top;
			white-space: nowrap;
    		overflow:hidden !important;
    		text-overflow: ellipsis;
		}
		
		.panelContent {
		    display: inline-block;
		    overflow: hidden;
	        left: 0px;
		    overflow: hidden;
		    position: absolute;
		    right: 5px;
    		top: 40px;
		    bottom: 5px;
	        border: 1px solid #D3D3D3;
		    bottom: 10px;
		    box-shadow: 1px 5px 5px 0 #9B9B9B;
		}
		
		.toolbarPanel {
		    background: none repeat scroll 0 0 #D0E4F6;
		    border-radius: 3px;
		    box-shadow: 0 0 1px #696969 inset;
		    height: 50px;
		    left: 0px;
		    position: absolute;
    		right: 5px;
		    top: 10px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:40px !important;
			width: 40px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnToolbar:HOVER, .imgExpand:HOVER, .imgCollapse:HOVER  {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelNavigation {
    		bottom: 0px;
		    position: absolute;
		    top: 0px;
    		width: 295px;
		}
		
		.panelTabs {
		    height: 40px;
		    overflow: hidden;
		    position: absolute;
		    top: 0px;
		    width: 100%;
		}
		
		.imgExpand {
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			cursor: pointer;
			padding: 10px;
		    float: left;
		}
		
		.imgCollapse {
			float: right;
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			cursor: pointer;
			padding: 10px;
		}
		
		.imgTabs {
		    height: 24px;
		    width: 24px;
		    margin-top: 8px;
		    margin-right: 7px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgExpand" title="{commonLabels.Expend}" visible="false" resource="{commonResources.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand}"/>
		<g:HTMLPanel ui:field="panelTabs" addStyleNames="{style.panelTabs}">
			<g:FocusPanel ui:field="btnRule" addStyleNames="{style.btn},{style.btnSelected}">
				<g:HTMLPanel>
					<g:Image resource="{resources.ic_check_black_18dp}" addStyleNames="{style.imgTabs}"/>
					<g:Label text="{labels.Rules}" addStyleNames="{style.text}"/>
				</g:HTMLPanel>
			</g:FocusPanel><g:FocusPanel ui:field="btnExplore" addStyleNames="{style.btn}">
				<g:HTMLPanel>
					<g:Image resource="{resources.ic_link_black_18dp}" addStyleNames="{style.imgTabs}"/>
					<g:Label text="Trame" addStyleNames="{style.text}"/>
				</g:HTMLPanel>
			</g:FocusPanel>
		</g:HTMLPanel>
	    <g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
	</g:HTMLPanel>
</ui:UiBinder> 