<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.architect.web.client.panels.DataVizSummaryTabPanel.MyStyle">
		.mainPanel {
		    bottom: 40px;
		    display: inline-block;
		    position: absolute;
		    right: -476px;
		    z-index: 3;
		    
			-webkit-transition: right 1.0s linear;
			-moz-transition: right 1.0s linear;
			transition: right 1.0s linear;
		}
	
		.lblMessage {
		    background-color: #4471C4;
		    border: medium none;
		    border-radius: 0.2857rem 0 0 0.2857rem;
		    box-shadow: 0 0 0 0 rgba(39, 41, 43, 0.15) inset;
		    color: #FFFFFF;
		    cursor: pointer;
		    display: inline-block;
		    font-size: 13px;
		    margin-top: 680px;
		    padding: 0.78571em;
		    text-align: center;
		    text-shadow: none;
		    vertical-align: top;
		    width: 85px;
		    margin-left : -110px;
		}
	
		.panelMessage {
		    display: inline-block;
		    height: 700px;
		    width: 800px;
		    
	        background-color: #FFFFFF;
		    border: medium none;
		    border-radius: 0.2857rem 0.2857rem 0.2857rem 0.2857rem;
		    box-shadow: 0 0 0 1px rgba(39, 41, 43, 0.15), 0 1px 2px 0 rgba(0, 0, 0, 0.05);
		    padding: 1em;
		    position: relative;
		}
		
		.panelContent {
			width: 100%;
			height: 560px;
		}
		
		.content {
    		height: 560px;
		    padding: 2px;
		    width: 98%;
		}
		
		.btn {
			width: 150px;
		}
		
		.btnToolbar {
		    margin-left: 18px;
		    margin-top: 5px;
		    display: inline-block;
		    cursor: pointer;
		}
		
		.btnToolbar:HOVER {
		    color: #3B99CB;
		}
		
		.btnSelected {
		    color: #3B99CB;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">		
		<g:Label ui:field="lblScripts" text="{label.Summary}" addStyleNames="{style.lblMessage}"/><g:HTMLPanel addStyleNames="{style.panelMessage}">
			<my:ListBoxWithButton ui:field="lstColumn" label="{label.Column}"/>
			<g:FocusPanel ui:field="btnChart" addStyleNames="{style.btnToolbar},{style.btnSelected}">
				<g:Label text="{label.Chart}"/>
			</g:FocusPanel>
			<g:FocusPanel ui:field="btnValue" addStyleNames="{style.btnToolbar}">
				<g:Label text="{label.Value}"/>
			</g:FocusPanel>
			<g:SimplePanel addStyleNames="{style.panelContent}">
				<g:SimplePanel ui:field="panelContent" addStyleNames="{style.content}"/>
			</g:SimplePanel>
			<my:CustomButton ui:field="btnHide" text="{label.Hide}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 