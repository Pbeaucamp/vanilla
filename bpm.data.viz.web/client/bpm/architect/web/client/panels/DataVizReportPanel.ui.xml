<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='commonResources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.architect.web.client.panels.DataVizReportPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			overflow: hidden;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
			color: black !important;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			bottom: 0px;
			width: 100%;
			overflow: hidden;
		}
		
		.frame {
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
		    <g:Image ui:field="btnOpenInNewTab" resource="{commonResources.tab_new}" title="{commonLabels.OpenNewTab}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="reportPanel" addStyleNames="{style.panelContent}">
			<g:Frame ui:field="reportFrame" addStyleNames="{style.frame}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 