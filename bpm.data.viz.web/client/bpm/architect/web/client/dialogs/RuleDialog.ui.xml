<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field="labels" type="bpm.architect.web.client.I18N.Labels"/>
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />

	<ui:style>
		.mainPanel {
	
		}
		
		.panelLst {
			width: 350px;
		}
		
		.panelRule {
			width: 600px;
			height: 260px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel addStyleNames="{style.panelLst}">
			<p:ListBoxWithButton ui:field="lstType" label="{labels.TypeRule}" width="98%"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelRule" addStyleNames="{style.panelRule}"/>
	</g:HTMLPanel>
</ui:UiBinder> 