<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field="labels" type="bpm.architect.web.client.I18N.Labels"/>
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.architect.web.client.dialogs.dataviz.GroupRulePanel.MyStyle">
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.groupGridPanel {
			width: 100%;
			height: 150px;
		}
		.mappingGridPanel {
			width: 100%;
			height: 300px;
		}
	
	</ui:style>
	<g:HTMLPanel>
		<g:Label text="{commonLabels.Groups}"/>
		<g:Image ui:field="btnAdd" resource="{commons.add_24}"/>
		<g:SimplePanel ui:field="groupPanel" addStyleNames="{style.groupGridPanel}"/>
		<g:Label text="{labels.MappingColGroup}"/>
		<g:SimplePanel ui:field="mappingPanel" addStyleNames="{style.mappingGridPanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 