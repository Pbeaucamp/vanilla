<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="bpm.fd.web.client.panels.PagePanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
			overflow: auto;
		}
		
		.contentPanel {
			width: 4000px;
			height: 1500px;
		    position: relative;
			overflow: hidden;
		}
	</ui:style>
	<g:FocusPanel ui:field="focusPanel" addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelContent" addStyleNames="{style.contentPanel}"/>
	</g:FocusPanel>
</ui:UiBinder> 