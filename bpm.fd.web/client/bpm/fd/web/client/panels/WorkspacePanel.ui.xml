<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:widg="urn:import:bpm.fd.web.client.widgets">
	
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='resources' type='bpm.fd.web.client.images.DashboardImage' />
	<ui:with field='label' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.fd.web.client.panels.WorkspacePanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
			border-left: 1px solid lightgrey;
			overflow: auto;
			margin: auto;
		    background: #E6E6E6;
		}
		
		.parentPanel {
			position: absolute;
			top: 50px;
			left: 10px;
			right: 10px;
			bottom: 0px;
		}
		
		.toolbarParent {
			position: absolute;
			top: 160px;
			left: 0px;
			height: 30px;
			right: 50px;
			display: inline-block;
		    transition: top 2s;
		}
		
		.panelContent {
			width: 100%;
			background: white;
			position: absolute;
			top: 190px;
			bottom: 0px;
		    transition: top 2s;
		}

		.toolbarPanel {
			width: 100%;
			height: 50px;
		}
		
		.separator {
		    border: 1px solid #808080;
		    display: inline-block;
		    height: 31px;
		    margin-top: 4px;
		    vertical-align: top;
		    width: 0;
		}		
		
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 30px !important;
		    padding: 10px;
		    width: 30px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.lblPreview {
    		background: none repeat scroll 0 0 #D3D3D3;
		    border-radius: 0 15px 15px 0;
    		color: #808080;
		    display: inline-block;
		    float: right;
		    font-weight: bold;
		    margin-right: 10px;
		    margin-top: 5px;
		    padding: 8px;
		    vertical-align: top;
		    cursor: pointer;
		}
		
		.lblDesigner {
			border-right: 2px solid white;
    		background: none repeat scroll 0 0 #D3D3D3;
		    border-radius: 15px 0 0 15px;
    		color: #808080;
		    display: inline-block;
		    float: right;
		    font-weight: bold;
		    margin-top: 5px;
		    padding: 8px;
		    vertical-align: top;
		    cursor: pointer;
		}
		
		.focus {
			background: none repeat scroll 0 0 #808080;
   			color: #FFFFFF;
		}
		
		.displayNone {
			display: none;
		}
	 	
		.emptyBin {
		    position: absolute;
			bottom: 1em;
		    right: 20px;
		}
		
		.globalFocusPanel {
			width: 100%;
			background: white;
			position: absolute;
			top: 0px;
			height: 120px;
		    transition: height 2s;
		}
		
		.globalPanelContent {
			width: 100%;
			height: 100%;
			position: relative;
			overflow: hidden;
		}
		
		.dragOver {
			background: #F2F2F2;
		}
		
		.parentFrame {
			position: absolute;
			top: 50px;
			left: 10px;
			right: 10px;
			bottom: 10px;
		    background: none repeat scroll 0 0 #FFFFFF;
		}
		
		.frame {
			width: 100%;
			height: 100%;
		}
		
		.panelBtnHeaderParent {
		    height: 30px;
		    position: absolute;
		    top: 120px;
		    width: 100%;
		    transition: top 2s;
		}
		
		.panelBtnHeader {
			margin: auto;
			width: 410px;
		}
		
		.panelHeader {
			width: 200px;
			display: inline-block;
		    height: 100%;
		    border: 1px solid #D3D3D3;
		    cursor: pointer;
		    background: none repeat scroll 0 0 #FFFFFF;
		}
		
		.panelHeaderContent {
		    text-align: center;
		    height: 100%;
		    width: 100%;
		}
		
		.imgHeader {
		    display: inline-block;
		    margin-top: 2px;
		    vertical-align: top;
		}
		
		.lblHeader {
		    display: inline-block;
		    margin-left: 5px;
		    margin-top: 5px;
		    vertical-align: top;
		}
		
		.grid {
			background-size: 40px 40px;    
			background-image: literal("repeating-linear-gradient(0deg, #ccc, #ccc 1px, transparent 1px, transparent 40px),repeating-linear-gradient(-90deg, #ccc, #ccc 1px, transparent 1px, transparent 40px)");
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnSave" resource="{commons.save}" title="{label.Save}" addStyleNames="{style.btnToolbar}">
			</g:Image><g:Image ui:field="btnSaveAsTemplate" resource="{commons.template_26}" title="{commonLabels.SaveAsTemplate}" addStyleNames="{style.btnToolbar}">
			</g:Image><g:Image ui:field="btnAddPage" resource="{resources.add_page}" title="{label.AddPage}" addStyleNames="{style.btnToolbar}">
			</g:Image>
			
			<g:HTMLPanel addStyleNames="{style.separator}"/>
			
			<g:Image ui:field="btnUndo" resource="{commons.undo_24}" title="{label.Undo}" addStyleNames="{style.btnToolbar}">
			</g:Image><g:Image ui:field="btnRedo" resource="{commons.redo_24}" title="{label.Redo}" addStyleNames="{style.btnToolbar}"/>
			
			<g:HTMLPanel addStyleNames="{style.separator}"/>
		
			<g:Image ui:field="btnPreferences" resource="{commons.viewer_tools}" title="{label.Preferences}" addStyleNames="{style.btnToolbar}">
			</g:Image><g:Image ui:field="btnGrid" resource="{resources.grid}" title="{label.DisplayGridOnWorkspace}" addStyleNames="{style.btnToolbar}"/>
			
			<g:HTMLPanel addStyleNames="{style.separator}"/>
			
			<g:Image ui:field="btnAlignTop" resource="{resources.align_top}" title="{label.AlignTop}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAlignBottom" resource="{resources.align_bottom}" title="{label.AlignBottom}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAlignLeft" resource="{resources.align_left}" title="{label.AlignLeft}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAlignRight" resource="{resources.align_right}" title="{label.AlignRight}" addStyleNames="{style.btnToolbar}"/>
			
			<g:HTMLPanel addStyleNames="{style.separator}"/>
			
			<g:Image ui:field="btnResizeWidth" resource="{resources.resize_width}" title="{label.ResizeWidth}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnResizeHeight" resource="{resources.resize_height}" title="{label.ResizeHeight}" addStyleNames="{style.btnToolbar}"/>
			
			<g:Label ui:field="btnPreview" text="{label.Preview}" title="{label.Preview}" addStyleNames="{style.lblPreview}">
			</g:Label><g:Label ui:field="btnDesigner" text="{label.Designer}" title="{label.Designer}" addStyleNames="{style.lblDesigner},{style.focus}"/>
			
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="designPanel" addStyleNames="{style.parentPanel}">
			<g:FocusPanel ui:field="headerFocusPanel" addStyleNames="{style.globalFocusPanel}">
				<g:HTMLPanel ui:field="headerContentPanel" addStyleNames="{style.globalPanelContent}"/>
			</g:FocusPanel>
			<g:SimplePanel ui:field="panelBtnHeader" addStyleNames="{style.panelBtnHeaderParent}">
				<g:HTMLPanel addStyleNames="{style.panelBtnHeader}">
					<g:FocusPanel ui:field="btnHeaderLeft" addStyleNames="{style.panelHeader}">
						<g:HTMLPanel addStyleNames="{style.panelHeaderContent}">
							<g:Image ui:field="imgHeaderLeft" resource="{resources.arrow_up_24}" addStyleNames="{style.imgHeader}"/>
							<g:Label ui:field="lblHeaderLeft" text="{label.HideHeader}" addStyleNames="{style.lblHeader}"/>
						</g:HTMLPanel>
					</g:FocusPanel><g:FocusPanel ui:field="btnHeaderRight" addStyleNames="{style.panelHeader}">
						<g:HTMLPanel addStyleNames="{style.panelHeaderContent}">
							<g:Image ui:field="imgHeaderRight" resource="{resources.arrow_up_24}" addStyleNames="{style.imgHeader}"/>
							<g:Label ui:field="lblHeaderRight" text="{label.HideHeader}" addStyleNames="{style.lblHeader}"/>
						</g:HTMLPanel>
					</g:FocusPanel>
				</g:HTMLPanel>
			</g:SimplePanel>
			
			<g:FlowPanel ui:field="tabHeaderPanel" addStyleNames="{style.toolbarParent}"/>
			<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.panelContent}"/>
			<!-- <widg:BinWidget ui:field="bin" resource="{resources.empty_bin}" addStyleNames="{style.emptyBin}"/> -->
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="previewPanel" visible="false" addStyleNames="{style.parentFrame}">
			<g:Frame ui:field="previewFrame" addStyleNames="{style.frame}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 