<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	
		<my:CustomCheckbox ui:field="showLegend" text="{labels.ShowLegend}"/>
		<my:ListBoxWithButton ui:field="orientation" label="{labels.Orientation}"/>
		<my:ListBoxWithButton ui:field="layout" label="{labels.Layout}"/>
		
		<my:CustomCheckbox ui:field="showBaseLayer" text="{labels.ShowBaseLayer}"/>
		
		<my:LabelTextBox ui:field="numberFormat" placeHolder="{labels.NumberFormat}"/>
	
	</g:HTMLPanel>
</ui:UiBinder> 