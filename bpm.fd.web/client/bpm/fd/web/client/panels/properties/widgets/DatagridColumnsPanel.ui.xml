<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom.v2">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages'/>
	
	<ui:style type="bpm.fd.web.client.panels.properties.widgets.DatagridColumnsPanel.MyStyle">
		.toolbar {
	
		}
	
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 20px !important;
		    padding: 5px;
		    width: 20px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.datagridPanel {
		    display: inline-block;
		    height: 250px;
		    margin-top: 5px;
		    vertical-align: top;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.toolbar}">
			<g:Image ui:field="btnDown" resource="{commons.ic_down}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnUp" resource="{commons.ic_up}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<p:GridPanel ui:field="grid" addStyleNames="{style.datagridPanel}, relative"/>
	</g:HTMLPanel>
</ui:UiBinder> 