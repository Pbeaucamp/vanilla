<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.check {
			width: 98%;
		}
		
		.panelChartImage {
			text-align: center;
		}
	
		.imgChart {
			width: 80%;
		}
	</ui:style>
	<g:HTMLPanel>
		<my:ListBoxWithButton ui:field="lstTypesChart" label="{labels.ChartTypes}"/>
		<my:ListBoxWithButton ui:field="lstTypesDisplay" label="{labels.ChartDisplayTypes}"/>
		<my:CustomCheckbox ui:field="check3D" text="{labels.ThreeD}" addStyleNames="{style.check}" visible="false"/>
		<g:SimplePanel addStyleNames="{style.panelChartImage}">
			<g:Image ui:field="imgChart" addStyleNames="{style.imgChart}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 