<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style>
		.panelSplit {
		    display: inline-block;
		    margin-top: 10px;
		    vertical-align: top;
		    width: 30%;
		}
	</ui:style>
	<g:HTMLPanel>
	
		<my:ListBoxWithButton ui:field="valueField" label="{labels.ValueField}"/>
		
		<g:HTMLPanel addStyleNames="{style.panelSplit}">
			<g:CheckBox ui:field="minMaxFromFields" text="{labels.MinMaxFromField}"/>
			<g:HTMLPanel ui:field="minMaxFields">
				<my:ListBoxWithButton ui:field="minField" label="{labels.MinField}"/>
				<my:ListBoxWithButton ui:field="maxField" label="{labels.MaxField}"/>	
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="minMaxTexts">
				<my:LabelValueTextBox ui:field="minValue" placeHolder="{labels.MinValue}"/>
				<my:LabelValueTextBox ui:field="maxValue" placeHolder="{labels.MaxValue}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.panelSplit}">
			<g:CheckBox ui:field="minMaxThresholdFromFields" text="{labels.MinMaxThresholdFromField}"/>
			<g:HTMLPanel ui:field="minMaxThresholdFields">
				<my:ListBoxWithButton ui:field="minThresholdField" label="{labels.MinThresholdField}"/>
				<my:ListBoxWithButton ui:field="maxThresholdField" label="{labels.MaxThresholdField}"/>	
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="minMaxThresholdTexts">
				<my:LabelValueTextBox ui:field="minThresholdValue" placeHolder="{labels.MinThresholdValue}"/>
				<my:LabelValueTextBox ui:field="maxThresholdValue" placeHolder="{labels.MaxThresholdValue}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.panelSplit}">
			<g:CheckBox ui:field="targetFromField" text="{labels.TargetFromField}"/>
			<g:HTMLPanel ui:field="targetFields">
				<my:ListBoxWithButton ui:field="targetField" label="{labels.TargetField}"/>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="targetText">
				<my:LabelValueTextBox ui:field="targetValue" placeHolder="{labels.TargetValue}"/>
			</g:HTMLPanel>
			
			<my:LabelValueTextBox ui:field="tolerance" placeHolder="{labels.Tolerance}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 