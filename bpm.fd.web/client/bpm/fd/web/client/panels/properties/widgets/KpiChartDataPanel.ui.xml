<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style>
		.datagridPanel {
			width: 100%;
			height: 200px;
		}
		.dateBox {
			margin: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SimplePanel ui:field="chartType"></g:SimplePanel>
	
		<my:ListBoxWithButton ui:field="lstThemes" label="Themes"></my:ListBoxWithButton>
	
		<g:SimplePanel ui:field="metricPanel" styleName="{style.datagridPanel}"></g:SimplePanel>
		<g:SimplePanel ui:field="levelPanel" styleName="{style.datagridPanel}"></g:SimplePanel>
	
		<g:Label text="{labels.StartDate}"></g:Label>
		<g:HTMLPanel>
			<g:RadioButton ui:field="startDateRadio" name="startRadio" text="{labels.ChooseDate}"></g:RadioButton>
			<dp:DateBox ui:field="startDate" styleName="{style.dateBox}"></dp:DateBox>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:RadioButton ui:field="startParamRadio" name="startRadio" text="{labels.AsParameter}"></g:RadioButton>
		</g:HTMLPanel>
		
		<g:CheckBox text="{labels.EndDate}" ui:field="ckEndDate"></g:CheckBox>
		<g:Label text="{labels.EndDate}"></g:Label>
		<g:HTMLPanel>
			<g:RadioButton ui:field="endDateRadio" name="endRadio" text="{labels.ChooseDate}"></g:RadioButton>
			<dp:DateBox ui:field="endDate" styleName="{style.dateBox}"></dp:DateBox>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:RadioButton ui:field="endParamRadio" name="endRadio" text="{labels.AsParameter}"></g:RadioButton>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 