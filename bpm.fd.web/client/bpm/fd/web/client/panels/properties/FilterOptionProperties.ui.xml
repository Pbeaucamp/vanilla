<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panelGeneral">
			<my:ListBoxWithButton ui:field="filterRenderer"/>
			
			<g:CheckBox ui:field="submitOnChange" text="{labels.SubmitOnChange}"/>
			<g:CheckBox ui:field="selectFirstValue" text="{labels.SelectFirstValue}"/>
			<g:CheckBox ui:field="initParameterWithFirstValue" text="{labels.InitParameterWithFirstValue}"/>
			<!-- <g:CheckBox ui:field="hidden" text="{labels.Hidden}"/> -->
			<g:CheckBox ui:field="required" text="{labels.Required}"/>
			
			<my:LabelTextBox ui:field="defaultValue" placeHolder="{labels.DefaultValue}"/>	
		</g:HTMLPanel>
			
		<g:HTMLPanel ui:field="panelDropDown">
			<my:LabelValueTextBox ui:field="size" text="{labels.Size}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="panelMenu">
			<my:LabelValueTextBox ui:field="menuSize" text="{labels.Size}"/>
			<g:CheckBox ui:field="isVertical" text="{labels.IsVertical}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="panelMultipleValues">			
			<g:CheckBox ui:field="multipleValues" text="{labels.MultipleValues}"/>
		</g:HTMLPanel>
			
	    <g:HTMLPanel ui:field="panelSlider">			
			<my:LabelValueTextBox ui:field="delay" text="{labels.Delay}"/>
			<g:CheckBox ui:field="autoRun" text="{labels.AutoRun}"/>
			<my:LabelTextBox ui:field="barColor" placeHolder="{labels.BarColor}"/>
			<my:ColorPanel ui:field="sliderColor" text="{labels.SliderColor}"/>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 