<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.fd.web.client.I18N.Labels' />
	
	<ui:style>
		.contentPanel {
		    height: 100%;
		    overflow: auto;
		    width: 100%;
		}
		
		.txtWidth {
			width: 100%;
		}
		
		.flex {
			display: flex;
		}
		
		.btnOption {
		    margin: 5px;
		    height: 30px;
		    margin-top: 32px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<c:LabelTextBox ui:field="txtTitle" placeHolder="{label.Title}" addStyleNames="{style.txtWidth}"/>
		<c:LabelRichTextArea ui:field="txtRichTitle" visible="false" placeHolder="{label.Title}" addStyleNames="{style.txtWidth}"/>
		<g:HTMLPanel ui:field="panelOption" visible="false" addStyleNames="{style.flex}">
			<c:LabelTextBox ui:field="txtOption" visible="false" addStyleNames="{style.txtWidth}"/>
			<g:Button ui:field="btnOption" visible="false" addStyleNames="{style.btnOption}">...</g:Button>
		</g:HTMLPanel>
		<c:LabelTextBox ui:field="txtCss" placeHolder="{label.CssClassSeparateThemBySpace}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextArea ui:field="txtDescription" placeHolder="{label.Description}" addStyleNames="{style.txtWidth}"/>
	</g:HTMLPanel>
</ui:UiBinder> 