<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.panelContent {
			display: inline-block;
			width: 50%;
			vertical-align: top;
		}
	
		.lblAgg {
		    color: #3B99CB;
		    padding-left: 10px;
		    padding-top: 5px;
		    margin-bottom: 10px;
		}
		
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 20px !important;
		    padding: 5px;
		    width: 20px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.toolbar {
			width: 98%;
		}
		
		.datagridPanel {
		    display: inline-block;
		    height: 250px;
		    margin-top: 5px;
		    vertical-align: top;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panelChartData" addStyleNames="{style.panelContent}">
			<my:ListBoxWithButton ui:field="groupField" label="{labels.GroupField}"></my:ListBoxWithButton>
			<my:ListBoxWithButton ui:field="groupFieldLabel" label="{labels.GroupFieldLabel}"></my:ListBoxWithButton>
			<my:ListBoxWithButton ui:field="subGroupField" label="{labels.SubGroupField}"></my:ListBoxWithButton>
			
			<my:ListBoxWithButton ui:field="orderType" label="{labels.OrderType}"></my:ListBoxWithButton>
			
			<g:CheckBox ui:field="drill" text="{labels.Drill}"/>
		</g:HTMLPanel><g:HTMLPanel ui:field="panelAggregs" addStyleNames="{style.panelContent}">
			<g:Label text="{labels.Aggregations}" addStyleNames="{style.lblAgg}"/>
		
			<g:HTMLPanel addStyleNames="{style.toolbar}">
				<g:Image ui:field="btnAdd" resource="{commons.add_24}" addStyleNames="{style.btnToolbar}"/>
			</g:HTMLPanel>
			<g:SimplePanel ui:field="panelDatagrid" addStyleNames="{style.datagridPanel}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 