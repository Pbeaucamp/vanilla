<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:props="urn:import:bpm.fd.web.client.panels.properties.widgets">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.panelGrid {
		    height: 250px;
		    margin-top: 20px;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<my:ListBoxWithButton ui:field="lstOrderType" label="{labels.OrderType}"/>
		<my:ListBoxWithButton ui:field="lstOrderIndex" label="{labels.OrderField}"/>
		
		<my:CustomCheckbox ui:field="drill" text="{labels.Drill}"/>
		
		<props:DatagridColumnsPanel ui:field="datagridColumnsPanel" addStyleNames="{style.panelGrid}"/>
	</g:HTMLPanel>
</ui:UiBinder> 