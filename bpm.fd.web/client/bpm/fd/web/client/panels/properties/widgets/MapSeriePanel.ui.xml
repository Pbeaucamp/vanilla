<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commonlabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.btnPanel {
		    margin: 15px;
	    	text-align: center;
		}
		
		.btn {
	    	width: 90px;
		}
	</ui:style>
	<g:HTMLPanel>
		<my:LabelTextBox ui:field="serieName" placeHolder="{labels.SerieName}"/>
		<my:CustomCheckbox ui:field="displayLayer" text="{labels.DisplayLayer}"/>
		
		<g:HTMLPanel ui:field="panelMarkers">
			<my:LabelValueTextBox ui:field="minMarker" placeHolder="{labels.MinMarker}"/>
			<my:LabelValueTextBox ui:field="maxMarker" placeHolder="{labels.MaxMarker}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelZones">
			<my:ColorPanel ui:field="minColor" text="{labels.MinColor}"/>
			<my:ColorPanel ui:field="maxColor" text="{labels.MaxColor}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.btnPanel}">
			<my:CustomButton ui:field="btnApply" text="{commonlabels.Modify}" addStyleNames="{style.btn}"/>
			<my:CustomButton ui:field="btnCancel" text="{commonlabels.Cancel}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 