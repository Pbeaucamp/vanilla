<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commonlabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.btnPanel {
		    margin: 15px;
	    	text-align: center;
		}
		
		.btn {
	    	width: 90px;
		}
	</ui:style>
	<g:HTMLPanel>
		<my:LabelTextBox ui:field="measureName" placeHolder="{labels.MeasureName}"/>
	
		<my:ListBoxWithButton ui:field="valueField" label="{labels.ValueField}"></my:ListBoxWithButton>
	
		<g:CheckBox ui:field="applyOnDistinctSerie" text="{labels.ApplyOnDistinctSerie}"/>
		<g:CheckBox ui:field="primaryAxis" text="{labels.PrimaryAxis}"/>
		
		<my:ListBoxWithButton ui:field="rendering" label="{labels.Rendering}"></my:ListBoxWithButton>
		<my:ListBoxWithButton ui:field="aggregator" label="{labels.Aggregator}"></my:ListBoxWithButton>
		<my:ListBoxWithButton ui:field="orderType" label="{labels.OrderType}"></my:ListBoxWithButton>
	
		<g:HTMLPanel addStyleNames="{style.btnPanel}">
			<my:CustomButton ui:field="btnApply" text="{commonlabels.Modify}" addStyleNames="{style.btn}"/>
			<my:CustomButton ui:field="btnCancel" text="{commonlabels.Cancel}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 