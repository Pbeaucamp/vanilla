<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">

	<ui:with field='labels' type='bpm.fd.web.client.I18N.Labels' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.panelParent {
	    	margin-top: 15px;
		}
	
		.lblAgg {
			border-top: 1px solid black;
		    color: #3B99CB;
		    padding-left: 10px;
		    padding-top: 5px;
		    margin-bottom: 10px;
		}
		
		.datagridPanel {
		    border-right: 1px solid #D3D3D3;
		    display: inline-block;
		    height: 475px;
		    margin-top: 5px;
		    vertical-align: top;
		    width: 30%;
		}
		
		.panelAggreg {
		    border: 1px solid #D3D3D3;
		    display: inline-block;
		    height: 475px;
		    margin-left: 110px;
		    padding: 10px;
		    vertical-align: top;
		    width: 40%;
		}
	</ui:style>
	<g:HTMLPanel>
	
		<my:ListBoxWithButton ui:field="valueField" label="{labels.ValueField}"></my:ListBoxWithButton>
		<my:ListBoxWithButton ui:field="zoneField" label="{labels.ZoneField}"></my:ListBoxWithButton>
		
		<my:ListBoxWithButton ui:field="mapList" label="{labels.Map}"></my:ListBoxWithButton>
	
		<g:HTMLPanel ui:field="panelSeries" addStyleNames="{style.panelParent}">
			<g:Label text="{labels.Series}" addStyleNames="{style.lblAgg}"/>
			
			<g:SimplePanel ui:field="panelDatagrid" addStyleNames="{style.datagridPanel}"/>
			<g:SimplePanel ui:field="panelSerieContent" addStyleNames="{style.panelAggreg}"/>
		</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 