<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="bpm.fd.web.client.widgets.DashboardWidget.MyStyle">
		.draggableFix {
			background-position: 0;
			transform: translate(0, 0);
		}
		
		.mainComponent {
			width: 150px;
			height: 150px;
			border: 1px solid lightgrey;
			resize: both;
  			overflow: hidden;
  			min-width: 120px;
  			min-height: 90px;
  			position: absolute;
		}
		
		.selectedStyle {
			border: 1px solid black !important;
		}
		
		.provided {
			border: 1px solid #52F511 !important;
		}
		
		.provider {
			border: 1px solid #502FF7 !important;
		}
		
		.paramNotValid {
			border: 1px solid red !important;
		}
		
		.labelComponent {
			width: 150px;
			height: 100px;
			border: 1px solid lightgrey;
  			overflow: hidden;
  			min-width: 120px;
  			min-height: 100px;
  			position: absolute;
		}
		
		.resizeHorizontal {
			resize: horizontal;
		}
		
		.resizeBoth {
			resize: both;
		}
		
		.panelTop {
		    border-bottom: 1px solid #D3D3D3;
		    cursor: move;
		    padding: 3px;
		    height: 24px;
		}
		
		.contentTop {
			width: 100%;
			height: 100%;
			text-align: center;
		}
		
		.label {
	        display: inline-block;
		    line-height: normal;
		    vertical-align: top;
		    margin-top: 5px;
		    margin-left: 5px;
	        width: 100%;
			white-space: nowrap;
    		overflow:hidden !important;
    		text-overflow: ellipsis;
		}
		
		.text {
	        display: inline-block;
		    vertical-align: top;
	    	margin-top: 2px;
		    margin-left: 5px;
		    width: 95%;
		    height: 20px;
		    padding: 0px 4px;
		}
		
		.contentPanel {
		    bottom: 10px;
		    left: 10px;
		    position: absolute;
		    right: 10px;
		    top: 40px;
		}
		
		.img {
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:FocusPanel ui:field="focus" addStyleNames="{style.mainComponent}">
		<g:HTMLPanel>
			<g:FocusPanel ui:field="panelTop" addStyleNames="{style.panelTop}">
				<g:HTMLPanel addStyleNames="{style.contentTop}">
					<g:Label ui:field="lblTitle" addStyleNames="{style.label}"/><g:TextBox ui:field="txtTitle" visible="false" addStyleNames="{style.text}"/>
				</g:HTMLPanel>
			</g:FocusPanel>
			<g:HTMLPanel addStyleNames="{style.contentPanel}">
				<g:Image ui:field="img"/>
				<g:HTML ui:field="htmlContent" visible="false" addStyleNames="{style.label}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 