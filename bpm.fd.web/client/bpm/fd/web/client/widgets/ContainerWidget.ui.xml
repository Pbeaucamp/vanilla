<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.fd.web.client.widgets.ContainerWidget.MyStyle">
		.draggableFix {
			background-position: 0;
			transform: translate(0, 0);
		}
		
		.mainComponent {
			width: 150px;
			height: 150px;
			border: 1px solid lightgrey;
			resize: both;
  			min-width: 120px;
  			min-height: 90px;
  			position: absolute;
  			overflow: hidden;
  			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
		}
		
		.contentPanel {
			position: absolute;
		    height: 100%;
		    overflow: hidden;
		    left: 27px;
		    border-left: 1px solid lightgray;
		    right: 10px;
		}
		
		.contentPanelOnly {
			position: absolute;
		    height: 100%;
		    overflow: hidden;
		    left: 0px;
		    border-left: 1px solid lightgray;
		    right: 10px;
		}
		
		.container {
			width: 100%;
			height: 100%;
		}
		
		.toolbar {
			position: absolute;
			top: 0px;
			left: 0px;
			height: 100%;
		}
		
		.btnToolbar {
		    border: 1px solid #A4A4A4;
		    height: 25px;
		    width: 25px;
		}
		
		.imgToolbar {
		    height: 19px;
		    padding: 3px;
		    width: 19px;
		    cursor: pointer;
		}
	</ui:style>
	<g:FocusPanel ui:field="focus" addStyleNames="{style.mainComponent}">
		<g:HTMLPanel>
			<g:FlowPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
				<g:FocusPanel ui:field="btnAddPanel" addStyleNames="{style.btnToolbar}">
					<g:Image resource="{resources.add_16}" addStyleNames="{style.imgToolbar}"/>
				</g:FocusPanel>
			</g:FlowPanel>
			<g:HTMLPanel addStyleNames="{style.contentPanel}" ui:field="contentPanel">
				<g:SimplePanel ui:field="containerPanel" addStyleNames="{style.container}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 