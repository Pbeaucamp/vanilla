			<value>bpm/forms/dao/model/hbm/groupvalidation.hbm.xml</value>
			<value>bpm/forms/dao/model/hbm/groupinstanciation.hbm.xml</value>
			<value>bpm/forms/dao/model/hbm/forminstanciationrule.hbm.xml</value>
