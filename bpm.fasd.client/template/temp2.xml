        <Role name="role">
            <SchemaGrant access="none">
                <CubeGrant name="invent" access="all">
                     <HierarchyGrant name="[time]" access="all">
                         <MemberGrant member="[time].[1997].[April]" access="none"/>
                     </HierarchyGrant>
                     <HierarchyGrant name="[store]" access="all">
                         <MemberGrant member="[store].[Mexico]" access="none"/>
                     </HierarchyGrant>
                </CubeGrant>
            </SchemaGrant>
        </Role>
    </Roles>
</Schema>
