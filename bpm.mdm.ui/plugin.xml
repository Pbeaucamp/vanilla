<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="bpm.mdm.ui.views.GenericView"
            id="bpm.mdm.ui.views.GenericView"
            name="Master Datas Definition"
            restorable="true">
      </view>
      <view
            class="bpm.mdm.ui.views.SupplierManagementView"
            id="bpm.mdm.ui.views.SupplierManagementView"
            name="Supplier Management View"
            restorable="true">
      </view>
      <view
            class="bpm.mdm.ui.views.SupplierDetailView"
            id="bpm.mdm.ui.views.SupplierDetailView"
            name="Supplier Details View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="bpm.mdm.ui.perspectives.MdmDefinitionPerspective"
            icon="src/bpm/mdm/ui/icons/mdm32.png"
            id="bpm.mdm.ui.perspectives.MdmDefinitionPerspective"
            name="Master Data Management">
      </perspective>
      <perspective
            class="bpm.mdm.ui.perspectives.SupplierManagementPerspective"
            icon="src/bpm/mdm/ui/icons/suppliers.png"
            id="bpm.mdm.ui.perspectives.SupplierManagementPerspective"
            name="Supplier Management">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="bpm.mdm.ui.commands.category"
            name="Mdm Category">
      </category>
      <command
            categoryId="bpm.mdm.ui.commands.category"
            id="bpm.mdm.ui.commands.designCommand"
            name="Mdm Design">
            
      </command>
      <command
            categoryId="bpm.mdm.ui.commands.category"
            id="bpm.mdm.ui.commands.commitModelCommand"
            name="Commit Model Changes">
      </command>
      <command
            categoryId="bpm.mdm.ui.commands.category"
            id="bpm.mdm.ui.commands.restoreModelCommand"
            name="Restore Model">
      </command>
      <command
            categoryId="bpm.mdm.ui.commands.category"
            id="bpm.mdm.ui.commands.supplierCommand"
            name="Supplier Management">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="bpm.mdm.ui.handlers.MdmDesignHandler"
            commandId="bpm.mdm.ui.commands.designCommand">
         <enabledWhen>
           <with variable="bpm.mdm.ui.session.sessionState">
              		<equals value="loggedIn" />
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="bpm.mdm.ui.handlers.CommitModelHandler"
            commandId="bpm.mdm.ui.commands.commitModelCommand">
      </handler>
      <handler
            class="bpm.mdm.ui.handlers.RestoreModelHandler"
            commandId="bpm.mdm.ui.commands.restoreModelCommand">
              <enabledWhen>
           <with variable="bpm.mdm.ui.session.sessionState">
              		<equals value="loggedIn" />
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="bpm.mdm.ui.handlers.SupplierCommandHandler"
            commandId="bpm.mdm.ui.commands.supplierCommand">
         <enabledWhen>
            <with
                  variable="bpm.mdm.ui.session.sessionState">
               <equals
                     value="loggedIn">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <!--
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="bpm.mdm.ui.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="bpm.mdm.ui.menus.mdmMenu"
               label="Master Datas Management"
               mnemonic="M">
            <command
                  commandId="bpm.mdm.ui.commands.designCommand"
                  id="bpm.mdm.ui.menus.designCommand"
                  mnemonic="S">
             
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.commitModelCommand"
                  id="bpm.mdm.ui.menus.commitModelCommand"
                  mnemonic="C">
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.restoreModelCommand"
                  id="bpm.mdm.ui.menus.restoreModelCommand"
                  mnemonic="M">
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.supplierCommand"
                  id="bpm.mdm.ui.menus.supplierCommand"
                  mnemonic="B">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="bpm.mdm.ui.toolbars.sampleToolbar">
            <command
                  commandId="bpm.mdm.ui.commands.designCommand"
                  id="bpm.mdm.ui.toolbars.designCommand"
                  tooltip="Master Data Management">
                  
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.commitModelCommand"
                  id="bpm.mdm.ui.toolbars.commitModelCommand"
                  tooltip="Commit Model Changes">
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.restoreModelCommand"
                  id="bpm.mdm.ui.toolbars.restoreModelCommand">
            </command>
            <command
                  commandId="bpm.mdm.ui.commands.supplierCommand"
                  id="bpm.mdm.ui.toolbars.supplierCommand"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="bpm.mdm.ui.session.SessionSourceProvider">
         <variable
               name="bpm.mdm.ui.session.sessionState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="bpm.mdm.ui.commands.designCommand"
            icon="src/bpm/mdm/ui/icons/mdm16.png">
      </image>
      <image
            commandId="bpm.mdm.ui.commands.commitModelCommand"
            icon="src/bpm/mdm/ui/icons/db_comit_16.png">
      </image>
      <image
            commandId="bpm.mdm.ui.commands.restoreModelCommand"
            icon="src/bpm/mdm/ui/icons/db_remove_16.png">
      </image>
      <image
            commandId="bpm.mdm.ui.commands.supplierCommand"
            icon="src/bpm/mdm/ui/icons/suppliers.png">
      </image>
   </extension>
   <extension
         id="Application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="bpm.mdm.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="bpm.mdm.ui.Application"
            name="Vanilla Architect">
         <property
               name="appName"
               value="Vanilla Architect">
         </property>
         <property
               name="aboutText"
               value="Vanilla Architect&#x0A;&#x0A;Version 8&#x0A;&#x0A;Product of BPM-Conseil&#x0A;&#x0A;http://www.bpm-conseil.com/">
         </property>
         <property
               name="aboutImage"
               value="icons/vanilla_about.gif">
         </property>
         <property
               name="windowImages"
               value="icons/mdm_ico16.png,icons/mdm_ico32.png,icons/mdm_ico48.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="bpm.mdm.ui.splashHandlers.InteractiveSplashHandler"
            id="bpm.mdm.ui.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="bpm.mdm.ui.product"
            splashId="bpm.mdm.ui.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>

</plugin>
