<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	
	<ui:style type="bpm.faweb.client.wizards.CubeSelectionPage.MyStyle">
		.img {
		    margin-left: 140px;
    		margin-top: 15px;
		}
		
		.lblTitle {
	        font-size: 14px;
		    font-weight: bold;
		    margin-left: 12px;
		    margin-top: 5px;
		}
		
		.lstCubes {
		    display: block;
		    width: 100%;
		    height: 100%;
		}
		
		.tree {
		    background: none repeat scroll 0 0 #D3D3D3;
		    border: 1px solid;
		    height: 165px;
		    margin-left: 50px;
		    margin-top: 10px;
		    overflow: auto;
		    width: 580px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Image resource="{resources.welcome}" addStyleNames="{style.img}"/>
		<g:Label text="{label.SelCube}" addStyleNames="{style.lblTitle}"/>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.tree}">
			<g:ListBox ui:field="lstCubes" addStyleNames="{style.lstCubes}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 