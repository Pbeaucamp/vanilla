<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.faweb.client.panels.center.DrillThroughContainer.MyStyle">
		.inline {
			vertical-align: middke;
			display: inline-block;
		}
		
		.datasPanel {
			-webkit-box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 1);
			-moz-box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 1);
			box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 1);
			display: table;
		}
		
		.filterPanel {
			background: #92c1f0;
			display: table;
		}
		
		.menuPanel {
			padding: 10px;
			border: 1px solid #D4D4D4;
			-webkit-box-shadow: 0 1px 0 #FFF;
			-moz-box-shadow: 0 1px 0 #fff;
			box-shadow: 0 1px 0 #FFF;
			background-color: f5f5f5;
			background-image: -moz-linear-gradient(top, white, #f5f5f5);
			background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#FFF),
				to(#F5F5F5));
			background-image: -webkit-linear-gradient(top, #FFF, #F5F5F5);
			background-image: -o-linear-gradient(top, white, #f5f5f5);
			background-image: linear-gradient(to bottom, #FFF, #F5F5F5);
			background-repeat: repeat-x;
			filter: progid;
		}
		
		.btnResetFilters,.btnExportToXls,.btnExportToPDF {
			background-size: 30px;
			height: 30px;
			padding-left: 35px;
			border: none !important;
			border-right: 1px solid #E7E7E7 !important;
		}
		
		.btnExportToPDF {
			background: url("images/ic_export_pdf.png") no-repeat;
			background-size: 30px !important;
			border: none !important;
			border-right: 1px solid #E7E7E7 !important;
		}
		
		.btnExportToXls {
			background: url("images/ic_export_xls.png") no-repeat;
			background-size: 30px !important;
			border: none !important;
			border-right: 1px solid #E7E7E7 !important;
		}
		
		.filterLegendPanel {
			width: 100%;
			margin-bottom: 30px;
			line-height: 30px;
			background: #707070;
			color: #FFF;
			height: 30px;
		}
		
		.lblFilterLegend {
			margin-left: 5px;
		}
		
		.location {
			float: right;
		}
		
		.undo,.redo {
			width: 30px;
			height: 30px;
			cursor: pointer;
		}
		
		.undo:hover {
			opacity: 0.5;
		}
		
		.panelContent {
		    bottom: 0px;
		    position: absolute;
		    top: 42px;
		    width: 100%;
		}
		
		.panelRelative {
		    position: relative;
		    height: 100%;
    		width: 100%;
		}
		
		.panelGrid {
		    bottom: 30px;
		    position: absolute;
		    top: 0;
		    width: 100%;
		}
		
		.panelPager {
		    bottom: 0;
		    height: 30px;
		    position: absolute;
		    width: 100%;	
		}
		
		.grid {
		    height: 100%;
    		width: 100%;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.filterLegendPanel}">
			<g:Label ui:field="lblFilterLegend" addStyleNames="{style.lblFilterLegend}" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{style.panelContent}">
			<g:HTMLPanel addStyleNames="{style.panelRelative}" >
				<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.panelGrid}"/>
				<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 