<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='commonsLabel' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			overflow: hidden;
		}
		
		.btnToolbar {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnClose {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		    float: right;
		}
		
		.btnToolbar:HOVER, .btnClose:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			bottom: 0px;
			width: 100%;
			overflow: auto;
		}
		
		.separator {
			border: 1px solid #000000;
		    display: inline-block;
		    height: 34px;
		    margin-top: 3px;
		    vertical-align: top;
		    width: 0;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
		    <g:Image ui:field="btnExport" resource="{commons.viewer_report_history}" title="{label.Save}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgShare" resource="{commons.share_24_black}" title="{commonsLabel.Share}" addStyleNames="{style.btnToolbar}"/>
		    
			<g:HTMLPanel ui:field="separator" addStyleNames="{style.separator}"/>
		    
			<g:Image ui:field="btnAddFilter" resource="{commons.add_24}" title="{label.addFilter}" addStyleNames="{style.btnToolbar}"/>
		    <g:Image ui:field="btnClearFilter" resource="{resources.clear_filtre_24}" title="{label.ResetFilters}" addStyleNames="{style.btnToolbar}"/>
	        
<!-- 	        <g:Image ui:field="btnUndo" resource="{resources.undo}" title="{label.Undo}" addStyleNames="{style.btnToolbar}"/> -->
<!-- 	        <g:Image  ui:field="btnRedo" resource="{resources.redo}" title="{label.Redo}" addStyleNames="{style.btnToolbar}"/> -->
		    
			<g:Image ui:field="imgClose" resource="{resources.closeTabHover}" title="{label.Close}" addStyleNames="{style.btnClose}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
	</g:HTMLPanel>
</ui:UiBinder> 