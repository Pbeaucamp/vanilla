<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='commonsLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.faweb.client.panels.center.DrillTab.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			overflow: hidden;
		}
		
		.btnToolbar {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
			color: black !important;
		}

		.launchPanel {
			position: absolute;
			top: 40px;
			bottom: 0px;
			left: 0px;
			width: 250px;
			overflow: auto;
		}
		
		.lblNoDrill {
	
		}
		
		.paramPanelParent {
			border-top: 1px solid lightgrey;
		    bottom: 40px;
		    position: absolute;
		    top: 70px;
		    width: 100%;
		    overflow: auto;
		}
		
		.lblParameters {
	    	font-weight: bold;
    		padding: 8px;
		}
		
		.lstParam {
	
		}
		
		.panelBtnLoad {
			text-align: center;
		    bottom: 0;
		    height: 30px;
		    position: absolute;
		    width: 100%;
		}
		
		.btnLaunch {
	
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			bottom: 0px;
			left: 250px;
			right: 0px;
			overflow: hidden;
			border-left: 1px solid lightgrey;
		}
		
		.frame {
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
		    <g:Image ui:field="btnOpenInNewTab" resource="{commons.tab_new}" title="{commonsLabels.OpenNewTab}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="launchPanel" addStyleNames="{style.launchPanel}">
			<c:ListBoxWithButton ui:field="lstDrill" label="{label.Drill}"/>
			<g:HTMLPanel ui:field="paramPanelParent" visible="false" addStyleNames="{style.paramPanelParent}">
				<g:Label text="{label.Parameters}" addStyleNames="{style.lblParameters}"/>
				<g:HTMLPanel ui:field="paramPanel"/>
			</g:HTMLPanel>
			<div class="{style.panelBtnLoad}">
				<g:Button ui:field="btnLaunch" text="{label.RunDrill}" addStyleNames="{style.btnLaunch}"/>
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="reportPanel" addStyleNames="{style.panelContent}">
			<g:Frame ui:field="reportFrame" addStyleNames="{style.frame}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 