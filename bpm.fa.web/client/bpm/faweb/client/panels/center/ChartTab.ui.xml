<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.faweb.client.panels.center.ChartTab.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			overflow: hidden;
		}
		
		.btnTab {
		    height: 40px !important;
		    width: 150px !important;
		    margin-left: 10px;
		    margin-right: 5px;
		    vertical-align: top;
		}
		
		.btnToolbar {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER, .btnTab:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
			color: black !important;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			bottom: 0px;
			width: 100%;
			overflow: auto;
		}

		.selected {
			color: white;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
		    <g:Image ui:field="btnClear" resource="{commons.refresh_24}" title="{label.ClearChart}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}">
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 