<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
	<ui:style>
		.panel {
			padding: 5px;
		}
		
		.lblSize {
			margin-top: 2px;	
		}
		
		.txtSize {
			width: 70px;
			margin-left: 5px;
			margin-right: 15px;
		}
		
		.listBox {
			margin-left: 15px;
			width: 160px;
		}
		
		.listBoxSize {
			margin-left: 15px;
			width: 150px;	
		}
		
		.radioBtnCustom {
			margin-top: 10px;
		}
		
		.txtMarginLeft {
			width: 70px;
			margin-left: 12px;
			margin-right: 15px;
		}
		
		.txtMarginTop {
			width: 70px;
			margin-left: 22px;
			margin-right: 15px;
		}
		
		.captionStyle {
			margin-top: 3px;	
		}
		
		.listCustom {    
			background-color: #E8EEF7;
		    border: 1px solid gray;
		    height: 250px;
		    margin-left: 10px;
		    margin-top: 2px;
		    padding: 5px;
		    width: 100px;
		}
		
		.lblVariable {
		    margin-left: 10px;
		}
		
		.checkChart {
			
		}
		
		.txtReportName {
			margin-left: 5px;
			width: 98%;
		}
		
		.txtArea {
			width: 100%;	
		}
	</ui:style>
	<g:HorizontalPanel>
		<g:HTMLPanel>
			<g:CaptionPanel ui:field="captionReportName">
				<g:HorizontalPanel styleName="{style.panel}">
					<g:Label ui:field="lblReportName"/>
					<g:TextBox ui:field="txtReportName" addStyleNames="{style.txtReportName}"/>
				</g:HorizontalPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="captionReportTitleDescription">
				<g:AbsolutePanel>
					<g:Label ui:field="lblReportTitle"/>
					<g:TextBox ui:field="txtReportTitle" addStyleNames="{style.txtReportName}"/>
					<g:Label ui:field="lblReportDescription"/>
					<g:TextArea ui:field="txtAreaDescription" addStyleNames="{style.txtArea}"/>
				</g:AbsolutePanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="captionOutput">
				<g:HTMLPanel>
					<g:HorizontalPanel styleName="{style.panel}">
						<g:Label ui:field="lblSelectOutputType"/>
						<g:ListBox ui:field="listBoxOutputType" visibleItemCount='1' addStyleNames="{style.listBox}"/>
					</g:HorizontalPanel>
					<g:CheckBox ui:field="checkBoxChart" addStyleNames="{style.checkChart}"/>
				</g:HTMLPanel>
			</g:CaptionPanel>
		</g:HTMLPanel>
		
		<g:HTMLPanel>
			<g:CaptionPanel ui:field="captionOrientation" addStyleNames="{style.captionStyle}">
				<g:HTMLPanel styleName="{style.panel}">
					<g:RadioButton ui:field='radioBtnPortrait' name="orientation" checked="true"/>
					<g:RadioButton ui:field='radioBtnLandscape' name="orientation"/>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="captionPageSize" addStyleNames="{style.captionStyle}">
				<g:HTMLPanel styleName="{style.panel}">
					<g:RadioButton ui:field='radioBtnStandard' name="pageSize" checked="true"/>
						<g:ListBox ui:field="listBoxPageSize" visibleItemCount='1' addStyleNames="{style.listBoxSize}"/>
					
					<br/>
					
					<g:RadioButton ui:field='radioBtnCustom' name="pageSize" addStyleNames="{style.radioBtnCustom}"/>
					<g:HorizontalPanel styleName="{style.panel}">
						<g:Label ui:field="lblWidth" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtWidth" addStyleNames="{style.txtSize}"/>
						
						<g:Label ui:field="lblHeight" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtHeight" addStyleNames="{style.txtSize}"/>
					</g:HorizontalPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="captionMargins" addStyleNames="{style.captionStyle}">
				<g:HTMLPanel styleName="{style.panel}">
					<g:HorizontalPanel styleName="{style.panel}">
						<g:Label ui:field="lblLeft" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtLeft" addStyleNames="{style.txtMarginLeft}"/>
						
						<g:Label ui:field="lblTop" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtTop" addStyleNames="{style.txtMarginTop}"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName="{style.panel}">
						<g:Label ui:field="lblRight" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtRight" addStyleNames="{style.txtSize}"/>
						
						<g:Label ui:field="lblBottom" addStyleNames="{style.lblSize}"/>
						<g:TextBox ui:field="txtBottom" addStyleNames="{style.txtSize}"/>
					</g:HorizontalPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>
		</g:HTMLPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 