<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.faweb.client.panels.navigation.NavigationPanel.MyStyle">
		.navigationPanel {
			width: 295px;
			top: 0px;
			bottom: 10px;
			position: absolute;
			-moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.navigationPanelViewer {
			width: 295px;
			top: 0px;
			bottom: 0px;
			position: absolute;
			border-right: 1px solid lightgray;
		}
		
		.adminMenu {
			color: #095494;
			font-size: 13px;
			text-align: left;
			margin-left: 40px;
		}
		
		.adminMenu img {
			display: inline-block;
			vertical-align: middle;
			margin-right: 10px;
		}
		
		.contentPanel {
			width: 100%;
			height: 100%;
		}
		
		.btnSelected {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.imgExpand {
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgExpand:HOVER {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.alignLeft {
			float: left;
		}
	</ui:style>
	<g:HTMLPanel ui:field="navigationPanel" addStyleNames="{style.navigationPanel}">
		<g:Image ui:field="imgExpand" resource="{commons.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand},{style.alignLeft}"/>
		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" />
	</g:HTMLPanel>
</ui:UiBinder> 