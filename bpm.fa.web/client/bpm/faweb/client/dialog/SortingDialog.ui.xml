<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='commonsLabel' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 500px;
			height: 300px;
		}
		
		.sortPanel {
			width: 100%;
			height: 250px;
		}
		.panelToolbar {
			height: 43px;
			width: 100%;
			overflow: auto;
		}
		.btnToolbar {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		}	
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Image ui:field="imgAdd" resource="{commons.add_24}" title="{commonsLabel.Add}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgDel" resource="{commons.delete_24}" title="{label.del}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgUp" resource="{resources.up}" title="{label.up}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgDown" resource="{resources.down}" title="{label.down}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="sortPanel" addStyleNames="{style.sortPanel}">
		
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 