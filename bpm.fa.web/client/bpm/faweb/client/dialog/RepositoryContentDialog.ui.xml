<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.faweb.client.dialog.RepositoryContentDialog.MyStyle">
		.panelHeader {
	
		}
	
		.imgRefresh {
		    float: left;
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		    margin-left: 5px;
    		margin-top: 10px;
		}
		
		.imgRefresh:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.tree {
		    background: none repeat scroll 0 0 #D3D3D3;
		    border: 1px solid;
		    height: 350px;
		    margin-left: 50px;
		    margin-right: 10px;
		    margin-top: 10px;
		    overflow: auto;
		    width: 580px;
		}
		
		.repositoryContent {
			margin: 5px;
			font-weight: bold;
		}
		
		.exportUpdate {
			margin-left: 15px;
			margin-top: 5px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel ui:field="panelHeader" addStyleNames="{style.panelHeader}"/>
		<g:Image ui:field="imgRefresh" title="{label.Refresh}" resource="{commons.refresh_24}" addStyleNames="{style.imgRefresh}"/>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.tree}"/>
	</g:HTMLPanel>
</ui:UiBinder> 