<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	
	<ui:style>
		.imgPanel {
		    float: left;
		    margin-left: 5px;
    		margin-top: 10px;
   		    width: 40px;
		}
	
		.imgAdd {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		}
		
		.imgRemove {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		}
		
		.imgAdd:HOVER, .imgRemove:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelContent {
		    height: 240px;
		    margin-left: 50px;
		    margin-top: 10px;
		    overflow: auto;
		    width: 400px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel addStyleNames="{style.imgPanel}">
			<g:Image ui:field="imgAdd" title="{label.Add}" resource="{resources.add}" addStyleNames="{style.imgAdd}"/>
			<g:Image ui:field="imgRemove" title="{label.Remove}" resource="{resources.diff}" addStyleNames="{style.imgRemove}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
	</g:HTMLPanel>
</ui:UiBinder> 