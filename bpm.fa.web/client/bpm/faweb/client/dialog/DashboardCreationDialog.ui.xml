<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	
	<ui:style>
		.imgDashboard {
		    float: left;
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		    margin-left: 5px;
    		margin-top: 10px;
		}
		
		.imgDashboard:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelContent {
		    background: none repeat scroll 0 0 #D3D3D3;
		    border: 1px solid;
		    height: 300px;
		    margin-left: 50px;
		    margin-top: 10px;
		    overflow: auto;
		    width: 580px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:Image ui:field="imgDashboard" title="Create a dashboard" resource="{resources.create32}" addStyleNames="{style.imgDashboard}"/>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
	</g:HTMLPanel>
</ui:UiBinder> 