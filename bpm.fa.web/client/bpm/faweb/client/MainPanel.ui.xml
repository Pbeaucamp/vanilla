<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="bpm.faweb.client.MainPanel.MyStyle">
		.panelAbsolute {
			position: absolute !important;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 0px;
		}
		
		.mainPanel {
	 		width: 100%;
	 		height: 100%;
		}
	
	 	.dockPanel {
	 		width: 100%;
	 		height: 100%;
	 	}
	 	
	 	.leftPanel {
			
		}
	</ui:style>
	<g:AbsolutePanel ui:field="draggablePanel" addStyleNames="{style.mainPanel}">
		<g:DockLayoutPanel ui:field="dockPanel" unit='PX' addStyleNames="{style.dockPanel}"> 
		    <g:north size='70'>
				<g:SimplePanel ui:field="panelToolbar"/>
		  	</g:north>
			<g:west size='300'>
				<g:SimplePanel ui:field="leftPanel" addStyleNames="{style.leftPanel}"/>
			</g:west>
			<g:center>
				<g:SimplePanel ui:field="panelCenter"/>
			</g:center>
		</g:DockLayoutPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 