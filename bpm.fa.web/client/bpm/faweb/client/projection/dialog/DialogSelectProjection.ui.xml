<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	
	<ui:style>
		.panelContent {
			margin: 5px;
		}
		
		.treePanel {
		    background: none repeat scroll 0 0 #D3D3D3;
		    height: 250px;
		    margin-top: 5px;
		    margin-left: 50px;
		    overflow: auto;
		    width: 390px;
		}
		
		.btnPanel {
			margin-top: 10px;	
		}
		
		.imgCreateProjection {
		    float: left;
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		    margin-left: 5px;
    		margin-top: 10px;
		}
		
		.imgCreateProjection:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.panelContent}">
		<g:Label>Choisissez une projection</g:Label>
	
		<g:Image ui:field="imgCreateProjection" title="{label.ProjectionCreate}" resource="{resources.ajouter_projection_24}" addStyleNames="{style.imgCreateProjection}"/>
		<g:HTMLPanel ui:field="treePanel" styleName="{style.treePanel}"></g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 