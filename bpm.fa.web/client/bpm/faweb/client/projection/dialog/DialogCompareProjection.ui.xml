<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.mainPanel {
			height: 580px;
			width: 800px;
		}
		
		.lblTitle {
			font-size: 15px;
			margin-bottom: 10px;
		}
		
		.button {
			margin-bottom: 5px;
			margin-top: 5px;	
			width: 100%;
		}
		
		.btnPanel {
			
		}
		
		.grid {
			height: 285px;
			width: 100%;
			overflow: auto;	
		}
		
		.lblRappel {
			font-size: 14px;
			margin-top: 10px;	
		}
		
		.rbButtonPanel {
			margin-top: 10px;	
		}
		
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel styleName="{style.btnPanel}">
			
			<g:CaptionPanel ui:field="panelFormula">
			
				<g:HTMLPanel>
					<g:HTMLPanel>
						<g:HorizontalPanel>
							<g:Label ui:field="lblCalcul"></g:Label>
							<g:VerticalPanel>
								<g:RadioButton name="calcul" ui:field="rbCalculMinus"></g:RadioButton>
								<g:RadioButton name="calcul" ui:field="rbCalculPercent"></g:RadioButton>
							</g:VerticalPanel>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel styleName="{style.rbButtonPanel}">
							<g:Label ui:field="lblOrder"></g:Label>
							<g:VerticalPanel>
								<g:RadioButton name="order" ui:field="rbProjOrig"></g:RadioButton>
								<g:RadioButton name="order" ui:field="rbOrigProj"></g:RadioButton>
							</g:VerticalPanel>
						</g:HorizontalPanel>
					</g:HTMLPanel>
				
					<g:HorizontalPanel>
						<g:Label ui:field="lblRappel" styleName="{style.lblRappel}"></g:Label>
					</g:HorizontalPanel>
					
				</g:HTMLPanel>
			
			</g:CaptionPanel>
		
			<g:Button ui:field="btnLoadData" styleName="{style.button}"></g:Button>
		</g:HTMLPanel>
	
		<g:HTMLPanel ui:field="gridPanel"  styleName="{style.grid}"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 