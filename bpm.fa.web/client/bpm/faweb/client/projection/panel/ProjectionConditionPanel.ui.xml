<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:bpm="urn:import:bpm.faweb.client.projection.panel.impl">
	
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />
	
	<ui:style>
	
		.condPanel {
			width: 95%;	
		}
		/*.condPanel div {
			float: left;
			margin-top: 15px;
		}*/
		.condPanel select {
			float: left;
			width: 230px;
			height: 50px;
			margin-left: 10px
		}
		.condPanel img {
			float: right;
			margin-top: 8px;
		}
		
		.fullSizePanel {
			width: 100%;
			margin-top: 10px;	
		}
		
		.captionSize {
			width: 93%;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			border-radius: 10px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.fullSizePanel}">
	
		<bpm:ClickableCaptionPanel captionText="{label.CalculCondition}" styleName="{style.captionSize}" ui:field="captionPanel">
		
			<g:HTMLPanel ui:field="mainPanel" styleName="{style.condPanel}">
				<g:Label text="{label.FilteringMembers}"/>
				<g:ListBox ui:field="lstMembers"></g:ListBox>
				<g:Image ui:field="imgDelete"></g:Image>
			</g:HTMLPanel>
			
		</bpm:ClickableCaptionPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 