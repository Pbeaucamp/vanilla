<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.ToolBar{
			background: #E8EEF7;
			background: -webkit-gradient(linear, 0 0, 0 100%, from(#d1dff0), to(#d2e1f0));
			background: -moz-linear-gradient(#d1dff0, #d2e1f0);
			background: -o-linear-gradient(#d1dff0, #d2e1f0);
			background: linear-gradient(#d1dff0, #d2e1f0);
			height: 40px;
			/*background: url(./bg.gif) repeat-x;*/
		}
		
		.ToolBar img{
			margin-top: 3px;
			margin-left: 5px;
		}
		
		.lblTitle {
			font-size: 16px;
			text-decoration: underline;
			font-style: italic;	
		}
		
	</ui:style>
	<g:HTMLPanel>
		<!-- <g:Label ui:field="lblTitle" styleName="{style.lblTitle}"></g:Label> -->
		<g:FlowPanel styleName="{style.ToolBar}">
			<g:Image ui:field="imgCube"></g:Image>
			<g:Image ui:field="imgSave"></g:Image>
			<g:Image ui:field="imgEdit"></g:Image>
			<!-- <g:Image ui:field="imgRefresh"></g:Image> -->
			<g:Image ui:field="imgCompare"></g:Image>
		</g:FlowPanel>
		<g:HTMLPanel ui:field="dataGridPanel">
			<!--<c:DataGrid ui:field="dataGrid"></c:DataGrid>-->
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 