<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.faweb.client.images.FaWebImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.faweb.client.I18N.LabelsConstants' />

	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			overflow: hidden;
		}
		
		.btnToolbar {
		    height: 40px !important;
		    width: 40px !important;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			bottom: 0px;
			width: 100%;
			overflow: auto;
		}
		
		.rootPanel {
			width: 100%;
			height: 100%;
			background: #FFF;
			overflow: auto !important;
		}
		
		.mainSplitPanel {
			height: 100%;
			width: 100%;
		}
		
		.panelDimension {
			margin: 5px;
			background: white;
			overflow: auto;
		}
		
		.lblDimension {
			border-bottom: 2px solid lightblue;
			font-size: 15px;
			font-weight: bold;
			height: 20px;
			padding: 5px 15px;
			margin-bottom: 10px;
		}
		
		.panelMeasure {
			margin: 5px;
			background: white;
			overflow: auto;
		}
		
		.lblMeasure {
			border-bottom: 2px solid lightblue;
			font-size: 15px;
			font-weight: bold;
			height: 20px;
			padding: 5px 15px;
			margin-bottom: 10px;
		}
		
		.panelRight {
			background: white;
		}
		
		.lblReporter {
			padding: 10px;
			border: 1px solid #D4D4D4;
			-webkit-border-radius: 3px;
			-moz-border-radius: 3px;
			border-radius: 3px;
			-webkit-box-shadow: 0 1px 0 #FFF;
			-moz-box-shadow: 0 1px 0 #fff;
			box-shadow: 0 1px 0 #FFF;
			background-color: #FFF;
			background-image: -moz-linear-gradient(top, #ffffff, #f2f2f2);
			background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#FFF),
				to(#F2F2F2));
			background-image: -webkit-linear-gradient(top, #FFF, #F2F2F2);
			background-image: -o-linear-gradient(top, #ffffff, #f2f2f2);
			background-image: linear-gradient(to bottom, #FFF, #F2F2F2);
			background-repeat: repeat-x;
			filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',
				endColorstr='#f2f2f2', GradientType=0);
			font-size: 14px;
			color: #4C4C4C;
			padding: 15px 18px;
			margin: 0;
			padding: 15px;
			font-size: 1.2em;
		}
		
		.panelRefresh {
			width: 100%;
			height: 30px;
			position: absolute;
			bottom: 5px;
		}
		
		.btnRefresh {
			width: 120px;
			display: block;
			margin: auto;
		}
		
		.panelGrid {
			bottom: 40px;
			left: 5px;
			overflow: auto;
			right: 0;
			top: 200px;
			width: 100%;
			margin-top: 50px;
		}
		
		.inline {
			display: inline-block;
			vertical-align: middle;
		}
		
		.previewPanel {
			width: 99%;
			overflow: auto;
			height: 80%;
			margin-top: 4%;
			border: 1px solid #E7E7E7;
			background: #FAFAFA;
			-webkit-border-radius: 15px;
			-moz-border-radius: 15px;
			transition: 1s all;
			-webkit-transition: 1s all;
			-moz-transition: 1s all;
			position: relative;
		}
		
		.lblReportPreview {
			font-size: 2em;
			text-align: center;
			color: #7A7A7A;
			font-family: arial;
			background: url(images/ic_report.png) top no-repeat;
			padding-top: 205px;
			margin-top: 20%;
		}
		
		.lblHeader {
		    display: inline-block;
		    font-weight: bold;
		    margin-left: 20px;
		    margin-top: 11px;
		    vertical-align: top;
		}
		
		.btnPreview {
			background: url("images/ic_preview.png") no-repeat center;
			border: none;
		}
		
		.btnPreview:hover {
			background: url("images/ic_preview.png") no-repeat center !important;
			border: none;
		}
		
		.headerTwo {
			padding: 10px;
			height: 25px;
			background: #6D6D6D;
		}
		
		.inline {
			display: inline-block;
			vertical-align: middle;
		}
		
		.btnApply {
			float: right;
			color: #FFF;
			border: 1px solid #68A341;
			background: #74AA49;
			background: -moz-linear-gradient(top, #96c161 0%, #609c3d 100%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #96C161),
				color-stop(100%, #609C3D));
			background: -webkit-linear-gradient(top, #96C161 0%, #609C3D 100%);
			background: -o-linear-gradient(top, #96c161 0%, #609c3d 100%);
			background: -ms-linear-gradient(top, #96c161 0%, #609c3d 100%);
			background: linear-gradient(top, #96c161 0%, #609c3d 100%);
			border: 1px solid;
			padding-left: 20px;
			padding-right: 20px;
			position: absolute;
			bottom: 30;
			right: 30;
			height: 30px;
			width: 100px;
		}
		
		.txtTitle {
			float: right;
		}
		
		.btnClear {
			background: url("images/ic_clear.png") no-repeat center;
			border: none;
		}
		
		.btnClear:hover {
			background: url("images/ic_clear.png") no-repeat center !important;
			border: none;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
		    <g:Image ui:field="btnPreview" resource="{commons.viewer_report_run}" title="{label.ReportPreview}" addStyleNames="{style.btnToolbar}"/>
		    <g:Image ui:field="btnClear" resource="{commons.refresh_24}" title="{label.ClearReport}" addStyleNames="{style.btnToolbar}"/>
			<g:Label ui:field="lbReporter" addStyleNames="{style.lblHeader}" />
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}">
			<g:AbsolutePanel ui:field="rootPanel" addStyleNames="{style.rootPanel}">
				<g:HTMLPanel addStyleNames="{style.panelRight}">

						<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.panelGrid} {style.inline}" />
						<g:HTMLPanel ui:field="previewPanelContainer" addStyleNames="{style.inline} {style.previewPanel}">
							<g:HTMLPanel addStyleNames="{style.headerTwo}">
								<g:Button text="{label.Apply}" ui:field="btnApply" addStyleNames="{style.inline} {style.btnApply}" />
								<g:TextBox ui:field="txtTitle" addStyleNames="{style.inline} {style.txtTitle}" />
							</g:HTMLPanel>
							<g:HTMLPanel ui:field="previewPanel">
								<g:Label text="{label.ReportPreview}" ui:field="lblReportPreview" addStyleNames="{style.lblReportPreview}" />
							</g:HTMLPanel>
						</g:HTMLPanel>

					<g:SimplePanel ui:field="panelBin" addStyleNames="{style.panelRefresh}" />
				</g:HTMLPanel>
			</g:AbsolutePanel>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 