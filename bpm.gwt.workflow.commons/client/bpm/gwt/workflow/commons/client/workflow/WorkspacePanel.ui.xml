<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	<ui:with field='resources' type='bpm.gwt.workflow.commons.client.images.Images' />
	
	<ui:style type="bpm.gwt.workflow.commons.client.workflow.WorkspacePanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.toolbarPanel {
		    background: none repeat scroll 0 0 #D0E4F6;
		    border-radius: 3px;
		    box-shadow: 0 0 1px #696969 inset;
		    height: 50px;
		    left: 10px;
		    position: absolute;
		    right: 10px;
		    top: 10px;
		}
		
		.gridPanel {
			position: absolute;
			right: 0px;
			top: 45px;
			bottom: 0px;
			left: 0px;
		}

		.gridView {
			width: 2000px;
			height: 2000px;
			overflow: hidden;
			position: absolute;
		}
		
		.move {
			cursor: move;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelProperties {
		    background: none repeat scroll 0 0 #FAFAFA;
    		border: 1px solid #DDDDDD;
    		position: relative;
		}
		
		.panelPropertiesContent {
		    bottom: 0;
		    position: absolute;
		    top: 40px;
		    width: 100%;
		    overflow: hidden;
		}
		
		.panelSplitter {
		    height: 10px;
		    position: absolute;
		    top: -10px;
		    width: 100%;
		    left: 0px;
		    background: white;
		}
		
		.splitter {
			background: url("images/splitPanelThumb.png") no-repeat scroll center center;
		    cursor: row-resize;
	    	height: 100%;
    		width: 100%;
		}
		
		.panelContent {
			background: #E6E6E6;
		    border-radius: 3px;
		    box-shadow: 0 1px 1px #CACACA, 0 1px 1px #696969 inset;
		    display: inline-block;
		    overflow: hidden;
	        padding: 10px;
		    position: absolute;
		    right: 10px;
		    top: 70px;
		    left: 10px;
		}
		
		.panelPropertiesParent {
		    background: #E6E6E6;
		    border-radius: 3px 3px 3px 3px;
		    box-shadow: 0 1px 1px #CACACA, 0 1px 1px #696969 inset;
		    display: inline-block;
		    padding: 10px;
		    vertical-align: top;
		    position: absolute;
		    bottom: 10px;
		    left: 10px;
		    right: 10px;
		    z-index: 3;
		}
		
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		
		.toolbar {
		    -moz-border-bottom-colors: none;
		    -moz-border-left-colors: none;
		    -moz-border-right-colors: none;
		    -moz-border-top-colors: none;
		    background-color: #FFFFFF;
		    background-image: linear-gradient(to bottom, #FFFFFF, #F2F2F2);
		    background-repeat: repeat-x;
		    border-color: -moz-use-text-color -moz-use-text-color #DADADA;
		    border-image: none;
		    border-radius: 3px 3px 0 0;
		    border-style: none none solid;
		    border-width: medium medium 1px;
		    box-shadow: 0 1px 0 #FFFFFF;
		    margin: 0;
		    padding: 10px;
		    position: relative;
		}
		
		.lblToolbar {
		    color: #5F5F5F;
		    display: block;
		    font-size: 14px;
		    font-weight: bold;
		    text-shadow: 0 1px 0 #FFFFFF;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnSave" resource="{resources.ic_save_black_18dp}" title="{label.Save}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnUndo" resource="{resources.ic_undo_black_18dp}" title="{label.Undo}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnRedo" resource="{resources.ic_redo_black_18dp}" title="{label.Redo}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		
		<g:FocusPanel ui:field="panelDrop">
			<g:HTMLPanel ui:field="panelGrid" addStyleNames="{style.panelContent}"/>
		</g:FocusPanel>
		<g:HTMLPanel ui:field="panelPropertiesParent" addStyleNames="{style.panelPropertiesParent}">
			<g:SimplePanel ui:field="panelSplitter" addStyleNames="{style.panelSplitter}"/>
			<g:HTMLPanel addStyleNames="{style.mainPanel},{style.panelProperties}">
				<g:HTMLPanel addStyleNames="{style.toolbar}">
					<g:Label text="{label.Properties}" addStyleNames="{style.lblToolbar}"/>
				</g:HTMLPanel>
				<g:SimplePanel ui:field="panelProperties" addStyleNames="{style.panelPropertiesContent}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 