<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.workflow.commons.client.workflow.BoxItem.MyStyle">
		.mainPanel {
			min-height: 70px;
		    min-width: 70px;
			max-width: 200px;
			border-radius: 15px;
			background: white;
			box-shadow: 1px 1px 7px #555;
			text-align: center;
		}
		
		.imgBox {
			margin-top: 5px;
		}
		
		.lblTool {
    		padding: 5px;
		}
		
		.move {
			cursor: move;
		}
		
		.focus {
			box-shadow: 1px 1px 30px lightblue !important;
		}
		
		.notValid {
			background: red !important;
		}
		
		.loop {
			background-color: #CEECF5;
		}
	</ui:style>
	<g:HTMLPanel ui:field="box" addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgBox"/>
		<g:Label ui:field="lblName" addStyleNames="{style.lblTool}"/>
	</g:HTMLPanel>
</ui:UiBinder> 