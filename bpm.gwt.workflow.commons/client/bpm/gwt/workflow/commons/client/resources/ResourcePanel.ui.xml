<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	<ui:with field='commons' type='bpm.gwt.workflow.commons.client.images.Images' />
	
	<ui:style type="bpm.gwt.workflow.commons.client.resources.ResourcePanel.MyStyle">
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		border: 1px solid #DDDDDD;
    		position: relative;
		}
		
		.toolbar {
		    -moz-border-bottom-colors: none;
		    -moz-border-left-colors: none;
		    -moz-border-right-colors: none;
		    -moz-border-top-colors: none;
		    background-color: #FFFFFF;
		    background-image: linear-gradient(to bottom, #FFFFFF, #F2F2F2);
		    background-repeat: repeat-x;
		    border-color: -moz-use-text-color -moz-use-text-color #DADADA;
		    border-image: none;
		    border-radius: 3px 3px 0 0;
		    border-style: none none solid;
		    border-width: medium medium 1px;
		    box-shadow: 0 1px 0 #FFFFFF;
		    margin: 0;
		    padding: 10px;
		    position: relative;
		}
		
		.lblToolbar {
		    color: #5F5F5F;
		    display: block;
		    font-size: 14px;
		    font-weight: bold;
		    text-shadow: 0 1px 0 #FFFFFF;
		}
		
		.btnToolbar {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    position: absolute;
		    right: 10px;
		    top: 2px;
		}
		
		.btnToolbar:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		}
		
		.imgButton {
			display: inline-block;
		}
		
		.lblButton {
		    display: inline-block;
		    margin-top: 10px;
		    vertical-align: top;
		}
		
		.panelGrid {
		    bottom: 0;
		    position: absolute;
		    top: 50px;
		    width: 100%;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel},{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.toolbar}">
			<g:Label ui:field="lblTitle" addStyleNames="{style.lblToolbar}"/>
			<g:FocusPanel ui:field="btnAdd" addStyleNames="{style.btnToolbar}">
				<g:HTMLPanel>
					<g:Image resource="{commons.ic_add_box_black_18dp}" addStyleNames="{style.imgButton}"/>
					<g:Label ui:field="lblAdd" addStyleNames="{style.lblButton}"/>
				</g:HTMLPanel>
			</g:FocusPanel>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="gridPanel" addStyleNames="{style.panelGrid}"/>
	</g:HTMLPanel>
</ui:UiBinder> 