<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='labelCommon' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='label' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	<ui:with field='resource' type='bpm.gwt.workflow.commons.client.images.Images' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.panelTabs {
	        bottom: 0;
		    overflow: auto;
		    position: absolute;
		    text-align: center;
		    top: 65px;
	        left: 5px;
    		right: 5px;
		}
		
		.btn {
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			
		    display: inline-block;
		    height: 25px;
		    margin-bottom: 10px;
		    margin-top: 5px;
		    transition: all 1s ease 0s;
	        padding: 0 60px;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		
		.toolbarPanel {
		    border-radius: 3px;
		    box-shadow: 0 0 1px #696969 inset;
		    height: 50px;
		    margin: 10px 0px 10px 5px;
		    text-align: center;
		}
		
		.imgExpand {
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			cursor: pointer;
			padding: 10px;
		}
		
		.btnToolbar {
		    height: 30px !important;
		    width: 30px !important;
		    padding: 10px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.imgExpand:HOVER, .btnToolbar:HOVER {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.alignRight {
			float: right;
		}
		
		.txtTitle {
		    display: inline-block;
		    font-size: 17px;
		    line-height: 50px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgExpand" title="{labelCommon.Expend}" resource="{commons.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand}"/>
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.toolbarPanel}">
			<g:Label text="{label.Menus}" addStyleNames="{style.txtTitle}"/>
			<g:Image ui:field="imgCollapse" title="{labelCommon.Collapse}" resource="{commons.ic_btn_sidebar_right_expand}" addStyleNames="{style.btnToolbar},{style.alignRight}"/>		
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelTabs" addStyleNames="{style.panelTabs}"/>
	</g:HTMLPanel>
</ui:UiBinder> 