<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='labels' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	
	<ui:style type="bpm.gwt.workflow.commons.client.dialog.DialogProgressWorkflow.MyStyle">
		.mainPanel {
			width: 1125px;
			height: 350px;
		}
		
		.mainPanelExpand {
			width: 100%;
			height: 100%;
		}
		
		.redBackground {
			background-color: red !important;
		}
		
		.redBackground td {
			border: 2px solid red !important;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.panelResult {
			width: 100%;
			text-align: center;
		}
	
		.imgResult {
		    display: inline-block;
	    	margin: 15px;
		}
		
		.lblResult {
		    display: inline-block;
		    margin-top: 30px;
		    vertical-align: top;
		    width: 300px;
		}
		
		.panelBtn {
			width: 100%;
			text-align: center;
		}
		
		.btn {
			background: none repeat scroll 0 0 #444444 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin-top: 5px;
			width: 350px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		.notVisible {
			visibility: false;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.mainPanel}"/>
		<g:HTMLPanel ui:field="panelResult" visible="false" addStyleNames="{style.panelResult}">
			<g:Image ui:field="imgResult"/>
			<g:Label ui:field="lblResult" addStyleNames="{style.lblResult}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelBtn}">
			<g:Button ui:field="btnResult" text="{labels.StopWorkflow}" addStyleNames="{style.btn}"/>
			<g:Button ui:field="btnOutputs" text="{labels.Outputs}" addStyleNames="{style.btn}, {style.notVisible}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 