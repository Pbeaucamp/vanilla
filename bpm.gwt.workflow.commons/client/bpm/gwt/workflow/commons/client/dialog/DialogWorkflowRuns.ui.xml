<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.workflow.commons.client.dialog.DialogWorkflowRuns.MyStyle">
		.mainPanel {
			width: 1125px;
			height: 500px;
		}
		
		.mainPanelExpand {
			width: 100%;
			height: 100%;
		}
		
		.redBackground {
			background-color: red !important;
		}
		
		.redBackground td {
			border: 2px solid red !important;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
	</ui:style>
	<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.mainPanel}"/>
</ui:UiBinder> 