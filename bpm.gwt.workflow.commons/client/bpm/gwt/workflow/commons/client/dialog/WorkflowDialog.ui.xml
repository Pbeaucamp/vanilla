<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	
	<ui:style>
		.mainPanel {
			width: 400px;
			background-color: #F2F2F2;
		}
		
		.txtLogin {
		    -moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.85em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
	        margin: 5px 5px 5px 8px;
	        width: 95%;
		}
		
		.txtLogin:FOCUS {
		    border-bottom-left-radius: 0;
		    border-color: rgba(0, 0, 0, 0.2);
		    border-top-left-radius: 0;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset;
		    color: rgba(0, 0, 0, 0.85);
		}
		
		.error {
		    color: #FF0000;
	    	margin-left: 20px;
		}
		
		.check {
		    display: inline-flex;
		    height: 20px;
		    margin: 8px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<!-- <g:Label ui:field="lblEraseWorkflow" text="{label.EraseWorkflowConfirm}"/>
		<g:CheckBox ui:field="checkNewWorkflow" text="{label.CreateNewWorkflow}"/> -->
		<my:TextHolderBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.txtLogin}"/>
		<g:Label ui:field="txtErrorName" addStyleNames="{style.error}"/>
		<my:TextAreaHolderBox ui:field="txtDescription" placeHolder="{label.Description}" addStyleNames="{style.txtLogin}"/>
		<g:Label ui:field="txtErrorDescription" addStyleNames="{style.error}"/>
	</g:HTMLPanel>
</ui:UiBinder> 