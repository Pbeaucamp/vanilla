<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.vanillahub.web.client.images.Images' />
	<ui:with field='label' type='bpm.vanillahub.web.client.I18N.Labels' />

	<ui:style type="bpm.vanillahub.web.client.ConnexionPanelOld.MyStyle">
		.fullPanel {
			width: 100%;
			height: 100%;
			vertical-align: middle;
			position: relative;
			background: url(images/bg.jpg);
		}
		
		.mainPanel {
		    left: 50%;
		    margin-left: -275px;
		    margin-top: -265px;
		    position: absolute;
		    top: 50%;
		    width: 550px;
		}
		
		.centerPanel {
			z-index: 0;
			margin-bottom: 0px !important;
		}
		
		.formPanel {
			margin-bottom: 5px;
		}
		
		.checkStayConnected {
			margin-left: 20px;
		}
		
		.checkStayConnected input {
		    margin-right: 8px;
		    margin-top: 2px !important;
		}
		
		.panelForm {
			margin: auto;
			width: 100%;
		}
		
		.panelButton {
		    margin-bottom: 10px;
	    	margin-top: 15px;
		}
		
		.button {
			border: 1px solid #555555;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin: 10px;
			width: 45%;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			display: inline-block;
		}
		
		.button:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.btnBackground {
			background: none repeat scroll 0 0 #628CD5;
		}
		
		.btnForgot {
			background: gray !important;
		}
		
		.about {
	        bottom: 0;
		    position: absolute;
		    text-align: center;
		    width: 100%;
		}
		
		.imgLogo {
			height: 200px;
		    display: block;
		    margin: auto;
		}
		
		.txtUser {
			background-color: #F7F8F8;
			border: 1px solid #CCCCCC;
			box-shadow: 0 0 20px -3px rgba(0, 0, 0, 0.2) inset;
			color: #888888;
			font-size: 15px;
			margin-top: 5px !important;
			padding: 10px;
			transition: all 0.5s ease 0s;
			width: 95%;
			height: 40px;
		}
		
		.panelFull {
			width: 99.5%;
		}
		
		.displayNone {
			display: none;
		}
		
		.panelFlag {
			text-align: center;
		    margin-top: 10px;
		}
		
		.imgFlag {
			cursor: pointer;
			margin-left: 8px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.fullPanel}">
		<g:HTMLPanel addStyleNames="{style.mainPanel}">
			<g:HTMLPanel addStyleNames="{style.centerPanel}, ui piled segment form">
				<g:HTMLPanel ui:field="mainPanel">
					<g:Image ui:field="imgLogoVanilla" />
					<g:HTMLPanel ui:field="panelLogin">
						<g:SimplePanel ui:field="formPanel" addStyleNames="{style.formPanel}"/>
						<g:CheckBox ui:field="checkStayConnected" text="Garder ma connexion active" addStyleNames="{style.checkStayConnected}"/>
						<g:HTMLPanel addStyleNames="{style.panelButton}">
							<g:Button ui:field="btnForgotPassword" text="Mot de passe oubliÃ© ?" addStyleNames="{style.button},{style.btnForgot}" /><g:SubmitButton ui:field="btnConnect" text="Connexion" addStyleNames="{style.button},{style.btnBackground}" />
						</g:HTMLPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="panelFlag" addStyleNames="{style.panelFlag}" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.about}">
			<g:HTML text="{label.Copyright}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 