<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.workflow.commons.client.workflow.properties">
	
	<ui:style>
		.check {
			margin-top: 40px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="flex">
		<g:CheckBox ui:field="chkMeta" addStyleNames="{style.check}, inline"/>
		<c:VariableTextPanel ui:field="txt" addStyleNames="inline, flexOne"/>
	</g:HTMLPanel>
</ui:UiBinder> 