<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.vanillahub.web.client.I18N.Labels' />
	<ui:with field='labelCommon' type='bpm.gwt.workflow.commons.client.I18N.LabelsCommon' />
	<ui:with field='resources' type='bpm.vanillahub.web.client.images.Images' />
	
	<ui:style>
		.panelGroupFormat {
		    border-top: 2px solid gray;
		    width: 100%;
		}
		
		.panelToolbar {
			background: lightgray;
			height: 40px;
		}
		
		.btnDefine {
		    background: none repeat scroll 0 0 #444444 !important;
		    border: 1px solid #555555 !important;
		    border-radius: 10px;
		    color: white;
		    cursor: pointer;
		    display: block;
		    height: 40px;
		    margin-left: 25%;
		    margin-top: 15px;
		    margin-bottom: 20px;
		    transition: all 1s ease 0s;
		    width: 50%;
		    display: inline-block;
		}
		
		.btnDefine:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		
		.txt {
	 		-moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.65em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
	        margin: 3px 5px 5px 8px;
	        width: 62%;
	        vertical-align: top;
		}
		
		.txt:FOCUS {
		    border-bottom-left-radius: 0;
		    border-color: rgba(0, 0, 0, 0.2);
		    border-top-left-radius: 0;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset;
		    color: rgba(0, 0, 0, 0.85);
		}
		
		.btn {
			background: none repeat scroll 0 0 #444444 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 30px;
			margin-top: 5px;
			width: 115px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			float: right;
			margin-left: 5px;
			margin-right: 5px;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panelDefineMail" addStyleNames="{style.panelGroupFormat}">
			<g:Button ui:field="btnDefineEmail" text="{label.DefineEmailText}" styleName="{style.btnDefine}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelRecipient" addStyleNames="{style.panelGroupFormat}">
			<g:HTMLPanel addStyleNames="{style.panelToolbar}">
				<my:TextHolderBox ui:field="txtEmail" addStyleNames="{style.txt}"/>
				<g:Button ui:field="btnConfirmAdd" text="{labelCommon.Add}" addStyleNames="{style.btn}"/>
			</g:HTMLPanel>
			<g:SimplePanel ui:field="panelGrid"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 