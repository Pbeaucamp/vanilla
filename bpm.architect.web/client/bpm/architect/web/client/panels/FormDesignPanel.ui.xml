<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:pan="urn:import:bpm.gwt.commons.client.panels">
	
	<ui:with field='label' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	<ui:with field='commonResources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.architect.web.client.panels.FormDesignPanel.MyStyle">
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		position: relative;
		}
		.panelConsult {
		    background: #E6E6E6;
		    border-radius: 3px 3px 3px 3px;
		    bottom: 10px;
		    box-shadow: 0 1px 1px #CACACA, 0 1px 1px #696969 inset;
		    display: inline-block;
		    left: 10px;
		    overflow: hidden;
		    padding: 10px;
		    position: absolute;
		    right: 10px;
		    top: 70px;
		    vertical-align: top;
		}
		.toolbarPanel {
		    background: none repeat scroll 0 0 #D0E4F6;
		    border-radius: 3px;
		    box-shadow: 0 0 1px #696969 inset;
		    height: 50px;
		    left: 10px;
		    position: absolute;
		    right: 10px;
		    top: 10px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel},{style.contentPanel}">
	
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnSave" resource="{commonResources.update}" title="Sauvegarder" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnProps" resource="{commonResources.lk_wb_report_64}" title="Proprietes" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnDatasource" resource="{commonResources.lk_wb_metadata_38}" title="Datasources" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelConsult}">
			<pan:CollapsePanel ui:field="collapsePanel"/>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 