<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commonResources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.architect.web.client.panels.ConsultPanel.MyStyle">
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		
		.toolbar {
		    -moz-border-bottom-colors: none;
		    -moz-border-left-colors: none;
		    -moz-border-right-colors: none;
		    -moz-border-top-colors: none;
		    background-color: #FFFFFF;
		    background-image: linear-gradient(to bottom, #FFFFFF, #F2F2F2);
		    background-repeat: repeat-x;
		    border-color: -moz-use-text-color -moz-use-text-color #DADADA;
		    border-image: none;
		    border-radius: 3px 3px 0 0;
		    border-style: none none solid;
		    border-width: medium medium 1px;
		    box-shadow: 0 1px 0 #FFFFFF;
		    margin: 0;
		    padding: 10px;
		    position: relative;
		}
		
		.lblToolbar {
		    color: #5F5F5F;
		    display: block;
		    font-size: 14px;
		    font-weight: bold;
		    text-shadow: 0 1px 0 #FFFFFF;
		}
		
		.imgButton {
			display: inline-block;
		}
		
		.lblButton {
		    display: inline-block;
		    margin-top: 5px;
		    vertical-align: top;
		}
		
		.panelGrid {
		    bottom: 30px;
		    position: absolute;
		    top: 50px;
		    width: 100%;
		}
		
		.imgPlanned {
			opacity: 0.7;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgPlanned:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		}
		
		.imgFormat {
			height: 32px;
			width: 32px;
		    background-position: center !important
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.toolbarPanel {
		    background: none repeat scroll 0 0 #D0E4F6;
		    border-radius: 3px;
		    box-shadow: 0 0 1px #696969 inset;
		    height: 50px;
		    left: 10px;
		    position: absolute;
		    right: 10px;
		    top: 10px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnClear {
		    background-position: center !important;
		    cursor: pointer;
		    height: 16px !important;
		    margin-top: 14px;
		    padding: 3px;
		    width: 16px !important;
	        vertical-align: top;
		}
		
		.btnClear:HOVER, .btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelTree {
		    bottom: 0px;
		    left: 0px;
		    position: absolute;
		    top: 0px;
		    width: 400px;
   		    background: white;
		    border-radius: 3px 3px 3px 3px;
		    box-shadow: 0 1px 1px #CACACA, 0 1px 1px #696969 inset;
		    display: inline-block;
		    overflow: auto;
		}
		
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		position: relative;
		}
		
		.panelContent {
	    	border-left: 1px solid #D3D3D3;
		    position: absolute;
		    left: 400px;
		    right: 0;
		    height: 100%;
		    top: 0px;
		    background: white;
		}
		
		.panelConsult {
		    background: #E6E6E6;
		    border-radius: 3px 3px 3px 3px;
		    bottom: 10px;
		    box-shadow: 0 1px 1px #CACACA, 0 1px 1px #696969 inset;
		    display: inline-block;
		    left: 10px;
		    overflow: hidden;
		    padding: 10px;
		    position: absolute;
		    right: 10px;
		    top: 70px;
		    vertical-align: top;
		}
		
		.txtSearch {
		    display: inline-block;
		    margin: 4px 0 0 170px !important;
		    vertical-align: top;
		    width: 300px;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			bottom: 0px;
			width: 100%;
	        overflow: hidden;
	        text-align: center;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel},{style.contentPanel}">
	
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnRefresh" resource="{resources.ic_refresh_black_18dp}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAddContract" resource="{resources.ic_add_black_24dp}" title="{label.CreateContract}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAddVersion" resource="{resources.add_version}" visible="false" title="{label.AddNewVersion}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEdit" resource="{resources.ic_edit_black_18dp}" visible="false" title="{label.EditContract}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnShare" resource="{commonResources.share_24_black}" visible="false" title="{commonLabels.ShareToDataPreparation}" addStyleNames="{style.btnToolbar}"/>
			<my:TextHolderBox ui:field="txtSearch" placeHolder="{label.Search}" addStyleNames="{style.txtSearch}"/>
			<g:Image ui:field="btnClear" resource="{resources.ic_clear_16px}" visible="false" addStyleNames="{style.btnClear}"/>
			<g:Image ui:field="btnSearch" resource="{resources.ic_search_black_24dp}" title="{label.Search}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelConsult}">
			<g:SimplePanel ui:field="panelTree" addStyleNames="{style.panelTree}"/>
			<g:HTMLPanel addStyleNames="{style.panelContent}">
					<g:HTMLPanel addStyleNames="{style.toolbar}">
						<g:Label text="{label.Files}" addStyleNames="{style.lblToolbar}"/>
					</g:HTMLPanel>
					<g:SimplePanel ui:field="gridPanel" addStyleNames="{style.panelGrid}"/>
					<g:HTMLPanel ui:field="panelBottom" addStyleNames="{style.panelPager}">
						<g:SimplePanel ui:field="panelPager" addStyleNames="inline, vertical"/>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 