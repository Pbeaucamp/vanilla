<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom"
	xmlns:c="urn:import:bpm.architect.web.client.panels.rules">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	
	<ui:style>
		.lbl {
	    	margin: 35px 10px 10px;
		}
		
		.panelGrid {
		    height: 220px;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<c:DefinitionRulePanel ui:field="panelDefinition"/>
		<g:Label text="{labels.DefinitionRuleClassColumnNull}" addStyleNames="{style.lbl}"/>
		<g:SimplePanel ui:field="gridPanel" addStyleNames="{style.panelGrid}"/>
	</g:HTMLPanel>
</ui:UiBinder> 