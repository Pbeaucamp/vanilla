<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom"
	xmlns:c="urn:import:bpm.architect.web.client.panels.rules">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	
	<ui:style>
		.lbl {
	    	margin: 35px 10px 10px;
		}
	
		.margin {
	    	margin-left: 10px;
		}
		
		.lstColumns {
			width: 350px;
		}
		
		.lst {
			width: 150px;
		}
	</ui:style>
	<g:HTMLPanel>
		<c:DefinitionRulePanel ui:field="panelDefinition"/>
		<g:Label text="{labels.DefinitionRuleColumnDateComparison}" addStyleNames="{style.lbl}"/>
		<p:ListBoxWithButton ui:field="lstOperators" addStyleNames="inline, vertical, {style.margin}, {style.lst}"/>
		<p:ListBoxWithButton ui:field="lstColumns" addStyleNames="inline, vertical, {style.lstColumns}"/>
		<c:ExclusionValuePanel ui:field="panelExclusion"/>
	</g:HTMLPanel>
</ui:UiBinder> 