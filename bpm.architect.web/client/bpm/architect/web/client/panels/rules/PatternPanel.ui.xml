<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom"
	xmlns:c="urn:import:bpm.architect.web.client.panels.rules">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	
	<ui:style>
		.lbl {
	    	margin: 35px 10px 10px;
		}
		
		.margin {
	    	margin-left: 15px;
		}
		
		.txt {
			width: 92%;
		}
		
		.chk {
		    display: inline-block;
		    margin-left: 11px;
		    margin-top: 22px;
		}
	</ui:style>
	<g:HTMLPanel>
		<c:DefinitionRulePanel ui:field="panelDefinition"/>
		<g:Label text="{labels.DefinitionRulePattern}" addStyleNames="{style.lbl}"/>
		<p:LabelTextBox ui:field="txtRegex" placeHolder="{labels.Pattern}" addStyleNames="inline, vertical, {style.margin}, {style.txt}"/>
		<g:CheckBox ui:field="chkErrorIfMatch" text="{labels.ErrorValueIfMatchingPattern}" addStyleNames="{style.chk}"/>
	</g:HTMLPanel>
</ui:UiBinder> 