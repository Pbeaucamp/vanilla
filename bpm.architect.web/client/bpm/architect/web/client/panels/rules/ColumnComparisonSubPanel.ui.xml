<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	
	<ui:style>
		.margin {
	    	margin-left: 10px;
		}
		
		.lstColumns {
			width: 215px;
		}
	
		.lst {
			width: 150px;
		}

		.txt {
			width: 200px;
		}
		
		.lbl {
	    	margin: 15px 10px 10px;
		}
		
		.btnDelete {
			margin-top: 17px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel>
			<p:ListBoxWithButton ui:field="lstColumns" addStyleNames="inline, vertical, {style.margin}, {style.lstColumns}"/>
			<p:ListBoxWithButton ui:field="lstOperators" addStyleNames="inline, vertical, {style.lst}"/>
			<p:LabelTextBox ui:field="txtValue" addStyleNames="inline, vertical, {style.txt}"/>
			<g:Image ui:field="btnDelete" resource="{resources.ic_delete_black_18dp}" title="{labels.DeleteComparison}" addStyleNames="inline, vertical, {style.btnDelete}"/>
		</g:HTMLPanel>
		<g:Label ui:field="lblIn" text="{labels.SeparateValuesWithSemicolon}" addStyleNames="{style.lbl}"/>
	</g:HTMLPanel>
</ui:UiBinder> 