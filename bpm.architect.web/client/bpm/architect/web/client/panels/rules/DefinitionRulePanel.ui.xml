<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.architect.web.client.I18N.Labels' />
	
	<ui:style>
		.mainPanel {
		}
		
		.txt {
    		margin-left: 12px;
    		width: 96%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<p:LabelTextBox ui:field="txtName" placeHolder="{labels.Name}" addStyleNames="inline, vertical, {style.txt}"/>
		<p:LabelTextArea ui:field="txtDescription" placeHolder="{labels.Description}" addStyleNames="inline, vertical, {style.txt}"/>
		<g:CheckBox ui:field="chkEnabled" text="{labels.Enabled}" addStyleNames="inline, vertical, {style.txt}"/>
	</g:HTMLPanel>
</ui:UiBinder> 