<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field="labels" type="bpm.architect.web.client.I18N.Labels"/>
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	<ui:style>
		.mainPanel {
			width: 600px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<my:LabelTextBox ui:field="txtName" placeHolder="{labels.Name}"/>
		<my:LabelTextBox ui:field="txtDesc" placeHolder="{labels.Description}"/>
	
		<my:ListBoxWithButton ui:field="lstDatasource" label="Datasource"/>
		<my:LabelTextBox ui:field="txtTable" placeHolder="Table name"/>
	
	</g:HTMLPanel>
</ui:UiBinder> 