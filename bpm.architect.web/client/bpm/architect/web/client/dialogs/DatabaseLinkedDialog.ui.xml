<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	
	<ui:style type="bpm.architect.web.client.dialogs.DatabaseLinkedDialog.MyStyle">
		.mainPanel {
			width: 600px;
			height: 450px;
			position: relative;
		}
		
		.imgCell {
	
		}
		
		.toolbarPanel {
		    box-shadow: 0 0 1px #696969 inset;
		    border-bottom: 1px solid black;
		    height: 50px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.gridPanel {
			position: absolute;
			top: 50px;
			bottom: 30px;
			width: 100%;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
	
		.txtWidth {
			width: 100%;
		}
		
		.panelPager {
		    bottom: 0;
		    position: absolute;
		    width: 100%;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">	
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnDefineDataset" resource="{resources.ic_database_change_black_36px}" title="{label.ChangeLinkedDatabase}" addStyleNames="{style.btnToolbar}"/>
<!-- 			<c:LabelTextBox ui:field="txtLimit" text="100" placeHolder="{label.Limit}" addStyleNames="{style.txtWidth}"/> -->
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.gridPanel}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 