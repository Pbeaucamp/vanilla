<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.architect.web.client.I18N.Labels' />
	<ui:with field='resources' type='bpm.architect.web.client.images.Images' />
	
	<ui:style type="bpm.architect.web.client.dialogs.DocumentVersionsDialog.MyStyle">
		.mainPanel {
			width: 1125px;
			height: 500px;
			position: relative;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.selectedBackground {
			background-color: #BCD1F5 !important;
		}
		
		.selectedBackground td {
			border: 2px solid #BCD1F5 !important;
		}
		
		.gridPanel {
			position: absolute;
			top: 0px;
			bottom: 0px;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">	
		<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.gridPanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 