<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
		}
	
		.btnPanel {
			position: absolute;
			right: 5px;
			margin-top: 10px;
			margin-bottom: 5px;
		}
		
		.btn {
			height: 40px;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel>
			<g:Label ui:field="lblName" addStyleNames="{style.lbl}"/>
			<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblCreationDate" addStyleNames="{style.lbl}"/>
			<g:TextBox ui:field="txtCreationDate" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblComment" addStyleNames="{style.lbl}"/>
			<g:TextArea ui:field="txtComment" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 