<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 600px;
		}
		.radioBtn {
			color: #3B99CB;
			display: block;
		}
		.sizeElem {
			width: 70%;
			margin-left: 40px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<my:SectionPanel text="{label.General}">	
			<my:LabelTextBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.sizeElem}"></my:LabelTextBox>
		</my:SectionPanel>
		
		<my:SectionPanel text="{label.Validity}">	
			<my:LabelValueTextBox ui:field="peremptionMonths" placeHolder="{label.PeremptionMonths}" addStyleNames="{style.sizeElem}"></my:LabelValueTextBox>
		</my:SectionPanel>
		
		<my:SectionPanel text="{label.Retention}">
			<my:LabelValueTextBox ui:field="retentionMonths" placeHolder="{label.RetentionMonths}" addStyleNames="{style.sizeElem}"></my:LabelValueTextBox>
			<my:LabelTextBox ui:field="txtPath" placeHolder="{label.ArchivePath}" addStyleNames="{style.sizeElem}"></my:LabelTextBox>
		</my:SectionPanel>
		
		<my:SectionPanel text="{label.Conservation}">
			<my:LabelValueTextBox ui:field="conservationMonths" placeHolder="{label.ConservationMonths}" addStyleNames="{style.sizeElem}"></my:LabelValueTextBox>
			
			<g:RadioButton ui:field="btnDelete" name="btnRadio" text="{label.DestroyDocument}" addStyleNames="{style.radioBtn},{style.sizeElem}"></g:RadioButton>
			<g:RadioButton ui:field="btnArchive" name="btnRadio" text="{label.ArchiveDocument}" addStyleNames="{style.radioBtn},{style.sizeElem}"></g:RadioButton>
			<my:ListBoxWithButton ui:field="lstArchiveAction" label="{label.ArchiveType}" addStyleNames="{style.sizeElem}"></my:ListBoxWithButton>
		</my:SectionPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 