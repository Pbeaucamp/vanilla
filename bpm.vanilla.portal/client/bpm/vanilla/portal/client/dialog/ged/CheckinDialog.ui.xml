<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:style>
		.checkIndex {
			display: block;
			margin: 10px;
		}
		
		.fileUpload {
			margin: 10px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
	    <g:FlowPanel>
	    	<g:CheckBox ui:field="checkIndex" text="{label.Indexfile}" addStyleNames="{style.checkIndex}"/>
			<g:FormPanel ui:field="formPanel">
			        <g:FileUpload ui:field="fileUpload" name="file" addStyleNames="{style.fileUpload}"/>
			</g:FormPanel>
	    </g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 