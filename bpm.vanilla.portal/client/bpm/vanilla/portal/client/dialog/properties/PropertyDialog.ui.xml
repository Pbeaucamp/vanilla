<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.vanilla.portal.client.dialog.properties.PropertyDialog.MyStyle">
		.contentPanel {
			width: 900px;
			height: 450px;
		}
		
		.contentPanelMax {
			width: 100% !important;
			height: 100% !important;
		}
	
		.panelTab {
		    background: #444444;
		    height: 100%;
		    width: 20%;
		    float: left;
		    overflow: auto;
		}
		
		.panelViewer {
			float: right;
			height: 100%;
			width: 80%;
			position: relative;
		}
		
		.txtBoxWidth {
			width: 95%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
	    <g:HTMLPanel ui:field="panelTab" addStyleNames="{style.panelTab}"/>
	    <g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelViewer}"/>
	</g:HTMLPanel>
</ui:UiBinder> 