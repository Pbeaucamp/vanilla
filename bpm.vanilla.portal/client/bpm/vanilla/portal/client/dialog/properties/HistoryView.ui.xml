<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.vanilla.portal.client.dialog.properties.HistoryView.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.panelContent {
			position: absolute;
			top: 0px;
			width: 100%;
			bottom: 30px;
		}
	
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 