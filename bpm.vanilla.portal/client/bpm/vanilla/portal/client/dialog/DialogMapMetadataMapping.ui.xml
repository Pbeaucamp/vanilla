<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:c="urn:import:bpm.gwt.commons.client.custom">
		<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.mainPanel {
			width: 1200px;
			height: 600px;
		}
		.contentPanel {
			position: absolute;
			width: 1200px;
			height: 500px;
			bottom: 50px;
			display: flex;
		}
		.subPanel {
			flex: 1;
		}
		.list {
			height: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel>
			<c:CustomButton ui:field="btnMetadata" text="Choisissez un Metadata"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.contentPanel}">
			<g:HTMLPanel ui:field="metadataPanel" addStyleNames="{style.subPanel}">
				
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.subPanel}">
				
			</g:HTMLPanel>
			<!-- <g:HTMLPanel addStyleNames="{style.subPanel}">
				<c:ListBoxWithButton ui:field="lstZoneId" addStyleNames="{style.list}"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames="{style.subPanel}">
				<c:ListBoxWithButton ui:field="lstMetadataId" addStyleNames="{style.list}"/>
			</g:HTMLPanel> -->
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 