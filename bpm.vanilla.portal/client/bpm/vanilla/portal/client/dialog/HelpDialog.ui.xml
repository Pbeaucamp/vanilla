<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.vanilla.portal.client.dialog.HelpDialog.MyStyle">
		.mainPanel {
			width: 600px;
		}
	
		.imgDoc {
			float: left;
			width: 40px;
		}
		
		.lblDoc {
			margin-bottom: 5px;
		    margin-left: 45px;
		    margin-top: 10px;
		}
		
		.link {
			margin-left: 55px;
		}
		
		.panelLeft {
			float: left;
			width: 300px;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="dialog">
		<g:HTMLPanel ui:field="panelTop">
			<g:SimplePanel/>
			<g:SimplePanel>
				<g:Label ui:field="lblTitle"/>
			</g:SimplePanel>
			<g:HTMLPanel>
				<g:Image ui:field="btnReduce"/>
				<g:Image ui:field="btnMax"/>
				<g:Image ui:field="btnClose"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="contentPanel">
			<g:HTMLPanel addStyleNames="{style.mainPanel}">
				<g:HTMLPanel addStyleNames="{style.panelLeft}">
					<g:CaptionPanel ui:field="panelPlateforme"/>
					<g:CaptionPanel ui:field="panelAdmin"/>
				</g:HTMLPanel>
				<g:CaptionPanel ui:field="panelDesigner"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelButton"/>
	</g:HTMLPanel>
</ui:UiBinder> 