<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	
	<ui:style type="bpm.vanilla.portal.client.dialog.AboutDialog.MyStyle">
		.mainPanel {
			width: 600px;
			height: 600px;
			overflow: auto;
		}
		
		.txtAbout {
			margin: 10px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<g:Image resource="{resources.vanilla_lettering_incrust_64}" addStyleNames="{style.txtAbout}"/>
		<g:HTML ui:field="txtAbout" addStyleNames="{style.txtAbout}"/>
	</g:HTMLPanel>
</ui:UiBinder> 