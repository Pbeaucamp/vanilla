<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.vanilla.portal.client.wizard.AddTaskDefinitionPage.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
		}
		
		.lblName {
		    float: left;
		    margin-left: 12px;
		    margin-top: 5px;
		}
		
		.txtName {
		    display: block;
		    margin-left: 100px;
		    margin-top: 3px;
		    width: 560px;
		}
		
		.lblDefinition {
		    float: left;
		    margin-left: 12px;
		    margin-top: 15px;
		}
		
		.txtDefinition {
		    display: block;
		    height: 275px;
		    margin-left: 100px;
		    margin-top: 12px;
		    width: 560px;
			resize: none; 
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:Label ui:field="lblName" addStyleNames="{style.lblName}"/>
		<g:TextBox ui:field="txtName" addStyleNames="{style.txtName}"/>
		<g:Label ui:field="lblDefinition" addStyleNames="{style.lblDefinition}"/>
		<g:TextArea ui:field="txtDefinition" addStyleNames="{style.txtDefinition}"/>
	</g:HTMLPanel>
</ui:UiBinder> 