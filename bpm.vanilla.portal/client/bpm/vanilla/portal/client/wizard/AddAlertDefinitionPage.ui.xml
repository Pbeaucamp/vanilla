<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:style type="bpm.vanilla.portal.client.wizard.AddAlertDefinitionPage.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
		}
		
		.lbl {
			color: #3B99CB;
		    margin-left: 18px;
		    margin-top: 5px;
		    width: 90%;
		}
		
		.lst {
			width: 96%;
		}
		
		.txtWidth {
			width: 98%;
		}
		
		.txtWidth textarea{
			max-width: 98%;
			height: 100px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<c:LabelTextBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextArea ui:field="txtDescription" placeHolder="{label.Description}" addStyleNames="{style.txtWidth}"/>
		<g:Label addStyleNames="{style.lbl}" text="{label.TypeEvent}"/>
		<g:ListBox ui:field="lstTypeEvent" addStyleNames="{style.lst}"/>
	</g:HTMLPanel>
</ui:UiBinder> 