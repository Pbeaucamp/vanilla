<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.vanilla.portal.client.wizard.map.AddMapDataSetPage.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
		}
		.panelDatagrid {
			height: 280px;
			width: 690px;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.pager {
			margin: auto;
		}
	
		.panelPager {
			position: relative;
			height: 30px;
			width: 200px;
			margin: auto;
		}
		
		.panelPreviewMap {
			position: relative;
			width: 100%;
			height: 310px;
			display: none;
		}
		
		
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<!-- <g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/> -->
			<g:Image ui:field="btnAddDataSet" resource="{commons.add_24}" title="{label.AddANewMap}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEditDataSet" resource="{commons.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnPreviewDataSet" resource="{resources.ic_map_black_36dp}" title="{label.Preview}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnDeleteDataSet" resource="{commons.delete_24}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelDatagrid}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		<g:SimplePanel ui:field="panelPreviewMap" addStyleNames="{style.panelPreviewMap}"/>
		
	
	</g:HTMLPanel>
</ui:UiBinder> 