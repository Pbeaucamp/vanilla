<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.vanilla.portal.client.wizard.map.MarkerDialog.MyStyle">
		.linePanel {
			width: 100%;
			margin-top: 15px;
		}
		
		.selectedWidget {
		    background: lightgrey;
		    margin: -1px;
		    border: 1px solid;
		}
		
		.mainPanel {
			width: 450px;
			height: 300px;
			padding: 15px;
		}
		
		.txtBox {
			width: 370px;
			margin: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	
		<g:Label text="{label.iconAvailable}"></g:Label>
		<g:FlexTable ui:field="availableIcons"></g:FlexTable>
	
		<g:HTMLPanel addStyleNames="{style.linePanel}" ui:field="addIconPanel">
			<g:Label text="{label.addIcon}"></g:Label>
		</g:HTMLPanel>
	
		<g:HTMLPanel addStyleNames="{style.linePanel}">
			<g:Label text="{label.minSize}"></g:Label>
			<g:TextBox ui:field="txtMinSize" addStyleNames="{style.txtBox}"></g:TextBox>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.linePanel}">
			<g:Label text="{label.maxSize}"></g:Label>
			<g:TextBox ui:field="txtMaxSize" addStyleNames="{style.txtBox}"></g:TextBox>
		</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 