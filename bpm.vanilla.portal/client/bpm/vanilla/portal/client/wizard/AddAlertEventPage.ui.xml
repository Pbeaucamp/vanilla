<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.vanilla.portal.client.wizard.AddAlertEventPage.MyStyle">
	
		.panelContent {
			height: 400px;
			width: 700px;
		}
		
		.lbl {
			color: #3B99CB;
		    margin-left: 18px;
		    margin-top: 5px;
		    width: 90%;
		}
		
		.lst {
			width: 93%;
		}
		
		.lstSmall {
			width: 515px;
			margin: 5px;
		}
		
		.txtWidth {
			width: 95%;
		}
		
		.txtMetadata {
			width: 75%;
			display: inline-block;
			
		}
		.btnMetadata {
			display: inline;
		    font-size: 2em;
		    margin: 0;
		    vertical-align: sub;
		    width: 20%;
		}
		
		.btnDtsManager {
			display: inline;
		    font-size: 1em;
		    margin: 5px 0 0 0;
		    vertical-align: sub;
		    width: 20%;
		}
		
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 20px !important;
		    padding: 5px;
		    width: 20px !important;
		    margin-left: 305px;
		    display: block;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panel {
			margin-top: 30px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:Label addStyleNames="{style.lbl}" text="{label.SubType}"/>
		<g:ListBox ui:field="lstSubType" addStyleNames="{style.lst}"/>
		<g:HTMLPanel ui:field="panelRepository" addStyleNames="{style.panel}">
			<c:LabelTextBox ui:field="txtItem" placeHolder="{label.Repository}" addStyleNames="{style.txtMetadata}"/>
			<g:Button ui:field="btnBrowseRep" addStyleNames="{style.btnMetadata}">...</g:Button>
			<g:Label addStyleNames="{style.lbl}" text="{label.Datasets}"/>
			<g:ListBox ui:field="lstDataset" addStyleNames="{style.lstSmall}"/>
			<g:Button ui:field="btnNewDataset" addStyleNames="{style.btnDtsManager}" text="{commons.DatasetManager}"></g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelKpi" addStyleNames="{style.panel}">
			<!-- <g:CaptionPanel captionText="{commons.FilterAxis}"> -->
			<g:Label addStyleNames="{style.lbl}" text="{commons.FilterAxis}"/>
			<g:Label ui:field="lblMetrics" addStyleNames="{style.lbl}" text="{commons.Metrics}"/>
			<g:ListBox ui:field="lstMetrics" addStyleNames="{style.lst}"/>
			<g:Label ui:field="lblAxis" addStyleNames="{style.lbl}" text="{commons.Axis}"/>
			<g:ListBox ui:field="lstAxis" addStyleNames="{style.lst}"/>
	
			<!-- <g:Label ui:field="lblValue" addStyleNames="{style.lbl}" text="{label.value}"/> -->
			<c:LabelTextBox ui:field="txtValue" placeHolder="{commons.Value}" addStyleNames="{style.txtMetadata}"/>
			<g:Button ui:field="btnValueSelect" addStyleNames="{style.btnMetadata}">...</g:Button>
			<!-- </g:CaptionPanel> -->
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelConditions" addStyleNames="{style.panel}">
			<g:HTMLPanel ui:field="panelConditionsList" addStyleNames="{style.txtWidth}"/>
			<g:Image ui:field="btnAdd" resource="{resources.add_24}" addStyleNames="{style.btnToolbar}"/>
			<g:Label addStyleNames="{style.lbl}" text="{commons.Operator}"/>
			<g:ListBox ui:field="lstOperator" addStyleNames="{style.lst}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 