<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panelContent {
			height: 350px;
			width: 690px;
		}
		
		.lblFilter {
		    float: left;
		    margin-left: 12px;
		    margin-top: 5px;			
		}
		
		.lstFilter {
		    margin-left: 30px;
		    margin-top: 3px;
		    width: 80%;	
		}
		
		.panelRepository {
			border: 1px solid gray;
		    height: 250px;
		    margin: 10px;
		    min-width: 450px;
		    background: lightgray;
		}
		
		.lblFormat {
			float: left;
			margin-left: 12px;
			margin-top: 2px;
		}
		
		.lstFormat {
		    margin-left: 30px;
    		width: 80%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:Label ui:field="lblFilter" addStyleNames="{style.lblFilter}"/>
		<g:ListBox ui:field="lstFilter" addStyleNames="{style.lstFilter}"/>
		<g:SimplePanel ui:field="panelRepository" addStyleNames="{style.panelRepository}"/>
		<g:Label ui:field="lblFormat" addStyleNames="{style.lblFormat}"/>
		<g:ListBox ui:field="lstFormat" addStyleNames="{style.lstFormat}"/>
	</g:HTMLPanel>
</ui:UiBinder> 