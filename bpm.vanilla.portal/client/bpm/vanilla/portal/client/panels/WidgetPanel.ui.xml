<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
	
		.panelFocus {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 30px;
		}
		
		.panelContent {
			width: 100%;
			height: 100%;
			position: relative;
			overflow: hidden;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Image ui:field="btnSwitch" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAdd" resource="{commons.add_24}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnDelete" resource="{commons.delete_24}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:FocusPanel ui:field="focusPanel" addStyleNames="{style.panelFocus}">
			<g:HTMLPanel ui:field="panelContent" addStyleNames="{style.panelContent}">
			</g:HTMLPanel>
		</g:FocusPanel>
	</g:HTMLPanel>
</ui:UiBinder> 