<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.ContentDisplayPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.toolbarParent {
			position: absolute;
			top: 0px;
			left: 0px;
			height: 40px;
			right: 50px;
			overflow: hidden;
			display: inline-block;
		}
		
		.contentPanel {
			position: absolute;
			top: 40px;
			left: 0px;
			right: 50px;
			bottom: 10px;
		    border: 1px solid #D3D3D3;
		    overflow: auto;
		    -moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.displayNone {
			display: none;
		}
		
		.rightToolbar {
		    overflow: hidden;
		    padding-top: 5px;
		    position: absolute !important;
		    right: 0px;
		    width: 45px;
		    top: 0px;
		    bottom: 0px;
		    z-index: 4;
		}
		
		.shadow {
			witdh: 100%;
			top: 0px;
			bottom: 10px;
			position: absolute;
			-moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.btnRightToolbar {
			margin-top: 0px;
			width: 25px !important;
			height: 25px !important;
			background-position: center !important;
			cursor: pointer;
			padding: 10px;
		}
		
		.btnRightToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnGrey {
			-webkit-filter: grayscale(100%);
    		filter: grayscale(100%);
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentDisplayPanel" addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="tabHeaderPanel" addStyleNames="{style.toolbarParent}"/>
		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
		<g:SimplePanel addStyleNames="{style.rightToolbar}">
			<g:HTMLPanel ui:field="rightToolbar" addStyleNames="{style.shadow}">
				<g:Image ui:field="btnHome" resource="{resources.welcome_24_b}" title="{label.Home}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnRepositoryContent" resource="{resources.repository_24_b}" title="{label.Repository}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnTask" resource="{resources.task_24_b}" title="{label.Task}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnHisto" resource="{resources.history_24_b}" title="{label.History}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnSearch" resource="{resources.search_24_b}" title="{label.GedTab}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnDocumentManager" resource="{resources.menu_show_list_24_b}" title="{label.DocumentManagerTab}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnArchiveManager" resource="{resources.archive_toolbar}" title="{label.ArchiveManagerTab}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnRequest" resource="{resources.access_24_b}" title="{label.RequestAccess_TabTitle}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnAlertManager" resource="{resources.menu_report_image_24_b}" title="{label.AlertManagerTab}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnProcessManager" resource="{resources.menu_month_24_b}" title="{label.ProcessManager}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnMapDesigner" resource="{resources.ic_terrain_grey600_24dp}" title="{label.MapDesigner}" addStyleNames="{style.btnRightToolbar}"/>
				<g:Image ui:field="btnForum" resource="{commons.viewer_comment}" title="{label.Forum}" addStyleNames="{style.btnRightToolbar} {style.btnGrey}"/>
				<g:Image ui:field="btnVanillaHub" resource="{commons.viewer_hub_24}" title="{label.VanillaHub}" addStyleNames="{style.btnRightToolbar} {style.btnGrey}"/>
				<g:Image ui:field="btnValidationManager" resource="{commons.ic_check_black_27dp}" title="{label.ValidationManager}" addStyleNames="{style.btnRightToolbar} {style.btnGrey}"/>
			</g:HTMLPanel>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 