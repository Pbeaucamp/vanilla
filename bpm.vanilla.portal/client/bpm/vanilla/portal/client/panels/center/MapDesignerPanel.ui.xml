<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.center.MapDesignerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.relative {
			position: relative;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.lstToolbar {
			height: 24px;
		    margin: 8px 8px 8px 20%;
		    position: absolute;
		    width: 200px;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 30px;
		}
	
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
		
		.pager {
			margin: auto;
		}
		
		.panelPreviewMap {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 0px;
			overflow: auto;
		}
		
		.full {
			width: 100%;
			height: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}, {style.relative}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
				<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnAddMap" resource="{commons.add_24}" title="{label.AddANewMap}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnEditMap" resource="{commons.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnMappingMetadata" resource="{commons.assos}" title="Mapping carte/Metadata" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnPreviewMap" resource="{resources.ic_map_black_36dp}" title="{label.Preview}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnDeleteMap" resource="{commons.delete_24}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>
				
				<!-- <g:Label ui:field="lblType" addStyleNames="{style.lblType}"/> -->
				<g:ListBox ui:field="lstDataSet" addStyleNames="{style.lstToolbar}"/>	
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		<g:SimplePanel ui:field="panelPreviewMap" visible="false" addStyleNames="{style.panelPreviewMap}">
			<g:HTMLPanel ui:field="panelMap" addStyleNames="{style.full}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 