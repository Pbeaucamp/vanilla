<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
		    height: 100%;
		    overflow: auto;
		    text-align: center;
		    width: 100%;
		}
		
		.txtSearch {
		    display: block;
		    margin: 100px auto 10px;
		    width: 350px;
		}
		
		.radioButton {
			margin-right: 15px;
		}
		
		.btnSearch {
			background: none repeat scroll 0 0 #444444;
			border: 1px solid #555555;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin-top: 5px;
			width: 250px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			margin-bottom: 25px;
		}
		
		.btnSearch:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.disclosurePanel {
		    margin: 10px auto;
	    	width: 500px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:TextBox ui:field="txtSearch" addStyleNames="{style.txtSearch}"/>
		<g:HTMLPanel>
			<g:RadioButton ui:field="btnAllWords" name="queryType" text="{label.AllWords}" addStyleNames="{style.radioButton}"/>
			<g:RadioButton ui:field="btnNotAllWords" name="queryType" text="{label.NotAllWords}" addStyleNames="{style.radioButton}"/>
		</g:HTMLPanel>
		<g:DisclosurePanel ui:field="captionAdvancedSearch" addStyleNames="{style.disclosurePanel}">
			<g:header><ui:text from="{label.AdvancedSearch}"/></g:header>
		</g:DisclosurePanel>
		<g:Button ui:field="btnSearch" text="{label.Search}" styleName="{style.btnSearch}"/>
	</g:HTMLPanel>
</ui:UiBinder> 