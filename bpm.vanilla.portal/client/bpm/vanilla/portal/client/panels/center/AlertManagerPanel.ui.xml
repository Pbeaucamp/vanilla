<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.center.AlertManagerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	
		.documentList {
		    position: absolute;
			border-right: 1px solid gray;
		    bottom: 0;
		    top: 0;
		    width: 250px;
		    overflow: auto;
		}
	
		.panelContent {
			position: absolute;
			top: 0px;
			left: 251px;
			right: 0px;
			bottom: 30px;
		}
		
		.panelGridAlert {
			position: absolute;
			top: 50px;
			width: 100%;
			bottom: 0;
		}
		
		.panelGridEvent {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 0;
		}
	
		.panelPager {
			position: absolute;
			height: 30px;
			left: 251px;
			right: 0px;
			bottom: 0px;
		}
		
		.pager {
			margin: auto;
		}
		
		.imgArrowDocument {
			/*height: 15px;
		    position: absolute;
		    right: 5px;
		    top: 15px;
		    width: 15px;*/
		}
		
		.labelRowAlert {
			margin-top: 8px;
			float: right;
		}
		
		.textAlert {
			float: left;
		}
		
		.imgDropdown {
			height: 25px;
			width: 25px;
			padding: 2px;
		}
		
		.selectAllPanel {
			background-color : #d3d3d3;
			height: 20px;
    		padding: 10px 2px;
		}
		.selectAll label{
			color: white;
			padding: 15px;
		}
		
		.cell {
		  padding-left: 0px !important;
		}
		.childEvent {
		  border: 2px solid white !important;
		  background: white !important;
		  padding-left: 10px !important;
		}
		
		.childAlert {
		  padding-left: 30px !important;
		}
		
		.selectedchildCell {
			border: 2px solid #249BC3 !important;
		  	background: #249BC3 !important;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important;
		    width: 27px;
		    height: 27px;
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		
		<g:HTMLPanel addStyleNames="{style.documentList}">
			<g:SimplePanel addStyleNames="{style.selectAllPanel}">
				<g:CheckBox ui:field="selectAll" text="{label.SelectAll}" addStyleNames="{style.selectAll}"/>
			</g:SimplePanel>
			<g:SimplePanel ui:field="panelEventType"  addStyleNames="{style.panelGridEvent}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelContent}">
			<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
				<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnAdd" resource="{commons.add_24}" title="{label.AddNewAlert}" addStyleNames="{style.btnToolbar}"/>
			</g:HTMLPanel>
			<g:SimplePanel ui:field="panelGridAlert" addStyleNames="{style.panelGridAlert}"/>
		</g:HTMLPanel>
		
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 