<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my='urn:import:bpm.gwt.commons.client.custom'>
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.center.DocumentManagerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
		
		/*.panelDocument {
		    position: absolute;
			border-right: 1px solid gray;
		    bottom: 0;
		    top: 73px;
		    width: 251px;
		    overflow: hidden;
		}*/
	
		.panelDocument {
		    position: absolute;
			border-right: 1px solid gray;
		    bottom: 0;
		    top: 75px;
		    width: 251px;
		}
		
		.panelContent {
			position: absolute;
			top: 75px;
			left: 252px;
			right: 0px;
			bottom: 30px;
		}
	
		.panelPager {
			position: absolute;
			height: 30px;
			left: 252px;
			bottom: 0px;
			right: 0px;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.pager {
			margin: auto;
		}
		.panelSearch {
			width: 100%;
			height: 30px;
			background: #E6E6E6;
		}
		
		.txtSearch {
		    margin-left: 12px;
		    margin-top: 4px;
		    width: 220px;
		    vertical-align: top;
		}
		
		.btnClear {
			margin-top: 7px;
			cursor: pointer;
		}
		
		.btnClear:HOVER {
			background-color: #444444 !important;
		}
		
		.btnSearch {
			background: none repeat scroll 0 0 #444444;
			border: 1px solid #555555;
			color: #FFFFFF;
			cursor: pointer;
			height: 20px;
			width: 100px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			vertical-align: top;
			margin-top: 5px;
		}
		
		.btnSearch:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		
		.labelRowDocument {
			/*border-bottom: 1px solid gray;*/
		    height: 45px;
		    position: relative;
		    cursor: pointer;
		}
		
		.textDocument {
			left: 30px;
		    position: absolute;
		    top: 15px;
		    width: 195px;
		}
		
		/*.documentList {
			border-right: 1px solid gray;
		    bottom: 0;
		    position: absolute;
		    top: 28px;
		    width: 250px;
		    overflow: auto;
		}*/

		.imgGrantedDocument {
			height: 15px;
		    left: 10px;
		    position: absolute;
		    top: 15px;
		    width: 15px;	
		}
		
		.imgArrowDocument {
			height: 15px;
		    position: absolute;
		    right: 5px;
		    top: 15px;
		    width: 15px;	
		}

		.labelListheader {
			border-bottom: 2px solid #6F7277;
		    border-right: 1px solid gray;
		    color: #4B4A4A;
		    font-size: 12px;
		    font-weight: bold;
		    height: 19px;
		    padding: 8px 15px 0;
		    text-shadow: 1px 1px 0 #DDDDFF;
		    width: 221px;
		}
		
		.grid {
			overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnIndex" resource="{commons.viewer_report_export}" title="{label.Indexfile}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnIndexNewVersion" resource="{resources.add_version_24}" title="{label.AddVersion}" addStyleNames="{style.btnToolbar}"/>
			<my:ImageButton ui:field="btnFilters"/>
		</g:HTMLPanel>
	    <g:HTMLPanel ui:field="panelSearch" addStyleNames="{style.panelSearch}">
	    	<g:TextBox ui:field="txtSearch" addStyleNames="{style.txtSearch}"/>
			<g:Image ui:field="btnClear" resource="{resources.ic_dialog_close}" title="{label.Clear}" addStyleNames="{style.btnClear}"/>
	    	<g:Button ui:field="btnSearch" text="{label.Search}" styleName="{style.btnSearch}"/>
	    </g:HTMLPanel>
<!-- 		<g:HTMLPanel addStyleNames="{style.panelDocument}"> -->
<!-- 			<g:Label text="{label.ListDocuments}" addStyleNames="{style.labelListheader}"/> -->
			<g:SimplePanel ui:field="panelDocument" addStyleNames="{style.panelDocument}"/>
<!-- 		</g:HTMLPanel> -->
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		<g:HTMLPanel ui:field="panelFormWopi" visible="false"/>
	</g:HTMLPanel>
</ui:UiBinder> 