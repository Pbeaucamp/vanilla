<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.center.ForumPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
	
		.panelContent {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 30px;
			overflow: auto;
		}
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.lbl {
			display: inline-block;
			vertical-align: top;
			margin-left: 10px;
			margin-top: 12px;
		}
		
		.txtSearch {
		    margin-left: 12px;
		    margin-top: 4px;
		    width: 220px;
		    vertical-align: top;
		    height: 25px;
		}
		
		.lstFilter {
		    margin-left: 12px;
		    margin-top: 4px;
		    width: 220px;
		    height: 30px;
		    padding: 5px;
		}
		
		.btnClear {
			margin-top: 11px;
			cursor: pointer;
			vertical-align: top;
		}
		
		.btnClear:HOVER {
			background-color: #EE4444 !important;
		}
		
		.btnSearch {
			background: none repeat scroll 0 0 #444444;
			border: 1px solid #555555;
			color: #FFFFFF;
			cursor: pointer;
			height: 30px;
			width: 100px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			vertical-align: top;
			margin-top: 5px;
			padding: 2px;
		}
		
		.btnSearch:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Label text="{label.Search}" addStyleNames="{style.lbl}"/>
			<g:TextBox ui:field="txtSearch" addStyleNames="{style.txtSearch}"/>
			<g:Image ui:field="btnClear" resource="{resources.ic_dialog_close}" title="{label.Clear}" addStyleNames="{style.btnClear}"/>
	    	<g:Button ui:field="btnSearch" text="{label.Search}" styleName="{style.btnSearch}"/>
	    	<g:Label text="{label.Type}" addStyleNames="{style.lbl}"/>
	    	<g:ListBox ui:field="lstFilter" addStyleNames="{style.lstFilter}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 