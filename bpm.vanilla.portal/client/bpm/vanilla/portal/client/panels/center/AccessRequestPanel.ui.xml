<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.center.AccessRequestPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
	
		.panelContent {
			position: absolute;
			top: 70px;
			width: 100%;
			bottom: 30px;
		}
	
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.pager {
			margin: auto;
		}
		
		.radioButton {
		    display: inline-block;
		    margin-left: 10px;
		    margin-top: 10px;
		    vertical-align: top;
		}
		
		.checkButton {
		    float: right;
		    margin-right: 20px;
		    margin-top: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:RadioButton ui:field="btnShowRequests" name="requests" text="{label.RequestAccess_Radio_RequestsToMe}" addStyleNames="{style.radioButton}"/>
			<g:RadioButton ui:field="btnShowMyDemands" name="requests" text="{label.RequestAccess_Radio_MyDemands}" addStyleNames="{style.radioButton}"/>
			<g:CheckBox ui:field="btnShowHistoryDemands" text="{label.RequestAccess_Button_ShowPreviousDemands}" addStyleNames="{style.checkButton}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelRequestToMe" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPagerToMe" addStyleNames="{style.panelPager}"/>
		<g:SimplePanel ui:field="panelRequestByMe" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPagerByMe" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 