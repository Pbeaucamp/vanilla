<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.navigation.NavigationPanel.MyStyle">
		.navigationPanel {
			width: 345px;
			top: 0px;
			bottom: 10px;
			position: absolute;
			-moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.adminMenu {
			color: #095494;
			font-size: 13px;
			text-align: left;
			margin-left: 40px;
		}
		
		.adminMenu img {
			display: inline-block;
			vertical-align: middle;
			margin-right: 10px;
		}
		
		.contentPanel {
			width: 100%;
			position: absolute;
			top: 40px;
			bottom: 0px;
			left: 0px;
		}
		
		.toolbar {
			width: 100%;
			height: 40px;
			display: inline-block;
		}
		
		.imgChangeView {
		    height: 22px !important;
		    padding: 9px 5px;
		    width: 30px !important;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgExpand {
			height: 20px !important;
			width: 20px !important;
			padding: 5px;
			background-position: center !important;
			cursor: pointer;
		}
		
		.btnToolbar {
			height: 22px !important;
			width: 24px !important;
			padding: 9px 8px;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgCollapse {
			height: 20px !important;
			width: 20px !important;
			padding: 10px;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgExpand:HOVER, .imgChangeView:HOVER, .btnToolbar:HOVER, .imgCollapse:HOVER {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnSelected {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.imgTypeViewer {
			height: 24px !important;
			width: 24px !important;
			padding: 8px;
			background-position: center !important;
		}
		
		.lblTypeViewer {
		    display: inline-block;
		    font-weight: bold;
		    height: 40px;
		    margin-top: 14px;
		    vertical-align: top;
    		width: 150px;
		}
		
		.alignRight {
			float: right;
		}
		
		.alignLeft {
			float: left;
		}
	</ui:style>
	<g:HTMLPanel ui:field="navigationPanel" addStyleNames="{style.navigationPanel}">
		<g:Image ui:field="imgExpand" title="{label.Expend}" resource="{resources.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand},{style.alignLeft}"/>
		<g:HTMLPanel ui:field="toolbarNavigation" addStyleNames="{style.toolbar}">
			<g:Image ui:field="imgChangeView" title="{label.ChangeTypeViewer}" resource="{resources.ic_content_btnView}" addStyleNames="{style.imgChangeView}">
			</g:Image><g:Image ui:field="imgRefresh" title="{label.Refresh}" resource="{commons.refresh_24_navigation}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgTypeViewer" />
			<g:Label ui:field="lblTypeViewer" addStyleNames="{style.lblTypeViewer}"/>
			<g:Image ui:field="imgCollapse" title="{label.Collapse}" resource="{resources.ic_btn_sidebar_right_expand}" addStyleNames="{style.imgCollapse},{style.alignRight}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" />
	</g:HTMLPanel>
</ui:UiBinder> 