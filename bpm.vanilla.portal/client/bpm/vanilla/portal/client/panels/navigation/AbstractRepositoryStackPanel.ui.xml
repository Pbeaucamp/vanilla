<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.vanilla.portal.client.images.PortalImage' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.navigation.AbstractRepositoryStackPanel.MyStyle">
		.parentPanel {
			width: 100%;
			height: 100%;
		}
	
		.mainPanel {
			width: 100%;
			height: 100%;
			position: relative;
		}
	
		.panelSearch {
			width: 100%;
			height: 30px;
			background: #E6E6E6;
		}
		
		.panelContent {
			width: 100%;
			position: absolute;
			top: 30px;
			bottom: 0px;
			left: 0px;
		    overflow: auto;
		}
		
		.btnClear {
			margin-top: 7px;
			cursor: pointer;
		}
		
		.btnClear:HOVER {
			background-color: #444444 !important;
		}
		
		.txtSearch {
		    margin-left: 12px;
		    margin-top: 4px;
		    width: 195px;
		    vertical-align: top;
		}
		
		.btnSearch {
			background: none repeat scroll 0 0 lightgray;
			border: 1px solid #555555;
			color: black;
			cursor: pointer;
			height: 20px;
			width: 100px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			margin-top: 5px;
			vertical-align: top;
		}
		
		.btnSearch:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	    <g:HTMLPanel ui:field="panelSearch" addStyleNames="{style.panelSearch}">
	    	<g:TextBox ui:field="txtSearch" addStyleNames="{style.txtSearch}"/>
			<g:Image ui:field="btnClear" resource="{resources.ic_dialog_close}" title="{label.Clear}" addStyleNames="{style.btnClear}"/>
	    	<g:Button ui:field="btnSearch" text="{label.Search}" styleName="{style.btnSearch}"/>
	    </g:HTMLPanel>
	    <g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
	</g:HTMLPanel>
</ui:UiBinder> 