<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='label' type='bpm.vanilla.portal.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.vanilla.portal.client.panels.CommentItem.MyStyle">
		.mainPanel {
			position: relative;
			margin: 5px;
			overflow: hidden;
			padding: 5px;
			border-radius: 2px;
			background-color: #ddeef0;
		}
		
		.panelToolbar {
			height: 25px;
			width: 100%;
			position: relative;
		}
		
		.panelContent {
			position: relative;
		}
		
		.lbl {
			display: inline-block;
			vertical-align: top;
			width: 49%;
		}
		
		.align-right {
			text-align: right;
		}
		
		.lblText {
			display: inline-block;
			width: 100%;
			font-size: 15px;
			white-space: pre;
			padding-left: 15px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	
		<g:HTMLPanel addStyleNames="{style.panelToolbar}">
			<g:Label ui:field="lblName" addStyleNames="{style.lbl}"/>
			<g:Label ui:field="lblDate" addStyleNames="{style.lbl} {style.align-right}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelContent}">
			<g:Label ui:field="lblText" addStyleNames="{style.lblText}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 