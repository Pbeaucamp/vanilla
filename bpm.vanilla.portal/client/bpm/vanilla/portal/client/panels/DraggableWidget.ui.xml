<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
		.mainComponent {
			width: 150px;
			height: 150px;
			border: 1px solid lightgrey;
			resize: both;
  			overflow: hidden;
  			min-width: 120px;
  			min-height: 90px;
  			position: absolute;
		}
		
		.mainComponent:focus {
			border: 1px solid black;
		}
		
		.label {
	        display: block;
		    line-height: normal;
		    vertical-align: top;
		    margin-top: 20px;
		    margin: auto;
	        width: 90%;
			white-space: nowrap;
    		overflow:hidden !important;
    		text-overflow: ellipsis;
		}
	
	
	</ui:style>
	<g:FocusPanel ui:field="focus" addStyleNames="{style.mainComponent}">
		<g:TextBox ui:field="htmlContent" addStyleNames="{style.label}"/>
	</g:FocusPanel>
</ui:UiBinder> 