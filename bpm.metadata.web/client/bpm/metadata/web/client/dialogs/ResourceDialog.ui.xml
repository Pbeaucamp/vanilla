<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.lst {
			width: 98%;
		}
	
		.panelData {
			width: 100%;
			height: 250px;
		}
	</ui:style>
	<g:HTMLPanel>
		<c:LabelTextBox ui:field="txtName" placeHolder="{label.Name}"/>
		<c:CustomListBox ui:field="lstOperator" addStyleNames="{style.lst}"/>
		<g:SimplePanel ui:field="panelData" addStyleNames="{style.panelData}"/>
	</g:HTMLPanel>
</ui:UiBinder> 