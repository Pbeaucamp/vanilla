<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.metadata.web.client.I18N.Labels' />
	
	<ui:style>
		.contentPanel {
		    height: 550px;
		    width: 1000px;
	        margin: auto;
		}
		
		.btnFirst {
		    margin-top: 115px;
		}
		
		.btn {  
	    	margin-bottom: 5px;
		    width: 100%;
		    height: 45px;
		}
		
		.panelLeft {
		    display: inline-block;
		    vertical-align: top;
		    height: 485px;
    		width: 370px;
		}
		
		.panelMiddle {
		    display: inline-block;
		    vertical-align: top;
		    height: 100%;
    		width: 200px;
	        margin: 0 15px;
		}
		
		.panelRight {
		    display: inline-block;
		    vertical-align: top;
		    height: 485px;
   		 	width: 372px;
		}
		
		.lblSearch {
			width: 100%;
		}
		
		.panelTree {
			background: #F2F2F2;
			width: 100%;
		    height: 98%;
		}
		
		.label {
		    border-bottom: 1px solid #000000;
	    	padding: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.panelLeft}">
			<c:LabelTextBox ui:field="lblSearch" addStyleNames="{style.lblSearch}" visible="false"/>
			<g:Label text="{label.PhysicalTables}" addStyleNames="{style.label}"/>
			<g:SimplePanel ui:field="panelPhysicalTables" addStyleNames="{style.panelTree}"/>
		</g:HTMLPanel><g:HTMLPanel addStyleNames="{style.panelMiddle}">
			<c:CustomButton ui:field="btnAdd" text="{label.Add}" addStyleNames="{style.btnFirst},{style.btn}"/>
			<c:CustomButton ui:field="btnAddAll" text="{label.AddAll}" addStyleNames="{style.btn}"/>
			<c:CustomButton ui:field="btnDelete" text="{label.Delete}" addStyleNames="{style.btn}"/>
			<c:CustomButton ui:field="btnDeleteAll" text="{label.DeleteAll}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel><g:HTMLPanel addStyleNames="{style.panelRight}">
			<g:Label text="{label.LogicalTables}" addStyleNames="{style.label}"/>
			<g:SimplePanel ui:field="panelLogicalTables" addStyleNames="{style.panelTree}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 