<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.metadata.web.client.I18N.Labels' />
	
	<ui:style type="bpm.metadata.web.client.panels.properties.ColumnProperties.MyStyle">
		.contentPanel {
		    height: 100%;
		    overflow: auto;
		    width: 100%;
		}
		
		.btn {
		    margin: 20px;
	    	width: 200px;
		}
		
		.data {
		    bottom: 30px;
		    position: absolute;
		    top: 230px;
		    width: 100%;
		}
		
		.panelBtn {
			text-align: center;
		}
		
		.panelPager {
		    bottom: 0;
		    position: absolute;
		    width: 100%;
		}
		
		.pager {
			margin: auto;
		}
		
		.btnTab {
		    border: 1px solid #D3D3D3;
		    cursor: pointer;
		    vertical-align: bottom;
	        padding: 5px 10px;
		}
		
		.btnTabSelected {
	    	background: none repeat scroll 0 0 #D0E4F6;
		}
		
		.btnPanel {
	    	background: none repeat scroll 0 0 #E6E6E6;
		    height: 32px;
		    line-height: 32px;
		}
	
		.txtWidth {
			width: 100%;
		}
		
		.panelContent {
		    bottom: 0;
		    position: absolute;
		    top: 32px;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.btnPanel}">
			<g:Button ui:field="btnProperties" text="{label.Properties}" styleName="{style.btnTab}"/>
			<g:Button ui:field="btnData" text="{label.Data}" styleName="{style.btnTab}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelProperties" addStyleNames="{style.panelContent}"/>
		<g:HTMLPanel ui:field="panelData" visible="false" addStyleNames="{style.panelContent}">
			<c:LabelTextBox ui:field="txtLimit" text="100" placeHolder="{label.Limit}" addStyleNames="{style.txtWidth}"/>
			<div class="{style.panelBtn}">
				<c:CustomButton ui:field="btnLoadData" text="{label.LoadData}" addStyleNames="{style.btn}"/>
			</div>
			<g:SimplePanel ui:field="panelGridData" addStyleNames="{style.data}"/>
			<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 