<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.metadata.web.client.panels.properties.PanelProperties.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelContent {
		    bottom: 60px;
		    left: 0;
		    position: absolute;
		    right: 0;
		    top: 0;
		}
	
		.panelBtn {
		    bottom: 0;
		    height: 40px;
		    padding: 10px;
		    position: absolute;
		    right: 0;
		}
		
		.btn {
		    margin-left: 8px;
		    width: 200px;
	 	}
	 	
	 	.lblNoProperties {
		    font-size: 18px;
		    padding: 80px;
		    text-align: center;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:HTMLPanel addStyleNames="{style.panelBtn}">
			<c:CustomButton ui:field="btnApply" text="{label.Apply}" addStyleNames="{style.btn}"/>
			<c:CustomButton ui:field="btnCancel" text="{label.Cancel}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 