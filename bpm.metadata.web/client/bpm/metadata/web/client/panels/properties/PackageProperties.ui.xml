<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.contentPanel {
		    height: 100%;
		    overflow: auto;
		    width: 100%;
		}
	
		.txtWidth {
			width: 100%;
		}
		
		.panelTables {
		    bottom: 0;
		    position: absolute;
		    top: 80px;
		    width: 100%;
	        overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<c:LabelTextBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.txtWidth}"/>
		<g:SimplePanel ui:field="panelTables" addStyleNames="{style.panelTables}"/>
	</g:HTMLPanel>
</ui:UiBinder> 