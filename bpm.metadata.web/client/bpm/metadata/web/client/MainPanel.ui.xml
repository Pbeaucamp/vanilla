<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.metadata.web.client.I18N.Labels' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
			min-width: 1024px;
		}
		
		.toolbar {
			z-index: 1;
		}
		
		.panelBottom {
			text-align: center;
			padding: 5px;
		}
		
		.copyright {
			font-weight: bold;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' ui:field="dockPanel" addStyleNames="{style.mainPanel}">
		<g:north size='70'>
			<g:SimplePanel ui:field="toolbarPanel" addStyleNames="{style.toolbar}"/>
		</g:north>
		<g:south size="30">
			<g:SimplePanel ui:field="footerPanel" addStyleNames="{style.panelBottom}">
				<g:Label text="{label.Copyright}" addStyleNames="{style.copyright}"/>
			</g:SimplePanel>
		</g:south>
		<g:center>
			<g:SimplePanel ui:field="mainPanel"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 