<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.lblDashboard{
		    color: #FFFFFF;
		    font-size: 14px;
		    font-weight: bold;
		}
		.lstBox {
			width: 150px;
			margin-top: 5px;
		}
		.marginLeft {
			margin-left: 15px;
		}
		.lbl {
			float: left;
			margin:5px;
		}
			.inline{
			vertical-align: middle;
			display: inline-block;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.lblDashboard}">
	
	    <g:HTMLPanel addStyleNames="{style.inline}, {style.marginLeft}">
    		<g:Label text="{label.Groups}" styleName="{style.lbl}"></g:Label> <g:ListBox ui:field="lstGroups" addStyleNames="{style.lstBox}"></g:ListBox>
    	</g:HTMLPanel>
    	<g:HTMLPanel addStyleNames="{style.inline}, {style.marginLeft}">
    		<g:Label text="{label.observatories}" styleName="{style.lbl}"></g:Label> <g:ListBox ui:field="lstObs" addStyleNames="{style.lstBox}"></g:ListBox>
    	</g:HTMLPanel>
    	<g:HTMLPanel addStyleNames="{style.inline}, {style.marginLeft}">
    		<g:Label text="{label.themes}" styleName="{style.lbl}"></g:Label> <g:ListBox ui:field="lstThemes" addStyleNames="{style.lstBox}"></g:ListBox>
    	</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 