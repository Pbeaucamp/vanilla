<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
			background-color: white;
		}
		
		.header {
			width: 300px;
			height: 25px;
		    line-height: 25px;
			margin-bottom: 1px;
			background-color: grey;
			opacity: 0.5;
			color: white;
			font-weight: bold;
			padding-left: 15px;
		}
	
		.nDay {
		    text-align: center;
		    line-height: 25px;
		}
		
		.content {
			padding: 5px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}, inline, relative">
		<div class="flexColumn">
			<g:HTMLPanel addStyleNames="{style.header}, flex">
				<g:Label ui:field="lblDate" addStyleNames="{style.nDay}"/>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.content}, flexOne"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 