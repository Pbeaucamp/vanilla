<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="labels" type="bpm.gwt.commons.client.I18N.LabelsConstants"/>
	
	<ui:style type="bpm.gwt.commons.client.calendar.MonthPanel.MyStyle">
		.mainPanel {
			height: 140px;
			background-color: white;
    		width: 99%;
		}
		
		.header {
			width: 100%;
			height: 25px;
		    line-height: 25px;
			margin-bottom: 1px;
		}
		
		.headerLeft:HOVER {
			background-color: grey;
			opacity: 0.5;
		}
		
		.headerWithZIndex {
			z-index: 1;
		}
	
		.nDay {
		    margin-left: 5px;
		    background: white;
		    border-radius: 12px;
		    width: 18px;
		    text-align: center;
		    height: 18px;
		    margin-top: 4px;
		    line-height: 18px;
		}
	
		.nEvents {
			float: right;
		    line-height: 25px;
		    padding-right: 8px;
		    padding-left: 8px;
		    background: lightgrey;
		}
		
		.btnAddSmall {
			height: 25px;
		}
		
		.btnAdd {
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0px;
			text-align: center;
			cursor: pointer;
		}
		
		.btnAdd:HOVER {
			background-color: grey;
			opacity: 0.5;
		}
		
		.imgAdd {
			margin-top: 30px;
		}
		
		.btnHeaderPanel {
			text-align: center;
		}
		
		.smallPadding {
			padding: 1px;
		}
		
		.contentPanel {
			height: 115px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}, inline, relative">
		<div class="flexColumn {style.smallPadding}">
			<g:HTMLPanel ui:field="header" visible="false" addStyleNames="{style.header}, flex">
				<g:FocusPanel ui:field="btnDisplayEvents" visible="false" addStyleNames="{style.nEvents}, cursor">
					<g:Label ui:field="nEvents" title="{labels.VoirLesAutresElementsSurCetteDate}"/>
				</g:FocusPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 