<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:tree="urn:import:bpm.gwt.commons.client.tree">
	
	<ui:with field="labels" type="bpm.gwt.commons.client.I18N.LabelsConstants"/>
	<ui:with field="resources" type="bpm.gwt.commons.client.images.CommonImages"/>
	
	<ui:style type="bpm.gwt.commons.client.dialog.RepositorySaveDialog.MyStyle">
		.mainPanel {
			width: 600px;
		}
		
		.panelTree {
		    display: inline-block;
		    height: 250px;
		    padding-bottom: 10px;
    		padding-left: 7px;
		    width: 97%;
		}
		
		.tree {
		    border-left: 1px solid #808080;
		    border-bottom: 1px solid #808080;
		    border-right: 1px solid #808080;
	        width: 100%;
		}
	
		.toolbar {
		    height: 35px;
	    	width: 100%;
		    border-left: 1px solid #808080;
		    border-top: 1px solid #808080;
		    border-right: 1px solid #808080;
		}
	
		.btnToolbar {
			cursor: pointer;
		    padding: 3px;
		}
		
		.btnHover:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.disabled {
			opacity: 0.5;
		    filter: literal("alpha(opacity=50)");
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<my:LabelTextBox ui:field="txtName" placeHolder="{labels.Name}"/>
		<my:LabelTextArea ui:field="txtDescription" placeHolder="{labels.Description}" resize="false" height="85px"/>
		
		<g:HTMLPanel addStyleNames="{style.panelTree}">
			<g:HTMLPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
				<g:Image ui:field="btnAddFolder" title="{labels.AddFolder}" resource="{resources.ic_folder_black_18dp}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnDeleteFolder" title="{labels.DeleteFolder}" resource="{resources.ic_remove_folder_black_18dp}" addStyleNames="{style.btnToolbar}"/>
			</g:HTMLPanel>
			<tree:RepositoryTree ui:field="tree" addStyleNames="{style.tree}"/>
		</g:HTMLPanel>
		
		<g:SimplePanel ui:field="panelGroups"/>
	</g:HTMLPanel>
</ui:UiBinder> 