<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:p="urn:import:bpm.gwt.commons.client.panels">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.dialog.D4CManagerDialog.MyStyle">
	
		.overflowHidden {
			overflow: hidden;
		}
	
		.panel {
			width: 100%;
			height: 100%;
			position: relative;
		}

		.gridPanel {
			position: absolute;
			width: 100%;
			top: 5px;
			bottom: 0px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			background-position: center !important;
			padding: 4px;
			margin: 4px;
		}
		
		.btnClear:HOVER, .btnSearch:HOVER, .btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.rootPanel {
			display: inline-block;
			min-height: 500px;
			height: 100%;
			width: 1050px;
			min-width: 100%;
			position: relative;
		}
		
		.serverPanel {
			width: 50%;
			position: absolute;
			top: 0px;
			bottom: 0px;
			left: 0px;
			border-right: 2px solid gray;
		}
		
		.d4cItemPanel {
			width: 50%;
			position: absolute;
			top: 0px;
			bottom: 0px;
			right: 0px;
		}
		
		.panelSearch {
	    	height: 45px;
		}
		
		.txtSearch {
		    display: inline-block;
		    vertical-align: top;
		    width: 300px;
		    height: 35px;
		}
		
		.btnSearch {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			background-position: center !important;
			padding: 4px;
			margin: 10px 4px 4px 4px;
		}
		
		.btnClear {
		    background-position: center !important;
		    cursor: pointer;
		    height: 16px !important;
		    margin-top: 14px;
		    padding: 3px;
		    width: 16px !important;
	        vertical-align: top;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<p:D4CDefinitionPanel ui:field="d4cDefinitionPanel" addStyleNames="{style.gridPanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 