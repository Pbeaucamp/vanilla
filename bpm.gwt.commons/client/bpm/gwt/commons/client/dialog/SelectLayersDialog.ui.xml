<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom.v2">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.mainPanel {
			width: 850px;
			height: 600px;
		}
		
		.treePanel {
		}
		
		.middleToolbar {
			width: 36px;
			border-left: 1px solid black;
			border-right: 1px solid black;
		    position: relative;	
		}
		
		.pannelBtn {
			width: 100%;
			height: 50px;
			
			position: absolute;
			top:0;
			bottom: 0;
		  	
			margin: auto;
		}
		
		.btnToolbar {
			cursor: pointer;
			background-position: center !important;
			padding: 6px;
    		border-top: 1px solid grey;
    		border-bottom: 1px solid grey;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.gridPanel {
		}
		
		.overflow {
			overflow: auto;
		}
		
		.panelWmts {
			height: 70px;
		    position: absolute;
		    width: 100%;
		}
		
		.lblWmts {
			display: inline-block;
			vertical-align: top;
			width: 90%;
		}
		
		.btnClear {
		    display: inline-block;
		    padding-top: 38px;
		    vertical-align: top;
		    width: 10%;
		    cursor: pointer;
		}
		
		.grid {
			position: absolute;
			top:  70px;
			bottom: 0px;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}, flex">
		<g:SimplePanel ui:field="panelTree" addStyleNames="{style.overflow}, flexOne"/>
		<g:HTMLPanel addStyleNames="{style.middleToolbar}">
			<div class="{style.pannelBtn}">
				<g:Image ui:field="btnAdd" title="{labels.Add}" resource="{resources.ic_right}" addStyleNames="{style.btnToolbar}">
				</g:Image><g:Image ui:field="btnRemove" title="{labels.Remove}" resource="{resources.ic_left}" addStyleNames="{style.btnToolbar}"/>
			</div>
		</g:HTMLPanel>
		<div class="flexOne">
			<div class="full relative">
				<div addStyleNames="{style.panelWmts}">
					<c:LabelTextBox ui:field="lblWMTS" label="{labels.WMTS}" text="OSM" enabled="false" addStyleNames="{style.lblWmts}">
					</c:LabelTextBox><div class="{style.btnClear}">
						<g:Image ui:field="btnClear" title="{labels.ClearWMTS}" resource="{resources.close_tab}"/>
					</div>
				</div>
				<div class="{style.grid}">
					<p:GridPanel ui:field="grid"/>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 