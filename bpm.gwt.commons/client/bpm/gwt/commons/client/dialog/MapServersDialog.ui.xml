<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>		
		.mainPanel {
			width: 600px;
			height: 450px;
			position: relative;
		}
		
		.toolbarPanel {
		    box-shadow: 0 0 1px #696969 inset;
		    border-bottom: 1px solid black;
		    height: 50px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.treePanel {
			position: absolute;
			top: 50px;
			bottom: 0px;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnAdd" resource="{resources.ic_add_black_24dp}" title="{label.AddMapServer}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEdit" resource="{resources.ic_edit_black_18dp}" title="{label.EditMapServer}" visible="false" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnRemove" resource="{resources.ic_delete_black_18dp}" title="{label.RemoveMapServer}" visible="false" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelTree" addStyleNames="{style.treePanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 