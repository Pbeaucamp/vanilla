<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type='bpm.gwt.commons.client.dialog.CubeDialog.MyStyle'>
	.panelContent {
		height: 700px;
		width: 1200px;
		z-index:2;
	}
	.panelFrame {
		position:absolute;
		top: 30px;
		bottom: 40px;
		width: 100%;
	}	
	.frame {
		width: 100%;
		height: 100%;
		border: 0 none;
	}
	
	.btnSave {
	    height: 24px !important;
	    width: 24px !important;
	    padding: 8px;
	    cursor: pointer;
	    background-position: center !important;
	    background: rgba(59, 153, 203, 0.5);
	    position: absolute;
	    right : 0;
	    bottom: 0;
	}
	
	.btnSave:HOVER {
		background: rgba(59, 153, 203, 0.8);
		-webkit-transition: all 0.5s; /* Safari 3.1 to 6.0 */
    	transition: all 0.5s;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:SimplePanel ui:field="panelFrame" addStyleNames="{style.panelFrame}"/>
		<g:Image ui:field="btnSave" resource="{commons.save}" title="{label.SaveCube}" addStyleNames="{style.btnSave}"/>
	</g:HTMLPanel>
</ui:UiBinder> 