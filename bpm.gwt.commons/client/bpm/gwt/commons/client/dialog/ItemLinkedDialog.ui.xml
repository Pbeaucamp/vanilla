<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.dialog.ItemLinkedDialog.MyStyle">
		.mainPanel {
			width: 350px;
			height: 160px;
			position: relative;
		}
		
		.imgCell {
	
		}
		
		.toolbarPanel {
		    box-shadow: 0 0 1px #696969 inset;
		    border-bottom: 1px solid black;
		    height: 50px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height:36px !important;
			width: 36px !important;
			background-position: center !important;
			padding: 7px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important;
		    margin-top: 27px;
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.lblETL {
	    	margin: 40px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnAdd" resource="{resources.ic_add_black_24dp}" title="{label.CreateETL}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnLink" resource="{resources.ic_link_black_18dp}" title="{label.LinkExistingETL}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelContent" addStyleNames="flex">
			<g:Label ui:field="lblETL" text="{label.NoLinkedETL}" addStyleNames="{style.lblETL}"/>
			<g:Image ui:field="btnRun" resource="{resources.ic_play_arrow_black_18dp}" title="{label.LinkExistingETL}" addStyleNames="{style.imgGrid}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 