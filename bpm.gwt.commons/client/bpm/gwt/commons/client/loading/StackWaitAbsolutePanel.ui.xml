<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type='bpm.gwt.commons.client.loading.StackWaitAbsolutePanel.MyStyle'>
		.imgWait {
			left: 15px;
		    position: absolute;
		    top: 7px;
		}
		
		.lblWait {
			left: 35px;
			position: absolute;
		    top: 7px;
			font-weight: bold;	
		}
		
		.contentPanel {
			width: 100%;
			height: 100%;
		}
		
		.loadingPart {
			background: white;
			width: 180px;
			height: 30px;
			position: absolute;
			z-index: 4;
			border-radius: 5px;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			border: 1px solid gray;	
		}
	</ui:style>
	<g:SimplePanel addStyleNames="{style.loadingPart}">
		<g:AbsolutePanel addStyleNames="{style.contentPanel}">
			<g:Image ui:field="imgWait"/>
			<g:Label ui:field="lblWait" addStyleNames="{style.lblWait}"/>
		</g:AbsolutePanel>
	</g:SimplePanel>
</ui:UiBinder> 