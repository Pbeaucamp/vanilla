<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
   		    width: 350px;
		}
		
		.lbl {
			margin: 10px;
		}
		
		.txtLogin {
		    margin-top: 8px;
	    	width: 250px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label text="{label.SureAskPasswordDemand}" addStyleNames="{style.lbl}" />
		<my:LabelTextBox ui:field="txtLogin" placeHolder="{label.Login}" addStyleNames="{style.txtLogin}"/>
	</g:HTMLPanel>
</ui:UiBinder> 