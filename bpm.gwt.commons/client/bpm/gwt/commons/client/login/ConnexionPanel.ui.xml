<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />

	<ui:style type="bpm.gwt.commons.client.login.ConnexionPanel.MyStyle">
		.fullPanel {
			width: 100%;
			height: 100%;
			vertical-align: middle;
			position: relative;
			background: url(images/bg.jpg);
		}
		
		.mainPanel {
		    left: 50%;
		    margin-left: -275px;
		    margin-top: -265px;
		    position: absolute;
		    top: 50%;
		    width: 550px;
		}
		
		.panelForm {
			margin: auto;
			width: 100%;
		}
		
		.imgLogo {
		    max-height: 200px;
    		max-width: 500px;
		    display: block;
		    margin: auto;
		}
		
		.txtUser {
			background-color: #F7F8F8;
			border: 1px solid #CCCCCC;
			box-shadow: 0 0 20px -3px rgba(0, 0, 0, 0.2) inset;
			color: #888888;
			font-size: 15px;
			margin-top: 5px !important;
			padding: 10px;
			transition: all 0.5s ease 0s;
			width: 95%;
			height: 40px;
		}
		
		.forgotPassword {
			cursor: pointer;
			margin-top: 10px;
		}
		
		.forgotPassword:HOVER {
			text-decoration: underline;
		}
		
		.lstLanguages {
			margin-left: 35%;
			width: 150px;
		}
		
		.panelRepositoryGroup {
			background: none repeat scroll 0 0 #FAFAFA;
    		border: 1px solid #DDDDDD;
   		    margin: 10px;
		}
		
		.panelRepository {
			display: inline-block;
			width: 50%;
		}
		
		.panelGroup {
			display: inline-block;
			width: 49.5%;
	    	border-left: 1px solid #DDDDDD;
		}
		
		.panelFull {
			width: 99.5%;
		}
		
		.panelTitle {
		    -moz-border-bottom-colors: none;
		    -moz-border-left-colors: none;
		    -moz-border-right-colors: none;
		    -moz-border-top-colors: none;
		    background-color: #FFFFFF;
		    background-image: linear-gradient(to bottom, #FFFFFF, #F2F2F2);
		    background-repeat: repeat-x;
		    border-color: -moz-use-text-color -moz-use-text-color #DADADA;
		    border-image: none;
		    border-radius: 3px 3px 0 0;
		    border-style: none none solid;
		    border-width: medium medium 1px;
		    box-shadow: 0 1px 0 #FFFFFF;
		    margin: 0;
		    padding: 10px;
		    position: relative;
		}
		
		.title {
		    color: #5F5F5F;
		    display: block;
		    font-size: 14px;
		    font-weight: bold;
		    text-shadow: 0 1px 0 #FFFFFF;
		    text-align: center;
		}
		
		.panelChild {
			width: 100%;
			height: 100%;
		}
		
		.panelButton {
		    margin-bottom: 10px;
	    	margin-top: 15px;
		}
		
		.button {
			border: 1px solid #555555;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin: 10px;
			width: 45%;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			display: inline-block;
		}
		
		.button:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.btnBackground {
			background: none repeat scroll 0 0 #628CD5;
		}
		
		.btnForgot {
			background: gray !important;
		}
		
		.btnLog {
		    display: block;
		    margin: 0 auto;
		    width: 95%;
		}
		
		.panelFlag {
			text-align: center;
		    margin-top: 10px;
		}
		
		.imgFlag {
			cursor: pointer;
			margin-left: 8px;
		}
		
		.about {
	        bottom: 0;
		    position: absolute;
		    text-align: center;
		    width: 100%;
		}
		
		.fastConnect {
			text-align: center;
			width: 150px;
			position: absolute;
			top: 30%;
			right: 10px;
			background: none repeat scroll 0 0 white;
			border-radius: 20px;
			box-shadow: 0 0 8px rgba(50, 50, 50, 0.75);
			padding: 15px;
		}
		
		.centerPanel {
			z-index: 0;
			margin-bottom: 0px !important;
		}
		
		.displayNone {
			display: none;
		}
		
		.formPanel {
			margin-bottom: 5px;
		}
		
		.checkStayConnected {
			margin-left: 20px;
		}
		
		.checkStayConnected input {
		    margin-right: 8px;
		    margin-top: 2px !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.fullPanel}">
		<g:HTMLPanel addStyleNames="{style.mainPanel}">
			<g:HTMLPanel addStyleNames="{style.centerPanel}, ui piled segment form">
				<g:HTMLPanel ui:field="mainPanel">
					<g:Image ui:field="imgLogoVanilla" />
					<g:HTMLPanel ui:field="panelLogin">
						<g:SimplePanel ui:field="formPanel" addStyleNames="{style.formPanel}"/>
						<g:CheckBox ui:field="checkStayConnected" text="{label.StayConnected}" addStyleNames="{style.checkStayConnected}"/>
						<g:HTMLPanel addStyleNames="{style.panelButton}">
							<g:Button ui:field="btnForgotPassword" text="{label.ForgotPassword}" addStyleNames="{style.button},{style.btnForgot}" /><g:SubmitButton ui:field="btnLoad" text="{label.Apply}" addStyleNames="{style.button},{style.btnBackground}" />
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="panelGrRep">
						<g:HTMLPanel addStyleNames="{style.panelRepositoryGroup}">
							<g:HTMLPanel ui:field="panelRepository" addStyleNames="{style.panelRepository}">
							
								<g:SimplePanel addStyleNames="{style.panelTitle}">
									<g:Label addStyleNames="{style.title}" text="{label.GrantedRepositories}" />
								</g:SimplePanel>
									
								<g:SimplePanel ui:field="panelRepositories" addStyleNames="{style.panelChild}"/>
							</g:HTMLPanel><g:HTMLPanel ui:field="panelGroup" addStyleNames="{style.panelGroup}">
								
								<g:SimplePanel addStyleNames="{style.panelTitle}">
									<g:Label addStyleNames="{style.title}" text="{label.Group}" />
								</g:SimplePanel>
									
								<g:SimplePanel ui:field="panelGroups" addStyleNames="{style.panelChild}"/>
							</g:HTMLPanel>
						</g:HTMLPanel>
						<g:HTMLPanel>
							<g:Button ui:field="btnBack" text="{label.Back}" addStyleNames="{style.button},{style.btnForgot}" /><g:Button ui:field="btnConnect" text="{label.LogIn}" addStyleNames="{style.button},{style.btnBackground}" />
						</g:HTMLPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="panelFlag" addStyleNames="{style.panelFlag}" />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="fastConnectPanel" addStyleNames="{style.fastConnect}">
			<g:Image ui:field="imgConnectOne" addStyleNames="imgConnectOne"/>
			<g:Label ui:field="lblConnectOne" addStyleNames="labelConnectOne" text="Admin"/>
			
			<g:Image ui:field="imgConnectTwo" addStyleNames="imgConnectTwo"/>
			<g:Label ui:field="lblConnectTwo" addStyleNames="labelConnectTwo" text="Designer"/>
			
			<g:Image ui:field="imgConnectThree" addStyleNames="imgConnectThree"/>
			<g:Label ui:field="lblConnectThree" addStyleNames="labelConnectThree" text="User"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.about}">
			<g:HTML text="{label.Copyright}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 