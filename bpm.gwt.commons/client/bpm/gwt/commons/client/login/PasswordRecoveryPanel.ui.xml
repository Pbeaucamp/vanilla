<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.login.PasswordRecoveryPanel.MyStyle">
		.main {
			width: 100%;
			height: 100%;
		}
		
		.content {
			margin: auto;
			max-width: 1200px;
		}
	
		.title {
			font-family: 'Helvetica Neue', sans-serif; 
			font-size: 45px; 
			font-weight: bold; 
			letter-spacing: -1px; 
			line-height: 1; 
			text-align: center;
		    padding: 10px;
		}
		
		.error {
			color: red;
		}
		
		.success {
			color: green;
		}
		
		.buttonPanel {
		    margin-top: 10px;
	    	text-align: center;
		}
		
		.btnConfirm {
			width: 150px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.main}">
		<g:HTMLPanel addStyleNames="{style.content}">
			<g:Label text="{labels.PasswordDefinitionPanel}" addStyleNames="{style.title}"/>
			<my:LabelTextBox ui:field="txtLogin" placeHolder="{labels.IndicateLogin}"/>
			<my:LabelTextBox ui:field="txtPassword" password="true" visible="false" placeHolder="{labels.IndicatePassword}"/>
			<my:LabelTextBox ui:field="txtConfirmPassword" password="true" visible="false" placeHolder="{labels.ConfirmPassword}"/>
			<g:Label ui:field="lblError" addStyleNames="{style.error}"/>
			<g:HTMLPanel addStyleNames="{style.buttonPanel}">
				<my:CustomButton ui:field="btnConfirm" text="{labels.Confirmation}" addStyleNames="{style.btnConfirm}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 