<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="labels" type="bpm.gwt.commons.client.I18N.LabelsConstants"/>
	<ui:with field="resources" type="bpm.gwt.commons.client.images.CommonImages"/>
	
	<ui:style>
		.panelTree {
		    position: relative;
		    overflow: auto;
		    height: 100%;
		}
	
		.toolbar {
		    height: 35px;
	    	width: 100%;
		}
	
		.btnToolbar {
			cursor: pointer;
		    padding: 3px;
		}
		
		.contentPanel {
			position: absolute;
			top: 35px;
			bottom: 0px;
			width: 100%;
   		    background: #E6E6E6;
   		    overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.panelTree}">
		<g:HTMLPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
			<g:Image ui:field="btnAddFolder" title="{labels.AddFolder}" resource="{resources.ic_folder_black_18dp}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEditFolder" title="{labels.EditFolder}" resource="{resources.ic_edit_black_18dp}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnDeleteFolder" title="{labels.DeleteFolder}" resource="{resources.ic_remove_folder_black_18dp}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.contentPanel}">
			<g:Tree ui:field="tree"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 