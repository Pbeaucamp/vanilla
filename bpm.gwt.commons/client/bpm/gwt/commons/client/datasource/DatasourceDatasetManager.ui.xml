<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.datasource.DatasourceDatasetManager.MyStyle">
	
		.overflowHidden {
			overflow: hidden;
		}
	
		.panel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.toolbar {
			height: 40px;
			width: 100%;
			background-color: #c4ece7;
		}

		.gridPanel {
			position: absolute;
			width: 100%;
			top: 85px;
			bottom: 30px;
		}
		
		.grid {
			width: 100%;
			height: 100%;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			background-position: center !important;
			padding: 4px;
			margin: 4px;
		}
		
		.btnClear:HOVER, .btnSearch:HOVER, .btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.rootPanel {
			display: inline-block;
			min-height: 650px;
			height: 100%;
			width: 1050px;
			min-width: 100%;
			position: relative;
		}
		
		.datasourcePanel {
			width: 50%;
			position: absolute;
			top: 0px;
			bottom: 0px;
			left: 0px;
			border-right: 2px solid gray;
		}
		
		.datasetPanel {
			width: 50%;
			position: absolute;
			top: 0px;
			bottom: 0px;
			right: 0px;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 1px;
			text-align: center;
			text-align: -moz-center;
		}
		
		.panelSearch {
	    	height: 45px;
		}
		
		.txtSearch {
		    display: inline-block;
		    vertical-align: top;
		    width: 300px;
		    height: 35px;
		}
		
		.btnSearch {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			background-position: center !important;
			padding: 4px;
			margin: 10px 4px 4px 4px;
		}
		
		.btnClear {
		    background-position: center !important;
		    cursor: pointer;
		    height: 16px !important;
		    margin-top: 14px;
		    padding: 3px;
		    width: 16px !important;
	        vertical-align: top;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<g:HTMLPanel ui:field="datasourcePanel" addStyleNames="{style.datasourcePanel}">
			<g:HTMLPanel addStyleNames="{style.panel}">
				<g:HTMLPanel addStyleNames="{style.toolbar}">
					<g:Image ui:field="imgAddDatasource" resource="{resources.add_24}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgEditDatasource" resource="{resources.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgDeleteDatasource" resource="{resources.delete_24}" title="{label.ButtonDelete}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgRefreshDatasource" resource="{resources.refresh_24}" title="{label.ButtonRefresh}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgRunETL" title="{label.RunGateway}" resource="{resources.viewer_report_run}" visible="false" addStyleNames="{style.btnToolbar}"/>
				</g:HTMLPanel>
				<div class="{style.panelSearch}">
					<my:TextHolderBox ui:field="txtSearchDatasource" placeHolder="{label.Search}" addStyleNames="{style.txtSearch}"/>
					<g:Image ui:field="btnClearDatasource" resource="{resources.ic_clear_16px}" visible="false" addStyleNames="{style.btnClear}"/>
					<g:Image ui:field="btnSearchDatasource" resource="{resources.ic_search_black_24dp}" title="{label.Search}" addStyleNames="{style.btnSearch}"/>
				</div>
				<g:HTMLPanel ui:field="gridPanelDatasource" addStyleNames="{style.gridPanel}"/>
				<g:SimplePanel ui:field="pagerDatasourcePanel" addStyleNames="{style.panelPager}"/>
			</g:HTMLPanel>
		</g:HTMLPanel><g:HTMLPanel ui:field="datasetPanel" addStyleNames="{style.datasetPanel}">
			<g:HTMLPanel addStyleNames="{style.panel}">
				<g:HTMLPanel addStyleNames="{style.toolbar}">
					<g:Image ui:field="imgAddDataset" resource="{resources.add_24}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgEditDataset" resource="{resources.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgColumnType" resource="{resources.ic_description_black_36dp}" title="{label.ColumnTypes}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgDeleteDataset" resource="{resources.delete_24}" title="{label.ButtonDelete}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgRefreshDataset" resource="{resources.refresh_24}" title="{label.ButtonRefresh}" addStyleNames="{style.btnToolbar}"/>
				</g:HTMLPanel>
				<div class="{style.panelSearch}">
					<my:TextHolderBox ui:field="txtSearchDataset" placeHolder="{label.Search}" addStyleNames="{style.txtSearch}"/>
					<g:Image ui:field="btnClearDataset" resource="{resources.ic_clear_16px}" visible="false" addStyleNames="{style.btnClear}"/>
					<g:Image ui:field="btnSearchDataset" resource="{resources.ic_search_black_24dp}" title="{label.Search}" addStyleNames="{style.btnSearch}"/>
				</div>
				<g:HTMLPanel ui:field="gridPanelDataset" addStyleNames="{style.gridPanel}"/>
				<g:SimplePanel ui:field="pagerDatasetPanel" addStyleNames="{style.panelPager}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 