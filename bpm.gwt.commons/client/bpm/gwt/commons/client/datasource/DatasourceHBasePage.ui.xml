<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
	
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
			width: 240px;
		}
		.marginTopLst {
			margin-top: 7px;
			width: 246px;
		}
		.contentPanel {
			width: 640px;
			height: 150px;
		}
		.txtWidth {
			width: 98%;
		}
	
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<!-- <g:Label ui:field="lblIPServer" addStyleNames="{style.lbl}" text="{label.Host}"/>
			<g:TextBox ui:field="txtIPServer" addStyleNames="{style.marginTopLst}"/> -->
			<c:TextHolderBox ui:field="txtIPServer" placeHolder="{label.Host}" addStyleNames="{style.txtWidth}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<!-- <g:Label ui:field="lblPort" addStyleNames="{style.lbl}" text="{label.Port}"/>
			<g:TextBox ui:field="txtPort" addStyleNames="{style.marginTopLst}"/> -->
			<c:TextHolderBox ui:field="txtPort" placeHolder="{label.Port}" addStyleNames="{style.txtWidth}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 