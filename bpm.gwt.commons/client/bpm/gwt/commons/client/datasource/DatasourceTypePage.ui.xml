<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.lbl {
			margin-left: 10px;
			width: 400px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
		}

		.lstSize {
			width: 250px;
		}
		.contentPanel {
			width: 700px;
			height: 420px;
		}
		.txtWidth {
			width: 98%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<!-- <g:Label ui:field="lblName" addStyleNames="{style.lbl}" text="{label.Name}"/>
			<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}"/> -->
			<c:TextHolderBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.txtWidth}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<!-- <g:Label addStyleNames="{style.lbl}" text="{label.SelectDatasourceType}"></g:Label> -->
			<!-- <g:ListBox ui:field="lstType" addStyleNames="{style.marginTop}, {style.lstSize}"></g:ListBox> -->
			<g:ListBox ui:field="lstType" addStyleNames="{style.txtWidth}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 