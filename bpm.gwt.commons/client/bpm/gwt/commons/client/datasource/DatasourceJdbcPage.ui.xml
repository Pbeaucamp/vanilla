<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />

	<ui:style>
		.contentPanel {
		    overflow: auto;
			width: 700px;
			height: 450px;
		}
		
		.lstWidth {
			width: 98%;
		}
		
		.txtWidth {
			width: 100%;
		}
		
		.btnWidth {
			width: 60%;
			margin: 25px auto auto;
			display: block;
		}
		
		.box {
			color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 5px 1%;
		    width: 98%;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:ListBox ui:field="lstDriver" addStyleNames="{style.lstWidth}"/>
		<c:LabelTextBox ui:field="txtHost" placeHolder="{label.Host}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextBox ui:field="txtPort" placeHolder="{label.Port}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextBox ui:field="txtBase" placeHolder="{label.Database}" addStyleNames="{style.txtWidth}"/>
		<g:CheckBox ui:field="chkFullUrl" text="{label.FullUrl}" addStyleNames="{style.box}"/>
		<c:LabelTextBox ui:field="txtUrl" placeHolder="{label.JdbcUrl}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextBox ui:field="txtUser" placeHolder="{label.Login}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextBox ui:field="txtPass" password="true" placeHolder="{label.Password}" addStyleNames="{style.txtWidth}"/>
		<g:Button ui:field="btnTestConnection" text="{label.TestConnection}" addStyleNames="{style.btnWidth}"/>
	</g:HTMLPanel>
</ui:UiBinder> 