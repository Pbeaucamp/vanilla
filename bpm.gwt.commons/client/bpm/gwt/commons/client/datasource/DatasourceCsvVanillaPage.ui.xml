<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
	
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		    color: rgba(0, 0, 0, 0.7);
		}
	
		.marginTop {
			margin-top: 7px;
			width: 240px;
		}
		.marginTopLst {
			margin-top: 7px;
			width: 246px;
		}
		.contentPanel {
			width: 700px;
			height: 500px;
		}
	
		.txtWidth {
			width: 98%;
		}
		.btnWidth {
			width: 60%;
			margin: 25px auto auto;
			display: block;
		}
		.txtMetadata {
			width: 86%;
		}
		.btnMetadata {
			display: inline;
		    font-size: 2em;
		    margin: 0;
		    vertical-align: sub;
		    width: 10%;
		}
	
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
				<!-- <g:Label ui:field="lblUser" addStyleNames="{style.lbl}" text="{label.Login}"/> -->
				<!-- <g:TextBox ui:field="txtUser" addStyleNames="{style.marginTop}"/> -->
				<c:TextHolderBox ui:field="txtUser" placeHolder="{label.Login}" addStyleNames="{style.txtWidth}"/>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<!-- <g:Label ui:field="lblPass" addStyleNames="{style.lbl}" text="{label.Password}"/> -->
				<!-- <g:PasswordTextBox ui:field="txtPass" addStyleNames="{style.marginTop}"/> -->
				<c:TextHolderBox ui:field="txtPass" placeHolder="{label.Password}" password="true" addStyleNames="{style.txtWidth}"/>
			</g:HTMLPanel>
			<g:Button ui:field="btnLogin" text="Load Groups/Repositories" addStyleNames="{style.btnWidth}"></g:Button>
			<g:HTMLPanel>
				<g:Label ui:field="lblRepository" addStyleNames="{style.lbl}" text="{label.Repository}"/>
				<g:ListBox ui:field="lstRepository" addStyleNames="{style.txtWidth}"/>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<g:Label ui:field="lblGroup" addStyleNames="{style.lbl}" text="{label.Group}"/>
				<g:ListBox ui:field="lstGroup" addStyleNames="{style.txtWidth}"/>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<!-- <g:Label addStyleNames="{style.lbl}" text="{label.Metadata}"></g:Label> -->
				<!-- <g:TextBox ui:field="txtItem" addStyleNames="{style.marginTop}"></g:TextBox> -->
				<c:TextHolderBox ui:field="txtItem" placeHolder="{label.Metadata}" addStyleNames="{style.txtMetadata}"/>
				<g:Button ui:field="btnBrowseRep" addStyleNames="{style.btnMetadata}">...</g:Button>
			</g:HTMLPanel>
		<g:HTMLPanel>
			<!-- <g:Label ui:field="lblSeparator" addStyleNames="{style.lbl}" text="{label.Separator}"/>
			<g:TextBox ui:field="txtSeparator" addStyleNames="{style.marginTop}"/> -->
			<c:TextHolderBox ui:field="txtSeparator" placeHolder="{label.Separator}" addStyleNames="{style.txtWidth}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 