<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.panels.NavigationMenuPanel.MyStyle">
		.menu {
			z-index: 1;	
			-webkit-transition: left 1s; /* Safari */
		    transition: left 1s;
		}
	
		.menuPanel {
		    height: 60px;
		    position: relative;
		    width: 100%;
		}
		
		.btnMenu {
			cursor: pointer;
			position: absolute;
			right: 0px;
		    padding: 7px;
		    margin-top: 5px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="menu">
		<g:HTMLPanel ui:field="header" addStyleNames="{style.menuPanel}">
			<g:Image ui:field="btnMenu" resource="{resources.ic_menu_white_36dp}" addStyleNames="{style.btnMenu}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="menuContent"/>
	</g:HTMLPanel>
</ui:UiBinder> 