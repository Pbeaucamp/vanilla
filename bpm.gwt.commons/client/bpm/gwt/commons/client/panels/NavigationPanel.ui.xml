<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.panels.NavigationPanel.MyStyle">
		.navigationPanelViewer {
			width: 295px;
			top: 0px;
			bottom: 0px;
			position: absolute;
			border-right: 1px solid lightgray;
		}
		
		.contentPanel {
			width: 100%;
			height: 100%;
		}
		
		.btnSelected {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.imgExpand {
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			cursor: pointer;
			padding: 10px;
		    float: left;
		}
		
		.imgExpand:HOVER {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel ui:field="navigationPanel">
		<g:Image ui:field="imgExpand" title="{label.Expend}" resource="{commons.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand}"/>
		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" />
	</g:HTMLPanel>
</ui:UiBinder> 