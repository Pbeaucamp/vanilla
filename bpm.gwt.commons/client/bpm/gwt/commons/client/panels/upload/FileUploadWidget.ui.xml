<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom"
	xmlns:w="urn:import:bpm.gwt.commons.client.custom.v2">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.button {
			margin-left: 5px;
			margin-right: 5px;
			height: 25px;
    		margin-top: 35px;
		}
		
		.progress {
		    display: inline-block;
		    float: right;
		    height: 19px;
		    margin: 2px;
		    vertical-align: top;
		    width: 19px;
		    margin-top: 40px;
		}
		
		.error {
		    color: #FF0000;
	    	margin-left: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panelOptions" addStyleNames="flex">
			<c:LabelTextBox ui:field="txtFile" label="{labels.ChooseFile}" enabled="false" addStyleNames="flexOne"/>
			<w:Button ui:field="btnChooseFile" text="..." addStyleNames="{style.button}"/>
			<g:SimplePanel ui:field="progressPanel" visible="false" addStyleNames="{style.progress}"/>
		</g:HTMLPanel>
		<g:Label ui:field="lblError" visible="false" addStyleNames="{style.error}"/>
	</g:HTMLPanel>
</ui:UiBinder> 