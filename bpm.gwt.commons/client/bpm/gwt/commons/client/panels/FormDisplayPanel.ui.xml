<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		position: relative;
		}
		.focusPanel {
			height: 90%;
    		width: 50%;
    		-moz-box-sizing: border-box;
		    box-sizing: border-box;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    display: inline-block;
		    vertical-align: top;
		    overflow: auto;
		}
		.btnSave {
			margin-top: 10px;
			margin-left: 50%;
    		transform: translate(-50%);
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel},{style.contentPanel}">
		<g:HTMLPanel ui:field="leftPanel" addStyleNames="{style.focusPanel}"/><g:HTMLPanel ui:field="rightPanel" addStyleNames="{style.focusPanel}"/>
		<g:Button ui:field="btnSave" text="Sauvegarder" addStyleNames="{style.btnSave}"/>
	</g:HTMLPanel>
</ui:UiBinder> 