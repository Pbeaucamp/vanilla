<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.VanillaViewer.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.panelTab {
		    background: #444444;
		    height: 100%;
		    width: 15%;
		    float: left;
		    overflow: auto;
		}
		
		.tabSmall {
			width: 40px !important;
			overflow: hidden;
		}
		
		.panelViewer {
			height: 100%;
			width: 100%;
			position: relative;
		}
		
		.viewerFull {
			position: absolute;
			height: 100%;
			left: 40px;
			right: 0px;
		}
		
		.displayNone {
			display: none;
		}
		
		.toolbarPanel {
			width: 100%;
			height: 40px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	    <!-- <g:HTMLPanel ui:field="panelTab" addStyleNames="{style.panelTab}">
			<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
				<g:Image ui:field="btnExpand" resource="{resources.ic_btn_sidebar_right_expand}" addStyleNames="{style.btnToolbar}"/>
			</g:HTMLPanel>
	    	<g:HTMLPanel ui:field="panelTabContent"/>
		</g:HTMLPanel> -->
	    <g:HTMLPanel ui:field="panelViewer" addStyleNames="{style.panelViewer}"/>
	</g:HTMLPanel>
</ui:UiBinder> 