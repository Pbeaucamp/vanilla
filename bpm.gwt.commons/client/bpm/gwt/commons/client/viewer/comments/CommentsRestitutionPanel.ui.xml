<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.comments.CommentsRestitutionPanel.MyStyle">
		.lblParam {
		    text-align: left;
		    width: 165px;
		    margin-top: 6px;
		}
		
		.paramP {
			width: 100%;
		}
		
		.captionParam {
			border-radius: 10px;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			margin: 5px;
		}
		
		.toolbarPanel {
			width: 100%;
			height: 40px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			padding: 8px;
			background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnPanel {
		    bottom: 5px;
		    position: absolute;
		    width: 100%;    
		    text-align: center;
		}
		
		.button, .buttonDisable {
			background: none repeat scroll 0 0 lightgray;
			border: 1px solid #555555;
			color: black;
			cursor: pointer;
			height: 35px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			display: block;
			margin: auto;
			display: inline-block;
			margin-top: 4px;
		}
		
		.button:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.btnSizeDuo {
			width: 100px;
		}
		
		.lstComment {
			-moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.85em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
    		margin: 2px 0 5px 1%;
	        display: inline-block;
	        vertical-align: top;
            width: 185px;
		}
		
		.panelGrid {
		    bottom: 5px;
		    position: absolute;
		    top: 45px;
		    width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnAdd" resource="{resources.add_24}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEdit" resource="{resources.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnDelete" resource="{resources.delete_24}" title="{label.DeleteOkTitle}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelComment" addStyleNames="{style.panelGrid}"/>
		<g:HTMLPanel ui:field="panelBtn" addStyleNames="{style.btnPanel}">
			<g:Button ui:field="btnBack" text="{label.Back}" addStyleNames="{style.button},{style.btnSizeDuo}"/>
			<g:Button ui:field="btnConfirm" text="{label.Confirmation}" addStyleNames="{style.button},{style.btnSizeDuo}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 