<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.commons.client.viewer.comments.NewCommentPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.txtArea {
			height: 100%;
			width: 100%;
		    resize: none;
		}
		
		.panelParam {
		    border-bottom: 1px solid #808080;
	    	padding-bottom: 5px;
    	    height: 150px;
    	    overflow: auto;
		}
		
		.panelTxt {
			position: absolute;
		    padding: 3px;
		    width: 198px;
		}
		
		.panelCommentValidation {
			bottom: 10px;
		}
		
		.panelCommentRestitution  {
			bottom: 50px;
		}
		
		.panelCommentWithParam {
			top: 160px;
		}
		
		.panelCommentWithoutParam  {
			top: 0px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelParam" addStyleNames="{style.panelParam}"/>
		<g:SimplePanel ui:field="panelTxt" addStyleNames="{style.panelTxt}">
			<g:TextArea ui:field="txtValue" addStyleNames="{style.txtArea}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 