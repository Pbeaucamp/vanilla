<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.comments.CommentDisplayPanel.MyStyle">
		.mainPanel {
			border-color: gray;
		    border-style: solid;
		    border-width: 0 0 0 1px;
		    bottom: 0;
		    right: 0;
		    position: absolute;
		    top: 40px;
		    width: 210px;
		}
		
		.panelParam {
			top: 60px;
			bottom: 80px;
			width: 100%;
			position: absolute;
			overflow: auto;
		}
		
		.btnPanel {
		    bottom: 5px;
		    padding: 2px;
		    position: absolute;
		    width: 100%;    
		    text-align: center;
		}
		
		.button, .buttonDisable {
			background: none repeat scroll 0 0 lightgray;
			border: 1px solid #555555;
			color: black;
			cursor: pointer;
			height: 35px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			display: block;
			margin: auto;
			display: inline-block;
			margin-top: 4px;
		}
		
		.button:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.btnSizeUno {
			width: 204px;
		}
		
		.btnSizeDuo {
			width: 100px;
		}
		
		.imgExpend {
			position: absolute;
			right: 0;
		}
		
		.lstComment {
			-moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.85em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
    		margin: 2px 0 5px 1%;
	        display: inline-block;
	        vertical-align: top;
            width: 185px;
		}
		
		.fullPanel {
			bottom: 0px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="parentPanel" addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgExpend" resource="{resources.imgExpend}" addStyleNames="{style.imgExpend}"/>
		<my:ListBox ui:field="lstCommentComposant" addStyleNames="{style.lstComment}"/>
<!-- 		<g:ListBox ui:field="lstCommentComposant" addStyleNames="{style.lstComment}"/> -->
		<g:SimplePanel ui:field="mainPanel" addStyleNames="{style.panelParam}"/>
		<g:HTMLPanel ui:field="panelBtn" addStyleNames="{style.btnPanel}">
			<g:Button ui:field="btnManageComment" text="{label.Validate}" addStyleNames="{style.button},{style.btnSizeUno}"/>
			<g:Button ui:field="btnAdminValidation" text="{label.Validate}" addStyleNames="{style.button},{style.btnSizeDuo}"/>
			<g:Button ui:field="btnAdminUnvalidation" text="{label.Unvalidate}" addStyleNames="{style.button},{style.btnSizeDuo}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 