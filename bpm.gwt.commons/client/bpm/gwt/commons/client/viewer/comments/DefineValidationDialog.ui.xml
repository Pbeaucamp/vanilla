<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom"
	xmlns:p="urn:import:bpm.gwt.commons.client.custom.v2">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.comments.DefineValidationDialog.MyStyle">
		.mainPanel {
			width: 850px;
			height: 420px;
		}

		.toolbar {
	
		}
	
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 20px !important;
		    padding: 5px;
		    width: 20px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.datagridPanel {
		    display: inline-block;
		    height: 300px;
		    margin-top: 5px;
		    vertical-align: top;
		    width: 100%;
		}
		
		.item {
			margin: 10px;
			width: 90%;
		}
		
		.gridPanel {
			width: 50%;
		}
		
		.lblMargin {
	    	margin: 20px;
		}
		
		.panelBtn {
		    margin-left: 270px;
		    margin-top: 50px;
		    width: 250px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelValidation">
			<c:ListBoxWithButton ui:field="lstCircuits" label="{labels.ValidationCircuits}" btnText="..."/>
			<g:HTMLPanel addStyleNames="flex">
				<g:HTMLPanel addStyleNames="{style.gridPanel}">
					<p:GridPanel ui:field="gridComms" addStyleNames="{style.datagridPanel}, relative"/>
				</g:HTMLPanel><g:HTMLPanel addStyleNames="{style.gridPanel}">
					<p:GridPanel ui:field="gridVals" addStyleNames="{style.datagridPanel}, relative"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<c:CustomCheckbox ui:field="checkOffline" text="{labels.PutTheReportOfflineDuringTheProcess}" addStyleNames="{style.item}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelControl">
			<g:Label ui:field="lblComms" addStyleNames="{style.lblMargin}" />
			<g:Label ui:field="lblVals" addStyleNames="{style.lblMargin}" />
			<g:Label ui:field="lblNextAction" addStyleNames="{style.lblMargin}" />
			<g:Label ui:field="lblStatus" addStyleNames="{style.lblMargin}" />
			<g:HTMLPanel ui:field="panelChangeCommentator" addStyleNames="{style.panelBtn}" visible="false"/>
			<g:HTMLPanel addStyleNames="{style.panelBtn}">
				<p:Button ui:field="btnNewValidation" text="{labels.LaunchNewProcess}" height="25" width="150" visible="false"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 