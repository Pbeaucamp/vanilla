<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.dialog.BirtOptionRunDialogBox.MyStyle">
		.caption {
		}
		
		.mainPanel {
			max-height: 700px;
		}
		
		.lblGed {
		    margin-right: 15px;
    		margin-top: 10px;
   		    width: 70px;
		}
		
		.txtGed {
			margin-top: 8px;
		}
			
		.lstLocale {
			width: 200px;
		}
		
		.lstBox {
			width: 100%;
		}
		
		.lblParam {
			float: left;
		    text-align: left;
		    width: 80px;
		    margin-top: 6px;
		}
		
		.conf {
			margin-left: 5px;
			margin-top: 5px;
			width: 200px;
		}
		
		.lblExConf {
		    margin-top: 7px;
		}
		
		.lblDescription {
			width: 100%;
			height: 40px;
  			background-color: #D8D8D8;
		}
		
		.lblLocal {
		    margin-right: 10px;
    		margin-top: 3px;	
		}
		
		.txtLimitRows {
			width: 90%;
		}

		.panelWidth {
			width: 100%;
		}
	</ui:style>

		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">   	
			<g:CaptionPanel ui:field="fieldSetGroupParameter" addStyleNames="{style.caption}" captionText="{label.Parameters}">
				<g:HTMLPanel>
					<g:HorizontalPanel ui:field="panelBtnConfig">
						<g:RadioButton ui:field="yesExistingConfig" ui:name="existingConfig" text="{label.UseExistingConfig}"/>
						<g:RadioButton ui:field="noExistingConfig" ui:name="existingConfig" text="{label.SelectParameters}"/>
					</g:HorizontalPanel>
					<g:HTMLPanel ui:field="panelConfig">
						<g:HorizontalPanel>
							<g:Label ui:field="lblExistingConf" addStyleNames="{style.lblExConf}" text="{label.ParameterConfig}"/>
							<g:ListBox ui:field="lstConfig" addStyleNames="{style.conf}"/>
						</g:HorizontalPanel>
						
						<g:HTMLPanel>
							<g:Label ui:field="lblDesc" text="{label.Description}"/>
							<g:Label ui:field="lblConfDesc" addStyleNames="{style.lblDescription}"/>
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:SimplePanel ui:field="panelParameters"/>				
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="fieldSetLocale" addStyleNames="{style.caption}" captionText="{label.UseRessourceFile}">
				<g:HTMLPanel>
					<g:HorizontalPanel>
						<g:RadioButton ui:field="yesLocal" ui:name="locale" text="{label.Yes}"/>
						<g:RadioButton ui:field="noLocal" ui:name="locale" text="{label.No}"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel ui:field="panelLocale">
						<g:Label ui:field="lblLocal" addStyleNames="{style.lblLocal}" text="{label.Locales}"/>
						<g:ListBox ui:field="localeBox" addStyleNames="{style.lstLocale}"/>
					</g:HorizontalPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="fieldSetAlternate" addStyleNames="{style.caption}" captionText="{label.UseAlternate}">
				<g:HTMLPanel>
					<g:HorizontalPanel>
						<g:RadioButton ui:field="yesAlternate" ui:name="useAlternate" text="{label.Yes}"/>
						<g:RadioButton ui:field="noAlternate" ui:name="useAlternate" text="{label.No}"/>
					</g:HorizontalPanel>
					<g:HTMLPanel ui:field="panelAlternate"/>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="fieldSetFormat" addStyleNames="{style.caption}" captionText="{label.Format}">
				<g:VerticalPanel addStyleNames="{style.panelWidth}">
					<g:ListBox ui:field="lstFormat" addStyleNames="{style.lstBox}" visibleItemCount="8"/>
<!-- 					<g:Hyperlink ui:field="linkDefaultFormat"/> -->
			</g:VerticalPanel>
		</g:CaptionPanel>
		<g:CaptionPanel ui:field="fieldSetBackground" addStyleNames="{style.caption}" captionText="{label.InBackground}">
				<g:HorizontalPanel>
					<g:RadioButton ui:field="yesRunBackground" ui:name="runBackground" text="{label.Yes}"/>
					<g:RadioButton ui:field="noRunBackground" ui:name="runBackground" text="{label.No}"/>
				</g:HorizontalPanel>
		</g:CaptionPanel>
		<g:CaptionPanel ui:field="fieldSetLimitRows" addStyleNames="{style.caption}" captionText="{label.LimitRows}">
			<g:HTMLPanel addStyleNames="{style.panelWidth}">
				<g:HorizontalPanel addStyleNames="{style.panelWidth}">
					<g:CheckBox ui:field="checkLimitRows"/>
					<g:TextBox ui:field="txtLimitRows" addStyleNames="{style.txtLimitRows}"/>
				</g:HorizontalPanel>
			</g:HTMLPanel>
		</g:CaptionPanel>
		<g:CaptionPanel ui:field="fieldSetComs" addStyleNames="{style.caption}" captionText="{label.Commentaries}">
			<g:HTMLPanel addStyleNames="{style.panelWidth}">
				<g:HorizontalPanel addStyleNames="{style.panelWidth}">
					<g:CheckBox ui:field="checkDisplayComments" text="{label.DisplayComments}"/>
				</g:HorizontalPanel>
			</g:HTMLPanel>
		</g:CaptionPanel>
	</g:HTMLPanel>
</ui:UiBinder> 