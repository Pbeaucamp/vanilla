<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 450px;
			height: 210px;
			position: relative;
		}
		
		.lbl {
		    margin: 20px;
	    	text-align: center;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<c:LabelTextBox ui:field="txtName" placeHolder="{labels.LinkName}"/>
		<c:ListBoxWithButton ui:field="lstDatasources" label="{labels.Datasources}" btnText="..."/>
		<c:LabelTextBox ui:field="txtTableName" placeHolder="{labels.TableName}"/>
	</g:HTMLPanel>
</ui:UiBinder> 