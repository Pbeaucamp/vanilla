<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			width: 450px;
		    height: 80px;
		}
		
		.lst {
            width: 96%;
		}
	</ui:style>

	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<c:ListBoxWithButton ui:field="lstLinks" label="{label.MetadataLink}" addStyleNames="{style.lst}"/>
	</g:HTMLPanel>
</ui:UiBinder> 