<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.dialog.CmisShareConnectionPage.MyStyle">
		.panelContent {
			height: 435px;
			width: 690px;
		}
		
		.btnDefine {
		    background: none repeat scroll 0 0 #444444 !important;
		    border: 1px solid #555555 !important;
		    border-radius: 10px;
		    color: white;
		    cursor: pointer;
		    display: block;
		    height: 40px;
		    margin-left: 25%;
		    margin-top: 15px;
		    margin-bottom: 20px;
		    transition: all 1s ease 0s;
		    width: 50%;
		    display: inline-block;
		}
		
		.btnDefine:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		
		.lst {
			width: 98%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:Button ui:field="btnExpertView" text="{labels.ExpertView}" styleName="{style.btnDefine}"/>
		<g:HTMLPanel ui:field="panelSimple">
			<my:LabelTextBox ui:field="txtUrl" placeHolder="{labels.Url}"/>
			<my:LabelTextBox ui:field="txtLogin" placeHolder="{labels.Login}"/>
			<my:LabelTextBox ui:field="txtPassword" placeHolder="{labels.Password}" password="true"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelExpert" visible="false">
			<my:LabelTextArea ui:field="txtExpert"/>
		</g:HTMLPanel>
		<g:Button ui:field="btnLoadRepositories" text="{labels.LoadRepositories}" styleName="{style.btnDefine}"/>
		<my:CustomListBox ui:field="lstRepositories" addStyleNames="{style.lst}"/>
	</g:HTMLPanel>
</ui:UiBinder> 