<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.dialog.RunDialog.MyStyle">
		.lstReports {
			margin: 10px;
			width: 94%;
		}
		
		.panelRun {
		    border-top: 2px solid #628CD5;
		}
		
		.caption {
		}
		
		.panelWidth {
			width: 100%;
		}
		
		.lstBox {
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>   	
		<g:ListBox ui:field="lstReports" addStyleNames="{style.lstReports}"/>
		<g:SimplePanel ui:field="panelReportRun" addStyleNames="{style.panelRun}"/>
		<g:CaptionPanel ui:field="fieldSetFormat" addStyleNames="{style.caption}" captionText="{label.Format}">
			<g:VerticalPanel addStyleNames="{style.panelWidth}">
				<g:ListBox ui:field="lstFormat" addStyleNames="{style.lstBox}" visibleItemCount="8"/>
		</g:VerticalPanel>
	</g:CaptionPanel>
	</g:HTMLPanel>
</ui:UiBinder> 