<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.param.ParamDisplayPanel.MyStyle">
		.mainPanel {
			border-color: gray;
		    border-style: solid;
		    border-width: 0 1px 0 0;
		    bottom: 0;
		    left: 0;
		    position: absolute;
		    top: 40px;
		    width: 210px;
		}
		
		.panelParam {
			top: 60px;
			bottom: 105px;
			width: 100%;
			position: absolute;
			overflow: auto;
		}
		
		.btnPanel {
			position: absolute;
			width: 100%;
			bottom: 5px;
		}
		
		.button {
			background: none repeat scroll 0 0 lightgray;
			border: 1px solid #555555;
			color: black;
			cursor: pointer;
			height: 40px;
			margin-top: 5px;
			width: 150px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			display: block;
			margin: auto;
		}
		
		.button:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
		
		.imgExpend {
			position: absolute;
		}
		
		.btnSaveConfig {
			position: absolute;
			width: 100%;
			top: 15px;
		}
		
		.captionLimitRows {
			margin: 5px;
		}

		.panelWidth {
			width: 100%;
		}

		.txtWidth {
			width: 140px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="parentPanel" addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgExpend"/>
		<g:SimplePanel addStyleNames="{style.btnSaveConfig}">
			<g:Button ui:field="btnSaveConfig" addStyleNames="{style.button}"/>
		</g:SimplePanel>
		<g:SimplePanel ui:field="mainPanel" addStyleNames="{style.panelParam}"/>
		<g:HTMLPanel addStyleNames="{style.btnPanel}">
			<g:CaptionPanel ui:field="captionLimitRows" addStyleNames="{style.captionLimitRows}">
				<g:HTMLPanel addStyleNames="{style.panelWidth}">
					<g:CheckBox ui:field="checkLimitRows"/>
					<g:TextBox ui:field="txtLimitRows" addStyleNames="{style.txtWidth}"/>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:CaptionPanel ui:field="captionComments" addStyleNames="{style.captionLimitRows}" captionText="{label.Commentaries}">
				<g:HTMLPanel addStyleNames="{style.panelWidth}">
					<g:HorizontalPanel addStyleNames="{style.panelWidth}">
						<g:CheckBox ui:field="checkDisplayComments" text="{label.DisplayComments}"/>
					</g:HorizontalPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>
			<g:Button ui:field="btnRun" addStyleNames="{style.button}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 