<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.ButtonViewer.MyStyle">
		.button {
		    background: #444444;
		    border: 1px solid #555555;
		    color: #FFFFFF;
		    height: 40px;
		    margin: 0;
		    width: 99%;
		    cursor: pointer;
		    position: relative;
		}
		
		.button:HOVER {
		    background: none repeat scroll 0 0 #EAEAEA;
		    border: 1px solid #555555;
		    color: #000000;
		    height: 40px;
		    margin: 0;
		    width: 99%;
		}
		
		.label {
		    margin-left: 5px;
		    margin-right: 25px;
		    margin-top: 3px;
		}
	
		.imgClose {
		    height: 20px !important;
		    width: 20px !important;
		    position: absolute;
		    right: 5px;
		    top: 9px;
		    background-position: center !important;
		}
		
		.imgClose:HOVER {
			background-color: #444444 !important;
		}
		
		.selected {
		    background: none repeat scroll 0 0 #EAEAEA;
		    border: 1px solid #555555;
		    color: #000000;
		    height: 40px;
		    margin: 0;
		    width: 99%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="button" addStyleNames="{style.button}">
		<g:Label ui:field="label" addStyleNames="{style.label}"/>
		<g:Image ui:field="close" resource="{resources.ic_dialog_close}" addStyleNames="{style.imgClose}"/>
	</g:HTMLPanel>
</ui:UiBinder> 