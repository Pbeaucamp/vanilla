<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.txt {
		    -moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.65em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
	        margin: 5px 5px 5px 8px;
	        width: 95%;
		}
		
		.txt:FOCUS {
		    border-bottom-left-radius: 0;
		    border-color: rgba(0, 0, 0, 0.2);
		    border-top-left-radius: 0;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset;
		    color: rgba(0, 0, 0, 0.85);
		}

		.lstBox {
			margin-left: 10px;
			margin-top: 20px;
			width: 95%;
		}
		
		.panelCheckboxs {
			background: none repeat scroll 0 0 #D3D3D3;
			border: 1px solid #808080;
			height: 180px;
			margin: 10px;
			overflow: auto;
		}

		.lblTips {
    		font-size: 10px;
    		margin: 5px;
		}
		
		.checkChart {
	    	margin-left: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<my:TextHolderBox ui:field="txtItemName" placeHolder="{label.Name}" addStyleNames="{style.txt}"/>
		<g:ListBox ui:field="lstFormat" addStyleNames="{style.lstBox}" visibleItemCount="8"/>
		<g:CheckBox ui:field="checkLandscape" text="{label.Landscape}" addStyleNames="{style.checkChart}"/>
		<g:HTMLPanel ui:field="panelCheckboxs" styleName="{style.panelCheckboxs}" />
		<g:Label ui:field="lblTips" text="{label.TipsDashboard}" addStyleNames="{style.lblTips}" />
	</g:HTMLPanel>
</ui:UiBinder> 