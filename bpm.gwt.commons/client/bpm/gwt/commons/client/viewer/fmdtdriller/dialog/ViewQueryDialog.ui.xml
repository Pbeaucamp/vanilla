<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.commons.client.viewer.fmdtdriller.dialog.ViewQueryDialog.MyStyle">		
	
	.contentPanel {
		width: 450px;
		height: 250px;
	}
	
	.areaText {
		width: 440px;
		height:240px;
		overflow-y:auto;
		overflow-x: hidden;
	}
	
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:TextArea ui:field="requestField" addStyleNames="{style.areaText}"/>
	</g:HTMLPanel>
</ui:UiBinder> 