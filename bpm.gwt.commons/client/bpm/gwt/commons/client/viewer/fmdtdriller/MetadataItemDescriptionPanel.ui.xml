<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.fmdtdriller.MetadataItemDescriptionPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.panelSplitter {
		    height: 10px;
		    position: absolute;
		    top: -10px;
		    width: 100%;
		    left: 0px;
		    background: white;
		}
		
		.splitter {
			background: url("images/splitPanelThumb.png") no-repeat scroll center center;
		    cursor: row-resize;
	    	height: 100%;
    		width: 100%;
		}
		
		.panelFocus {
		    border-bottom: 1px solid #000000;
		    border-top: 1px solid #000000;
		    height: 30px;
		    line-height: 30px;
		    text-align: center;
		    width: 100%;
		    cursor: pointer;
		}
		
		.panelFocus:HOVER {
			background: lightgray;
		}
		
		.panelTitle {
		    display: inline-block;
	    	text-align: center;
		}
		
		.panelDescription {
		    bottom: 0;
		    position: absolute;
		    top: 32px;
    		left: 0px;
    		right: 0px;
    		padding: 3px;
		}
		
		.lblTitle {
		    display: inline-block;
	    	margin: 0 15px;
		}
		
		.imgTitle {
	    	display: inline-block;
		}
		
		.panelLblDescription {
			background: none repeat scroll 0 0 #E6E6E6;
		    height: 100%;
    		width: 100%;
    		border: 1px solid lightgray;
   		    overflow: auto;
		}
		
		.lblDescription {
			margin: 5px;
		}
		
		.displayNone {
			display: none;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:SimplePanel ui:field="panelSplitter" addStyleNames="{style.panelSplitter}"/>
		
		<g:FocusPanel ui:field="panelTitle" addStyleNames="{style.panelFocus}">
			<g:HTMLPanel addStyleNames="{style.panelTitle}">
				<g:Image ui:field="imgLeftArrow" resource="{resources.sortAscending}" addStyleNames="{style.imgTitle}"/>
				<g:Label text="{label.Description}" addStyleNames="{style.lblTitle}"/>
				<g:Image ui:field="imgRightArrow" resource="{resources.sortAscending}" addStyleNames="{style.imgTitle}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
		
		<g:SimplePanel ui:field="panelDescription" addStyleNames="{style.panelDescription}">
			<g:SimplePanel addStyleNames="{style.panelLblDescription}">
				<g:Label ui:field="lblDescription" addStyleNames="{style.lblDescription}"/>
			</g:SimplePanel>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 