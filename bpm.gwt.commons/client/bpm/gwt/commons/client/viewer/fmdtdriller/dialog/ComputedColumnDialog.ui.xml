<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.fmdtdriller.dialog.ComputedColumnDialog.MyStyle">	

	
	
	.contentPanel {
			width: 600px;
			height: 400px;
		}
		
	.marginTop {
		margin-top: 7px;
	}
	
	.lbl {
			float: left;
			margin-left:10px;
			width: 40%;
	}
	
	.txtNameSize {
		width: 55%;
	}
	.requestValue {
		widht:100%;
		height: 330px;
	}
	
	.columnsTree{
			float: left;
			margin-left:10px;
			overflow: auto;
			width: 40%;
			height: 100%;
	}
	
	.computedPanel {
		width: 55%;
		height: 100%;
		overflow: auto;
	}
	
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.contentPanel}">
			<g:HTMLPanel >		
				<g:Label ui:field="lblName" addStyleNames="{style.lbl}, {style.marginTop}" text="{label.Name}"/>
				<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}, {style.txtNameSize}"/>			
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.requestValue}">
					<g:SimplePanel ui:field="panelColumn" addStyleNames="{style.marginTop}, {style.columnsTree}"/>					
					<g:TextArea ui:field="computedValue" addStyleNames="{style.marginTop}, {style.computedPanel}"/>
			</g:HTMLPanel>
			<!-- 
			<g:HTMLPanel addStyleNames="{style.columnsPanel}">
						<g:Label ui:field="lblName" addStyleNames="{style.marginTop}, {style.lbl}"  text="{label.Name}"/>
						<g:SimplePanel ui:field="panelColumn" addStyleNames="{style.columnsTree}"/>
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.computedPanel}">
						<g:TextBox ui:field="txtName" addStyleNames="{style.txtNameSize}"/>
						<g:TextArea ui:field="computedValue" addStyleNames="{style.computedValue}"/>
			</g:HTMLPanel>
			 -->
	</g:HTMLPanel>
</ui:UiBinder> 