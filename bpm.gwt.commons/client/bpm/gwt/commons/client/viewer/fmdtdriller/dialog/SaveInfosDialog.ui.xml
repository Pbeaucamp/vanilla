<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.commons.client.viewer.fmdtdriller.dialog.SaveInfosDialog.MyStyle">
		.mainPanel {
		    position: relative;
		    width: 400px;
		}
		
		.txt {
		}
		
		.lst {
		}
		
		.chk {
			margin: 5px 3px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<c:LabelTextBox ui:field="txtName" placeHolder="{label.Name}" addStyleNames="{style.txt}"/>
		<c:LabelTextBox ui:field="txtAuthor" placeHolder="{label.Author}" addStyleNames="{style.txt}"/>
		<c:LabelTextBox ui:field="txtDesc" placeHolder="{label.Description}" addStyleNames="{style.txt}"/>
		<c:ListBoxWithButton ui:field="lstGroups" label="{label.Group}" addStyleNames="{style.txt}"/>
		<g:CheckBox ui:field="chkChart" text="{label.SaveChart}" visible="false" addStyleNames="{style.chk}"/>
	</g:HTMLPanel>
</ui:UiBinder> 