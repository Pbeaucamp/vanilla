<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:bpm.gwt.commons.shared.fmdt">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />

	<ui:style
		type="bpm.gwt.commons.client.viewer.fmdtdriller.ObjectFmdtDimension.MyStyle">
		.txt {
			padding: 1px;
			font-size: 14px;
			margin-left: 2px;
		}
		
		.btn {
			cursor: pointer;
			height: 16px !important;
			width: 16px !important;
			background-position: center !important;
			vertical-align: bottom;
			display: inline-block;
			padding : 2px;
		}
		
		.btn:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.downUp {
			margin-left: 5px;
		}
		
		.remove {
			position: relative;
			right: 0px;
		}
		
		.lbl {
			font-size: 12px;
			padding: 1px;
			margin-left: 2px;
		}
		
		.levelList {
			font-size: 12px;
			padding: 2px;
			padding-left: 15px !important;
		}
		
		.dimension {
			border: 1px solid #D3D3D3;
			max-width: 600px;
			margin: 5px;
		}
		
		.select {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.image {
			background-position: center !important;
			vertical-align: bottom;
			display: inline-block;
			margin-left: 5px;
		}
		
		.dimensionLbl {
			margin: 2px
		}
		
		.hierarchyLbl {
			margin-top: 5px;
			margin-left: 15px;
		}
		</ui:style>
	<f:HtmlFocusPanel ui:field="contentPanel"
		addStyleNames="{style.dimension}">
		<g:HTMLPanel addStyleNames="{style.dimensionLbl}">
			<g:Image resource="{resources.cube_dimension}" addStyleNames="{style.image}" />
			<g:TextBox ui:field="txtdimension" addStyleNames="{style.txt}" />
			<g:Image ui:field="btnRemove" resource="{resources.delete_16}"
				title="{label.RemoveField}" addStyleNames="{style.btn}, {style.remove}" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.hierarchyLbl}">
			<g:Image resource="{resources.cube_hierarchy}" addStyleNames="{style.image}" />
			<g:TextBox ui:field="txtHiera" text="Default_Hierarchy"
				addStyleNames="{style.lbl}" />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="levelsPanel" addStyleNames="{style.levelList}" />
	</f:HtmlFocusPanel>

</ui:UiBinder> 