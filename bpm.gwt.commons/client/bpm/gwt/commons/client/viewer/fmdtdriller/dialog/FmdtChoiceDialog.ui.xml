<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.panelLst {
		    display: inline-block;
		    margin: 5px;
		    width: 385px;
		}
	
		.lstBox {
		    display: inline-block;
			width: 200px;
		}
		
		.lbl {
		    display: inline-block;
		    margin: 10px;
		    width: 145px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel addStyleNames="{style.panelLst}">
			<g:Label text="{label.ChooseModel}" addStyleNames="{style.lbl}"/>
			<g:ListBox ui:field="lstModel" addStyleNames="{style.lstBox}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelLst}">
			<g:Label text="{label.ChoosePackage}" addStyleNames="{style.lbl}"/>
			<g:ListBox ui:field="lstPackage" addStyleNames="{style.lstBox}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelConnection" addStyleNames="{style.panelLst}">
			<g:Label text="{label.ChooseConnection}" addStyleNames="{style.lbl}"/>
			<g:ListBox ui:field="lstConnection" addStyleNames="{style.lstBox}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 