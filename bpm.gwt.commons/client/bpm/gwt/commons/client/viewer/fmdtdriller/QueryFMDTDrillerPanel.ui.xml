<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />

	<ui:style
		type="bpm.gwt.commons.client.viewer.fmdtdriller.QueryFMDTDrillerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelContent {
			width: 100%;
			height: 100%;
		}
		
		.labelRowDocument {
			border-bottom: 1px solid gray;
			height: 45px;
			position: relative;
		}
		
		.textDocument {
			left: 30px;
			position: absolute;
			top: 15px;
			width: 195px;
		}
		
		.imgArrowDocument {
			height: 15px;
			position: absolute;
			right: 5px;
			top: 15px;
			width: 15px;
		}
		</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.panelContent}" />
	</g:HTMLPanel>
</ui:UiBinder> 