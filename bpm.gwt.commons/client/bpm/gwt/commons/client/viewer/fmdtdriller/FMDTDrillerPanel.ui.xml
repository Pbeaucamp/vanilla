<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />

	<ui:style
		type="bpm.gwt.commons.client.viewer.fmdtdriller.QueryFMDTDrillerPanel.MyStyle">
		.top {
			border: 1px solid black;
		}
		
		.dockPanel {
			width: 100%;
			height: 100%;
		}
		
		.fmdtdrillerOpenNewLabel {
			border-bottom: 2px solid #6F7277;
			border-right: 1px solid #808080;
			color: #4B4A4A;
			font-size: 12px;
			font-weight: bold;
			height: 18px;
			padding: 8px 15px 0;
			text-shadow: 1px 1px 0 #DDDDFF;
			width: 220px;
		}
		
		.panelContent {
			position: absolute;
			top: 0px;
			width: 100%;
			bottom: 30px;
		}
		
		.panelToolbar {
			height: 35px;
			width: 100%;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
		
		.pager {
			margin: auto;
		}
		
		.panelQuery {
			margin-top: 20px;
			overflow: auto;
		}
		
		.lstTables {
			width: 100%;
			height: 100%;
		}
		
		.labelRowDocument {
			border-bottom: 1px solid gray;
			height: 45px;
			position: relative;
		}
		
		.textDocument {
			left: 30px;
			position: absolute;
			top: 15px;
			width: 195px;
		}
		
		.imgArrowDocument {
			height: 15px;
			position: absolute;
			right: 5px;
			top: 15px;
			width: 15px;
		}
		
		.documentList {
			border-right: 1px solid gray;
			bottom: 0;
			position: absolute;
			top: 28px;
			width: 250px;
			overflow: auto;
		}
		
		.lblQuery {
			margin: 5px;
		}
		
		.btnToolbar {
			background: none repeat scroll 0 0 #444444 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 30px;
			margin-top: 5px;
			margin-left: 15px;
			width: 135px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
		}
		
		.btnToolbardisable {
			background: none repeat scroll 0 0 #cccccc !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 30px;
			margin-top: 5px;
			margin-left: 15px;
			width: 135px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
		}
		
		.gridDelete {
			background-color: red;
		}
		
		.gridAdd {
			background-color: green;
		}
		
		.gridUpdate {
			background-color: yellow;
		}
		</ui:style>

	<g:DockLayoutPanel ui:field="dockPanel"
		addStyleNames="{style.dockPanel}">

		<g:west size="251">
			<g:HTMLPanel>
				<g:Label text="{label.TableList}" addStyleNames="{style.fmdtdrillerOpenNewLabel}" />
				<g:SimplePanel ui:field="panelTables" addStyleNames="{style.lstTables}" />
			</g:HTMLPanel>
		</g:west>

		<g:center>
			<g:HTMLPanel>
				<g:HTMLPanel ui:field="editToolbar" addStyleNames="{style.panelToolbar}">

				</g:HTMLPanel>
				<g:SimplePanel ui:field="tableContentPanel"
					addStyleNames="{style.panelContent}" />
				<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}" />
			</g:HTMLPanel>
		</g:center>

		<g:south size="100">
			<g:SimplePanel ui:field="queryPanel" addStyleNames="{style.panelQuery}">
				<g:Label ui:field="lblQuery" addStyleNames="{style.lblQuery}" />
			</g:SimplePanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder> 