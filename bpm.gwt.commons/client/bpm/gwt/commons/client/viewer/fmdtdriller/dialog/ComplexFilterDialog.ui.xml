<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.gwt.commons.client.viewer.fmdtdriller.dialog.ComplexFilterDialog.MyStyle">
		.lbl {
			float: left;
			margin-left: 1px;
			width: 120px;
		    margin-top: 10px;
		    
		}
	
		.marginTop {
			margin-top: 10px;
		}

		.lstSize {
			width: 173px;
		}

		.txtNameSize {
			width: 167px;
		}
		.contentPanel {
			width: 600px;
			height: 320px;
		}
		
		.areaValue{
			width: 300px;
			height: 120px;
			margin-left: 1px;
			margin-top: 5px;
			background-position: center !important;		
		}
		
		.btnImage {
			cursor: pointer;
			height: 24px !important;
			width: 24px !important;
			padding: 3px;
			background-position: center !important;			
		}
		
		.btnImage:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.columnsTree{
			float: left;
			margin-left:10px;
			overflow: auto;
			width: 245;
			height: 98%;
		}
		
		.valuePanel {
			width: 55%;
			height: 100%;
			
		}
		
		.content{
			display: inline-block;
	
		}
	
		.dockPanel {
	 		width: 100%;
	 		height: 100%;
	 	}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:DockLayoutPanel ui:field="dockPanel" addStyleNames="{style.dockPanel}">
							
			<g:west size="260">
				<g:SimplePanel ui:field="panelColumn" addStyleNames="{style.marginTop}, {style.columnsTree}"/>				
			</g:west>
			
			<g:east size="330">
				<g:HTMLPanel ui:field="valuePanel" >
					<g:HTMLPanel>
						<g:Label ui:field="lblName" addStyleNames="{style.lbl}" text="{label.Name}"/>
						<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}, {style.txtNameSize}"/>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label ui:field="lblField" addStyleNames="{style.lbl}" text="{label.Field}"/>
						<g:TextBox ui:field="txtField" addStyleNames="{style.marginTop}, {style.txtNameSize}"/>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label ui:field="lblOperator" addStyleNames="{style.lbl}" text="{label.Operator}"/>
						<g:ListBox ui:field="lstOperatore" addStyleNames="{style.marginTop}, {style.lstSize}"/>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label ui:field="lblValue" addStyleNames="{style.lbl}" text="{label.Value}"/>
						<g:Image ui:field="btnAdd" resource="{resources.add_16}" title="{label.Add}" addStyleNames="{style.marginTop}, {style.btnImage}"/>
						<g:Image ui:field="btnRemove" resource="{resources.delete_24}" title="{label.RemoveValue}" addStyleNames="{style.marginTop}, {style.btnImage}"/>				
					</g:HTMLPanel>
				
					<g:HTMLPanel>
						<g:SimplePanel ui:field="panelDatagrid" addStyleNames="{style.areaValue}"/>
					</g:HTMLPanel>
					
				</g:HTMLPanel>
			</g:east>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 