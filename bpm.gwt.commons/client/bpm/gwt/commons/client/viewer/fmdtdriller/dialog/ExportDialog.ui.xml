<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.lblName {
			margin: 10px;
			float: left;
			width: 100px;
		}
		
		.txtName {
		    margin-top: 10px;
		    width: 205px;
		}
		
		.lst {
		    margin-top: 10px;
			width: 210px;
		}
		
		.marginTop {
			margin-top: 10px;
		}
		
		.cb{
			   display: block;
			   margin-left: 120px;
			   margin: 20px;	
		}
		
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel ui:field="panelName">
			<g:Label text="{label.Name}" addStyleNames="{style.lblName}" />
			<g:TextBox ui:field="txtName" addStyleNames="{style.txtName}" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.marginTop}">
			<g:Label text="{label.Format}" addStyleNames="{style.lblName}" />
			<g:ListBox ui:field="lstFormat" addStyleNames="{style.lst}" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.marginTop}">
			<g:Label text="{label.Separator}" addStyleNames="{style.lblName}" />
			<g:TextBox ui:field="txtSeparator" addStyleNames="{style.txtName}">;</g:TextBox>
		</g:HTMLPanel>
		<g:CheckBox ui:field="cbFormatted"  addStyleNames="{style.cb}" text="{label.Formatted}" />
	</g:HTMLPanel>
</ui:UiBinder> 