<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.lbl {
			display: inline-block;
		    margin-left: 12px;
		    margin-right: 10px;
		    margin-top: 10px;
		    min-width: 150px;
		}
		
		.lblName {
			font-size: 1.4em;
    		text-align: center;
		}
		
		.lblh2 {
			font-size: 1.2em;
    		text-align: center;
		}
	
		.contentPanel {
			width: 640px;
			height: 240px;
		}
		
		.lst, .txt {
		    margin-top: 10px;
		    width: 200px;
		}	
		.txtName {
		    padding: 5px;
		    width: 300px;
		}	
		
		.btn{
			background: none repeat scroll 0 0 #4471C4;
		    border-radius: 4px 4px 4px 4px;
		    color: #FFFFFF;
		    font-weight: 400;
		    border: medium none;
		}
		.addDts {
			margin-top: 10px;
			padding: 5px;
		}
		
		.panel {
			padding: 10px;
			background-color: #CCCCCC;
			border-radius: 5px;
			margin: 10px;
		}
		
		.namePanel {
			text-align: center;
		}
		
		.selectPanel {
			display: inline-block;
			width: 65%;
		}
		
		.addPanel {
			float: right;
			width: 35%;
			text-align: center;
		}
		
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.panel},{style.namePanel}">
			<g:Label ui:field="lblName" addStyleNames="{style.lblName}" text="{label.DatasetNametoCreate}"/>
			<g:TextBox ui:field="txtName" addStyleNames="{style.txt},{style.txtName}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="datasourcePanel" addStyleNames="{style.panel}">
			<g:HTMLPanel addStyleNames="{style.selectPanel}">
				<g:Label ui:field="lblselectDts" addStyleNames="{style.lblh2}" text="{label.SelectDatasource}"/>
				<g:Label ui:field="lblTypeDatasource" addStyleNames="{style.lbl}" text="{label.Type}"/>
				<g:ListBox ui:field="lstTypeDatasource" addStyleNames="{style.lst}"/>
				<g:Label ui:field="lblDatasource" addStyleNames="{style.lbl}" text="{label.Datasource}"></g:Label>
				<g:ListBox ui:field="lstDatasource" addStyleNames="{style.lst}"></g:ListBox>
				<!-- <g:Label ui:field="lblRDataset" addStyleNames="{style.lbl}" text="{label.RDataset}"></g:Label>
				<g:ListBox ui:field="lstRDataset" addStyleNames="{style.lst}"></g:ListBox> -->
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.addPanel}">
				<g:Label ui:field="lbladdDts" addStyleNames="{style.lblh2}" text="{label.AddEditDatasource}"/>
				<g:Button ui:field="btnAddDatasource" text="{label.DatasourceManager}"></g:Button>
			</g:HTMLPanel>		
		</g:HTMLPanel>
		<!-- <g:HTMLPanel ui:field="notePanel">
			<g:Label ui:field="lblNote" addStyleNames="{style.lblNote}"/>
		</g:HTMLPanel> -->
		
	</g:HTMLPanel>
</ui:UiBinder> 