<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style>
		.contentPanel {
			width: 700px;
			height: 500px;
			display: flex;
		}
		.buttonPanel {
			width: 40px;
			height: 430px;
			display: inline-block;
			background: none repeat scroll 0 0 #CCCCCC;
			position: absolute;
			top: 100px;
			left: 330px;
		}
		.buttonPanel img {
			margin:auto;
			margin-top: 120px;
			cursor: pointer;
			display: block;
		}
		.leftPanel {
			width: 330px;
			height: 430px;
			display: inline-block;
			vertical-align: top;
			position: absolute;
			top: 100px;
			left: 0;
		}
		
		.rightPanel {
			width: 330px;
			height: 430px;
			display: inline-block;
			vertical-align: top;
			position: absolute;
			top: 100px;
			right: 0;
		}
		
		.topPanel {
			width: 700px;
			height: 50px;
			display: inline-block;
			vertical-align: top;
			position: absolute;
			text-align: center;
    		top: 30px;
		}
		.titles {
			background: none repeat scroll 0 0 #CCCCCC;
		    font-size: 16px;
		    height: 40px;
		    line-height: 34px;
		    text-align: center;
		    width: 100%;
		}
		.titleTop {
		    font-size: 16px;
		    line-height: 34px;
		    text-align: center;
		    width: 100%;
		}
		
		.gridPanel {
			width: 330px;
			height: 390px;
		}
		.lstTables {
			text-align: center;
			font-size: 14px;
			min-width: 200px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.topPanel}">
			<g:Label text="{label.TablesAvailable}" addStyleNames="{style.titleTop}"></g:Label>
			<g:ListBox ui:field="lstTables" addStyleNames="{style.lstTables}"></g:ListBox>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.leftPanel}">
			<g:Label text="{label.AvailableColumns}" addStyleNames="{style.titles}"></g:Label>
			<g:SimplePanel ui:field="availableGridPanel" addStyleNames="{style.gridPanel}"></g:SimplePanel>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.buttonPanel}">
			<g:Image ui:field="addColumns" resource="{resources.add_24}" title="{label.Add}"></g:Image>
			<g:Image ui:field="removeColumns" resource="{resources.delete_24}" title="{label.RemoveField}"></g:Image>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.rightPanel}">
			<g:Label text="{label.SelectedColumns}" addStyleNames="{style.titles}"></g:Label>
			<g:SimplePanel ui:field="selectedGridPanel" addStyleNames="{style.gridPanel}"></g:SimplePanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 