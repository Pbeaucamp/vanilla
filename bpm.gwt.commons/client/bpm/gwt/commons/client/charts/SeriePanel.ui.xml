<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>
		.seriePanel {
			width: 95%;
			background-color: #ccc;
			margin: 5px;
		}
		
		.refColor {
			width: 3px;
			background-color: black;
		}
		
		.panelColor {
	    	margin-top: 4px;
		}
		
		.btnRemove {
			cursor: pointer;
			height: 16px !important;
			width: 16px !important;
			padding: 2px;
			background-position: center !important;
		    margin: 18px 2px;
		}
		
		.btn:HOVER {
			background-color: white !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.seriePanel}, flex">
		<g:SimplePanel ui:field="panelRefColor" addStyleNames="{style.refColor}"/>
		<c:ListBoxWithButton ui:field="lstColumns" addStyleNames="flexOne"/>
		<c:ListBoxWithButton ui:field="lstAgg" addStyleNames="flexOne"/>
		<c:ColorPanel ui:field="panelColor" addStyleNames="{style.panelColor}"/>
		<g:Image ui:field="btnRemove" title="{labels.DeleteTheSerie}" resource="{resources.delete_16}" addStyleNames="{style.btnRemove}"/>
	</g:HTMLPanel>
</ui:UiBinder> 