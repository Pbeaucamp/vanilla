<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='labels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.glassPanel {	
			background-color: #000;
			opacity: 0.3;
			filter: literal("alpha(opacity=30)");
			top: 0px;
			left: 0px;
			bottom: 0px;
			right: 0px;
			position: absolute;
		}
		
		.imgWait {
			left: 15px;
		    position: absolute;
		    top: 20px;
		}
		
		.lblWait {
			left: 60px;
			position: absolute;
		    top: 28px;
		    font-size: 15px;
			font-weight: bold;			
		}
		
		.contentPanel {
			width: 100%;
			height: 100%;
		}
		
		.loadingPart {
			background: white;
			width: 230px;
			height: 70px;
			position: absolute;
			border-radius: 5px;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			border: 1px solid gray;
			z-index: 1;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.glassPanel}" />
		<g:SimplePanel ui:field="panelLoading" addStyleNames="{style.loadingPart}">
			<g:AbsolutePanel addStyleNames="{style.contentPanel}">
				<g:Image resource="{resources.loadingBig}" addStyleNames="{style.imgWait}"/>
				<g:Label text="{labels.PleaseWait}" addStyleNames="{style.lblWait}"/>
			</g:AbsolutePanel>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 