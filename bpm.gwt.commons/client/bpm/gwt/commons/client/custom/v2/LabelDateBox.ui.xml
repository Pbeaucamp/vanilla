<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:db="urn:import:com.google.gwt.user.datepicker.client">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.custom.v2.LabelDateBox.MyStyle">
		.label {
	    	margin-top: 4px;
		}
		
		.panelText {
			margin-left: 10px;
		}
		
		.lstBox {
			margin-right: 5px;
		}
		
		.dateBox {
		    height: 15px;
		    margin-left: 5px;
		    min-width: 65px;
		    padding: 4px;
		}
		
		.half {
			width: 44%;
		}
		
		.full {
			width: 100%;
		}
		
		.required {
			color: red;
		}
		
		.help {
			margin-left: 10px;
		    margin-top: 1px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="txtClassicMargin">
		<g:HTMLPanel addStyleNames="flex">
			<g:HTMLPanel ui:field="panelLabel" addStyleNames="flex">
				<g:Label ui:field="label" addStyleNames="{style.label}"/>
				<g:Label ui:field="required" text="*" visible="false" addStyleNames="{style.required}"/>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="panelText" addStyleNames="{style.panelText}, flexOne">
				<div class="flex">
					<g:HTMLPanel ui:field="panelDates" addStyleNames="flexOne">
						<db:DateBox ui:field="firstDatebox" addStyleNames="{style.dateBox}, {style.full}, inline">
						</db:DateBox><db:DateBox ui:field="lastDatebox" visible="false" addStyleNames="{style.dateBox}, {style.half}, inline"/>
					</g:HTMLPanel>
				</div>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 