<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:style type="bpm.gwt.commons.client.custom.LabelRichTextArea.MyStyle">
		.label {
			color: #3B99CB;
		    margin-left: 18px;
	    	margin-top: 5px;
		}
		
		.text {
		    -moz-box-sizing: border-box;
		    background-color: #FFFFFF;
		    border: 1px solid rgba(0, 0, 0, 0.15);
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset;
		    color: rgba(0, 0, 0, 0.7);
		    font-size: 1em;
		    margin: 0;
		    outline: 0 none;
		    padding: 0.85em 1em;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s;
	        margin: 5px 1%;
            width: 98%;
            height: 250px;
		}

		.text:FOCUS {
		    border-bottom-left-radius: 0;
		    border-color: rgba(0, 0, 0, 0.2);
		    border-top-left-radius: 0;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset;
		    color: rgba(0, 0, 0, 0.85);
		}
		
		.resize {
		    resize: none;
		}
		
		.toolbar {
		    margin-left: 20px;
	    	padding: 3px;
	    	background: none;
	    	border: none;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label ui:field="label" addStyleNames="{style.label}"/>
		<g:SimplePanel ui:field="panelToolbar"/>
		<g:RichTextArea ui:field="textarea" addStyleNames="{style.text}"/>
	</g:HTMLPanel>
</ui:UiBinder> 