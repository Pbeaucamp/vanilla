<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.commons.client.custom.ImageButton.MyStyle">
		.button {
			cursor: pointer;
			height: 20px;
			padding: 10px;
			display: inline-block;
			vertical-align: top;
		}
	
		.button:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
			
		.image {
		    margin-left: 5px;
    		margin-top: 1px;
		}
		
		.label {
			float: left;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label ui:field="label" addStyleNames="{style.label}"/>
		<g:Image ui:field="image"/>
	</g:HTMLPanel>
</ui:UiBinder> 