<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='resources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.commons.client.custom.ListBox.MyStyle">
		.relative {
			position: relative;
		}
		
		.imgArrow {
		    position: absolute;
		    right: 6px;
		    top: 15px;
		}
		
		.panelDrop {
    	    background: none repeat scroll 0 0 #FFFFFF;
		    box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
		    max-height: 65vh;
		    overflow: auto;
		    padding-top: 0;
		    position: absolute;
		    right: 0;
		    top: 45px;
		    z-index: 1;
		}
		
		.item {
	    	color: #212121;
		    cursor: pointer;
		    padding: 13px 16px;
		    white-space: nowrap;
		    overflow: hidden;
		    text-overflow: ellipsis;
		}
		
		.item:HOVER {
	    	background: #eee;
		}
		
		.text {
		    border: 0 none;
		    height: 25px;
		    line-height: 25px;
		    overflow: hidden;
		    text-overflow: ellipsis;
		    white-space: nowrap;
		}
	</ui:style>
	<g:FocusPanel ui:field="input" addStyleNames="{style.relative}">
		<g:HTMLPanel>
			<g:Label ui:field="text" addStyleNames="{style.text}"/>
			<g:Image resource="{resources.arrow_down}" addStyleNames="{style.imgArrow}"/>
			<g:HTMLPanel ui:field="panelDrop" visible="false" addStyleNames="{style.panelDrop}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 