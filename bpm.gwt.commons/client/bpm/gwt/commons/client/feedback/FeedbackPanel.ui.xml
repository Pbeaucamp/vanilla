<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
		    bottom: 40px;
		    display: inline-block;
		    position: absolute;
		    right: -476px;
		    z-index: 3;
		    
			-webkit-transition: right 1.0s linear;
			-moz-transition: right 1.0s linear;
			transition: right 1.0s linear;
		}
	
		.lblMessage {
		    background-color: #4471C4;
		    border: medium none;
		    border-radius: 0.2857rem 0 0 0.2857rem;
		    box-shadow: 0 0 0 0 rgba(39, 41, 43, 0.15) inset;
		    color: #FFFFFF;
		    cursor: pointer;
		    display: inline-block;
		    font-size: 13px;
		    margin-top: 325px;
		    padding: 0.78571em;
		    text-align: center;
		    text-shadow: none;
		    vertical-align: top;
		    width: 85px;
		    margin-left : -110px;
		}
		
		.lblTitle {
		    background-color: #4471C4;
		    border: medium none;
		    color: #FFFFFF;
		    display: block;
		    font-style: normal;
		    font-weight: bold;
		    line-height: 1;
		    margin: 0 0.25em 5px 0;
		    min-height: 1em;
		    outline: medium none;
		    padding: 0.78571em;
		    text-align: center;
		    text-decoration: none;
		    vertical-align: baseline;
		}
	
		.panelMessage {
		    display: inline-block;
		    height: 350px;
		    width: 450px;
		    
	        background-color: #FFFFFF;
		    border: medium none;
		    border-radius: 0.2857rem 0.2857rem 0.2857rem 0.2857rem;
		    box-shadow: 0 0 0 1px rgba(39, 41, 43, 0.15), 0 1px 2px 0 rgba(0, 0, 0, 0.05);
		    padding: 1em;
		    position: relative;
		}
		
		.txtMail {
		    height: 20px;
		    margin-bottom: 5px;
		    padding: 2px;
		    width: 98%;
		}
		
		.txtArea {
    		height: 217px;
		    padding: 2px;
		    resize: none;
		    width: 98%;
		}
		
		.panelTxt {
			width: 100%;
			height: 275px;
		}
		
		.btn {
			background: none repeat scroll 0 0 #4471C4 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin-top: 5px;
			width: 150px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			float: right;
			margin-left: 5px;
			margin-right: 5px;
			display: inline-block;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		
		.chkSupport {
			
		}
		
		.chkSupport input{
			margin-left: 0px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
		<g:Label ui:field="lblMessage" text="{label.Message}" addStyleNames="{style.lblMessage}"/><g:HTMLPanel addStyleNames="{style.panelMessage}">
			<g:Label text="{label.Feedback}" addStyleNames="{style.lblTitle}"/>
			<g:HTMLPanel addStyleNames="{style.panelTxt}">
				<my:TextHolderBox ui:field="txtMail" placeHolder="{label.Mail}" addStyleNames="{style.txtMail}" />
				<my:TextAreaHolderBox ui:field="txtMessage" placeHolder="{label.Feedback}" addStyleNames="{style.txtArea}"/>
				<g:CheckBox ui:field="checkSupport" text="{label.SupportRequest}" addStyleNames="{style.chkSupport}"/>
			</g:HTMLPanel>
			<g:Button ui:field="btnCancel" text="{label.Cancel}" addStyleNames="{style.btn}"/>
			<g:Button ui:field="btnSubmit" text="{label.Submit}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 