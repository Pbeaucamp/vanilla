<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:style type="bpm.fwr.client.wizard.chart.ChartSelectionColumnPage.MyStyle">
		.lblSelectChartType {
		    background: #E6E6E6;
		    height: 35px;
		    margin-bottom: 5px;
		    padding-left: 10px;
		    padding-top: 10px;
		}
		
		.listBox {    
			margin-top: 5px;
    		width: 156px;
		}
		
		.btnDelSeries {
			margin-top: 3px;
    		width: 156px;
		}
		
		.lblSize {
		    float: left;
		    margin-left: 10px;
		    margin-top: 15px;
		    width: 100px;
		}
		
		.textSize {
			margin-left: 4px;
   		    margin-top: 13px;
    		width: 150px;
		}
		
		.panel {
			margin: 5px;
		}
		
		.panelDetail {    
			margin-left: 10px;
    		margin-top: 110px;
		}
		
		.panelGroup {
			margin-left: 220px;
		}
		
		.lblGroup {
			margin-top: 8px;
			margin-right: 10px;	
		}
		
		.panelDatasetTree {    
			height: 400px;
    		width: 275px;
		}
		
		.scrollDatasetTree {
			border: 1px solid gray;
    		background-color: #E8EEF7;
		}
		
		.previewPanel {    
			height: 300px;
    		width: 450px;
    		margin: 10px;
    		overflow: hidden;
		}
		
		.btnPreview {
		    margin-left: 10px;
		    margin-top: 15px;
		    width: 550px;
		}
		
		.frameChart {
			border: 0 none;
			width: 450px;
			height: 300px;
			overflow: hidden;
		}
		
		.panelOverflow {
			overflow: hidden;
		}
	</ui:style>
	<g:AbsolutePanel ui:field="rootPanel">
		<g:HTMLPanel>
			<g:Label ui:field="lblTitle" addStyleNames="{style.lblSelectChartType}"/>
			
			<g:HorizontalPanel>
				<g:TabLayoutPanel ui:field="tabPanel" barUnit="PX" barHeight="30" width="300px" height="460px">
					<g:tab>
						<g:header>
							Metadata
						</g:header>
						<g:ScrollPanel addStyleNames="{style.scrollDatasetTree}">
							<g:SimplePanel ui:field="datasetTreePanel" addStyleNames="{style.panelDatasetTree}"/>
						</g:ScrollPanel>
					</g:tab>
					<g:tab>
						<g:header>
							Dataset
						</g:header>
						<g:ScrollPanel addStyleNames="{style.scrollDatasetTree}">
							<g:SimplePanel ui:field="datasetPanel" addStyleNames="{style.panelDatasetTree}"/>
						</g:ScrollPanel>
					</g:tab>
				</g:TabLayoutPanel>	
	
				<g:HTMLPanel>
					<g:HorizontalPanel addStyleNames="{style.panelOverflow}">	
						<g:HTMLPanel addStyleNames="{style.panelDetail}">
							<g:Label ui:field="lblDetail"/>
							<g:ListBox ui:field="lstDetail" addStyleNames="{style.listBox}"/>
							<g:SimplePanel ui:field="panelDetail"/>
							<c:ListBoxWithButton ui:field="lstAgg" addStyleNames="{style.listBox}"/>
							<g:Button ui:field="btnDelSeries" addStyleNames="{style.btnDelSeries}"/>
						</g:HTMLPanel>
						<g:AbsolutePanel ui:field="previewPanel" addStyleNames="{style.previewPanel}">
							<g:Image ui:field="imgChart"/>
						</g:AbsolutePanel>
					</g:HorizontalPanel>
					
					<g:HTMLPanel>
						<g:HorizontalPanel addStyleNames="{style.panelGroup}">
							<g:Label ui:field="lblGroup" addStyleNames="{style.lblGroup}"/>
							<g:SimplePanel ui:field="panelGroup"/>
						</g:HorizontalPanel>
					</g:HTMLPanel>
					
					<g:HTMLPanel addStyleNames="{style.panel}">
						<g:HTMLPanel>
							<g:Label ui:field="lblHeight" addStyleNames="{style.lblSize}"/>
							<g:TextBox ui:field="txtHeight" addStyleNames="{style.textSize}"/>
						</g:HTMLPanel>
						
						<g:HTMLPanel>
							<g:Label ui:field="lblWidth" addStyleNames="{style.lblSize}"/>
							<g:TextBox ui:field="txtWidth" addStyleNames="{style.textSize}"/>
						</g:HTMLPanel>
						
						<g:Button ui:field="btnPreview" addStyleNames="{style.btnPreview}"/>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:HorizontalPanel>
		</g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 