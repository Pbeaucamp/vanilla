<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.fwr.client.wizard.map.VanillaMapsGeneralPage.MyStyle">
		.mainPanel {
		    height: 485px;
    		width: 865px;
		}
	
		.panelMap {
		    height: 250px;
		    margin: auto;
		    width: 450px;
		}
		
		.panelMapDef {
		   margin: 30px 20px;
		}
		
		.left {
			float: left;
			width: 150px;
		    margin-left: 15px;
		}
		
		.marginTopLabel {
			margin-top: 8px;
		}
		
		.lstMaps {
			width: 282px;
		}
		
		.btnTest {
			margin-top: 10px;
			margin-bottom: 15px;
			width: 100%;
		}
		
		.panelDatasetTree {    
			height: 400px;
    		width: 275px;
		}
		
		.scrollDatasetTree {
			border: 1px solid gray;
    		background-color: #E8EEF7;
		}
		
		.lblSize {
			margin-top: 10px;
			margin-left: 5px;
			width: 70px;
		}
		
		.textSize {
			margin-top: 3px;
    		width: 40px;
		}
		
		.panelSize {
			margin-top: 85px;
		}
		
		.txtColumn {
			margin-top: 5px;
			width: 277px;
		}
		
		.frameMap {
			overflow: hidden;
			border: 0 none;
			height: 250px;
			width: 450px;	
		}
	</ui:style>
	<g:AbsolutePanel ui:field="rootPanel" addStyleNames="{style.mainPanel}">
		<g:HorizontalPanel>
			<g:TabLayoutPanel ui:field="tabPanel" barUnit="PX" barHeight="30" width="300px" height="460px">
				<g:tab>
					<g:header>
						Metadata
					</g:header>
					<g:ScrollPanel addStyleNames="{style.scrollDatasetTree}">
						<g:SimplePanel ui:field="datasetTreePanel" addStyleNames="{style.panelDatasetTree}"/>
					</g:ScrollPanel>
				</g:tab>
				<g:tab>
					<g:header>
						Dataset
					</g:header>
					<g:ScrollPanel addStyleNames="{style.scrollDatasetTree}">
						<g:SimplePanel ui:field="datasetPanel" addStyleNames="{style.panelDatasetTree}"/>
					</g:ScrollPanel>
				</g:tab>
			</g:TabLayoutPanel>
			
			<g:HTMLPanel addStyleNames="{style.panelMapDef}">
				<g:AbsolutePanel ui:field="previewPanel" addStyleNames="{style.panelMap}"/>
				<g:HTMLPanel>
					<g:Label ui:field="lblMaps" addStyleNames="{style.left},{style.marginTopLabel}"/>
					<g:ListBox ui:field="lstMaps" addStyleNames="{style.marginTopLabel},{style.lstMaps}"/>
				</g:HTMLPanel>
				<g:HTMLPanel>
					<g:Label ui:field="lblColumnID" addStyleNames="{style.left},{style.marginTopLabel}"/>
					<g:SimplePanel ui:field="panelColumnID"/>
				</g:HTMLPanel>
				<g:HTMLPanel>
					<g:Label ui:field="lblColumnValues" addStyleNames="{style.left},{style.marginTopLabel}"/>
					<g:SimplePanel ui:field="panelColumnValues"/>
				</g:HTMLPanel>
				<g:HTMLPanel>
					<g:Label ui:field="lblUnit" addStyleNames="{style.left},{style.marginTopLabel}"/>
					<g:TextBox ui:field="txtUnit" addStyleNames="{style.txtColumn}"/>
				</g:HTMLPanel>
				<g:Button ui:field="btnTestMap" addStyleNames="{style.btnTest}"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames="{style.panelSize}">
				<g:Label ui:field="lblHeight" addStyleNames="{style.lblSize}"/>
				<g:TextBox ui:field="txtHeight" addStyleNames="{style.textSize}"/>
				
				<g:Label ui:field="lblWidth" addStyleNames="{style.lblSize}"/>
				<g:TextBox ui:field="txtWidth" addStyleNames="{style.textSize}"/>
			</g:HTMLPanel>
		</g:HorizontalPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 