<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='labels' type='bpm.fwr.client.I18N.WysiwygLabelConstants' />
	
	<ui:style>
		.contentPanel {
		    height: 100%;
		    overflow: auto;
		    width: 100%;
		}
		
		.txtWidth {
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<c:LabelTextBox ui:field="txtName" placeHolder="{labels.Name}" addStyleNames="{style.txtWidth}"/>
		<c:LabelTextArea ui:field="txtDescription" placeHolder="{labels.Description}" addStyleNames="{style.txtWidth}"/>
	</g:HTMLPanel>
</ui:UiBinder> 