<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.fwr.client.widgets">
	
	<ui:style>
		.mainPanel {
	 		width: 100%;
	 		height: 100%;
			min-width: 1200px;
		}
	
	 	.dockPanel {
	 		width: 100%;
	 		height: 100%;
	 	}
	 	
		.top {
			border: 1px solid black;
		}
		
		.main-content {
		    height: 100%;
			background-color: #C0C0C0;
		}
		
		.content {
			width: 100%;
		}
	
		.bottom {
			width: 100%;
			text-align: center;
			font-size: 8pt;
			line-height: 10pt;
			color: #FFFFFF;
			background-color: red;
			
		}
	 
	 	.csshide {
	 		display: none;
	 	}
		
		.tabPal {
			margin: 10px;
		}
		
		.tabReport {
			height: 95%;
		}
		
		.imgUndo {
			margin-left: 50px;	
		}
		
		.panelToolbar {
			border-top: 1px solid lightgrey;
			border-bottom: 1px solid lightgrey;
			background: white;
		}
	</ui:style>
 	
 	<g:AbsolutePanel ui:field="absolutePanelRoot" addStyleNames="{style.mainPanel}">
		<g:DockLayoutPanel ui:field="dockPanel" unit='PX' addStyleNames="{style.dockPanel}"> 
		    <g:north size='70'>
				<g:SimplePanel ui:field="panelToolbar"/>
		  	</g:north>
			<g:west size='400'>
				<g:SimplePanel ui:field="leftPanel"/>
			</g:west>
			<g:center>
				<g:SimplePanel ui:field="reportContentPanel"/>
			</g:center>
		</g:DockLayoutPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 