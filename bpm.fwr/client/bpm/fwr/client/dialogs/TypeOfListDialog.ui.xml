<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='labels' type='bpm.fwr.client.I18N.WysiwygLabelConstants' />
	<ui:with field='images' type='bpm.fwr.client.images.WysiwygImage' />
	
	<ui:style>
		.mainPanel {
			width: 265px;
		}
		
		.btn {
			width: 110px;
			height: 120px;
			margin: 10px;
			display: inline-block;
			position: relative;
			cursor: pointer;
		}
		
		.btn:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnContent {
			position: absolute;
			top: 50%; left: 50%;
			transform: translate(-50%,-50%);
		}
		
		.img {
		}
		
		.lbl {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<g:FocusPanel ui:field="btnClassic" title="{labels.Automatic}" addStyleNames="{style.btn}">
			<g:HTMLPanel addStyleNames="{style.btnContent}">
				<g:Label text="{labels.Classic}" addStyleNames="{style.lbl}"/>
				<g:Image resource="{images.Automatic_List}" addStyleNames="{style.img}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
		<g:FocusPanel ui:field="btnAuto" title="{labels.Automatic}" addStyleNames="{style.btn}">
			<g:HTMLPanel addStyleNames="{style.btnContent}">
				<g:Label text="{labels.Automatic}" addStyleNames="{style.lbl}"/>
				<g:Image resource="{images.Normal_List}" addStyleNames="{style.img}"/>
			</g:HTMLPanel>
		</g:FocusPanel>
	</g:HTMLPanel>
</ui:UiBinder> 