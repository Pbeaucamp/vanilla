<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.fwr.client.dialogs.ConfirmDialog.MyStyle">
		.mainPanel {
	    	width: 330px;
		}
	
		.img {
			margin-top: 25px;
			margin-left: 125px;
		}
		
		.lbl {
			margin: 10px;
		}
	</ui:style>

	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgResult"/>
		<g:Label ui:field="lblMessage" addStyleNames="{style.lbl}"/>
	</g:HTMLPanel>
</ui:UiBinder> 