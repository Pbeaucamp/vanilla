<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fwr.client.I18N.WysiwygLabelConstants' />
	
	<ui:style>
		.lblName {
			margin: 10px;
			float: left;
			width: 100px;
		}
		
		.txtName {
			width: 208px;
			margin-top: 10px;
		}
		
		.lst {
			margin-top: 8px;
			width: 215px;
		}
		
		.marginTop {
			margin-top: 10px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel">
		<g:HTMLPanel ui:field="panelName">
			<g:Label text="{label.Name}" addStyleNames="{style.lblName}" />
			<g:TextBox ui:field="txtName" addStyleNames="{style.txtName}" />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelOperator" addStyleNames="{style.marginTop}">
			<g:Label text="{label.Operator}" addStyleNames="{style.lblName}" />
			<g:ListBox ui:field="lstOperator" addStyleNames="{style.lst}" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.marginTop}">
			<g:Label text="{label.PromptType}" addStyleNames="{style.lblName}" />
			<g:ListBox ui:field="lstType" addStyleNames="{style.lst}" />
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 