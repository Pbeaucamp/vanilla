<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.fwr.client.draggable.widgets">
	
	<ui:with field='resources' type='bpm.fwr.client.images.WysiwygImage' />
	<ui:with field='label' type='bpm.fwr.client.I18N.WysiwygLabelConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='commonresources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style>

		.navigationPanel {
			width: 395px;
			top: 0px;
			bottom: 10px;
			position: absolute;
			-moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.toolbarParent {
			width: 100px;
			position: absolute;
			top: 40px;
			left: 0px;
			bottom: 0px;
			overflow: auto;
		}
		
		.btnAccueil {
			margin-top: 100px;
			margin-bottom: 10px;
			margin-left: 10px;
		}
		
		.borderTop {
			margin-top: 2px;
			margin-bottom: 10px;
			margin-left: 10px;
		}
		
		.draggableItem {
			width: 80px !important;
			height: 80px !important;
			background-position: center !important;
			cursor: move;
			margin: auto;
		}
		
		.draggableItem:HOVER {
			background-color: white !important;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.contentPanel {
			position: absolute;
			top: 40px;
			left: 100px;
			right: 0px;
			bottom: 0px;
		    border-left: 2px solid #D3D3D3;
		    overflow: auto;
		}
		
		.toolbar {
			height: 40px;
		}
		
		.lblPaletteTitle {
		    display: inline-block;
		    font-size: 20px;
		    font-weight: bold;
		    height: 35px;
		    margin-left: 15px;
		    margin-top: 10px;
		    vertical-align: top;
		}
		
		.imgChangeView {
			height: 24px !important;
			width: 24px !important;
			padding: 8px;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgExpand {
			height: 20px !important;
			width: 20px !important;
			padding: 5px;
			background-position: center !important;
			cursor: pointer;
		}
		
		.imgExpand:HOVER, .imgChangeView:HOVER {
			background-color: white !important;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.alignRight {
			float: right;
		}
		
		.alignLeft {
			float: left;
		}
		
		.panelColumn {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.panelTree {
			position: absolute;
			right: 0px;
			left: 0px;
			top: 25px;
			overflow: auto;
		}
		
		.panelDescription {
			position: absolute;
			right: 0px;
			left: 0px;
			bottom: 2px;
		    border-right: 1px solid #D3D3D3;
		}
		
		.searchPanel {
			display: inline-block;
			margin: 2px;
		}
		
		.txtSearch {
			width: 235px;
			display: inline-block;
			vertical-align: top;
			margin-left: 5px;
		}
		
		.btnSearch {
			display: inline-block;
			cursor: pointer;
			vertical-align: top;
			margin-left: 5px;
		}
		
	</ui:style>
	<g:HTMLPanel ui:field="navigationPanel" addStyleNames="{style.navigationPanel}">
		<g:Image ui:field="imgExpand" title="{label.Expend}" resource="{commons.ic_btn_sidebar_right_collapse}" addStyleNames="{style.imgExpand},{style.alignLeft}"/>
		<g:HTMLPanel ui:field="toolbarNavigation" addStyleNames="{style.toolbar}">
			<g:Image ui:field="imgRefresh" title="{label.Refresh}" resource="{commons.refresh_24}" addStyleNames="{style.imgChangeView}"/>
			<g:Label ui:field="lblTitle" text="Palette" addStyleNames="{style.lblPaletteTitle}"/>
			<g:Image ui:field="imgCollapse" title="{label.Collapse}" resource="{commons.ic_btn_sidebar_right_expand}" addStyleNames="{style.imgChangeView},{style.alignRight}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="rightToolbarPanel" addStyleNames="{style.toolbarParent}">
			<my:DraggablePaletteItem ui:field="itemTable" title="{label.Table}" resource="{resources.FWR_Grid}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemChart" resource="{resources.FWR_Chart}" title="{label.Chart}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemList" resource="{resources.FWR_Table}" title="{label.List}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemCrosstab" resource="{resources.FWR_Crosstab}" title="{label.CrossTab}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemImage" resource="{resources.FWR_Image}" title="{label.ImageComponent}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemLabel" resource="{resources.FWR_Label}" title="{label.Label}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemMap" resource="{resources.FWR_VanillaMap}" title="{label.VanillaMap}" addStyleNames="{style.draggableItem}"/>
			<my:DraggablePaletteItem ui:field="itemHyperlink" resource="{resources.FWR_Hyperlink}" title="{label.Hyperlink}" addStyleNames="{style.draggableItem}"/>
		</g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.contentPanel}">
			<g:HTMLPanel addStyleNames="{style.panelColumn}">
				<g:HTMLPanel addStyleNames="{style.searchPanel}" >
					<g:TextBox ui:field="txtSearch" addStyleNames="{style.txtSearch}"/>
					<g:Image ui:field="btnSearch" resource="{commonresources.tab_new}" addStyleNames="{style.btnSearch}"></g:Image>
				</g:HTMLPanel>
				<g:SimplePanel ui:field="panelTree" addStyleNames="{style.panelTree}"/>
				<g:SimplePanel ui:field="panelDescription" addStyleNames="{style.panelDescription}"/>
			</g:HTMLPanel>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 