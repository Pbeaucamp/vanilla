<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fwr.client.I18N.WysiwygLabelConstants' />
	
	<ui:style>
		.main {
			width: 100%;
			height: 100%;
			background-color: #C0C0C0;
		}
		
		.scrollPanel {
			background-color: #C0C0C0;
			height: 100%;
			padding-bottom: 5px;
		}
		
		.filterPrompt {
			background-color: white;
			margin: 0 auto;
			border-radius: 0px 0px 10px 10px;
			-webkit-border-radius: 0px px 10px 10px;
			-moz-border-radius: 0px px 10px 10px;
			border-bottom: 1px solid gray;
			border-right: 1px solid gray;
			border-left: 1px solid gray;
		}
		
		.img {
			position: fixed;
		}
		
		.panelClickFilter {
			margin: 0 auto;
			width: 220px;
			height: 20px;
			background: white;
			border-radius: 0px 0px 5px 5px;
			-webkit-border-radius: 0px px 5px 5px;
			-moz-border-radius: 0px px 5px 5px;
			border-bottom: 1px solid gray;
			border-left: 1px solid gray;
			border-right: 1px solid gray;
		}
		
		.lblFilterPrompt {
			float: left;
			margin-left: 13px;
			margin-top: 2px;
		}
		
		.listBoxComp{
			margin-top: 2px;
			margin-left: 20px;
			width: 225px;
		}
		
		.dropPanel {
			cursor: pointer;
			background-color: #E6E6E6;
			height: 35px;
			border-radius: 10px;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			border: 1px solid black;
			margin-top: 4px;
			margin-left: 15px;
			margin-bottom: 2px;
		}
		
		.panelHeight {
		    display: inline-block;
		    position: absolute;
		    right: 5px;
		    top: 160px;
		}
		
		.lblHeight {
	    	display: inline-block;
		}
		
		.txtHeight {
			width: 35px;
		}
		
		.btnHeight {	
		    display: inline-block;
		    background: none repeat scroll 0 0 #FFFFFF;
			border: 1px solid #555555;
			color: black;
			cursor: pointer;
		    height: 25px;
		    width: 80px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
		}
		
		.btnHeight:HOVER {
			background: none repeat scroll 0 0 #EAEAEA;
			color: #000000;
		}
	</ui:style>
	<g:HTMLPanel ui:field="rootPanel" styleName="{style.main}">
		<g:ScrollPanel styleName="{style.scrollPanel}">
			<g:HTMLPanel>
				<g:HTMLPanel ui:field="filterPromptPanel" styleName="{style.filterPrompt}">
					<g:ListBox ui:field="listComponents" styleName="{style.listBoxComp}"/>
					<g:AbsolutePanel ui:field="filterDropPanel" addStyleNames="{style.dropPanel}"/>
					<g:AbsolutePanel ui:field="promptDropPanel" addStyleNames="{style.dropPanel}"/>
					<g:AbsolutePanel ui:field="relationDropPanel" addStyleNames="{style.dropPanel}"/>
				</g:HTMLPanel>
				<g:FocusPanel ui:field="panelClickPromptFilter" styleName="{style.panelClickFilter}">
					<g:HTMLPanel>
						<g:Image ui:field="imgPromptFilter"/>
						<g:Label ui:field="lblPromptFilter" addStyleNames="{style.lblFilterPrompt}"/>
					</g:HTMLPanel>
				</g:FocusPanel>
				<g:SimplePanel ui:field="reportSheetPanel"/>
				<g:HTMLPanel addStyleNames="{style.panelHeight}">
					<g:Label text="{label.WorkspaceHeight}"  addStyleNames="{style.lblHeight}"/>
					<g:TextBox ui:field="txtWidth" addStyleNames="{style.txtHeight}"/>
					<g:TextBox ui:field="txtHeight" addStyleNames="{style.txtHeight}"/>
					<g:Button ui:field="btnApplySize" text="{label.Apply}" addStyleNames="{style.btnHeight}"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder> 