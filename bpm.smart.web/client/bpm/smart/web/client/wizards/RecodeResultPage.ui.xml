<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:style type="bpm.smart.web.client.wizards.RecodeResultPage.MyStyle">
		.lbl {
			color: #3B99CB;
		    margin-left: 18px;
		    margin-top: 5px;
		    font-size: 18px;
		}
	
		.contentPanel {
			width: 640px;
			height: 350px;
		}
		
		.lst {
			width: 95%;
		}
		
		.txt input{
			width: 95%;
		}
		
		.txtmin input{
			width: 85%;
			display: inline-block;
		}

		.txtWidth {
			width: 98%;
		}
		
		.panelTextArea{
		    bottom: 70px;
		    left: 20px;
		    position: absolute;
		    right: 20px;
		    top: 70px;
		}
		
		.txtArea {
		    height: 97%;
		    position: relative;
		    resize: none;
		    width: 99%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<g:Label addStyleNames="{style.lbl}" text="{label.GeneratedCode}"/>
			<g:HTMLPanel addStyleNames="{style.panelTextArea}">
				<g:TextArea ui:field="txtCode" addStyleNames="{style.txtArea}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 