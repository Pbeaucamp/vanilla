<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.commons.client.custom">
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:style type="bpm.smart.web.client.wizards.RecodeDatasetPage.MyStyle">
		.lbl {
			color: #3B99CB;
		    margin-left: 18px;
		    margin-top: 5px;
		}
	
	
		.contentPanel {
			width: 640px;
			height: 300px;
		}
		
		.lst {
			width: 98%;
		}
		
		.txt input{
			width: 95%;
		}
		
		.txtmin input{
			width: 85%;
			display: inline-block;
		}
		
		.customPanel {
			position: relative;
			
		}
		
		.inline{
			vertical-align: middle;
			display: inline-block;
		}
		
		.icCalendar{
			cursor: pointer;
		    float: right;
		    height: 30px;
		    margin: -50px 5px 5px;
		    padding: 10px;
		    transition: all 1s ease 0s;
		    width: 30px;
		}
		
		.icCalendar:hover{
			opacity: 0.5;
		}

		.txtWidth {
			width: 98%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<g:Label ui:field="lblDatasets" addStyleNames="{style.lbl}" text="{label.ChooseDatasetToRecode}"/>
			<g:ListBox ui:field="lstDatasets" addStyleNames="{style.lst}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblColumns" addStyleNames="{style.lbl}" text="{label.ChooseColumn}"/>
			<g:ListBox ui:field="lstColumns" addStyleNames="{style.lst}"/>
			<c:TextHolderBox ui:field="txtNewColumn" placeHolder="{label.NewColumn}" addStyleNames="{style.txtWidth}"/>
			<!-- <c:TextHolderBox ui:field="txtNewDataset" placeHolder="{label.NewDataset}" addStyleNames="{style.txtWidth}"/> -->
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 