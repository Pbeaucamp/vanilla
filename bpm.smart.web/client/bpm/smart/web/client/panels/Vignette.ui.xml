<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='labelCommon' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='cmnresources' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.smart.web.client.panels.Vignette.MyStyle">
		.vignette {
		    display: block;
		    position: relative;
		    width: 90px;
		    padding: 1px 0;
		}
		
		.content {
		    box-shadow: 0 0 6px 0 #444;
		    display: block;
		    height: 120px;
		    left: 5px;
		    margin: 4px 0;
		    position: relative;
		    width: 90px;
		}
		.content:HOVER {
		   	border: 4px solid #FF9A00;
		    left: 1px;
		    margin: 0;
		}
		
		.imgType {
		    position: absolute;
		    left:0;
		    top: 0;
		    width: 30px;
		    height: 30px;
		     z-index: 1;
		}
		
		.btnClose {
		    position: absolute;
		    right:0;
		    top: 0;
		    width: 20px;
		    height: 20px;
		    z-index: 1;
		}
		
		.thumb {
		    width: 100%;
		    height: 100%;
		    position: absolute;
		    background-color: #FFFFFF;
		}
		
		.lblTitle {
		    bottom: 0;
		    color: #FFFFFF;
		    font-family: Verdana;
		    font-size: 12px;
		    overflow: -moz-hidden-unscrollable;
		    padding: 0 4px;
		    position: absolute;
		    text-align: center;
		    text-overflow: ellipsis;
		    width: 82px;
		}
		
		.clrR {
			background-color: #565656;
		}
		.clrMarkdown {
			background-color: #000;
		}
		.clrLog {
			background-color: #fff;
			color: black;
		}
		.clrHTML {
			background-color: #00890D;//#31b41d;
		}
		.clrPDF {
			background-color: #EA4C3A;
		}
		.clrWord {
			background-color: #2372BA;
		}
		.clrGenCode {
			background-color: #AAAAAA;
		}
		
		.selected {
			border: 4px solid #69CAE8;
		    left: 1px;
		    margin: 0;
		}
		.ball {
		  	width: 10px;
		  	height: 10px;
		  	margin: 10px auto;
		  	border-radius: 50px;
		  	position: absolute;
		  	left: 5px;
		  	bottom: 10px;
		  	z-index: 1;
		  	
		  	background: #ff005d;
			-webkit-animation: scale 2s infinite ease-in-out;
			-moz-animation: scale 2s infinite ease-in-out;
			animation: scale 2s infinite ease-in-out;   
	 	} 	
	 	
	 	@-webkit-keyframes scale {
		  0%   { -webkit-transform: scale(1,1);   }
		  50%  { -webkit-transform: scale(0.8,0.8);    }
		  100% { -webkit-transform: scale(1,1);   }
		}
		
		@-moz-keyframes scale {
		  0%   { -moz-transform: scale(1,1);   }
		  50%  { -moz-transform: scale(0.8,0.8);    }
		  100% { -moz-transform: scale(1,1);   }
		}
		@keyframes scale {
		  0%   { -moz-transform: scale(1,1);   }
		  50%  { -moz-transform: scale(0.8,0.8);    }
		  100% { -moz-transform: scale(1,1);   }
		}
		
		.contentFix {
		    height: 90px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.vignette}">
		<g:HTMLPanel ui:field="vignette" addStyleNames="{style.content}">
			<g:Image ui:field="imgType" addStyleNames="{style.imgType}"/>
			<g:Image ui:field="btnClose" title="{labelCommon.Close}" resource="{cmnresources.close_tab}" addStyleNames="{style.btnClose}"/>
			<g:Image ui:field="thumb" addStyleNames="{style.thumb}"/>
			<g:SimplePanel ui:field="gomete" addStyleNames="{style.ball}"/>
			<g:Label ui:field="lblTitle" addStyleNames="{style.lblTitle}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 