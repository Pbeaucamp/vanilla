<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='labelCommon' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.smart.web.client.panels.ConsolePanel.MyStyle">
		.console {
		    padding: 10px;
		    font-family: monospace;
		    overflow: auto;
		    position: absolute;
		    top : 0;
		    bottom: 40px;
		    left:0;
		    right:0;
		}
		.console-inside{
			background: none repeat scroll 0 0 #FCF4E9;
		}
		
		.btnConsoleToolbar {
		    height: 24px;
		    width: 24px;
		    padding: 8px;
		    cursor: pointer;
		    float:right;
		}
		
		.btnConsoleToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.consoleToolbar {
			background-color: #69CAE8;
			height: 40px;
		  	position: absolute;
		  	bottom: 0;
		  	width: 100%;
		}
		
		.txtConsolePanel {
		  	bottom: 0;
		    display: inline-block;
		    left: 15px;
		    position: relative;
		    top: 5px;
		    width: 50%;
		}
		
		.txtConsole {
			height: 24px;
		  	width: 100%;
		}
		.helpConsolePanel{
			display: inline;
		    left: 100px;
		    position: relative;
		    top: 5px;
		}
		
		
		.txtHelp{
			height: 24px;
    		width: 120px;
		}
		
		.btnHelp{
			height: 24px;
   			width: 80px;
   			padding: 4px!important;
		}
		
		.button{
			background: none repeat scroll 0 0 #4471C4;
		    border-radius: 4px 4px 4px 4px;
		    color: #FFFFFF;
		    font-weight: 400;
		    border: medium none;
		}
		
		.frame{
			width: 100%;
			height: 100%;
			border: none;
		}
	</ui:style>
	<g:HTMLPanel >
		<g:HTMLPanel ui:field="console" addStyleNames="{style.console}"/>
		<g:HTMLPanel ui:field="consoleToolbar" addStyleNames="{style.consoleToolbar}">
			<g:SimplePanel addStyleNames="{style.txtConsolePanel}">
				<g:TextBox ui:field="txtConsole" addStyleNames="{style.txtConsole}"/>
			</g:SimplePanel>
			<g:HTMLPanel addStyleNames="{style.helpConsolePanel}">
				<g:TextBox ui:field="txtHelp" addStyleNames="{style.txtHelp}"/>
				<g:Button ui:field="btnHelp" text="{label.Help}" addStyleNames="{style.btnHelp}, {style.button}"></g:Button>
			</g:HTMLPanel>
			<g:Image ui:field="btnCopyConsole" resource="{resources.ic_content_copy_black_24dp}" title="{label.Copy}" addStyleNames="{style.btnConsoleToolbar}"/>
			<g:Image ui:field="btnClear" resource="{resources.ic_delete_black_18dp}" title="{label.Clear}" addStyleNames="{style.btnConsoleToolbar}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 