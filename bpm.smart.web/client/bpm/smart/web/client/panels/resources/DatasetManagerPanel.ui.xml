<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.smart.web.client.panels.resources.DatasetManagerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.datasetsPanel {
		   width: 40%;
		   height: 100%;
		   position: absolute;
		   left: 0;
 		}
		  
		.statsPanel {
		   width: 60%;
		   height: 100%;
		   position: absolute;
		   right: 0;
	 	}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
			background-color: #69CAE8;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
			
			text-align: center;
			text-align: -moz-center;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}

		.panelContent {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 30px;
		}
		
		.childCell {
		  padding-left: 30px !important;
		  border: 2px solid #EEEEEE !important;
		  background: #EEEEEE !important;
		}
		.littlechildCell {
		  padding-left: 60px !important;
		  border: 2px solid #E0E0E0 !important;
		  background: #E0E0E0 !important;
		}
		
		.groupHeaderCell {
		  padding: 1px 15px;
		  color: #4b4a4a;
		  text-shadow: #ddf 1px 1px 0;
		  font-size: 130%;
		  background: #eee;
		}
		
		.btnGrid {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		    background-color: #69CAE8;
		    border-radius: 5px;
		}
		
		.btnGrid:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		
		.mainPanel {
	    	height: 100%;
    		width: 100%;
		}
		
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		border: 1px solid #DDDDDD;
    		position: relative;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel},{style.contentPanel}">
		<g:HTMLPanel addStyleNames="{style.datasetsPanel}">
			<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
				<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnAddDataset" resource="{commons.add_24}" title="{label.AddDataSet}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnEditDataset" resource="{commons.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
				<!-- <g:Image ui:field="btnPreviewMap" resource="{commons.filtre_24}" title="{label.Preview}" addStyleNames="{style.btnToolbar}"/> -->
				<g:Image ui:field="btnDeleteDataset" resource="{commons.delete_24}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>	
				<g:Button ui:field="btnTest" text="Test"/>
			</g:HTMLPanel>
			<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.panelContent}"/>
			<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelStats" addStyleNames="{style.statsPanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 