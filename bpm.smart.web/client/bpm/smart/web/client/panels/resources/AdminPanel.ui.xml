<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.smart.web.client.panels.resources.AdminPanel.MyStyle">
		.labels {
		    line-height: 30px;
		    padding: 10px;
		    display: inline-block;
		}
	
		.centerPanel {
		    height: 100%;
		    overflow: auto;
		    width: 100%;
		}
		
		.contentPanel {
		    background: none repeat scroll 0 0 #FAFAFA;
    		border: 1px solid #DDDDDD;
    		position: relative;
		}
		
		.lstMirrors {
			width: 150px;
			height:30px;
			margin: 10px;
			padding: 5px;
		}
		
		.txtPackages {
			margin: 10px;
			display: inline-block;
		}
		
		.btnInstall {
			width: 120px;
			height:30px;
			margin: 10px;
			display: inline-block;
		}
		
		.btnSave {
			position: absolute;
			top: 0;
			right: 0;
			height:30px;
			margin: 10px;
			float:right;
		}
		
		.labelError {
			color: red;
			display: inline-block;
			line-height: 30px;
		    padding: 10px;
		}
		
		.mapPanel{
			height: 400px;
			width: 100%;
			position : relative;
			z-index: 0;
			margin : auto;
			text-align: center;
		}
		
		.panelPager {
			position: relative;
			height: 30px;
			width: 100%;
			bottom: 0px;
			text-align: center;
			text-align: -moz-center;
		}
		
		.leftPanel {
			width: 48%;	
			position: relative;
			top : 0;
			left: 5px;
			bottom: 0;
		}
		
		.rightPanel {
			width: 48%;	
			position: absolute;
			top : 0;
			right: 5px;
			bottom: 0;
		}
		
		.filterPanel {
			background-color: #69CAE8;
			width: 100%;	
			padding: 5px 0;
		}
		
		.button{
			background: none repeat scroll 0 0 #4471C4;
		    border-radius: 4px 4px 4px 4px;
		    color: #FFFFFF;
		    font-weight: 400;
		    border: medium none;
		}
		
		.txtFilter {
			display: inline;
    		height: 22px;
    		margin: 0 8px;
    		vertical-align: top;
		}
		
		.btnGrid {
		    border-radius: 3px 3px 3px 3px;
		    cursor: pointer;
		    height: 20px !important;
		    padding: 2px;
		    vertical-align: middle;
		    width: 20px !important;
		    background-position: center !important;
		    background-color: #69CAE8;
		}
		
		.btnGrid:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnHelp {
			width: 250px;
			height:21px;
			margin-left: 20px;
			display: inline;
		}
		
		.frameMarkdown{
			width: 100%;
			height: 100%;
			border: none;
		}
		
		.gridPanel{
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.btnLoadMaps {
		    height: 50px;
		    margin-top: 20px;
		    width: 250px;
		}
		
		.hyperlinkPackage{
		    color: #000000;
		    cursor: help;
		    text-decoration: none;
		}
		
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 2px;
		    cursor: pointer;
		    vertical-align: top;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.updatablePackage{
			color : green;
		}
		
		.map{
			height: 100%;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<g:Button  ui:field="btnSave" text="{label.SaveConfiguration}" addStyleNames="{style.btnSave},{style.button}"/>
			<g:Label ui:field="lblMirrors" addStyleNames="{style.labels}" text="{label.ChooseDefaultCranMirror}"/>
			<g:ListBox ui:field="lstMirrors" addStyleNames="{style.lstMirrors}"/>
			<g:HTMLPanel ui:field="mapMirrors" addStyleNames="{style.mapPanel}">
				<g:Button ui:field="btnLoadMaps" text="Load Maps" addStyleNames="{style.btnLoadMaps},{style.button}"/>
				<g:HTMLPanel ui:field="mapContainer"  addStyleNames="{style.map}"></g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblPackages" addStyleNames="{style.labels}" text="{label.EnterNewPackage}"/>
			<!-- <g:TextBox ui:field="txtNewPackage" addStyleNames="{style.txtPackages}"/> -->
			<g:SimplePanel ui:field="suggestPanel" addStyleNames="{style.txtPackages}"/>
			<g:Button  ui:field="btnInstall" text="{label.Install}" addStyleNames="{style.btnInstall},{style.button}"/>
			<g:Label ui:field="errorMirror" addStyleNames="{style.labelError}" text="{label.NoMirrorSelected}"/>
			<g:Label ui:field="resultInstall" addStyleNames="{style.labelError}" />
			<g:HTMLPanel addStyleNames="{style.filterPanel}">
				<g:TextBox ui:field="gridFilter" title="{label.Filter}" addStyleNames="{style.txtFilter}"></g:TextBox>
				<g:Image ui:field="btnReload" resource="{commons.refresh_24}" title="{label.Reload}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnUpdate" resource="{resources.ic_cloud_download_black_24dp}" title="{label.UpdatePackage}" addStyleNames="{style.btnToolbar}"/>
				<g:Image ui:field="btnDelete" resource="{resources.ic_cloud_off_black_24dp}" title="{label.DeletePackage}" addStyleNames="{style.btnToolbar}"/>
				<!-- <g:Button ui:field="gridBtnHelp" title="{label.Help}" text="{label.HelpOnSelectedPackage}" addStyleNames="{style.btnHelp},{style.button}"></g:Button> -->
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.gridPanel}">
				<g:SimplePanel ui:field="installedPackages" addStyleNames="{style.leftPanel}"/>
				<g:SimplePanel ui:field="helpPanel" addStyleNames="{style.rightPanel}"/>
			</g:HTMLPanel>
			<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 