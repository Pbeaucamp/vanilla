<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='labelCommon' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
		    bottom: 90px;
		    display: inline-block;
		    position: absolute;
		    right: -476px;
		    z-index: 3;
		    
			-webkit-transition: right 1.0s linear;
			-moz-transition: right 1.0s linear;
			transition: right 1.0s linear;
		}
	
		.lblLog {
		    background-color: #4471C4;
		    border: medium none;
		    border-radius: 0.2857rem 0 0 0.2857rem;
		    box-shadow: 0 0 0 0 rgba(39, 41, 43, 0.15) inset;
		    color: #FFFFFF;
		    cursor: pointer;
		    display: inline-block;
		    font-size: 13px;
		    margin-top: 325px;
		    padding: 0.78571em;
		    text-align: center;
		    text-shadow: none;
		    vertical-align: top;
		    width: 85px;
		    margin-left: -110px;
		    margin-right: -4px;
		}
		
		.lblTitle {
		    background-color: #4471C4;
		    border: medium none;
		    color: #FFFFFF;
		    display: block;
		    font-style: normal;
		    font-weight: bold;
		    line-height: 1;
		    margin: 0 0.25em 5px 0;
		    min-height: 1em;
		    outline: medium none;
		    padding: 0.78571em;
		    text-align: center;
		    text-decoration: none;
		    vertical-align: baseline;
		}
	
		.panelLog {
		    display: inline-block;
		    height: 350px;
		    width: 450px;
		    
	        background-color: #FFFFFF;
		    border: medium none;
		    border-radius: 0.2857rem 0.2857rem 0.2857rem 0.2857rem;
		    box-shadow: 0 0 0 1px rgba(39, 41, 43, 0.15), 0 1px 2px 0 rgba(0, 0, 0, 0.05);
		    padding: 1em;
		    position: relative;
		}
		
		.logArea {
    		height: 260px;
		    padding: 2px;
		    width: 98%;
		    overflow: auto;
		    font-family: monospace;
		}
		
		.panelTxt {
			width: 100%;
			height: 275px;
		}
		
		.btn {
			background: none repeat scroll 0 0 #4471C4 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 40px;
			margin-top: 5px;
			width: 150px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			float: right;
			margin-left: 5px;
			margin-right: 5px;
			display: inline-block;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.btnCollapse {
		   float: left;
		}
		
		.btnClear {
		    float: right;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
		<g:Label ui:field="lblLog" text="{label.Log} R" addStyleNames="{style.lblLog}"/>
		<g:HTMLPanel addStyleNames="{style.panelLog}">
			<g:Label text="{label.Log} R" addStyleNames="{style.lblTitle}"/>
			<g:HTMLPanel addStyleNames="{style.panelTxt}">
				<g:HTMLPanel ui:field="logArea" addStyleNames="{style.logArea}" />
			</g:HTMLPanel>
			<g:Image ui:field="btnCollapse" title="{labelCommon.Collapse}"  resource="{resources.ic_right_collapse}" addStyleNames="{style.btnToolbar},{style.btnCollapse}"/>
			<g:Image ui:field="btnClear" title="{label.Clear}" resource="{resources.ic_trash}" addStyleNames="{style.btnToolbar},{style.btnClear}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 