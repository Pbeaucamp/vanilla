<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.smart.web.client.dialogs.VersionDialog.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
			z-index:20;
		}
		
		.lblOver {
		    width: 300px;
		    padding: 10px;
		    text-align: left;
		    clear: both;
		}
		
		.txtblock {
		    display: block;
		    padding: 5px;
		    margin: 0 10px;
		    width: 350px;
		}
		
		.lblName {
		    font-size: 1.3em;
		    padding: 10px 0;
		    text-align: center;
		    width: 100%;
		}
		
		.panelTextArea{
		    bottom: 50px;
		    left: 10px;
		    position: absolute;
		    right: 10px;
		    top: 150px;
		}
		
		.txtArea {
		    height: 97%;
		    position: relative;
		    resize: none;
		    width: 99%;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		
		<g:Label ui:field="lblName" addStyleNames="{style.lblName}"/>
		<g:Label ui:field="lblDate" addStyleNames="{style.lblOver}"/>
		<g:Label ui:field="lblNum" addStyleNames="{style.lblOver}"/>
		
		<g:HTMLPanel addStyleNames="{style.panelTextArea}">
			<g:TextArea ui:field="txtScript" addStyleNames="{style.txtArea}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 