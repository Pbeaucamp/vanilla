<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:style type="bpm.smart.web.client.dialogs.ImportProjectDialog.MyStyle">
	
		.panelContent {
			height: 150px;
			width: 350px;
			z-index:20;
			text-align: center;
		}
		
		.lblOver {
		    width: 300px;
		    padding: 10px;
		    text-align: left;
		    clear: both;
		    color : red;
		}
		
		.txtblock {
		    display: block;
		    padding: 5px;
		    margin: 0 10px;
		    width: 318px;
		}
		
		
		.upload {
		   
		}
		
		.btnImport {
		    font-size: 1.3em;
    		height: 50px;
		    margin-top: 40px;
		    width: 250px;
		    z-index: 10;
		}
		
		.button{
			background: none repeat scroll 0 0 #4471C4;
		    border-radius: 4px 4px 4px 4px;
		    color: #FFFFFF;
		    font-weight: 400;
		    border: medium none;
		}
		
		.panelNewName{
			left: 0;
		    margin-top: 80px;
		    position: absolute;
		}
		
		.formPanel {
		  	//display: none;
		}
		
		.lblFileName {
			display: block;
		    line-height: 30px;
		    position: relative;
		    z-index: 10;
		}
		
		.fileInput {
			visibility: hidden;
		    height: 0;
		    width: 0;
		}
		.panelOverlay {
			position : absolute;
			top: 30px;
   			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:FormPanel ui:field="formCode" addStyleNames="{style.formPanel}">
			
			<g:HTMLPanel ui:field="panelForm" addStyleNames="{style.upload}">
				<g:SimplePanel ui:field="panelUpload" addStyleNames="{style.fileInput}"/>
				<g:HTMLPanel ui:field="panelNewName" addStyleNames="{style.panelNewName}">
					<g:Label text="{label.NewProjectName}" addStyleNames="{style.lblOver}"></g:Label>
					<g:TextBox ui:field="txtNewName" addStyleNames="{style.txtblock}"></g:TextBox>
				</g:HTMLPanel>
			</g:HTMLPanel>
			
		</g:FormPanel>
		<g:HTMLPanel ui:field="panelOverlay" addStyleNames="{style.panelOverlay}">
			<g:Button ui:field="btnImport" text="{label.ImportProject}" addStyleNames="{style.btnImport},{style.button}"></g:Button>
			<g:Label ui:field="lblFileName" addStyleNames="{style.lblFileName}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 