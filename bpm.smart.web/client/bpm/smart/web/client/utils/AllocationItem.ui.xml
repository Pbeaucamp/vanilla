<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images'/>
	
	<ui:style type="bpm.smart.web.client.utils.AllocationItem.MyStyle">
		
		.contentPanel {
		    
		}
		
		.lbl{
			font-size: 14px;
		    text-overflow: ellipsis;
		    display: inline-block;
	    	width: 30%;
	    	vertical-align: middle;
		}
		
		.lst{
			width: 45%;
			vertical-align: middle;
			padding: 0.4em!important;
			margin-top: 3px;
			margin-bottom: 3px;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:Label ui:field="lblItem" addStyleNames="{style.lbl}"/>
		<g:ListBox ui:field="lstItem" addStyleNames="{style.lst}"/>
	</g:HTMLPanel>
</ui:UiBinder> 