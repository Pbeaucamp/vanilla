<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom">
	
	<ui:with field='label' type='bpm.smart.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.smart.web.client.images.Images'/>
	
	<ui:style type="bpm.smart.web.client.utils.RFilter.MyStyle">
		
		.block {
		 	display: block;
		}
		
		.inline {
		  	display: inline-block;
		}
		
		.lst{
			vertical-align: middle;
			padding: 0.4em!important;
			margin-top: 3px;
			margin-bottom: 3px;
		}
		
		.full{
			width: 90%;
		}
		
		.mid{
			width: 45%;
		}
		
		.txt input{
			margin: 1px 1%!important;
			padding: 0.65em 1em!important;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
    	    vertical-align: middle;
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:ListBox ui:field="lstColumns" addStyleNames="{style.lst} {style.full} {style.block}"/>
		
		<g:ListBox ui:field="lstFilters" addStyleNames="{style.lst} {style.mid} {style.inline}"/>
		<my:LabelTextBox ui:field="txtValue" addStyleNames="{style.txt} {style.mid} {style.inline}"/>
		<g:Image ui:field="btnDel" resource="{resources.ic_delete_black_18dp}" addStyleNames="{style.imgGrid}"/>
	</g:HTMLPanel>
</ui:UiBinder> 