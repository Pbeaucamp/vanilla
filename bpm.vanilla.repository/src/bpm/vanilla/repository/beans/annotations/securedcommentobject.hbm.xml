<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bpm.vanilla.platform.core.repository.SecuredCommentObject" table="rpy_secured_annotations_object">
            <id name="id" type="int">
                <column name="id" />
                 <generator class="increment"/>
            </id>

            <property name="groupId" type="java.lang.Integer">
                <column name="group_id"/>
            </property>

            <property name="objectId" type="java.lang.Integer">
                <column name="object_id"/>
            </property>

            <property name="type" type="java.lang.Integer">
                <column name="type"/>
            </property>

    </class>
</hibernate-mapping>