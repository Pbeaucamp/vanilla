<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bpm.vanilla.platform.core.repository.Comment" table="rpy_annotations">
            <id name="id" type="int">
                <column name="id" />
                 <generator class="increment"/>
            </id>

            <property name="creationDate" type="java.util.Date">
                <column name="creation_date"/>
            </property>

            <property name="beginDate" type="java.util.Date">
                <column name="begin_date"/>
            </property>

            <property name="endDate" type="java.util.Date">
                <column name="end_date"/>
            </property>

            <property name="type" type="java.lang.Integer">
                <column name="type"/>
            </property>

            <property name="comment" type="string">
                <column name="comment"/>
            </property>

            <property name="objectId" type="java.lang.Integer">
                <column name="object_id"/>
            </property>

            <property name="parentId" type="java.lang.Integer">
                <column name="parent_id"/>
            </property>
            
            <property name="creatorId" type="java.lang.Integer">
                <column name="creator_id"/>
            </property>

    </class>
</hibernate-mapping>