<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />

	<ui:style>
	.headerPanel{
		background: #555;
		height: 15%;
		padding-left: 10px;
		line-height: 2;
		cursor: pointer;
	}
	.icWorkflow, .icMinimize, .icClear{
		width: 25px;
	}
	.icMinimize {
		cursor: pointer;
	}
	.title {
		width: 90%;
		display: inline-block;
	}
	.controls {
		width: 9%;
		display: inline-block;
		text-align: right;
	}
	.lblWorkflow{
		margin-left: 10px;
		font-size: 1.2em;
		color: #fff;
	}
	.window {
		height: 0px;
		overflow-y: auto;
	}
	.minimize, .clear {
		display: inline-block;
	}

	.panel{
		position: absolute;
		bottom: 0px;
		width: 100%;
		z-index: 1;
		background: #fff;
	}
	
	</ui:style>
	<g:HTMLPanel ui:field="console" addStyleNames="{style.panel}">
	    <g:HTMLPanel addStyleNames="{style.headerPanel}">
           	<g:HTMLPanel>
           	    <g:FocusPanel ui:field="title" addStyleNames="{style.title}">
           			<g:HTMLPanel>
	    				<g:Image url="webapps/aklabox_files/images/ic_console_white.png" styleName="{style.icWorkflow} inline"/>
    					<g:Label text="{i18n.Console}" ui:field="lblName" styleName="{style.lblWorkflow} inline"/>
    				</g:HTMLPanel>
    			</g:FocusPanel>
    			<g:HTMLPanel ui:field="controls" addStyleNames="{style.controls}">
    			    <g:HTMLPanel addStyleNames="{style.clear}">
		    			<g:Image url="webapps/aklabox_files/images/ic_canvas_clear_white.png" ui:title="{i18n.ClearConsole}" ui:field="imgClear" styleName="{style.icClear} inline"/>
		    		</g:HTMLPanel>
    				<g:HTMLPanel addStyleNames="{style.minimize}">
			    		<g:Image url="webapps/aklabox_files/images/ic_minimize_white.png" ui:field="imgMinimize" styleName="{style.icMinimize} inline"/>
	    			</g:HTMLPanel>
		    	</g:HTMLPanel>
	    	</g:HTMLPanel>
	   	</g:HTMLPanel>
		<g:HTMLPanel ui:field="window" addStyleNames="{style.window}"/>
	</g:HTMLPanel>
</ui:UiBinder> 