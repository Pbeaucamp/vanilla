<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	
	<ui:style>
		.mainPanel {
		    height: 50px;
		    line-height: 50px;
		    overflow: hidden;
	        border-bottom: 1px solid #D3D3D3;
            width: 100%;
		}
		
		.lblFileName {
		    display: inline-block;
		    margin-left: 10px;
		    overflow: hidden;
		    text-overflow: ellipsis;
		    width: 240px;
		}
		
		.progress {
		    display: inline-block;
		    float: right;
		    height: 40px;
		    margin: 5px;
		    vertical-align: top;
		    width: 40px;
		}
		
		.imgFinish {
		    height: 30px;
	    	margin: 5px;
	    	width: 30px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="lblFileName" addStyleNames="{style.lblFileName}"/>
		<g:SimplePanel ui:field="progressPanel" addStyleNames="{style.progress}"/>
		<g:SimplePanel ui:field="btnPanel" visible="false" addStyleNames="{style.progress}">
			<g:Image resource="{resources.file_action_checkout_36}" addStyleNames="{style.imgFinish}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 