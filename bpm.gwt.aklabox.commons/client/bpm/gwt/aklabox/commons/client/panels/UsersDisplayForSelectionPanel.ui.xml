<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:with field='labels' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	
	<ui:style>
		.mainPanel {
		    height: 100%;
		    overflow: auto;
		    position: relative;
		    width: 100%;
		}
		
		.toolbarPanel {
		    border-bottom: 1px solid black;
		    height: 55px;
		}
		
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 41px !important;
		    padding: 7px;
		    width: 41px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.gridAbsolute {
			position: absolute;
			top: 55px;
			bottom: 0px;
			width: 100%;
		}
		
		.gridUsers {
			width: 100%;
			height: 100%;
		    position: relative;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnAddUsers" resource="{resources.ic_add_black_24dp}" title="{labels.SelectUsers}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.gridAbsolute}">
			<g:SimplePanel ui:field="panelGridUsers" addStyleNames="{style.gridUsers}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 