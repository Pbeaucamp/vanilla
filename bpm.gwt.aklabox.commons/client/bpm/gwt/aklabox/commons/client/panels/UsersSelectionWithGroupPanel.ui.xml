<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:with field='labels' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.gwt.aklabox.commons.client.panels.UsersSelectionWithGroupPanel.MyStyle">
		.mainPanel {
		    height: 100%;
		    overflow: auto;
		    position: relative;
		    width: 100%;
		}
		
		.panelButtons {
		    height: 85px;
		    margin-top: 2px;
		    text-align: center;
		    width: 100%;
		}
		
		.panelGroups {
	        background: lightgray;
		    height: 94px;
		    line-height: 45px;
		    overflow: auto;
		    position: absolute;
		    top: 85px;
		    width: 100%;
		}
		
		.panelFilter {
	    	margin-top: 2px;
		}
		
		.toolbar {
		    height: 50px;
		    overflow: hidden;
		    position: absolute;
		    top: 180px;
		    width: 100%;
		}
		
		.txtFilter {
			width: 300px;
			display: inline-block;
			vertical-align: top;
		}
		
		.btn {
		    display: inline-block;
		    margin-left: 5px;
		    margin-top: 12px;
		    vertical-align: top;
		    width: 550px;
			background: none repeat scroll 0 0 #444444;
			color: #FFFFFF;
			font-weight: bold;
			transition: none;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #888888;
		}
		
		.btnFilter {
		    display: inline-block;
		    margin-left: 5px;
		    margin-top: 12px;
		    vertical-align: top;
		    width: 150px;
			background: none repeat scroll 0 0 #444444;
			color: #FFFFFF;
			font-weight: bold;
			transition: none;
		}
		
		.btnFilter:HOVER {
			background: none repeat scroll 0 0 #888888;
		}
		
		.panelGrid {
		    bottom: 20px;
		    position: absolute;
		    top: 230px;
		    width: 100%;
		}
		
		.panelPager {
			position: absolute;
			height: 20px;
			bottom: 0px;
			width: 100%;
		}
		
		.grid {
		    margin: auto;
		    overflow: hidden;
		    position: relative;
		}
		
		.grp {
		    background: none repeat scroll 0 0 #ADD8E6;
		    border-radius: 5px 5px 5px 5px;
		    display: inline-block;
		    height: 35px;
		    line-height: 40px;
		    margin-left: 2px;
		    margin-top: 2px;
		    padding: 3px 10px;
		}
		
		.noGrp {
			color: gray;
		    margin-left: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel addStyleNames="{style.panelButtons}">
			<g:Button ui:field="btnLoadEnterpriseUsers" text="{labels.LoadAllEnterpriseUsersMayTakeAWhile}" visible="false" addStyleNames="{style.btn}"/>
			<g:Button ui:field="btnSelectGroups" text="{labels.SelectGroups}" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelGroups" addStyleNames="{style.panelGroups}">
			<g:Label text="{labels.NoGroupSelected}" addStyleNames="{style.noGrp}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
			<g:HTMLPanel ui:field="panelFilter" addStyleNames="{style.panelFilter}">
				<my:LabelTextBox ui:field="txtFilter" addStyleNames="{style.txtFilter}"/>
				<g:Button ui:field="btnFilter" text="{labels.Filter}" addStyleNames="{style.btnFilter}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.panelGrid}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 