<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.leftPanel {
		    height: 100%;
		    width: 100%;
		}
		
		.contentPanel {
		    margin-left: 5px;
		}
		
		.centerPanel {
    		position: relative;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' ui:field="dockPanel" addStyleNames="{style.mainPanel},{style.centerPanel}">
		<g:west size='450'>
			<g:SimplePanel ui:field="leftPanel">
				<g:SimplePanel ui:field="leftContent" addStyleNames="{style.leftPanel}"/>
			</g:SimplePanel>
		</g:west>
		<g:center>
			<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 