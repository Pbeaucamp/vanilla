<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panelToolbar {
			height: 40px;
		}
		
		.txt {
			padding: 10px !important;
			background: #fff !important;
			border: 1px solid #ddd !important;
			border-radius: 0 !important;
			box-shadow: 0 0 0 !important;
	        width: 76% !important;
			margin-bottom: 5px !important;
		}
		
		.btn {
			background: none repeat scroll 0 0 #444444 !important;
			border: 1px solid #555555 !important;
			color: #FFFFFF;
			cursor: pointer;
			height: 30px;
			margin-top: 5px;
			width: 115px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			float: right;
			margin-left: 5px;
			margin-right: 5px;
		}
		
		.btn:HOVER {
			background: none repeat scroll 0 0 #EAEAEA !important;
			color: #000000;
		}
	
		.box-content {
		    height: 200px;
    		width: 100%;
		}
		
		.panelGridUsers {
			width: 100%;
			height: 200px;
		    margin: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.panelToolbar}">
			<g:SuggestBox ui:field="txtMail" addStyleNames="{style.txt}"/>
			<g:Button ui:field="btnConfirmAdd" text="Ajouter" addStyleNames="{style.btn}"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.box-content}">
			<g:LayoutPanel ui:field="panelGridUsers" addStyleNames="{style.panelGridUsers}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 