<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.title {
		    color: #3B99CB;
		    margin-left: 5px;
		    margin-top: 5px;
		    font-weight: bold;
		}
		
		.chk {
			display: inline-block;
			width: 98%;
		}
		
		.verticalSeparator {
		    border: 1px solid #808080;
		    display: inline-block;
		    height: 200px;
		    margin-top: 12px;
		    width: 0;
		}
	
		.splitPanel {
			vertical-align: top;
		    display: inline-block;
	    	width: 285px;
	    	-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
			-moz-box-sizing: border-box;    /* Firefox, other Gecko */
			box-sizing: border-box;
			padding: 5px;
		}
		
		.chk {
		    display: inline-block;
		    margin-left: 15px;
		    margin-top: 5px;
		    vertical-align: top;
		    width: 100%;
		}
		
		.db {
		    display: inline-block;
		    margin-left: 25px;
		    width: 200px;
		}
		
		.marginLeft {
		    margin-left: 25px;
		}
		
		.marginTop {
	    	margin-top: 10px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.splitPanel}">
			<g:Label text="{i18n.Rights}" addStyleNames="{style.title}"/>
			<my:CustomCheckbox ui:field="chkPrint" text="{i18n.CanPrint}" addStyleNames="{style.chk}"/>
			<my:CustomCheckbox ui:field="chkEmail" text="{i18n.CanEmail}" addStyleNames="{style.chk}"/>
			<my:CustomCheckbox ui:field="chkCheckout" text="{i18n.CanCheckout}" addStyleNames="{style.chk}"/>
			<my:CustomCheckbox ui:field="chkSeeVersions" text="{i18n.CanSeeVersions}" addStyleNames="{style.chk}"/>
			<my:CustomCheckbox ui:field="chkDelete" text="{i18n.CanDelete}" addStyleNames="{style.chk}"/>
		</g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.verticalSeparator}"/>
		<g:HTMLPanel addStyleNames="{style.splitPanel}">
			<g:Label text="{i18n.LockOptions}" addStyleNames="{style.title}"/>
			<my:CustomCheckbox ui:field="chkLock" text="{i18n.LockTheItem}" addStyleNames="{style.chk}"/>
			<g:HTMLPanel addStyleNames="{style.marginTop}">
				<my:LabelDateBox ui:field="dbBeginLock" label="{i18n.LockBeginDate}" addStyleNames="{style.db}"/>
				<my:LabelDateBox ui:field="dbEndLock" label="{i18n.LockEndDate}" addStyleNames="{style.db},{style.marginLeft}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.verticalSeparator}"/>
		<g:HTMLPanel addStyleNames="{style.splitPanel}">
			<g:Label text="{i18n.SuspendOptions}" addStyleNames="{style.title}"/>
			<my:CustomCheckbox ui:field="chkSuspend" text="{i18n.SuspendTheItem}" addStyleNames="{style.chk}"/>
			<g:HTMLPanel>
				<my:LabelDateBox ui:field="dbBeginSuspend" label="{i18n.SuspendBeginDate}" addStyleNames="{style.db}"/>
				<my:LabelDateBox ui:field="dbEndSuspend" label="{i18n.SuspendEndDate}" addStyleNames="{style.db},{style.marginLeft}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 