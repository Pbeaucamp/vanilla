<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:bpm.gwt.aklabox.commons.client.utils">
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:with field='img' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	<ui:style type='bpm.gwt.aklabox.commons.client.panels.LovPanel.MyStyle'>
	
	.definePanel, .contentPanel{
		width: 30%;
		padding: 10px;
		height: 450px;
		overflow: auto;
		border-right: 1px solid #e9e9e9;
		box-sizing: border-box;
		-webkit-box-sizing: border-box;
		-moz-box-sizing: border-box;
		vertical-align: top;
	}
	.contentPanel{
		width: 60%;
	}
	.sortItem{
		width: 17%;
	}
	.sortPanel{
		padding: 10px;
		border-bottom: 1px solid #e9e9e9;
		font-weight: bold;
	}
	.img_filter{
		cursor: pointer;
		width: 30px;
		height: auto;
		margin-left: 50px;
	}
	.lstBox{
		width: 200px !important;
		display: inline-block !important;
	}
	.txtBox{
		border: 1px solid #999 !important;
		width: 100% !important;
		border-radius: 0px !important;
		font-size: 12px !important;
		background: white !important;
		margin-bottom: 0px !important;
		padding: 5px !important;
		margin: 0px !important;
	}
	.txtBoxOrig {
		background: #fff !important;
		box-shadow: none !important;
		-webkit-box-shadow: none !important;
		-moz-box-shadow: none !important;
		border-radius: 0px !important;
		-moz-border-radius: 0px !important;
		-webkit-border-radius: 0px !important;
		width: 100% !important;
		margin-left: 0px !important;
		box-sizing: border-box;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		margin-top: 10px !important;
		display: block !important;
		padding: 0px;
		padding: 5px !important;
	}
	
	.lst {
		background: #fff !important;
		box-shadow: none !important;
		-webkit-box-shadow: none !important;
		-moz-box-shadow: none !important;
		border-radius: 0px !important;
		-moz-border-radius: 0px !important;
		-webkit-border-radius: 0px !important;
		width: 100% !important;
		margin-left: 0px !important;
		box-sizing: border-box;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		padding: 5px !important;
	}
	
	.simplePanel{
		width: 100% !important;
		margin-left: 0px !important;
		margin-top: 10px !important;
		display: block !important;
	}
	
	.simple{
		width: 80% !important;
		margin-left: 0px !important;
		margin-top: 10px !important;
		display: inline-block !important;
	}
	
	.filterImage {
			cursor: pointer;
			margin-left: 20px;
			display: inline-block;
	}
	
	.btnPanel{

	}
	
	.lovbtn{
			margin-left:9%;
			margin-right:9%;
    		width: 30%;
    		display: inline-block;
	}
	
	.aklalstBox {
		width: 100%;
		font-size: 1.2em;
		padding: 5px;
		box-sizing: border-box;
		-webkit-box-sizing: border-box;
		-mox-box-sizing: border-box;
	}
	.btnBlue:hover{
		background: #A34C4C !important;
	}
	
	.btnBlue {
		width: 100%;
		height: 30px;
		border: none;
		color: #D8F3FE;
		background: #333;
		float: right;
		margin: 5px 0;
		box-sizing: border-box;
		-webkit-box-sizing: border-box;
		-mox-box-sizing: border-box;
	}
	.aklatxtBox {
		background: #fff !important;
		box-shadow: none !important;
		-webkit-box-shadow: none !important;
		-moz-box-shadow: none !important;
		border-radius: 0px !important;
		-moz-border-radius: 0px !important;
		-webkit-border-radius: 0px !important;
		width: 100% !important;
		margin-left: 20px !important;
		margin-top: 10px !important;
		display: block !important;
		padding: 0px;
		padding: 10px !important;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.definePanel} inline">
		
			<g:Label text="{i18n.Name}"/>
			<g:TextBox ui:field="txtName" addStyleNames="{style.txtBoxOrig}"/>
			
			<g:Label text="{i18n.Source}"/>
			<g:SimplePanel ui:field="lstSource" addStyleNames="{style.simple}"/>
			<g:Image resource="{img.ic_add_circle_outline_black_24dp}"  ui:field="imgAddSource" addStyleNames="transition {style.filterImage}" />
			
			<g:Label text="{i18n.Table}"/>
			<g:SimplePanel ui:field="lstTable" addStyleNames="{style.simplePanel}"/>
			
			<g:Label text="{i18n.ItemCode}"/>
			<g:SimplePanel ui:field="lstItemCode" addStyleNames="{style.simplePanel}"/>
			
			<g:Label text="{i18n.ItemName}"/>
			<g:SimplePanel ui:field="lstItemName" addStyleNames="{style.simplePanel}"/>
			
			<g:Label text="Parent list"/>
			<g:SimplePanel ui:field="lstParent" addStyleNames="{style.simplePanel}"/>
			
			<g:Label text="Parent item"/>
			<g:SimplePanel ui:field="lstParentItem" addStyleNames="{style.simplePanel}"/>
		<!--  	
			<g:Label text="{i18n.TableCode}"/>
			<g:TextBox ui:field="txtTableCode" addStyleNames="{style.txtBoxOrig}"/>  
			
			<g:Label text="{i18n.TableName}"/>
			<g:TextBox ui:field="txtTableName" addStyleNames="{style.txtBoxOrig}"/>
			
			<g:Label text="{i18n.ItemCode}"/>
			<g:TextBox ui:field="txtItemCode" addStyleNames="{style.txtBoxOrig}"/>
			
			<g:Label text="{i18n.ItemName}"/>
			<g:TextBox ui:field="txtItemName" addStyleNames="{style.txtBoxOrig}"/>
			
			-->
			<g:CheckBox ui:field="chkDistinct" text="Distinct" addStyleNames="{style.txtBoxOrig}"/>
				<br/>
			
			<!-- <g:Button text="Preview" ui:field="btnPrev" addStyleNames="{css.aklaboxcss.btnBlue}"/> -->
			<g:HTMLPanel ui:field="btnLovPanel">
				<g:Button text="{i18n.Save}" ui:field="btnSave" addStyleNames="{style.btnBlue}"/>
				<g:Button text="{i18n.Cancel}" ui:field="btnCancel" addStyleNames="{style.btnBlue}"/>
			</g:HTMLPanel> 
		</g:HTMLPanel> 
		<g:HTMLPanel addStyleNames="{style.contentPanel} inline">
			<g:HTMLPanel>
				<g:ListBox ui:field="lstLovFilter" addStyleNames="{style.aklalstBox} {style.lstBox} inline" />
				<g:HTMLPanel  addStyleNames="inline">
					<s:AklaTextBox ui:field="txtLovFilter" placeholder="{i18n.Keyword}" addStyleNames="inline {style.aklatxtBox} {style.txtBox}"/>
				</g:HTMLPanel>
				<g:Image resource="{img.ic_filter}" ui:field="btnLovFilter" addStyleNames="inline {style.img_filter}"/> 
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="sortPanel" addStyleNames="{style.sortPanel}">
				<g:Label ui:field="lblName" text="{i18n.Name}" addStyleNames="inline {style.sortItem}"/>
				<g:Label ui:field="lblSource" text="{i18n.Source}" addStyleNames="inline {style.sortItem}"/>
				<g:Label ui:field="lblTable" text="{i18n.Table}" addStyleNames="inline {style.sortItem}"/>
				<g:Label ui:field="lblItemCode"  text="{i18n.ItemCode}" addStyleNames="inline {style.sortItem}"/>
				<g:Label ui:field="lblItemName"  text="{i18n.ItemName}" addStyleNames="inline {style.sortItem}"/>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="contentPanel" />
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 