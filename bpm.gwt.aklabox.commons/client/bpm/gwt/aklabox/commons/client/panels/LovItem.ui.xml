<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='img' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	<ui:style>
		.item{
			width: 17%;
		}
		.itemLast{
			width: 17%;
		}
		.panel{
			padding: 10px;
			border-bottom: 1px solid #e9e9e9;
		}
		.imgBtn {
			cursor: pointer;
			width: 24px;
			height: 24px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:Label ui:field="lblName" addStyleNames="{style.item} inline"/>
		<g:Label ui:field="lblSource" addStyleNames="{style.item} inline"/>
		<g:Label ui:field="lblTable" addStyleNames="{style.item} inline"/>
		<g:Label ui:field="lblItemCode" addStyleNames="{style.item} inline"/>
		<g:Label ui:field="lblItemName" addStyleNames="{style.itemLast} inline"/>
		<g:Image ui:field="imgPreview" resource="{img.ic_browse_grey}" addStyleNames="{style.imgBtn}"></g:Image>
		<g:Image ui:field="imgEdit" resource="{img.ic_edit}" addStyleNames="{style.imgBtn}"></g:Image>
		<g:Image ui:field="imgRemove" resource="{img.ic_trash_2}" addStyleNames="{style.imgBtn}"></g:Image>
	</g:HTMLPanel>
</ui:UiBinder> 