<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		<ui:with field='label' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:style type='bpm.gwt.aklabox.commons.client.utils.MessageDialog.MyStyle'>
		.fieldTitle{
			color: #3b99cb;
			font-weight: bold;
		}
		.panel{
			min-height: 150px;
		}
		
		.content{			
			top:5px;
			left: 5px;
			right:5px;
			bottom : 50px;
		}
		
		.lbl{
			font-size: 16px;
			text-align: -webkit-center;
			margin: 15px;
		}
		
		.rightAlign{
			float: right;
		}
		
		.btn{
			background: none repeat scroll 0 0 #444444;
    		border: 1px solid #555555;
    		color: #FFFFFF;
    		height: 40px;
    		margin: 10px 9% 10px 9%;
    		width: 30%;
		}
		
		.btn:hover {
			background: none repeat scroll 0 0 #fff;
			color: #888;
		}	
		

		
	</ui:style>
		<g:HTMLPanel >
			<g:HTMLPanel addStyleNames="{style.content}">
				<g:Label ui:field="lblMessage" styleName="{style.lbl}" />
			</g:HTMLPanel>
		
			<g:Button text="{label.Ok}" ui:field="btnOk" styleName="{style.btn}"/>
			<g:Button text="{label.Cancel}" ui:field="btnCancel" styleName="{style.btn}"/>
		</g:HTMLPanel>
</ui:UiBinder> 