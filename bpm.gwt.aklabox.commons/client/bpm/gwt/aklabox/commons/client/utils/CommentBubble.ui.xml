<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.aklabox.commons.client.utils.CommentBubble.MyStyle">
		.panel{
			background-color: #000000;
		    border-radius: 17px 17px 17px 17px;
		    color: #FFFFFF;
		    position: absolute;
		    transition: all 1s ease;
		}
		.panelSmall{
		    transform: translate(-50%, -50%);
		    border-radius: 17px;
		    
		}
		.panelBig{
		    transform: translate(0%, 0%);
		    border-radius: 5px;
		}
		.innerPanel{
			position: relative;
		}
		.content{
			padding: 6px;
			max-width: 100px;
			transition: height 1s ease, width 1s ease;
		}
		.img{
			height: 20px;
		    padding: 6px;
		    vertical-align: middle;
		    width: 20px;
		    transition: height 1s ease, width 1s ease;
		}
		.hidden{
			height: 0;
		    opacity: 0;
		    position: absolute;
		    width: 0;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<g:HTMLPanel styleName="{style.innerPanel}">
			 <g:Image ui:field="imgComment" styleName="{style.img}"/>
			 <g:Label ui:field="lblComment" styleName="{style.content}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 