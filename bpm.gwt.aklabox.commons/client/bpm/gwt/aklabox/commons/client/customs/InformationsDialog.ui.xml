<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
    		min-width: 150px;
    		max-width: 1500px;
		}
		
		.disclosurePanel {
		    margin: 15px 5px 5px;
		}
		
		.lblMessage {
			margin: 5px;
			text-align: left;
		}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTML ui:field="lblMessage" addStyleNames="{style.lblMessage}"/>
		<g:SimplePanel ui:field="panelError" addStyleNames="{style.disclosurePanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 