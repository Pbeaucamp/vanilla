<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.aklabox.commons.client.customs.LabelTextBox.MyStyle">
		.mainPanel {
			position: relative;
		}
		
		.label {    
			color: #3B99CB;
		    margin-left: 18px;
	    	margin-top: 5px;
		}
		
		.text {
		    -moz-box-sizing: border-box !important;
		    background-color: #FFFFFF !important;
		    border: 1px solid rgba(0, 0, 0, 0.15) !important;
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em !important;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset !important;
		    color: rgba(0, 0, 0, 0.7) !important;
		    font-size: 1em !important;
		    margin: 0 !important;
		    outline: 0 none !important;
	        padding: 7px 25px 7px 7px !important;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s !important;
	        margin: 5px 1% !important;
            width: 98% !important;
		}

		.text:FOCUS {
		    border-bottom-left-radius: 0 !important;
		    border-color: rgba(0, 0, 0, 0.2) !important;
		    border-top-left-radius: 0!important;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset !important;
		    color: rgba(0, 0, 0, 0.85) !important;
		}
		
		.padding {
		    padding: 7px !important;
		}
		
		.paddingWithClear {
	    	padding: 7px 25px 7px 7px !important;
		}
		
		.btnClear {
		    border-radius: 13px 13px 13px 13px;
		    padding: 3px;
		    position: absolute;
		    right: 6px;
		    top: 16px;
		    cursor: pointer;
		}
		
		.btnClear:HOVER {
		    background: none repeat scroll 0 0 #D3D3D3;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="label" addStyleNames="{style.label}"/>
		<c:TextHolderBox ui:field="textbox" addStyleNames="{style.text},{style.padding}"/>
		<g:Image ui:field="btnClear" visible="false" resource="{resources.clear_16}" addStyleNames="{style.btnClear}"/>
	</g:HTMLPanel>
</ui:UiBinder> 