<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:style>
		.label {    
			color: #3B99CB;
		    margin-left: 5px;
	    	margin-top: 5px;
		}
		
		.text {
		    -moz-box-sizing: border-box !important;
		    background-color: #FFFFFF !important;
		    border: 1px solid rgba(0, 0, 0, 0.15) !important;
		    border-radius: 0.3125em 0.3125em 0.3125em 0.3125em !important;
		    box-shadow: 0 0 rgba(0, 0, 0, 0.3) inset !important;
		    color: rgba(0, 0, 0, 0.7) !important;
		    font-size: 1em !important;
		    margin: 0 !important;
		    outline: 0 none !important;
	        padding: 7px 25px 7px 7px !important;
		    transition: background-color 0.3s ease-out 0s, box-shadow 0.2s ease 0s, border-color 0.2s ease 0s !important;
	        margin: 5px 1% !important;
            width: 98% !important;
		}

		.text:FOCUS {
		    border-bottom-left-radius: 0;
		    border-color: rgba(0, 0, 0, 0.2);
		    border-top-left-radius: 0;
		    box-shadow: 0.3em 0 0 0 rgba(0, 0, 0, 0.2) inset;
		    color: rgba(0, 0, 0, 0.85);
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label ui:field="label" addStyleNames="{style.label}"/>
		<c:ValueTextBox ui:field="textbox" addStyleNames="{style.text}"/>
	</g:HTMLPanel>
</ui:UiBinder> 