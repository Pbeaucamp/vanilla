<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
		    height: 100%;
		    width: 100%;
		    overflow: hidden;
		}
		
		.txtPanel {
		    height: 100%;
		    line-height: 100%;
		    position: absolute;
		    width: 100%;
		    z-index: 1;
		}
		
		.txtProgress {
		    font-size: 30%;
		    position: relative;
		    text-align: center;
		}
	</ui:style>
	<g:HTMLPanel ui:field="progress" addStyleNames="c100">
		<g:HTMLPanel addStyleNames="{style.txtPanel}">
			<g:Label ui:field="lblProgress" addStyleNames="{style.txtProgress}">0%</g:Label>
		</g:HTMLPanel>
	    <g:HTMLPanel addStyleNames="slice">
	        <g:HTMLPanel addStyleNames="bar"/>
	        <g:HTMLPanel addStyleNames="fill"/>
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 