<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.gwt.aklabox.commons.client.customs.TreeItemPanel.MyStyle">
		.mainPanel {
			height: 30px;
		}
		
		.selected {
		    background-color: #69CAE8;
		}
	
		.img {
		}
		
		.imgSmall {
	    	margin-top: 4px;
			max-width: 30px;
			max-height: 30px;
		}
		
		.imgBig {
		    margin-top: -4px;
			width: 30px;
			height: 30px;
			max-width: 30px;
			max-height: 30px;
			min-height: 32px
		}
		
		.lbl {
		    display: inline-block;
		    
	    	width: 85%;
			text-overflow: ellipsis;
			display: inline-block;
			vertical-align: top;
		}
		
		.lblAlone {
	
		}
		
		.lblSmall {
			margin-left: -5px;
		    margin-top: 4px;
		}
		
		.lblBig {
		    margin-left: 3px;
		    margin-top: 6px;
		}
	</ui:style>
	<g:FocusPanel ui:field="focus">
		<g:HTMLPanel addStyleNames="{style.mainPanel}">
			<g:Image ui:field="img" addStyleNames="{style.img}"/>
			<g:Label ui:field="lbl" addStyleNames="{style.lbl}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 