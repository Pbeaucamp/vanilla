<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type="bpm.gwt.aklabox.commons.client.I18N.LabelsConstants"/>
	
	<ui:style>
		.panel {
			margin: 5px;
		    border: 1px solid #778899;
			color: #484848;
			padding: 10px 5px;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			transition: all 1s;
			background: white !important;
		}
		
		.menuBar {
			
		}
		
		.labelType {
			border-bottom: 1px solid #484848;
			cursor: pointer;
			padding: 10px;
    		text-align: center;
		}
		
		.labelTypeEnd {
			cursor: pointer;
			padding: 10px;
    		text-align: center;
		}
		
		.labelType:HOVER, .labelTypeEnd:HOVER {
			background: #484848;
			color: #fff;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panelMenu" addStyleNames="{style.panel}">
		<g:MenuBar ui:field="menuBar" vertical='true' styleName="{style.menuBar}">
			<g:MenuItem ui:field="btnAddFolder" text="{label.NewFolder}" styleName="{style.labelType}"/>
			<g:MenuItem ui:field="btnAddItem" text="{label.NewDocument}" styleName="{style.labelType}"/>
			<g:MenuItem ui:field="btnUpdateFolder" text="{label.Edit}" styleName="{style.labelType}"/>
			<g:MenuItem ui:field="btnDeleteFolder" text="{label.Delete}" styleName="{style.labelType}"/>
			<g:MenuItem ui:field="btnDownloadFolder" text="{label.DownloadFolder}" styleName="{style.labelTypeEnd}"/>
		</g:MenuBar>
	</g:HTMLPanel>
</ui:UiBinder> 