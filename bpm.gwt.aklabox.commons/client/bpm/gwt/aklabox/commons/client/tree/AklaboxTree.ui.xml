<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="bpm.gwt.aklabox.commons.client.tree.AklaboxTree.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
	
		.panelTree {
		    position: relative;
		    overflow: auto;
		    height: 100%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.panelTree}">
		<g:Tree ui:field="tree"/>
	</g:HTMLPanel>
</ui:UiBinder> 