<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.fieldTitle{
			color: #3b99cb;
			font-weight: bold;
		}
		
		.btnSave{
			background: none repeat scroll 0 0 #444444;
    		border: 1px solid #555555;
    		color: #FFFFFF;
    		height: 40px;
    		margin: 20px 9% 20px 9%;
    		width: 30%;
		}
		
		.btnSave:hover {
			background: none repeat scroll 0 0 #fff;
			color: #888;
		}	
	</ui:style>
	<g:HTMLPanel>
		<div style="width: 60%;margin: 20px 0px 0px 50px;">
		    <g:Label ui:field="lblList" styleName="{style.fieldTitle}"/>
		    <g:TextBox ui:field="txtName"/>
		</div>
		
		<g:Button text="{label.Ok}" ui:field="saveDoc" styleName="{style.btnSave}"/>
		<g:Button text="{label.Cancel}" ui:field="cancel" styleName="{style.btnSave}"/>
	</g:HTMLPanel>
</ui:UiBinder> 