<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.aklabox.commons.client.customs">
	
	<ui:with field='labels' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.mainPanel {
			position: absolute;
			top: 85px;
			left:0;
			width: 550px;
			height: 350px;
		}
		
		.rootPanel {
			width: 575px;
			height: 420px;
		}
		
		.btnFilter {
		    display: inline-block;
		    margin-left: 5px;
		    margin-top: 12px;
		    vertical-align: top;
		    width: 150px;
			background: none repeat scroll 0 0 #444444;
			color: #FFFFFF;
			font-weight: bold;
			transition: none;
		}
		
		.btnFilter:HOVER {
			background: none repeat scroll 0 0 #888888;
		}
		
		.panelFilter {
	    	margin-top: 2px;
		}
		
		.toolbar {
		    height: 50px;
		    overflow: hidden;
		    position: absolute;
		    top: 25px;
		    width: 100%;
		}
		
		.txtFilter {
			width: 300px;
			display: inline-block;
			vertical-align: top;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<g:HTMLPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
			<g:HTMLPanel ui:field="panelFilter" addStyleNames="{style.panelFilter}">
				<my:LabelTextBox ui:field="txtFilter" addStyleNames="{style.txtFilter}"/>
				<g:Button ui:field="btnFilter" text="{labels.Filter}" addStyleNames="{style.btnFilter}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.mainPanel}"/>
	</g:HTMLPanel>
	
</ui:UiBinder> 