	<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.remove,.edit,.saveEdit,.openRefDoc {
			width: 2.5%;
			height: 12px;
			border: none;
			text-indent: 999px;
			transition: all 1s;
			display:block;
			margin-bottom:5px;
		}
		
		.remove {
			background: url('webapps/aklabox_files/images/delete_24.png') top left no-repeat;
		}
		
		.openRefDoc{
			background: url('webapps/aklabox_files/imagesNew/ic_eye.png') top left no-repeat;	
			visibility:hidden;
			background-size:13px 15px;
		}
		
		.edit {
			background: url('webapps/aklabox_files/images/pencil_24.png') top left no-repeat;
		}
		
		.saveEdit {
			background: url('webapps/aklabox_files/images/checkmark_24.png') top left no-repeat;
		}
		
		.remove:hover {
			background: url('webapps/aklabox_files/images/delete_24.png') bottom left no-repeat #3b99cb;
		}
		
		.edit:hover {
			background: url('webapps/aklabox_files/images/pencil_24.png') bottom left no-repeat #3b99cb;
		}
		
		.saveEdit:hover {
			background: url('webapps/aklabox_files/images/checkmark_24.png') bottom left no-repeat #3b99cb;
		}
		.commentItem{
			word-wrap: break-word;
			display: inline-block;
			vertical-align:middle;
			text-align: center;
			padding: 4px;
		}
		.img{width: 4%;height:20px}
		.email{ width: 18%; }
		.date{ width: 18%; }
		.comment{
			width: 29%;
			text-align: center !important;
		}
		.position{
			width: 11%;
		}

	</ui:style>
	<g:HTMLPanel ui:field="commentField">
	    <g:Image ui:field="imgProfilePic" addStyleNames="{style.commentItem} {style.img}"/>
		<g:Label ui:field="lblEmail" addStyleNames="{style.commentItem} {style.email}" />
		<g:Label ui:field="lblDate" addStyleNames="{style.commentItem} {style.date}" />
		<g:HTMLPanel addStyleNames="{style.commentItem} {style.comment}">
					<g:HTMLPanel ui:field="editField" />
					<g:Label ui:field="lblComment" />
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.commentItem} {style.position}">
			<g:Label ui:field="lblIsPlaced" />
		</g:HTMLPanel>
		<div class="{style.commentItem}">
			<g:Button ui:field="edit" styleName="{style.edit}" title="{i18n.EditComment}"/>
			<g:Button ui:field="saveEdit" styleName="{style.saveEdit}" title="{i18n.EditComment}"/>
			<g:Button ui:field="remove" styleName="{style.remove}" title="{i18n.RemoveComment}"/>
			<g:Button ui:field="openRefDoc" styleName="{style.openRefDoc}" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 