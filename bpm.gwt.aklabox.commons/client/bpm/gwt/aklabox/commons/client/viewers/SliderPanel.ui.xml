<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />

	<ui:style>
		.zoomButtons {
		    background-size: 20px 20px !important;
		    height: 20px !important;
		    margin-left: 5px;
		    margin-right: 5px;
		    opacity: 0.7;
		    vertical-align: middle;
		    width: 20px !important;
		}
		
		.zoomButtons:hover {
			cursor: pointer;
			opacity: 1;
		}
		
		.sliderPanel {
			width: 50%;
			height: 100%;
		}
		
		.panel {
			border-radius: 3px;
			background-color: rgba(50,50,50,0.7);
			width: 200px;
			height: 40px;
		}
		
		.panelLeft {
			display: inline-block;
    		width: 80%;
    		height: 100%;
		    vertical-align: middle;
		}
		
		.panelRight {
			background-color: #1E1E1E;
		    border-radius: 0 3px 3px 0;
		    display: inline-block;
		    height: 100%;
		    vertical-align: middle;
		    width: 18%;
		}
		
		.imgPanel {
		    height: 20px !important;
		    vertical-align: middle;
		    width: 20px !important;
		    padding: 10px 8px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel" addStyleNames="{style.panel}">
		<g:HTMLPanel addStyleNames="{style.panelLeft}">
			<g:Image ui:field="imgMinus" addStyleNames="inline {style.zoomButtons}" resource="{resources.ic_minus}" />
			<g:HTMLPanel ui:field="sliderPanel" addStyleNames="inline {style.sliderPanel}"/>
			<g:Image ui:field="imgPlus" addStyleNames="inline {style.zoomButtons}" resource="{resources.ic_plus}" />
		</g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.panelRight}">
			<g:Image ui:field="imgPanel" addStyleNames="inline {style.imgPanel}"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 