<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />

	<ui:style>
		.zoomButtons {
		    background-size: 20px 20px !important;
		    height: 20px !important;
		    margin-left: 15px;
		    margin-right: 15px;
		    opacity: 0.5;
		    vertical-align: top;
		    width: 20px !important;
		    margin-top: 20px;
		}
		
		.zoomButtons:hover {
			cursor: pointer;
			opacity: 1;
		}
		
		.sliderPanel {
			width: 75%;
		}
		
		.center {
			text-align: center;
		}
		
		.lbl {
			color: white;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel">
		<g:HTMLPanel>
			<g:Image ui:field="zoomOut" addStyleNames="inline {style.zoomButtons}" resource="{resources.ic_zoom_out_white}" />
			<g:HTMLPanel ui:field="sliderPanel" addStyleNames="inline {style.sliderPanel}"/>
			<g:Image ui:field="zoomIn" addStyleNames="inline {style.zoomButtons}" resource="{resources.ic_zoom_in_white}" />
		</g:HTMLPanel>
<!-- 		<g:SimplePanel addStyleNames="{style.center}"> -->
<!-- 			<g:Label text="{i18n.Zoom}" addStyleNames="{style.lbl}"/> -->
<!-- 		</g:SimplePanel> -->
	</g:HTMLPanel>
</ui:UiBinder> 