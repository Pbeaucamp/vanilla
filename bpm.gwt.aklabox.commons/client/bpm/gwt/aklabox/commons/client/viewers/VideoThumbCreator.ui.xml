<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='i18n' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:style>
		.inline{
			display: inline-block;
			vertical-align: middle;
		}

		.important {
			font-weight: bold;
		}
		.thumbCreatorPanel{
			width: 500px;
			min-height: 300px;
			padding: 20px;
			background: #1d1d1d;
		}
		.imgPreview{
			width: 200px;
			height: 120px;
			margin-left: 20px;
		}
		.sliderPanel{
			text-align: center;
			padding: 10px;
		}
		.btnGenerate{
			width: 200px;
		}
		.thumbsPanel{
			text-align: center;
			margin-top: 20px;
			height: 200px;
			overflow: auto;
		}
		.lblSec{
			display: inline-block;
			vertical-align: middle;
			color: #fff;
			margin-left: 25px;
		}
		.lblTitle{
			color: #fff;
			font-weight: bold;
			font-size: 15px;
		}
		.btnPick{
			width: 50px;	
			height: 50px;
			border-radius: 50px;
			 -webkit-border-radius: 200px;
			  -moz-border-radius: 200px;
			background: #1e8bba;
			color: #fff;	
			border: none;
			margin-left: 10px;
		}
		.btnPick:hover{
			color: #888 !important;
		}
		.btnOpen{
			width: 200px !important;
			margin-left: 15%;
			margin-bottom: 10px;
		}
		.inputPanels{
			text-align: center;
			margin-top: 50px;
		}
		.btnInput{
			margin-top: 20px;
			background: #333;
			border: none;	
			color: #fff;
		}
		.btnInput:hover{
			color: #444 !important;
		}
		.txtDirectInput{
			width: 100px !important;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Button addStyleNames="{style.btnPick} {style.btnOpen}" ui:field="btnOpenThumbCreator" text="{i18n.GenerateThumbnail}"/>
		<g:HTMLPanel ui:field="thumbCreatorPanel" addStyleNames="{style.thumbCreatorPanel}">
		    <div style="text-align: center;">
		    	<g:Image ui:field="imgPreview" addStyleNames="{style.imgPreview} {style.inline}"/>
		    	<g:Button ui:field="btnPick" text="{i18n.Save}" addStyleNames="{style.inline} {style.btnPick}"/>
		    </div>
		    <g:Button text="{i18n.SliderInput}" ui:field="btnSliderInput" addStyleNames="{style.btnInput}"/>
		    <g:Button text="{i18n.DirectInput}" ui:field="btnDirectInput" addStyleNames="{style.btnInput}"/>
		    
		    <g:HTMLPanel addStyleNames="{style.inputPanels}" ui:field="sliderInput">
		        <g:Label text="{i18n.SliderIntervalInSeconds}" addStyleNames="{style.lblTitle}"/>
		        <g:HTMLPanel ui:field="sliderPanel" addStyleNames="{style.sliderPanel} {style.inline}"/>
		    	
				<g:Label text="10" addStyleNames="{style.lblSec}"/>
				<g:Label text="20" addStyleNames="{style.lblSec}"/>
				<g:Label text="30" addStyleNames="{style.lblSec}"/>
				<g:Label text="40" addStyleNames="{style.lblSec}"/>
				<g:Label text="50" addStyleNames="{style.lblSec}"/>
				<g:Label text="60" addStyleNames="{style.lblSec}"/>
				<g:Label text="70" addStyleNames="{style.lblSec}"/>
				<g:Label text="80" addStyleNames="{style.lblSec}"/>
				<g:Label text="90" addStyleNames="{style.lblSec}"/>
				<g:Label text="100" addStyleNames="{style.lblSec}"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel addStyleNames="{style.inputPanels}" ui:field="directInput">
			    <g:Label text="{i18n.DirectInput}" addStyleNames="{style.lblTitle}"/>
			    <g:TextBox ui:field="txtDirectInput" addStyleNames="{style.inline} {style.txtDirectInput}"/>
			   
			</g:HTMLPanel>
			<div style="text-align: center">
				<g:Button ui:field="btnGenerate" text="{i18n.Generate}" addStyleNames="{style.inline} {style.btnGenerate}"/>
			</div>
			<g:HTMLPanel ui:field="thumbsPanel" addStyleNames="{style.thumbsPanel}"/>

		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 