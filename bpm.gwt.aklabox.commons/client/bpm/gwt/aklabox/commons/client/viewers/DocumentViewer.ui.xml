<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:bpm.gwt.aklabox.commons.client.utils"
	 xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" >
	 
	<ui:with field='label' type='bpm.gwt.aklabox.commons.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.gwt.aklabox.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.gwt.aklabox.commons.client.viewers.DocumentViewer.MyStyle">
		.mainPanel {
			display: inline-block;
		    height: 100%;
		    position: relative;
		    vertical-align: top;
		    width: 100%;
		    overflow: hidden;
		}
		
		.previewPanel, .informationPanel, previewPanelZoom {
			height: 100%;
			margin-bottom: 0;
			padding-bottom: 0;
		}
		
		.previewPanel {
			width: 100%;
			background: #3e3e3e;
			display: inline-block;
			overflow: auto;
		}
		
		.preview {
			overflow: auto;
			/*padding: 10px 0;*/
			width: 100%;
			/*max-height : 550px;*/
			height: 100%;
			/*margin: 10px auto 0;*/
			text-align: center;
		}
		
		.preview:hover .zoom {
			display: inline-block;
		}
		
		.preview:hover {
			cursor: pointer;
		}
		
		.preview embed {
			height: 200px !important;
		}
		
		.previewPanelZoom {
			width: 100%;
			background: #3e3e3e;
			float: left;
		}
		
		.previewZoom {
			padding: 10px 0;
			text-align: center;
			width: 100%;
		}
		
		.zoom {
			background: none repeat scroll 0 0 #999;
			position: absolute;
			display: none;
			width: 50px !important;
			z-index: 1;
			left: 40%;
			border-radius: 100%;
			-webkit-border-radius: 100%;
			-moz-border-radius: 100%;
			opacity: 0.5;
			top: 50%;
		}
		
		.nextOfficeNavigation, .prevOfficeNavigation {
			height: 100%;
			right: 0;
			position: absolute;
			top: 0;
			width: 10%;
		}
		
		.prevOfficeNavigation {
			left: 0;
		}
		
		.nextOfficeNavigation:hover .btnNext {
			opacity: 1;
		}
		
		.prevOfficeNavigation:hover .btnPrev {
			opacity: 1;
		}
		
		.btnNext, .btnPrev {
			background: url("webapps/aklabox_files/images/ic_view_next.png")
				no-repeat center;
			width: 100%;
			height: 100%;
			background-size: 100% 15%;
			opacity: 0;
			border: none;
		}
		
		.btnPrev {
			background: url("webapps/aklabox_files/images/ic_view_next.png")
				no-repeat center;
			background-size: 100% 15%;
			transform: rotate(180deg);
			-webkit-transform: rotate(180deg);
			-moz-transform: rotate(180deg);
		}
		
		.searchPanel {
			top: 3px;
			text-align: left;
			position: absolute;
			left: 10px;
		}
		
		.txtSearchDoc {
			width: 200px !important;
			font-size: 1em !important;
			padding: 5px !important;
			margin-left: 30px !important;
			display: inline-block !important; 
		}
		
		.iconSearch {
			width: 30px;
			height: auto;
		}
		
		.img {
			width: 90%;
			height: auto;
		    transition: literal("opacity 500ms ease-in-out 0s");
			vertical-align: middle;
		}
		
		.transparent {
		    opacity: 0;
		}
		
		.imageSettings {
			width: 100%;
			background: #fff;
			min-height: 150px;
			overflow: auto;
			clear: both;
			text-align: center;
		}
		
		.pagePanelPreview {
		    background: none repeat scroll 0 0 #FFFFFF;
		    bottom: 0;
		    height: 120px;
		    overflow: auto;
		    position: absolute;
		    width: 100%;
		}
		
		.important {
			font-weight: bold;
		}
		
		.prev {
			background: url(" webapps/ aklabox_files/ images/ ic_iew arrows.png ") no-repeat scroll 0 0;
			height: 30px;
			width: 30px;
			border: none;
		}
		
		.next {
			background: url("webapps/aklabox_files/images/ic_arrows.png") no-repeat scroll -30px 0;
			height: 30px;
			width: 30px;
			border: none;
		}
		
		.pagePreview {
			border: 1px solid #999999;
			display: inline-block;
			height: 90px;
			margin: 2px;
			width: 70px;
		}
		
		.pagePreview img {
			height: 90px;
			width: 70px;
		}
		
		.panelPreview {
		    height: 100%;
		    overflow: hidden;
		    position: relative;
		    width: 100%;
		}
		
		.btnSettings {
			position: absolute; 
			bottom: 60px; 
			right: 10px;
		}
		
		.floatToolbarVertical {
			position: absolute; 
			bottom: 0; 
			right: 0;
			padding: 10px;
			width: 40px;
			z-index: 40;
		}
		
		.floatToolbarHorizontal {
			position: absolute; 
			bottom: 0; 
			right: 0;
			padding: 10px;
			height: 40px;
		}
		
		.sliderFloat {
			width: 200px;
			margin-left: -160px;
			margin-top: 5px;
		}
		
		.btnCancel {
			margin-left: -60px;
	   		margin-top: 20px;
		}
		
		.btnValid {
			margin-top: 20px;
			float: right;
		}
		
		.resetPanel {
			position: absolute; 
			bottom: 0; 
			left: 0;
			background-color: black;
			opacity: 0.8;
		}
		
		.btnReset {
			height: 35px;
			width: 35px;
			padding: 10px;
			background-color: black;
		}
		
		.originalPanel {
			position: relative;
			cursor: pointer;
		}
		
		.imgOriginal{
			height: 100px;
			width: auto;
			display: block;
		}
		
		.lblReset{
			display: block;
			color: white;
			background-color: black;
			margin: 0;
	   		text-align: center;
		}
	
		.btnFloat {
			height: 20px;
   		 	width: 20px;
			cursor: pointer;
			-moz-box-shadow: 0px 0px 4px #ddd;
			-webkit-box-shadow: 0px 0px 4px #ddd;
			box-shadow: 0px 0px 4px #ddd;
			margin-top: 5px;
			
			-moz-border-radius:100%;
			-webkit-border-radius: 100%;
			border-radius: 100%;
			color:#ffffff;
			padding: 10px;
		}
		
		.btnRed {
			background-color:#c62d1f;
		}
		
		.btnRed:hover {
			background-color:#f24437;
		}
		
		.editRotate{
			height: 20px;
   		 	width: 20px;
			cursor: pointer;
			-moz-box-shadow: 0px 0px 4px #ddd;
			-webkit-box-shadow: 0px 0px 4px #ddd;
			box-shadow: 0px 0px 4px #ddd;
			
			background-color:#00D0FF;
			-moz-border-radius:100%;
			-webkit-border-radius: 100%;
			border-radius: 100%;
			color:#ffffff;
			padding: 10px;
		}
		
		.editRotate:hover {
			background-color:#60e2ff;
		}
		
		.btnBlue {
			background-color:#20C6EA;
		}
		
		.btnBlue:hover {
			background-color:#8fe2f4;
		}
		
		.btnGreen {
			background-color:#17CE3F;
		}
		
		.btnGreen:hover {
			background-color: #73e18b;
		}
		
		.btnBlueGrey {
			background-color:#284663;
		}
		
		.btnBlueGrey:hover {
			background-color:#526a82;
		}
		
		.lbl {
			width: 100%;
			font-size: 12px;
			text-align: left;
			padding: 10px 0;
			margin-left: 20px;
		}
		
		.commentsBubblePanel {
			/*top:0;*/
		    /*height: 100%;*/
		    /*left: 50%;*/
		    /*position: absolute;*/
		    /*transform: translateX(-50%);*/
		    /*width: 90%;*/
		    /*max-width: 800px;*/
		    top:0;
		    left: 5%;
		    position: absolute;
		    z-index: 30;
		}

		.panelMessagePreview {
		    background: none repeat scroll 0 0 #FFFFFF;
		    border: 1px solid #D3D3D3;
		    height: 100%;
		    padding: 15px;
			-moz-box-sizing: border-box;
			box-sizing: border-box; 
			-webkit-box-sizing: border-box;
		}
		
		.lblMessagePreview {
	
		}
		
		.contentPanel {
			overflow: auto;
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 135px;
			z-index: 20;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="previewPanel" styleName="{style.previewPanel}">
			<g:HTMLPanel ui:field="preview" styleName="{style.preview}">
				<g:HTMLPanel addStyleNames="{style.panelPreview}">
					<g:HTMLPanel ui:field="searchDocContent" addStyleNames="{style.searchPanel}">
						<h:AklaTextBox ui:field="txtSearchDoc" addStyleNames="{style.txtSearchDoc} inline"/>
						<g:Image ui:field="btnSearchOCRResult" resource="{resources.ic_search}" addStyleNames="{style.iconSearch} inline" title="{label.Search}"/>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="panelMessagePreview" addStyleNames="{style.panelMessagePreview}">
						<g:Label ui:field="lblMessagePreview" text="{label.ThumbnailsAreLoading}" addStyleNames="{style.lblMessagePreview}"/>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
						<g:Image ui:field="imgPreview" styleName="{style.img}"/>
						<g:Image ui:field="imgCheck" visible="false"/>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="commentsBubblePanel" styleName="{style.commentsBubblePanel}"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<!-- <g:SimplePanel ui:field="imageSettings" styleName="{style.imageSettings}" /> -->
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="mainImgToolbar" addStyleNames="{style.floatToolbarVertical}">
			<g:Image resource="{resources.ic_settings_48}" ui:field="btnSettings" title="{label.ImageSettings}" addStyleNames=" {style.btnFloat} {style.btnBlueGrey}"/>
   			<g:Image resource="{resources.ic_comment48}" ui:field="btnEditComment" title="{label.Comment}" addStyleNames=" {style.btnFloat} {style.btnBlueGrey}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="treatImgToolbar" addStyleNames="{style.floatToolbarVertical}">
			<g:Image resource="{resources.ic_rotate_clockwise}" ui:field="btnRotateClockWise" title="{label.RotateClockWise}" addStyleNames=" {style.editRotate}"></g:Image>
  				<g:Image resource="{resources.ic_rotate_counter_clockwise}" ui:field="btnRotateCounterClockWise" title="{label.RotateCounterClockWise}" addStyleNames=" {style.editRotate}"></g:Image>
  				<g:Image resource="{resources.ic_grayscale}" ui:field="btnGrey" title="{label.ImageSettings}" addStyleNames="{style.btnFloat} {style.btnBlue}"/>

   			<g:SimplePanel ui:field="brightnessPanel" styleName="{style.sliderFloat}" />
   			<g:SimplePanel ui:field="contrastPanel" styleName="{style.sliderFloat}" />
   			<g:Image resource="{resources.ic_check}" ui:field="btnValid" title="{label.Save}" addStyleNames="{style.btnFloat} {style.btnValid} {style.btnGreen}"/>
   			<g:Image resource="{resources.ic_delete_white}" ui:field="btnCancel" title="{label.Cancel}" addStyleNames="{style.btnFloat} {style.btnCancel} {style.btnRed}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="resetPanel" addStyleNames="{style.resetPanel}">
			<g:Image resource="{resources.ic_restart}" ui:field="btnReset" title="{label.ReturnToOriginal}" addStyleNames="{style.btnReset}"/>
			<g:HTMLPanel ui:field="originalPanel" addStyleNames="{style.originalPanel}">
				<g:Image ui:field="imgOriginal" addStyleNames=" {style.imgOriginal}"/>
				<g:Label text="{label.ReturnToOriginal}" addStyleNames="{style.lbl} {style.lblReset}"/>
			</g:HTMLPanel>
   			
		</g:HTMLPanel>
		<g:SimplePanel ui:field="pagePreview" styleName="{style.pagePanelPreview}"/>
	</g:HTMLPanel>
	
</ui:UiBinder> 