<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="bpm.fd.design.ui.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         id="freedash2_product"
         point="org.eclipse.core.runtime.products">
      <product
            application="bpm.fd.design.ui.rcp.application"
            name="Vanilla Dashboard Designer">
         <property
               name="appName"
               value="Vanilla Dashboard Designer">
         </property>
         <property
               name="aboutText"
               value="Vanilla Dashboard Designer&#x0A;&#x0A;Version 8&#x0A;&#x0A;Product of BPM-Conseil&#x0A;&#x0A;http://www.bpm-conseil.com/">
         </property>
         <property
               name="aboutImage"
               value="icons/vanilla_about.gif">
         </property>
         <property
               name="windowImages"
               value="icons/fd_16.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="bpm.fd.design.ui.rcp.preferences.PreferenceInitializers">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="bpm.fd.design.ui.rcp.preferences.PreferenceStartupPage"
            id="bpm.fd.design.ui.rcp.preferences.PreferencePage"
            name="Startup">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="bpm.fd.design.ui.rcp.category"
            name="Vanilla Dashboard">
      </category>
      <command
            categoryId="bpm.fd.design.ui.rcp.category"
            id="bpm.fd.design.ui.rcp.commandConvertModel"
            name="ConvertModel">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="bpm.fd.design.ui.rcp.commands.ConvertModelHandler"
            commandId="bpm.fd.design.ui.rcp.commandConvertModel">
         <enabledWhen>
            <with
                  variable="bpm.fd.design.ui.rcp.currentModelVersion">
               <equals
                     value="enabled">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="bpm.fd.design.ui.rcp.toolbar1">
            <command
                  commandId="bpm.fd.design.ui.rcp.commandConvertModel"
                  id="bpm.fd.design.ui.rcp.toolbar.convertmodel"
                  label="Convert Fd model layout"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="bpm.fd.design.ui.rcp.FdSourceProvider">
         <variable
               name="bpm.fd.design.ui.rcp.currentModelVersion"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="bpm.fd.design.ui.rcp.commandConvertModel"
            icon="src/bpm/fd/design/ui/rcp/icons/document_convert.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="bpm.fd.design.ui.rcp.splashHandlers.InteractiveSplashHandler"
            id="bpm.fd.design.ui.rcp.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="bpm.fd.design.ui.rcp.freedash2_product"
            splashId="bpm.fd.design.ui.rcp.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>

</plugin>
