<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@external successMessage, failureMessage, warningMessage, availabilityMessage;
		.successMessage, .failureMessage, .warningMessage, .availabilityMessage{
			text-align: center;
			background: #fff;
			border-radius: 10px;
			padding: 30px;
			margin: 30px;
		}
		.successMessage{
			border: 1px solid #148202;
			color: #148202;
		}
		.failureMessage{
			border: 1px solid #cb2727;
			color: #cb2727;
		}
		.warningMessage{
			border: 1px solid #ffc600;
			color: #ffc600;
		}	
		.availabilityMessage {
			border: 1px solid #ff9900;
			color: #148202;
		}		

		
		.dialogResult {
			border-radius: 10px 10px 10px 10px;
			position: absolute;
			width: 30%;
			padding-bottom: 30px;
			background: none repeat scroll 0% 0% #fff !important;
			left: 0;
			top: 0;
			bottom: 0;
			right: 0;
			margin: auto;
			height: 220px;
			text-align: center;
			-webkit-box-shadow: 3px 3px 10px 0px black;
			-moz-box-shadow: 3px 3px 10px 0px black;
			box-shadow: 3px 3px 10px 0px black;
			transition: all 1s;
		}
		
		.header {
			width: 100%;
			height: 30px;
			background: #fff;
			-webkit-border-radius: 10px;
			-moz-border-radius: 10px;
			border-radius: 10px;
		}
		
		.btnClose {
			height: 25px;
			width: 25px;
			float: right;
			border: none;
			margin-right: 5px;
		}
		
		.btnClose {
			background: url("webapps/aklabox_files/images/ic_dialog_close2.png") no-repeat
				center;
		}
		
		.btnClose:hover {
			background: #20709b url("webapps/aklabox_files/images/ic_dialog_close2.png")
				no-repeat center !important;
		}
		
		.title {
			padding: 3px 3px 3px 20px;
			color: #fff;
			float: left;
		}
		
		.logo{
			widht: 52%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="dialog" styleName="{style.dialogResult}">
		<div class="{style.header}">
			<g:Button ui:field="btnClose" styleName="{style.btnClose}" />
		</div>
		<g:HTMLPanel ui:field="content">
				<g:Image ui:field="imgLogo" addStyleNames="{style.logo}"/>
				<g:Label ui:field="lblMessage" />
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 