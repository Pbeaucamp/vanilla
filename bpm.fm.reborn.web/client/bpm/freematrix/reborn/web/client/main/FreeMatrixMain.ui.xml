<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.freematrix.reborn.web.client.main.FreeMatrixMain.MyStyle">
		body{
			margin: 0px !impotant;
			overflow: hidden;
		}
	
		.inline{
			display: inline-block;	
			vertical-align: middle;
		}
	
		.headerPanel{
			width: 100%;
			height: 40px;
			background-repeat: repeat-x;
			background-size: 1px 40px;
			background-position: 0 0;
			background-color: #399d93;
			border: 0;
			-webkit-box-shadow: none;
			position: relative;
		}
		
		.menuPanel{
			width: 0%;
			overflow: hidden;
			background: #fff;
			-webkit-box-shadow: 3px 0px 12px 0px rgba(50, 50, 50, 0.19);
			-moz-box-shadow:    3px 0px 12px 0px rgba(50, 50, 50, 0.19);
			box-shadow:         3px 0px 12px 0px rgba(50, 50, 50, 0.19);
			transition: 0.5s all;
			-webkit-transition: 0.5s all;
			-moz-transition: 0.5s all;
			position: absolute;
			left:0;
			top:0;
			bottom:0;
			z-index: 10000;
		}
		
		.contentPanel{
			width: 100%;
			height: 100%;
			transition: 0.5s all;
			-webkit-transition: 0.5s all;
			-moz-transition: 0.5s all;
		}
		.middlePanel{
			position: absolute;
			left:0;
			top:40px;
			right:0;
			bottom:0px;
		}
		.rootPanel {
			width: 100%;
			height: 100%;
		}
		
		.fullScreen {
			top: 0px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.rootPanel}">
		<g:HTMLPanel ui:field="headerPanel" addStyleNames="{style.headerPanel}"/>
		<g:HTMLPanel ui:field="middlePanel" addStyleNames="{style.middlePanel}">
			<g:HTMLPanel ui:field="menuPanel" addStyleNames="{style.menuPanel} {style.inline}"/>
			<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel} {style.inline}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 