<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.freematrix.reborn.web.client.i18n.LabelConstants' />
	
	<ui:style>
		.title,.value{
			display: inline-block;
			vertical-align: middle;
		}
		.title{
			width: 30%;
			border-right: 1px solid #e7e7e7
			color: #777;
			font-weight: bold;
		}
		.value{
			width: 69%;
			color: #399d93;
		}
		.generalPanelItem{
			padding: 10px;
			border-bottom: 1px solid #e4e4e4;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.objColName}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblName" addStyleNames="{style.value}" />
		</div>
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.direction}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblTrend" addStyleNames="{style.value}" />
		</div>
		
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.maxCol}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblMaxColumn" addStyleNames="{style.value}" />
		</div>
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.minCol}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblMinColumn" addStyleNames="{style.value}" />
		</div>
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.tableName}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblTableName" addStyleNames="{style.value}" />
		</div>
		<div class="{style.generalPanelItem}">
			<g:Label text="{label.dateColumn}" addStyleNames="{style.title}" />
			<g:Label ui:field="lblDateColumn" addStyleNames="{style.value}" />
		</div>
		<div class="{style.generalPanelItem}">
			<g:Label text="Tolerance" addStyleNames="{style.title}" />
			<g:Label ui:field="lblToleranceColumn" addStyleNames="{style.value}" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 