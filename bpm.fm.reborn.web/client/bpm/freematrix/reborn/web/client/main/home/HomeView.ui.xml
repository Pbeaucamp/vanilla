<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.freematrix.reborn.web.client.main.home.HomeView.MyStyle">
		.inline{
			display: inline-block;
			vertical-align: top;
		}
		
		.applicationPanel{
			width: 300px;
			height: 100%;
			overflow: auto;
			background: #FDFDFD;
			border: 1px solid #DDD;
			position: relative;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			-ms-box-sizing: border-box;
			//margin-right: 5px;
		}
		
		.dashboardPanel, .infoPanel{
			height: 49%;
			background: #fff;
			overflow: auto;
			//min-height: 40px;
		}
		.infoPanel{
			background: #399d93;
			//min-height: 295px;
		}
		.rightPanel{
			position: absolute;
			top: 0;
			bottom: 0;
			right: 0;
			left: 305px;
			min-width: 900px;
			//width: 100%;
		}	
		.contentPanel{
			width: 100%;
			height: 100%;
		}
		
		.panelSplitter {
		    height: 2%;
		    position: relative;
		    background: #399D93;
		    width: 100%;
		
		}
		
		.splitter {
			background: url("images/splitPanelThumb.png") no-repeat scroll center center;
		    cursor: row-resize;
	    	height: 100%;
    		width: 100%;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel ui:field="applicationPanel" addStyleNames="{style.applicationPanel} {style.inline}" />
		<g:HTMLPanel ui:field="rightPanel" addStyleNames="{style.inline} {style.rightPanel}">
			<g:HTMLPanel ui:field="dashboardPanel" addStyleNames="{style.dashboardPanel} " />
			<g:SimplePanel ui:field="panelSplitter" addStyleNames="{style.panelSplitter}"/>
			<g:HTMLPanel ui:field="infoPanel" addStyleNames="{style.infoPanel} " >
				
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 