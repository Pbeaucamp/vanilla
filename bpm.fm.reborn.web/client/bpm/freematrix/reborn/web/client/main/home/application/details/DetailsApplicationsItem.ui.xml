<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.freematrix.reborn.web.client.images.Images' />
	
	<ui:style>
		.name, .value, .num{
			vertical-align: middle;
			display : inline-block;
		}
		.num{
			width: 2%;
			font-weight: bold;
			color:  #4B5B83;
		}
		.name{
			width: 49%;
			font-weight: bold;
			border-right: 1px solid #e4e4e4;
		}
		.value{
			width: 30%;
		}
		.panel{
			padding: 10px;	
			background: #fff;
			color: #777;
			border-bottom: 1px solid #e4e4e4;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
	    <g:Label ui:field="lblNum" addStyleNames="{style.num}"/>
		<g:Label ui:field="lblApplicationName" addStyleNames="{style.name}"/>
		<g:Label ui:field="lblValue" addStyleNames="{style.value}"/>
	    <g:HTMLPanel ui:field="lblHealthUp">
	    	<g:Image resource="{resources.thumb_up}"/>
	    </g:HTMLPanel>
	    <g:HTMLPanel ui:field="lblHealthDown">
	   		<g:Image resource="{resources.thumb_down}"/>
	    </g:HTMLPanel>
	    <g:HTMLPanel ui:field="lblHealthEqual">
	    	<g:Image resource="{resources.thumb_equal}"/>
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 