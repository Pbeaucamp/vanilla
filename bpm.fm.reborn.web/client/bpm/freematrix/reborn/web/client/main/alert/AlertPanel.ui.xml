<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.freematrix.reborn.web.client.i18n.LabelConstants' />
	<ui:with field='resources' type='bpm.freematrix.reborn.web.client.images.Images' />
	
	<ui:style>
		.gridPanel {
			height: 48%;
			width: 100%;
		}
		.btnToolbar {
			cursor: pointer;
			height: 32px !important;
			width: 32px !important;
			background-position: center !important;
			margin: 4px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.toolbar {
			width: 100%;
			height: 40px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.toolbar}">
			<g:Image ui:field="imgResolve" resource="{resources.alert_solve}" title="{label.solveAlert}" addStyleNames="{style.btnToolbar}"/>
			<!-- <g:Image ui:field="imgRefreshRaised" resource="{resources.alert_loadopen}" title="Load opened alerts" addStyleNames="{style.btnToolbar}"/> -->
			<!-- <g:Image ui:field="imgRefreshResolved" resource="{resources.alert_loadsolved}" title="Load solved alerts" addStyleNames="{style.btnToolbar}"/> -->
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.gridPanel}"></g:HTMLPanel>
		<g:HTMLPanel ui:field="commentPanel" addStyleNames="{style.gridPanel}"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 