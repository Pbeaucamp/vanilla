<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.freematrix.reborn.web.client.i18n.LabelConstants' />
	
	<ui:style>
		.applicationField{
			height: 40vh;
			overflow: auto;
		}
		.item, .value{
			vertical-align: middle;	
			display: inline-block;
			width: 49%;
		}
		.header{
			color: #fff;
			background:  #399d93;
			height: 20px;
			text-align: center;
		}
		.item{
			width: 51%;
			padding-left: 3%;
		}
		.value{
			width: 20%;
		}
		.gridPanel {
			height: 100%;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.gridPanel}">
	   <!--  <div class="{style.header}">
	    	<g:Label text="{label.item}" addStyleNames="{style.item}"/>
	    	<g:Label text="{label.value}" addStyleNames="{style.value}"/>
		</div>
		<g:HTMLPanel ui:field="applicationItemField" addStyleNames="{style.applicationField}"/> -->
	</g:HTMLPanel>
</ui:UiBinder> 