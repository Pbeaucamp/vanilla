<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.freematrix.reborn.web.client.i18n.LabelConstants' />
	<ui:style>
		.title,.value{
			display: inline-block;
			vertical-align: middle;
		}
		.title{
			width: 30%;
			border-right: 1px solid #e7e7e7
			color: #777;
			font-weight: bold;
		}
		.value{
			width: 69%;
			color: #399d93;
		}
		.generalPanel, .axisPanel{
			border: 1px solid @e7e7e7;
		}
		.generalPanelItem{
			padding: 10px;
			border-bottom: 1px solid #e4e4e4;
		}
		.header{	
			padding: 5px;
			background: #399d93;
			color: #FFF;
		}
		.panel{
			background: #fff;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
	    <!-- General Informations -->
	    <g:HTMLPanel addStyleNames="{style.generalPanel}">
			<g:Label text="{label.generalInfo}" addStyleNames="{style.header}"/>
			<div class="{style.generalPanelItem}">
				<g:Label text="{label.name}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblName" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">
				<g:Label text="Description" addStyleNames="{style.title}"/>
				<g:HTML ui:field="lblDesc" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">	
				<g:Label text="{label.dateColumn}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblDateCol" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">
				<g:Label text="{label.responsible}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblResponsible" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">	
				<g:Label text="{label.periodicity}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblPeriodicity" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">
				<g:Label text="{label.tableName}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblTableName" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">	
				<g:Label text="{label.valueColumn}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblValueColumn" addStyleNames="{style.value}"/>
			</div>
			<div class="{style.generalPanelItem}">	
				<g:Label text="{label.aggregator}" addStyleNames="{style.title}"/>
				<g:Label ui:field="lblAggreg" addStyleNames="{style.value}"/>
			</div>
		</g:HTMLPanel>
		
		<!-- Axis Informations -->
		<g:HTMLPanel addStyleNames="{style.axisPanel}">
			<g:Label text="{label.axisInfos}" addStyleNames="{style.header}"/>
			<g:HTMLPanel ui:field="axisInfo"/>
		</g:HTMLPanel>
		
		<!-- Objective Informations -->
		<g:HTMLPanel addStyleNames="{style.axisPanel}">
			<g:Label text="{label.objInfos}" addStyleNames="{style.header}"/>
			<g:HTMLPanel ui:field="objectiveInfo"/>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 