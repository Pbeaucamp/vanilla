<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.freematrix.reborn.web.client.images.Images' />
	<ui:with field='label' type='bpm.freematrix.reborn.web.client.i18n.LabelConstants' />
	<ui:style>
		.inline{
			vertical-align: middle;
			display: inline-block;
		}
		.panel{
			width: 100%;
			height: 100%;
			overflow: auto;
			position: relative;
		}
		.lblDashboard{
			height: 20px;
			padding: 9px 14px;
			font-size: 14px;
			font-weight: bold;
			color: #5F5F5F;
			text-shadow: 0 1px 0 #FFF;
			border: 1px solid #D4D4D4;
			-webkit-box-shadow: 0 1px 0 #FFF;
			-moz-box-shadow: 0 1px 0 #fff;
			box-shadow: 0 1px 0 #FFF;
			background-color: f5f5f5;
			background-image: -moz-linear-gradient(top, white, #f5f5f5);
			background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#FFF), to(#F5F5F5));
			background-image: -webkit-linear-gradient(top, #FFF, #F5F5F5);
			background-image: -o-linear-gradient(top, white, #f5f5f5);
			background-image: linear-gradient(to bottom, #FFF, #F5F5F5);
			background-repeat: repeat-x;
			filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#f2f2f2', GradientType=0);
			
		}
		.headerPanel{
			padding-bottom: 5px;
			padding-top: 5px;
			background: #D5D5D5;
			color: #FFF;
		}
		.item, .itemShort{
			width: 27.5%;
			display: inline-block;
			vertical-align: middle;
			text-align: center;
		}
		.itemShort{
			width: 7%;
		}
		.icCalendar{
			background: url("webapps/freematrix_files/images/calendar.png") no-repeat center;
			background-size: 20px;
			width: 20px;
			height: 20px;
			float: left;
			transition: 1s all;
			-webkit-transition: 1s all;
			-moz-transition: 1s all;
			cursor: pointer;
		}
		.icCalendar:hover{
			opacity: 0.5;
		}
		.lblDate{
			float: left;
			font-size: 1em;
			color: #399d93;
			margin-right: 20px;
		}
		.lstBox {
			width: 150px;
			margin-top: 5px;
		}
		.marginLeft {
			margin-left: 15px;
		}
		.lbl {
			float: left;
			margin:5px;
		}
		.gridPanel {
		    bottom: 0;
		    left: 0;
		    position: absolute;
		    right: 0;
		    top: 49px;
		    overflow: auto;
		}
		
		.imgFull {
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			top: 0;
			right: 0;
			opacity: 0.5;
		}
		
		.imgSmall {
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			top: 0;
			right: 40px;
			opacity: 0.5;
			
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel" addStyleNames="{style.panel}">
	    <div class="{style.lblDashboard}">
	    	<g:Label ui:field="lblDatePicker" addStyleNames="{style.inline} {style.icCalendar}" title="{label.changeDate}"/>
	    	<g:Label ui:field="lblDateTitle" text="Date" addStyleNames="{style.inline} {style.lblDate}"/>
	    </div>
	    
	    <g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.gridPanel}"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 