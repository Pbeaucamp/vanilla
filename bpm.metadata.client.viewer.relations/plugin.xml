<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="bpm.metadata.ui.viewer.relations.views.ViewRelation"
            id="bpm.metadata.ui.viewer.relations.views.ViewRelation"
            name="Visual Relation">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="metadataclient.perspective">
         <view
               closeable="false"
               id="bpm.metadata.ui.viewer.relations.views.ViewRelation"
               minimized="false"
               moveable="false"
               relationship="stack"
               relative="metadataclient.view.properties"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
