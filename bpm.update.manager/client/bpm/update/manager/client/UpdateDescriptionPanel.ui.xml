<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.update.manager.client.I18N.Labels' />
	
	<ui:style>
		.width {
		    width: 100%;
		}
		
		.panelProps {
	    	margin: 20px 10px;
		}
		
		.title {
	    	font-weight: bold;
		}
		
		.html {
		    background: none repeat scroll 0 0 #E6E6E6;
		    margin-top: 10px;
		    padding: 15px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.width}">
		<g:HTML ui:field="txtDescription" addStyleNames="{style.width}"/>
		<g:HTMLPanel ui:field="panelProperties" addStyleNames="{style.panelProps}">
			<g:Label text="{label.ModificationProperties}" addStyleNames="{style.title}"/>
			<g:HTML ui:field="txtProperties" addStyleNames="{style.html}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelScripts" addStyleNames="{style.panelProps}">
			<g:Label text="{label.DatabaseScripts}" addStyleNames="{style.title}"/>
			<g:HTML ui:field="txtScripts" addStyleNames="{style.html}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 