<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.fm.designer.web.client.images.Images' />
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	
	<ui:style type="bpm.fm.designer.web.client.panel.TopToolbar.MyStyle">
		.main {
			width: 100%;
			height: 40px;
			-webkit-box-shadow: 0 3px 10px -3px black;
			-moz-box-shadow: 0 3px 10px -3px black;
			-oz-box-shadow: 0 3px 10px -3px black;
			-o-box-shadow: 0 3px 10px -3px black;
			box-shadow: 0 3px 10px -3px black;
			display: inline-block;
			vertical-align: middle;
			background-color: #399d93;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		}
		.listThemes {
			margin:5px;
			width: 200px;
		}
		.listPanel {
			display: inline-block;
			vertical-align: top;
			margin: 3px;
			color: white;
		}
		
		.lbl {
			float: left;
			margin: 7px 5px 5px;
		}
		.btnHome {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
			float: right;
		}
		.logo {
			float: right;
			height: 40px !important;
			background-position: center !important;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.main}">
		<g:Image ui:field="imgDatasource" resource="{resources.datasource}" title="{label.DatasourceManager}" addStyleNames="{style.btnToolbar}"/>
		<g:Image ui:field="imgSecurity" resource="{resources.security}" title="{label.security}" addStyleNames="{style.btnToolbar}"/>
		<g:HTMLPanel addStyleNames="{style.listPanel}" ui:field="panelFilter">
	<!-- 	<g:Label text="{label.observatories}" styleName="{style.lbl}"></g:Label> <g:ListBox ui:field="lstObservatories" styleName="{style.listThemes}"></g:ListBox>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.listPanel}">
			<g:Label text="{label.themes}" styleName="{style.lbl}"></g:Label> <g:ListBox ui:field="lstThemes" styleName="{style.listThemes}"></g:ListBox> -->	
		</g:HTMLPanel>
		<g:Image ui:field="imgHome" resource="{resources.home}" title="{label.Home}" addStyleNames="{style.btnHome}"/>
		<g:Image resource="{resources.VanillaKpiDesigner_LogoLettering_32}" addStyleNames="{style.logo}"/>
	</g:HTMLPanel>
</ui:UiBinder> 