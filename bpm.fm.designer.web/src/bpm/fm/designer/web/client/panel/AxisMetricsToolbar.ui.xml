<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.fm.designer.web.client.images.Images' />
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	
	<ui:style type="bpm.fm.designer.web.client.panel.AxisMetricsToolbar.MyStyle">
		.main {
			height: 70px;
			width: 100%;
			background-color: #399d93;
		}
		
		.title {
		    border-bottom: 1px solid #000000;
		    font-size: 20px;
		    height: 30px;
		    line-height: 30px;
		    padding-left: 10px;
		    color: white;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 32px !important;
			width: 32px !important;
			background-position: center !important;
			margin: 4px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.toolbar {
			width: 100%;
			height: 40px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.main}">
		<g:Label ui:field="lblTitle" addStyleNames="{style.title}"/>
		<g:HTMLPanel addStyleNames="{style.toolbar}">
			<g:Image ui:field="imgAdd" resource="{resources.add}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgEdit" resource="{resources.edit}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgDelete" resource="{resources.delete}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgRefresh" resource="{resources.refresh}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="imgLink" resource="{resources.assos}" title="{label.linkToAMTheme}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 