<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:bpm.fm.designer.web.client.panel">
	
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	
	<ui:style>
		.panelAxis {
		    box-shadow: 0 3px 10px -3px #000000;
		    height: 98%;
		    position: relative;
		    width: 340px;
		}
		
		.panelTree {
			overflow: auto;
			position: absolute;
			top: 70px;
			bottom: 0px;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelAxis}">
		<b:AxisMetricsToolbar ui:field="toolbar" text="{label.axis}"/>
		<g:HTMLPanel addStyleNames="{style.panelTree}">
			<g:Tree ui:field="treeAxes"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 