<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:bpm.fm.designer.web.client.panel">
	
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	
	<ui:style>
		.metricsPanel {
		    height: 98%;
		    width: 35%;
		    box-shadow: 0 3px 10px -3px #000000;
		}
		
		.propertiesPanel {
			top: 0px;
			position: absolute;
			left: 35.5%;
			right: 5px;
			height: 98%;
			min-width: 600px;
		    box-shadow: 0 3px 10px -3px #000000;
		}

		.scrollPanel {
			overflow: auto;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="100%" height="100%">  
	
		<g:north size="50">
			<b:TopToolbar ui:field="toolbar"/>
		</g:north>
		<g:west size="345">
			<b:AxisPanel ui:field="axesPanel"/>
		</g:west>
		<g:center>
			<g:HTMLPanel addStyleNames="{style.scrollPanel}">
				<b:MetricPanel ui:field="metricPanel" addStyleNames="{style.metricsPanel}"/>
				<g:HTMLPanel ui:field="propertiesPanel" addStyleNames="{style.propertiesPanel}"/>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 