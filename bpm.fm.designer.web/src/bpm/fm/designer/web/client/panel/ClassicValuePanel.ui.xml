<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:with field='resources' type='bpm.fm.designer.web.client.images.Images' />
	
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
			min-width: 600px;
		}
	
		.mainToolbar {
			height: 70px;
			width: 100%;
			background-color: #399d93;
		}
		
		.toolbar {
			width: 100%;
			height: 40px;
		}
		
		.title {
		    border-bottom: 1px solid #000000;
		    font-size: 20px;
		    height: 30px;
		    line-height: 30px;
		    padding-left: 10px;
		}
		
		.btnToolbar {
			cursor: pointer;
			height: 32px !important;
			width: 32px !important;
			background-position: center !important;
			margin: 4px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelContent {
			overflow: auto;
			position: absolute;
			top: 80px;
			bottom: 0px;
			width: 100%;
			min-width: 600px;
		}
		
		.panelRelative {
		    height: 100%;
		    position: relative;
		    width: 100%;
		}
		
		.captionMetric {
		    height: 55%;
		    left: 0;
		    position: absolute;
		    right: 49%;
		    top: 0;
		}
		
		.captionObjective {
		    height: 55%;
		    left: 51%;
		    position: absolute;
		    right: 0;
		    top: 0;
		}
		
		.captionAxis {
		    bottom: 0;
		    left: 0;
		    position: absolute;
		    right: 0;
		    top: 58%;
		}

		.alertPanel {
		    bottom: 0;
		    left: 0;
		    position: absolute;
		    right: 0;
			top: 0;
		}
		
		.captionContent {
			width: 100%;
			height: 100%;
			overflow: auto;
		}
		
		.label {
			float: left;
			width: 115px;	
		}
		
		.txtBox {
			width: 208px;
		}
		
		.lstBox {
			width: 213px;
		}
		
		.txtWithBrowse {
			width: 175px;
		}
		
		.linePanel {
			margin: 20px;	
		}
		
		.lstAxes {
			width: 870px;
			height: 200px;	
		}
		
		.toolbar {
			width: 100%;
			height: 40px;
		}
	</ui:style>
	<g:HTMLPanel>
	
		<g:CaptionPanel captionText="{label.metricValue}" addStyleNames="{style.captionMetric}">
			<g:HTMLPanel addStyleNames="{style.captionContent}">		
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.datasource}"></g:Label>
					<g:ListBox ui:field="lstDatasources" addStyleNames="{style.lstBox}"></g:ListBox>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.table}"></g:Label>
					<g:TextBox ui:field="txtTable" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnTableBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnValue}"></g:Label>
					<g:TextBox ui:field="txtColumnValue" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnColumnValueBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.periodicity}"></g:Label>
					<g:ListBox ui:field="lstPeriodicity" addStyleNames="{style.lstBox}"></g:ListBox>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnDate}"></g:Label>
					<g:TextBox ui:field="txtColumnDate" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnColumnDateBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.aggregator}"></g:Label>
					<g:ListBox ui:field="lstAggregator" addStyleNames="{style.lstBox}"></g:ListBox>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:CaptionPanel>
		
		<g:CaptionPanel captionText="{label.objectiveValue}" addStyleNames="{style.captionObjective}">
			<g:HTMLPanel addStyleNames="{style.captionContent}">
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.table}"></g:Label>
					<g:TextBox ui:field="txtObjTable" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnObjTableBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnObjective}"></g:Label>
					<g:TextBox ui:field="txtObjColumnValue" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnObjColumnValueBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnMin}"></g:Label>
					<g:TextBox ui:field="txtObjColumnMin" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnObjColumnMinBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnMax}"></g:Label>
					<g:TextBox ui:field="txtObjColumnMax" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnObjColumnMaxBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="{label.columnDate}"></g:Label>
					<g:TextBox ui:field="txtObjColumnDate" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnObjColumnDateBrowse">...</g:Button>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="Direction"></g:Label>
					<g:ListBox ui:field="lstDirection" addStyleNames="{style.lstBox}"></g:ListBox>
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.linePanel}">
					<g:Label addStyleNames="{style.label}" text="Tolerance"></g:Label>
					<g:TextBox ui:field="txtTolerance" addStyleNames="{style.txtWithBrowse}"></g:TextBox>
					<g:Button ui:field="btnBrowseTolerance">...</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:CaptionPanel>
		
		<g:CaptionPanel ui:field="gridPanel" captionText="{label.axis}" addStyleNames="{style.captionAxis}"/>
	
	</g:HTMLPanel>
</ui:UiBinder> 