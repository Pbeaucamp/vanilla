<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:style>
		.exception {
			width: 630px;
			height: 100px;
			margin-bottom: 10px;
		}
		.query {
    		background-color: #DDDDDD;
    		border: 1px solid #000000;
    		height: 100px;
    		margin: 10px;
    		overflow: auto;
    		padding: 5px;
		}
		.queryPanel {
			border: 1px solid black;
			border-radius: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.queryPanel}">
	
		<g:HTML ui:field="lblQuery" addStyleNames="{style.query}"></g:HTML>
		<g:DisclosurePanel>
			<g:header><ui:text from="{label.Error}" /></g:header>	
			<g:TextArea ui:field="lblException" addStyleNames="{style.exception}"></g:TextArea>
		</g:DisclosurePanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 