<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:style>
		.txtArea {
			width: 630px;
			height: 100px;
		}
	</ui:style>
	<g:CaptionPanel ui:field="captionQuery">
		<g:HTMLPanel>
			<g:CheckBox ui:field="chkQuery"></g:CheckBox>
			<g:DisclosurePanel>
				<g:header><ui:text from="{label.showModifyQuery}" /></g:header>	
				<g:TextArea ui:field="txtQuery" addStyleNames="{style.txtArea}"></g:TextArea>
			</g:DisclosurePanel>
		</g:HTMLPanel>
	</g:CaptionPanel>
</ui:UiBinder> 