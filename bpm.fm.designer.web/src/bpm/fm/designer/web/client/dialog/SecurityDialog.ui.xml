<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:with field='resources' type='bpm.fm.designer.web.client.images.Images' />
	
	<ui:style  type="bpm.fm.designer.web.client.dialog.SecurityDialog.MyStyle">
		.panel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		.btnToolbar {
			cursor: pointer;
			height: 32px !important;
			width: 32px !important;
			background-position: center !important;
			margin: 4px;
		}

		.btnToolbar2 {
			margin-left: 50px;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		.main {
			height: 40px;
			width: 100%;
			background-color: #c4ece7;
		}
		.gridPanel {
			position: absolute;
			width: 100%;
			top: 75px;
			bottom: 0px;
		}
		.grid {
			width: 100%;
			height: 100%;
		}
		.contentPanel {
			width: 500px;
			height: 500px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
			<g:HTMLPanel addStyleNames="{style.panel}">
				<g:HTMLPanel addStyleNames="{style.main}">
					<g:Image ui:field="imgAdd" resource="{resources.add}" title="{label.Add}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgEdit" resource="{resources.edit}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgDelete" resource="{resources.delete}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgRefresh" resource="{resources.refresh}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
					<g:Image ui:field="imgLinkTheme" resource="{resources.addTheme}" title="{label.linkToTheme}" addStyleNames="{style.btnToolbar}, {style.btnToolbar2}"/>
					<g:Image ui:field="imgLinkGroup" resource="{resources.assos}" title="{label.linkToGroup}" addStyleNames="{style.btnToolbar}, {style.btnToolbar2}"/>					
				</g:HTMLPanel>
				<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.gridPanel}"/>
			</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 