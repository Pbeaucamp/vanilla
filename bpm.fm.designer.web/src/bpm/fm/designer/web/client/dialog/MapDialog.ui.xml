<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:style>
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
			width: 230px;
			
		}
		.contentPanel {
			width: 400px;
			height: 300px;
		}
	</ui:style>

	<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
		<g:HTMLPanel>
			<g:Label ui:field="lblName" addStyleNames="{style.lbl}" text="{label.name}"/>
			<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblDesc" addStyleNames="{style.lbl}" text="Description"/>
			<g:TextArea ui:field="txtDesc" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblDatasource" addStyleNames="{style.lbl}" text="{label.datasource}"/>
			<g:ListBox ui:field="lstDatasource" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblTable" addStyleNames="{style.lbl}" text="{label.table}"/>
			<g:TextBox ui:field="txtTable" addStyleNames="{style.marginTop}"/>
			<g:Button ui:field="btnTableBrowse">...</g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblColumnZone" addStyleNames="{style.lbl}" text="Zone column"/>
			<g:TextBox ui:field="txtColumnZone" addStyleNames="{style.marginTop}"/>
			<g:Button ui:field="btnColumnZoneBrowse">...</g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblColumnLatitude" addStyleNames="{style.lbl}" text="Latitude"/>
			<g:TextBox ui:field="txtColumnLatitude" addStyleNames="{style.marginTop}"/>
			<g:Button ui:field="btnColumnLatitudeBrowse">...</g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblColumnLongitude" addStyleNames="{style.lbl}" text="Longitude"/>
			<g:TextBox ui:field="txtColumnLongitude" addStyleNames="{style.marginTop}"/>
			<g:Button ui:field="btnColumnLongitudeBrowse">...</g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<g:Label ui:field="lblLevel" addStyleNames="{style.lbl}" text="Level"/>
			<g:ListBox ui:field="lstLevel" addStyleNames="{style.marginTop}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 