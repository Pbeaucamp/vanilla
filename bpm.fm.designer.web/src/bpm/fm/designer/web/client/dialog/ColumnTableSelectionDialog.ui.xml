<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.tree {
			width: 250px;
			margin: 10px;
			overflow: auto;
			height: 380px;	
			float: left;
		}
		.textArea {
			width: 490px;
			margin: 10px;
			float: right;
			height: 380px;
		}
		.content {
			width: 850px;
			height: 520px;
		}
	</ui:style>
		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.content}">
			<g:Tree ui:field="databaseTree" addStyleNames="{style.tree}"></g:Tree>
			
			<g:TextArea ui:field="txtFormula" addStyleNames="{style.textArea}"></g:TextArea>
		</g:HTMLPanel>
</ui:UiBinder> 