<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:with field='resources' type='bpm.fm.designer.web.client.images.Images' />
	
	<ui:style>
		.btnToolbar {
			cursor: pointer;
			height: 40px !important;
			width: 40px !important;
			background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.panelName {
			height: 35px;
		}
		
		.main {
			height: 300px;
			width: 450px;
			background-color: #E8EEF7;
			float:left;
		}
		
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
			width: 200px;
		}

		.gridPanel {
			position: absolute;
			width: 100%;
			top: 75px;
			bottom: 0px;
		}

		.images {
			margin: 4px;
		}
		.contentPanel {
			width: 800px;
			height: 400px;
		}
		.buttonPanel {
			float:left;
			width: 50px;
			height: 300px;
		}
		.listPanel {
			float:right;
			width: 300px;
			height: 300px;
		}
		.lstItems {
			width: 100%;
			height: 100%;	
		}
	</ui:style>
		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
			<g:HTMLPanel addStyleNames="{style.main}" ui:field="treePanel">
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.buttonPanel}" ui:field="buttonPanel">
				<g:Button ui:field="btnAdd" text="&gt;&gt;"></g:Button>
				<g:Button ui:field="btnDel" text="&lt;&lt;"></g:Button>
			</g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.listPanel}" ui:field="listPanel">
				<g:ListBox ui:field="lstItems" addStyleNames="{style.lstItems}"></g:ListBox>
			</g:HTMLPanel>
		</g:HTMLPanel>
</ui:UiBinder> 