<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='label' type='bpm.fm.designer.web.client.Messages' />
	<ui:style>
		.lbl {
			float: left;
			margin-left: 10px;
			width: 120px;
		    margin-top: 7px;
		}
	
		.marginTop {
			margin-top: 7px;
		}
		.contentPanel {
			width: 400px;
			height: 150px;
		}
	</ui:style>
		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}">
			<g:HTMLPanel>
				<g:Label ui:field="lblName" addStyleNames="{style.lbl}" text="{label.name}"/>
				<g:TextBox ui:field="txtName" addStyleNames="{style.marginTop}"/>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<g:CheckBox ui:field="checkCalc" text="{label.isCalc}" addStyleNames="{style.marginTop}"></g:CheckBox>
			</g:HTMLPanel>
		</g:HTMLPanel>
</ui:UiBinder> 