<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="metadata.client.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="metadata.client.Perspective"
            icon="icons/fmdt-16.png"
            id="metadataclient.perspective"
            name="%perspective_ModelDesigner">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="metadata.client.views.ViewTree"
            id="metadataclient.views.tree"
            name="%view_general">
      </view>
      <view
            class="metadata.client.views.ViewProperties"
            id="metadataclient.view.properties"
            name="%view_properties">
      </view>
      <view
            class="metadata.client.views.ViewDimensionMeasure"
            id="bpm.metadata.client.viewdimmes"
            name="%view_dimensionmeasure"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="metadata.client.wizards.datasources.DataSourceWizard"
            id="metadataclient.wizard.datasource"
            name="%wizard_datasource">
      </wizard>
      <wizard
            class="metadata.client.wizards.business.table.BusinessTableWizard"
            id="metadataclient.wizard.businesstable"
            name="%wizard_BusinessTable">
      </wizard>
      <wizard
            class="metadata.client.wizards.datasources.TableWizard"
            id="metadataclient.wizard.logicaltable"
            name="%wizard_LogicalTable">
      </wizard>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="bpm.metadata.client.application"
            name="VanillaMetadata">
         <property
               name="appName"
               value="VanillaMetadata">
         </property>
         <property
               name="aboutImage"
               value="icons/vanilla_about.gif">
         </property>
         <property
               name="aboutText"
               value="VanillaMetadata&#x0A;&#x0A;Version 8&#x0A;&#x0A;Product of BPM-Conseil&#x0A;&#x0A;&#x0A;http://www.bpm-conseil.com/">
         </property>
         <property
               name="windowImages"
               value="icons/fmdt-16.png,icons/fmdt-32.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="metadata.client.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="metadata.client.preferences.pages.GeneralPage"
            id="metadata.client.preferences.pages.general"
            name="%pref_general">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="bpm.metadata.ui.browseactionSet"
            label="Browse Action Set"
            visible="true">
         <menu
               id="browseMenu"
               label="%action_browseMenu">
            <separator
                  name="browseGroup">
            </separator>
         </menu>
         <action
               class="bpm.metadata.ui.actions.Browse"
               icon="src/metadataclient/icons/browse.png"
               id="bpm.metadata.ui.actions.BrowsAction"
               label="%action_browse"
               toolbarPath="browseGroup"
               tooltip="%action_browsedata">
            <enablement>
               <or>
                  <objectClass
                        name="metadata.client.trees.TreeDataStream">
                  </objectClass>
                  <objectClass
                        name="metadata.client.trees.TreeBusinessTable">
                  </objectClass>
                  <objectClass
                        name="bpm.metadata.layer.logical.IDataStream">
                  </objectClass>
                  <objectClass
                        name="bpm.metadata.layer.business.IBusinessTable">
                  </objectClass>
               </or>
            </enablement>
         </action>
         <action
               class="bpm.metadata.ui.actions.BrowseColumn"
               icon="src/metadataclient/icons/browse_col.png"
               id="bpm.metadata.ui.actions.SampleAction"
               label="%action_browsecolumn"
               toolbarPath="browseGroup"
               tooltip="%action_browsecolumntt">
            <enablement>
               <or>
                  <objectClass
                        name="metadata.client.trees.TreeDataStream">
                  </objectClass>
                  <objectClass
                        name="metadata.client.trees.TreeBusinessTable">
                  </objectClass>
                  <objectClass
                        name="bpm.metadata.layer.logical.IDataStream">
                  </objectClass>
                  <objectClass
                        name="bpm.metadata.layer.business.IBusinessTable">
                  </objectClass>
               </or>
            </enablement>
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="bpm.metadata.client.category.tools"
            name="Vanilla Tools">
      </category>
      <command
            categoryId="bpm.metadata.client.category.tools"
            id="bpm.metadata.client.commands.generateGateway"
            name="Generate Gateway Transformation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="bpm.metadata.client.handlers.GenerateGatewayHandler"
            commandId="bpm.metadata.client.commands.generateGateway">
         <enabledWhen>
            <and>
               <with
                     variable="bpm.repository.ui.connected">
                  <equals
                        value="enabled">
                  </equals>
               </with>
               <with
                     variable="bpm.repository.ui.imported">
                  <equals
                        value="enabled">
                  </equals>
               </with>
            </and>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:window">
         <separator
               name="bpm.metadata.client.separator1"
               visible="true">
         </separator>
         <command
               commandId="bpm.metadata.client.commands.generateGateway"
               id="bpm.metadata.client.menu.generateGateway"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="bpm.metadata.client.commands.generateGateway"
            icon="src/metadataclient/icons/gateway_16.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="bpm.metadata.client.splashHandlers.InteractiveSplashHandler"
            id="bpm.metadata.client.splashHandlers.interactive">
      </splashHandler>
      <splashHandler
            class="metadata.client.splashHandlers.LoginSplashHandler"
            id="metadata.client.splashHandlers.interactive">
      </splashHandler>
   </extension>
   <!--
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="bpm.metadata.client.session.SessionSourceProvider">
         <variable
               name="bpm.metadata.client.session.connected_imported"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
-->
</plugin>
