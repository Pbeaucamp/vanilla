<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='labels' type='bpm.es.web.client.I18N.Labels' />
	
	<ui:style>
		.mainPanel {
		    height: 145px;
		    overflow: auto;
		    width: 400px;
		}
		
		.imgUser {
		    border: 1px solid #D3D3D3;
		    display: inline-block;
		    height: 100px;
		    margin: 10px;
		    padding: 8px;
		    width: 100px;
		}
		
		.panelLbl {
    	    display: inline-block;
		    margin-left: 15px;
		    vertical-align: top;
		    width: 240px;
		}
		
		.lblUser {
		    font-size: 18px;
		    margin-top: 20px;
		}
		
		.lblLastConnection {
	    	margin-top: 15px;
		}
		
		.lblDate {
	    	font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Image ui:field="imgUser" addStyleNames="{style.imgUser}"/>
		<g:HTMLPanel addStyleNames="{style.panelLbl}">
			<g:HTML ui:field="lblUser" addStyleNames="{style.lblUser}"/>
			<g:Label text="{labels.DateLastConnection}" addStyleNames="{style.lblLastConnection}"/>
			<g:Label ui:field="lblLastConnection" addStyleNames="{style.lblDate}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 