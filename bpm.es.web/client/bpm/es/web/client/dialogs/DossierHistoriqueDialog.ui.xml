<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='labels' type='bpm.es.web.client.I18N.Labels' />
	
	<ui:style type="bpm.es.web.client.dialogs.DossierHistoriqueDialog.MyStyle">
		.mainPanel {
			width: 450px;
			height: 350px;
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.imgPlanned {
			opacity: 0.7;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgPlanned:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		}
		
		.panelPager {
		    bottom: 0;
		    height: 30px;
		    position: absolute;
		    width: 100%;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.mainPanel}"/>
</ui:UiBinder> 