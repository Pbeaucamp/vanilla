<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.gwt.commons.client.custom"
	xmlns:db="urn:import:bpm.es.web.client.utils"
	xmlns:fi="urn:import:bpm.es.web.client.panels.fiches">
	
	<ui:with field='labels' type='bpm.es.web.client.I18N.Labels' />
	
	<ui:style>
		.mainPanel {
			width:100%;
			height: 100%;
			overflow: auto; 	
		}
		
		.section {
		}
		
		.sectionContent {
		    margin-left: 55px;
		    width: 88%;
		}
		
		.grid {
			height: 350px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<my:SectionPanel text="{labels.Allergies}" addStyleNames="{style.section}">
			<g:HTMLPanel addStyleNames="{style.sectionContent}">
				<fi:NameDateGrid ui:field="gridAllergies" addStyleNames="{style.grid}"/>
			</g:HTMLPanel>
		</my:SectionPanel>
		<my:SectionPanel text="{labels.Vaccinations}" addStyleNames="{style.section}">
			<g:HTMLPanel addStyleNames="{style.sectionContent}">
				<fi:NameDateGrid ui:field="gridVaccinations" addStyleNames="{style.grid}"/>
			</g:HTMLPanel>
		</my:SectionPanel>
		<my:SectionPanel text="{labels.MedicalAppointments}" addStyleNames="{style.section}">
			<g:HTMLPanel addStyleNames="{style.sectionContent}">
				<fi:NameDateGrid ui:field="gridAppointment" addStyleNames="{style.grid}"/>
			</g:HTMLPanel>
		</my:SectionPanel>
		<my:SectionPanel text="{labels.VigilancePoint}" addStyleNames="{style.section}">
			<g:HTMLPanel addStyleNames="{style.sectionContent}">
				<fi:NameDateGrid ui:field="gridVigilance" addStyleNames="{style.grid}"/>
			</g:HTMLPanel>
		</my:SectionPanel>
	</g:HTMLPanel>
</ui:UiBinder> 