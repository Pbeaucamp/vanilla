<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='labels' type='bpm.es.web.client.I18N.Labels' />
	
	<ui:style type="bpm.es.web.client.panels.fiches.DossiersGrid.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		    background: none repeat scroll 0 0 #FFFFFF;
			display: -webkit-box; /* OLD - iOS 6-, Safari 3.1-6 */
		    display: -moz-box; /* OLD - Firefox 19- (buggy but mostly works) */
		    display: -ms-flexbox; /* TWEENER - IE 10 */
		    display: -webkit-flex; /* NEW - Chrome */
		    display: flex; /* NEW, Spec - Opera 12.1, Firefox 20+ */
		    -ms-flex-direction: column;
		    -moz-flex-direction: column;
		    -webkit-flex-direction: column;
		    flex-direction: column;
		}

		.toolbarPanel {
			width: 100%;
			height: 50px;
		}	
		
		.btnToolbar {
		    background-position: center center !important;
		    cursor: pointer;
		    height: 30px !important;
		    padding: 10px;
		    width: 30px !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.panelGrid {
			width: 100%;
			 -webkit-box-flex: 1; /* OLD - iOS 6-, Safari 3.1-6 */
		    -moz-box-flex: 1; /* OLD - Firefox 19- */
		    -webkit-flex: 1; /* Chrome */
		    -ms-flex: 1; /* IE 10 */
		    flex: 1; /* NEW, */
		}
		
		.imgGrid {
			opacity: 0.4;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgGrid:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		    border-radius: 20px;
		}
		
		.imgGrid:ACTIVE {
		    background-color: rgba(0, 0, 0, 0.2) !important;
		}
		
		.imgPlanned {
			opacity: 0.7;
		    filter: literal("alpha(opacity=40)");
		    cursor: pointer;
		    padding: 3px;
		    background-position: center !important
		}
		
		.imgPlanned:HOVER {
			opacity: 1.0;
		    filter: literal("alpha(opacity=100)");
		}
		
		.panelPager {
		    bottom: 0;
		    height: 30px;
		    position: absolute;
		    width: 100%;
		}
		
		.pager {
			margin: auto;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="toolbarPanel" addStyleNames="{style.toolbarPanel}">
			<g:Image ui:field="btnAddRecord" resource="{commons.add_24}" title="{labels.AddRecord}" addStyleNames="{style.btnToolbar}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelGrid" addStyleNames="{style.panelGrid}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 