<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:menu="urn:import:bpm.es.web.client.menu"
	xmlns:my="urn:import:bpm.es.web.client.panels">
    
	<ui:with field='resources' type='bpm.es.web.client.images.Images' />
	<ui:with field='labels' type='bpm.es.web.client.I18N.Labels' />
	
	<ui:style type="bpm.es.web.client.panels.MainPanel.MyStyle">
		.toolbar {
			background: #E10203;
			height: 60px;
			width: 100%;
		}
      
		.header {
	        font-size: 200%;
	        margin-left: 60px;
	        background: #4285f4 !important;
		}
		
		.main {
			left: 256px;
	
			transition: left 0.3s ease-in-out 0s, padding 0.3s ease-in-out 0s;
	
			bottom: 0;
		    position: absolute;
		    right: 0;
		    top: 0;
		}
		
		.bigContent {
        	position: absolute;
        	width: 100%;
        	top: 60px;
        	bottom: 0px;
		}
		
		.content {
        	position: absolute;
        	left: 15px;
        	top: 15px;
        	right: 15px;
        	bottom: 15px;
        	background: white;
		}
		
		.scrim {
		    background-color: rgba(0, 0, 0, 0.3);
		    bottom: 0;
		    left: 0;
		    opacity: 0;
		    position: absolute;
		    right: 0;
		    top: 0;
		    transition: opacity 0.38s ease-in-out 0s, visibility 0.38s ease-in-out 0s;
		    visibility: hidden;
		    
	    	-moz-box-sizing: border-box;
		    margin: 0;
		}
		
		.scrimOpen {
			opacity: 1;
			visibility: visible;
		}
		
		.fullRelative {
			width: 100%;
			height: 100%;
			position: relative;
		}
	</ui:style>
	<g:HTMLPanel>
		<menu:MenuPanel ui:field="menu" />
		<g:HTMLPanel ui:field="panelMain" addStyleNames="{style.main}">
			<g:HTMLPanel addStyleNames="{style.fullRelative}">
				<my:TopToolbar ui:field="toolbar" addStyleNames="{style.toolbar}"/>
				<div class="{style.bigContent}">
					<div class="{style.fullRelative}">
						<g:SimplePanel ui:field="content" addStyleNames="{style.content}"/>
					</div>
				</div>
				<g:SimplePanel ui:field="scrim" addStyleNames="{style.scrim}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 