<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.es.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style>
		.toolbar {
		    height: 100%;
		    overflow: hidden;
		    width: 100%;
		    border-bottom: 1px solid lightgray;
		}
		
		.txtTitleWebapp {
		    display: inline-block;
		    font-size: 40px;
		    height: 100%;
		    text-overflow: ellipsis;
		    vertical-align: top;
		    width: literal("calc(100% - 400px)");
		    color: white;
		    margin-left: 20px;
		}
		
		.panelImgRight {
	        position: absolute;
		    right: 0;
		    text-align: right;
		    top: 0;
		    vertical-align: top;
		}

		.imgLoggedUser {
			height: 50px !important;
			width: 50px !important;
		    margin-left: 5px;
			cursor: pointer;
			transition: all 1s;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			-webkit-box-shadow: 0 3px 10px -3px black;
			-moz-box-shadow: 0 3px 10px -3px black;
			-oz-box-shadow: 0 3px 10px -3px black;
			-o-box-shadow: 0 3px 10px -3px black;
			box-shadow: 0 3px 10px -3px black;
		}

		.imgLoggedUser:hover{
			border-radius: 50px;
			-webkit-border-radius: 50px;
			-moz-border-radius: 50px;
		}
		
		.imgLoggedUser.title {
			position: absolute;
			width: 100px;
			height: 20px;
			line-height: 20px;
			padding: 10px;
			font-size: 14px;
			text-align: center;
			color: rgb(113, 157, 171);
			background: rgb(255, 255, 255);
			border: 4px solid rgb(255, 255, 255);
			border-radius: 5px;
			text-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 1px;
			box-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 2px 0px;
		}

		.imgLoggedUser.tooltip:after {
			content: "";
			position: absolute;
			width: 0;
			height: 0;
			border-width: 10px;
			border-style: solid;
			border-color: transparent transparent #FFFFFF transparent;
			top: 10px;
			left: 50px;
		}
		
		.styleImgButton {
			border-radius: 32px;
			z-index: 1;
			cursor: pointer;
			transition: background-color 0.5s;
			height: 30px !important;
			width: 30px !important;
			background-position: center !important;
			margin-top: 4px;
			margin-left: 5px;
			padding: 10px;
		}

		.styleImgButton:HOVER {
			background-color: lightgray !important;
		}
		
		.logo {
	       background: none repeat scroll 0 0 #FFFFFF;
		    border: 1px solid #000000;
		    margin-left: 6px;
		    margin-top: 2px;
		    padding: 3px 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.toolbar}">
		<g:Image ui:field="imgLogo" resource="{resources.logo_GrandLyon}" addStyleNames="{style.logo}"/>
		<g:Label ui:field="txtTitleWebapp" addStyleNames="{style.txtTitleWebapp}">Lyon Protection Enfance</g:Label>
		
		<g:HTMLPanel ui:field="panelFullInfo" addStyleNames="{style.panelImgRight}">
			<g:Image ui:field="imgUser" title="{label.SeeProfile}" addStyleNames="{style.imgLoggedUser}"/>
			<g:Image resource="{resources.help_32}" title="{label.About}" ui:field="imgAbout" addStyleNames="{style.styleImgButton}"/>
			<g:Image resource="{resources.exit_32}" title="{label.LogOut}" ui:field="imgOut" addStyleNames="{style.styleImgButton}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 