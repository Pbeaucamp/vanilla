<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.map.viewer.web.client.wizard.ManageDataObservatory.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
			z-index:20;
		}
		
		.lblOver {
		    width: 670px;
		    padding: 10px;
		    margin-top: 5px;
		    text-align: left;
		}
		
		.txtblock {
		    display: block;
		    padding: 10px;
		    margin: 10px;
		    width: 650px;
		}

	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		
		<g:Label ui:field="lblName" addStyleNames="{style.lblOver}"/>
		<g:TextBox ui:field="txtName" addStyleNames="{style.txtblock}"/>
		<g:Label ui:field="lblAuthor" addStyleNames="{style.lblOver}"/>
		<g:TextBox ui:field="txtAuthor" addStyleNames="{style.txtblock}"/>
		<g:Label ui:field="lblDescriptif" addStyleNames="{style.lblOver}"/>
		<g:TextArea ui:field="txtDescriptif" addStyleNames="{style.txtblock}"/>
	</g:HTMLPanel>
</ui:UiBinder> 