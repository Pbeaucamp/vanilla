<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	<ui:style>
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.lstData {
			position: absolute;
			display: block;
		    margin: 9px;
		    height: 20px;
		    width: 250px;
		    top: 0;
		    right: 40px;
			z-index: 1;
		}
		
		.lblData {
		    position: absolute;
		    padding: 5px;
		    right: 255px;
		    line-height: 20px;
		    top: 0;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="lblData" addStyleNames="{style.lblData}"/>
		<g:ListBox ui:field="lstData" addStyleNames="{style.lstData}"/>	
		<g:SimplePanel ui:field="graphPanel" addStyleNames="{style.mainPanel}"></g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 