<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.map.viewer.web.client.images.Images' />
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.map.viewer.web.client.panel.ContentDisplayPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
			position: relative;
		}
		
		.toolbarParent {
			position: absolute;
			top: 0px;
			left: 0px;
			height: 40px;
			right: 0px;
			overflow: hidden;
			display: inline-block;
		}
		
		.contentPanel {
			position: absolute;
			top: 40px;
			left: 0px;
			right: 0px;
			bottom: 10px;
		    border: 1px solid #D3D3D3;
		    overflow: auto;
		    -moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
		.displayNone {
			display: none;
		}
		
		
		.shadow {
			witdh: 100%;
			top: 0px;
			bottom: 10px;
			position: absolute;
			-moz-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-webkit-box-shadow: 1px 5px 5px 0px #9b9b9b;
			-o-box-shadow: 1px 5px 5px 0px #9b9b9b;
			box-shadow: 1px 5px 5px 0px #9b9b9b;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="tabHeaderPanel" addStyleNames="{style.toolbarParent}"/>
		<g:HTMLPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
	</g:HTMLPanel>
</ui:UiBinder> 