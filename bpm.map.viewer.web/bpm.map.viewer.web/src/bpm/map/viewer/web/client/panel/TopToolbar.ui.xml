<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.map.viewer.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	<ui:with field='cmnlabel' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.map.viewer.web.client.panel.TopToolbar.MyStyle">
		.lblWelcome {
			font-size: 14px;
		}
		
		.styleImg {
			margin-left: 5px;
			margin-right: 5px;
		}
		
		.styleImgMinimal {
			z-index: 1;
			cursor: pointer;
			transition: background-color 0.5s;
			background-position: center !important;
		}
		
		.styleImgWebapps {
			z-index: 1;
			cursor: pointer;
			transition: background-color 0.5s;
			height: 60px !important;
			width: 60px !important;
			background-position: center !important;
		}
		
		.styleImgWebapps:HOVER, .btnSelected, .styleImgMinimal:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}			

		.styleImgButton {
			border-radius: 32px;
			
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
			
			z-index: 1;
			cursor: pointer;
			transition: background-color 0.5s;
			height: 32px !important;
			width: 32px !important;
			padding : 6.5px;
			background-position: center !important;
			margin-top: 7px;
			margin-left: 5px;
		}

		.styleImgButton:HOVER {
			background-color: white !important;
		}
		
		.panelBtn {
    		margin: 2px auto auto;
		}
		
		.btnPanel {
			width: 100%;
			z-index: 1;
		}
		
		.toolbar {
			width: 100%;
			height: 60px;
			-webkit-box-shadow: 0 3px 10px -3px black;
			-moz-box-shadow: 0 3px 10px -3px black;
			-oz-box-shadow: 0 3px 10px -3px black;
			-o-box-shadow: 0 3px 10px -3px black;
			box-shadow: 0 3px 10px -3px black;
			display: inline-block;
			vertical-align: middle;
		}

		.imgLoggedUser {
			height: 50px !important;
			cursor: pointer;
			transition: all 1s;
			-webkit-transition: all 1s;
			-moz-transition: all 1s;
			-webkit-box-shadow: 0 3px 10px -3px black;
			-moz-box-shadow: 0 3px 10px -3px black;
			-oz-box-shadow: 0 3px 10px -3px black;
			-o-box-shadow: 0 3px 10px -3px black;
			box-shadow: 0 3px 10px -3px black;
		}

		.imgLoggedUser:hover{
			border-radius: 50px;
			-webkit-border-radius: 50px;
			-moz-border-radius: 50px;
			opacity: 0.8;
		}
		
		.panelImgRight {
			float: right;
		    margin-right: 15px;
		}
		.panelImgLeft {
			float: left;
		}
		
		.imgLoggedUser.title {
			position: absolute;
			width: 100px;
			height: 20px;
			line-height: 20px;
			padding: 10px;
			font-size: 14px;
			text-align: center;
			color: rgb(113, 157, 171);
			background: rgb(255, 255, 255);
			border: 4px solid rgb(255, 255, 255);
			border-radius: 5px;
			text-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 1px;
			box-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 2px 0px;
		}

		.imgLoggedUser.tooltip:after {
			content: "";
			position: absolute;
			width: 0;
			height: 0;
			border-width: 10px;
			border-style: solid;
			border-color: transparent transparent #FFFFFF transparent;
			top: 10px;
			left: 50px;
		}
		
		.lblLoggedAs {
			margin-top : 2px;
		}
		
		.separator {
			border: 1px solid gray;
		    display: inline-block;
		    height: 44px;
		    margin-top: 7px;
		    vertical-align: top;
		    width: 0;
		}
		
		.imgWebApps {
			display: inline-block;
		}
		
		.imgLogo {
			left: 50%;
    		position: absolute;
			height: 60px;
			transform: translateX(-50%);
		}
		
		.txtTitleWebapp {
		    display: inline-block;
		    font-size: x-large;
		    left: 47%;
		    position: absolute;
		    vertical-align: top;
		}
		
		.txtTitleSmall {
		    font-size: inherit;
		    font-weight: bold;
		    margin-top: 2px;
		}
		
		.buttonToolbar {
			height: 60px!important;
			width: 60px!important;
			z-index: 1;
			cursor: pointer;
			transition: background-color 0.5s;
			background-position: center !important;
		}
		
		.buttonToolbar:hover {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.buttonHelp {
			height: 23px !important;
	    	padding: 11px 13.5px;
	    	width: 18px !important;
		}
	</ui:style>
	
	<g:HTMLPanel ui:field="toolbar" addStyleNames="{style.toolbar}">
		<!-- <g:HTMLPanel addStyleNames="{style.panelImgLeft}">
			<g:Image ui:field="imgPDF" resource="{resources.ic_download_pdf}" title="{label.ExportAsPDF}" addStyleNames="{style.buttonToolbar}"/>
			<g:Image ui:field="imgPrint" resource="{resources.print}" title="{label.Print}" addStyleNames="{style.buttonToolbar}"/>
			<g:Image ui:field="imgSave" resource="{resources.save}" title="{label.Save}" addStyleNames="{style.buttonToolbar}"/>
			<g:Image ui:field="imgCsv" resource="{resources.ic_export_csv}" title="{label.ExportAsXLS}" addStyleNames="{style.buttonToolbar}"/>
		</g:HTMLPanel> -->
		
		<g:Image ui:field="imgLogo"/>
		<g:HTMLPanel ui:field="panelFullInfo" addStyleNames="{style.panelImgRight}">
			<!-- <g:Image ui:field="imgUser" title="{label.SeeProfile}" addStyleNames="{style.imgLoggedUser}"/> -->
			<g:Image resource="{resources.ic_menu_help}" title="{cmnlabel.About}" ui:field="imgAbout" addStyleNames="{style.styleImgButton}, {style.buttonHelp}"/>
			<g:Image resource="{resources.logout}" title="{label.LogOut}" ui:field="imgOut" addStyleNames="{style.styleImgButton}"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="panelMinimalInfo" addStyleNames="{style.panelImgRight}">
			<g:HTML ui:field="lblLoggedAs" addStyleNames="{style.lblLoggedAs}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 