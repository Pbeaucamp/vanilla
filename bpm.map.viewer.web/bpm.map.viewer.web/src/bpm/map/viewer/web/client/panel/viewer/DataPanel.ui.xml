<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='resources' type='bpm.map.viewer.web.client.images.Images' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	
	<ui:style type="bpm.map.viewer.web.client.panel.viewer.DataPanel.MyStyle">
		.pager {
			margin: auto;
		}
	
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.gridPanel {
			position: absolute;
			top: 30px;
			bottom: 30px;
			width: 100%;
		}
		
		.lstData {
			display: block;
		    margin-left: 100px;
		    margin-top: 5px;
		    width: 250px;

		}
		
		.lblData {
		    float: left;
		    margin-left: 12px;
		    margin-top: 5px;
		    margin-right: 10px;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
		}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="lblData" addStyleNames="{style.lblData}"/>
		<g:ListBox ui:field="lstData" addStyleNames="{style.lstData}"/>	
		<g:HTMLPanel ui:field="gridPanel" addStyleNames="{style.gridPanel}"></g:HTMLPanel>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 