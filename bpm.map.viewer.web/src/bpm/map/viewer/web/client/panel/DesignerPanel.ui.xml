<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.map.viewer.web.client.images.Images' />
	<ui:with field='commonLabels' type='bpm.gwt.commons.client.I18N.LabelsConstants' />
	<ui:with field='commons' type='bpm.gwt.commons.client.images.CommonImages' />
	
	<ui:style type="bpm.map.viewer.web.client.panel.DesignerPanel.MyStyle">
		.mainPanel {
			width: 100%;
			height: 100%;
		}
		
		.panelToolbar {
			height: 40px;
			width: 100%;
		}
		
		.panelContent {
			position: absolute;
			top: 40px;
			width: 100%;
			bottom: 30px;
		}
		
		.panelPager {
			position: absolute;
			height: 30px;
			width: 100%;
			bottom: 0px;
			text-align: center;
			text-align: -moz-center;
		}
		
		.btnToolbar {
		    height: 24px !important;
		    width: 24px !important;
		    padding: 8px;
		    cursor: pointer;
		    background-position: center !important;
		}
		
		.btnToolbar:HOVER {
			background-color: white !important;
			-webkit-box-shadow: 1px 1px 6px -2px black inset;
			-moz-box-shadow: 1px 1px 6px -2px black inset;
			-oz-box-shadow: 1px 1px 6px -2px black inset;
			-o-box-shadow: 1px 1px 6px -2px black inset;
			box-shadow: 1px 1px 6px -2px black inset;
		}
		
		.marginLeft {
			margin-left: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<g:HTMLPanel ui:field="panelToolbar" addStyleNames="{style.panelToolbar}">
			<g:Image ui:field="btnRefresh" resource="{commons.refresh_24}" title="{label.Refresh}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnAddMap" resource="{commons.add_24}" title="{label.AddANewMap}" addStyleNames="{style.btnToolbar}"/>
			<g:Image ui:field="btnEditMap" resource="{commons.edit_24}" title="{label.Edit}" addStyleNames="{style.btnToolbar}"/>
			<!-- <g:Image ui:field="btnPreviewMap" resource="{commons.filtre_24}" title="{label.Preview}" addStyleNames="{style.btnToolbar}"/> -->
			<g:Image ui:field="btnDeleteMap" resource="{commons.delete_24}" title="{label.Delete}" addStyleNames="{style.btnToolbar}"/>	
			<g:Image ui:field="btnMapServer" resource="{commons.map}" title="{commonLabels.MapServers}" addStyleNames="{style.btnToolbar}, {style.marginLeft}"/>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="panelContent" addStyleNames="{style.panelContent}"/>
		<g:SimplePanel ui:field="panelPager" addStyleNames="{style.panelPager}"/>
	</g:HTMLPanel>
</ui:UiBinder> 