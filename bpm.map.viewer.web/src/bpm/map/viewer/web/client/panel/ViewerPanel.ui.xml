<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:bpm.map.viewer.web.client.panel">
	
	<ui:with field='label' type='bpm.map.viewer.web.client.I18N.LabelsConstants' />
	<ui:with field='resources' type='bpm.map.viewer.web.client.images.Images' />
	<ui:style type="bpm.map.viewer.web.client.panel.ViewerPanel.MyStyle">
		.inline{
			display: inline-block;
			vertical-align: top;
		}
		
		.leftPanel{
			position: absolute;
    		right: 400px;
    		top: 0;
    		left:0;
			height: 100%;
			overflow: auto;
			background: #FDFDFD;
			border: 1px solid #DDD;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			-ms-box-sizing: border-box;
			//margin-right: 5px;
		}
		
		.mapPanel{
			top: 0;
			bottom: 350px;
			background: #fff;
			overflow: auto;
			position: absolute;
			width: 100%;
			//min-height: 40px;
		}
		.graphPanel{
			position: absolute;
			bottom: 0;
			height: 350px;
			width: 100%;
			background: #B3B09F;
			//min-height: 295px;
		}
		.rightPanel{
			position: absolute;
   			right: 0;
  			width: 400px;
  			height: 99%;
		}	
		.contentPanel{
			width: 100%;
			height: 100%;
		}
		
		.dataPanel{
			
		}
		
		.analysisPanel{
			
		}
		
		.panelSplitter {
		    height: 2%;
		    position: relative;
		    background: #B3B09F;
		    width: 100%;
		
		}
		
		.splitter {
			background: url("images/splitPanelThumb.png") no-repeat scroll center center;
		    cursor: row-resize;
	    	height: 100%;
    		width: 100%;
		}
		.imgCollapse {
			height: 20px !important;
			width: 20px !important;
			padding: 8px;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			top: 0;
			left: 0;
		}
		
		.imgExpand {
			height: 20px !important;
			width: 20px !important;
			padding: 8px;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			top: 0;
			right: 0;
		}
		
		.bottomCollapse {
			height: 20px !important;
			width: 20px !important;
			padding: 8px;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			bottom: 312px;
			left: 0;
			z-index: 20;
		}
		
		.bottomExpand {
			height: 20px !important;
			width: 20px !important;
			padding: 8px;
			background-position: center !important;
			cursor: pointer;
			position: absolute;
			bottom: 0;
			left: 0;
			z-index: 20;
		}
		
		.imgCollapse:hover, .imgExpand:hover, .bottomCollapse:hover, .bottomExpand:hover {
			opacity: 0.4;

		}
		.red {
			background-color : #CA0E1C;
		}
		
		.lightgrey {
			background-color : #D7CFBA;
		}
		
		.grey {
			background-color : #B3B09F;
		}
		
		.darkgrey {
			background-color : #5C584C;
		}

		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.contentPanel}">
		<g:HTMLPanel ui:field="leftPanel" addStyleNames="{style.leftPanel} {style.inline}" >
			<g:HTMLPanel ui:field="mapViewer" addStyleNames="{style.mapPanel} " />
			<!-- <g:SimplePanel ui:field="panelSplitter" addStyleNames="{style.panelSplitter}"/> -->
			<g:Image ui:field="graphExpand" title="{label.restore}" resource="{resources.ic_bottom_expand}" addStyleNames="{style.bottomExpand}"/>
			<g:Image ui:field="graphCollapse" title="{label.reduce}" resource="{resources.ic_bottom_collapse}" addStyleNames="{style.bottomCollapse}"/>
			<g:HTMLPanel ui:field="graphPanel" addStyleNames="{style.graphPanel} " />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="rightPanel" addStyleNames="{style.inline} {style.rightPanel}">
			<g:Image ui:field="imgExpand" title="{label.restore}" resource="{resources.ic_right_expand}" addStyleNames="{style.imgExpand}"/>
			<g:Image ui:field="imgCollapse" title="{label.reduce}" resource="{resources.ic_right_collapse}" addStyleNames="{style.imgCollapse}"/>
			<g:HTMLPanel ui:field="dataPanel" addStyleNames="{style.dataPanel} " />
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 