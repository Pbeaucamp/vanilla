<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bpm.map.viewer.web.client.dialogs.ExportMapDial.MyStyle">
	
		.panelContent {
			height: 350px;
			width: 690px;
			z-index:20;
		}
		
		.lblOver {
		    width: 600px;
		    padding-left: 10px;
		    margin-top: 10px;
		    text-align: left;
		}
		
		.txtblock {
		    display: block;
		    padding: 5px;
		    margin: 10px;
		    width: 350px;
		}
		
		.lstblock {
		    display: block;
		    padding: 2px;
		    margin: 10px;
		    width: 630px;
		}
		
		.txtArea {
			display: block;
		    padding: 5px;
		    margin: 10px;
		    max-width: 630px;
		    min-width: 630px;
		}
		
		.chk {
		    padding-left: 10px;
		    margin-top: 10px;
		}

	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panelContent}">
		<g:Label ui:field="lblType" addStyleNames="{style.lblOver}"/>
		<g:ListBox ui:field="lstType" addStyleNames="{style.lstblock}"/>
		
		<g:Label ui:field="lblName" addStyleNames="{style.lblOver}"/>
		<g:TextBox ui:field="txtName" addStyleNames="{style.txtblock}"/>
		<g:Label ui:field="lblAuthor" addStyleNames="{style.lblOver}"/>
		<g:TextBox ui:field="txtAuthor" addStyleNames="{style.txtblock}"/>
		<g:Label ui:field="lblDescriptif" addStyleNames="{style.lblOver}"/>
		<g:TextArea ui:field="txtDescriptif" addStyleNames="{style.txtArea}"/>
		
		<g:CheckBox ui:field="chkGED" name="ged" addStyleNames="{style.chk}"/>
		<g:Label ui:field="lblVersion" addStyleNames="{style.lblOver}"/>
		<g:ListBox ui:field="lstVersion" addStyleNames="{style.lstblock}"/>
		
		<!-- <g:CheckBox ui:field="chkExport" name="export" addStyleNames="{style.chk}"/> -->
	</g:HTMLPanel>
</ui:UiBinder> 