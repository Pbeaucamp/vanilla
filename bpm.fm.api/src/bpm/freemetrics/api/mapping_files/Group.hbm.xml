<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bpm.freemetrics.api.organisation.group.Group" table="fm_groups">
            <id name="id" type="java.lang.Integer">
                <column name="GR_ID" />
               <generator class="increment"/>
            </id>
            
            <property name="name" type="string">
                <column name="GR_NAME"/>
            </property>
            
            <property name="comment" type="string">
                <column name="GR_COMMENT"/>
            </property>
            <property name="description" type="string">
			<column name="GR_DESCRIPTION"/>
		</property>
            
            <property name="date" type="date">
                <column name="GR_CREATION_DATE"/>
            </property>
            
            <property name="image" type="string">
                <column name="GR_IMAGE"/>
            </property>
            
            <property name="custom" type="string">
                <column name="GR_CUSTOM_1"/>
            </property>
            
            <property name="typeCollectivite" type="java.lang.Integer">
                <column name="GR_TYPE_COLLECTIVITE"/>
            </property>
	
	</class>
</hibernate-mapping>