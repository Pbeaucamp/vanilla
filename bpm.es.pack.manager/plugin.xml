<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="bpm.es.pack.manager.perspective.WorkplacePerspective"
            icon="src/bpm/es/pack/manager/icons/VanillaPlace_256.png"
            id="bpm.es.pack.manager.perspective.WorkplacePerspective"
            name="Vanilla Place">
      </perspective>
      <perspective
            class="bpm.es.pack.manager.perspective.DeploymentsPerspective"
            icon="src/bpm/es/pack/manager/icons/package.png"
            id="bpm.es.pack.manager.perspective.DeploymentsPerspective"
            name="Package Manager">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="bpm.es.pack.manager.views.ViewWorkplace"
            id="bpm.es.pack.manager.views.ViewWorkplace"
            name="Vanilla Place"
            restorable="true">
      </view>
      <view
            class="bpm.es.pack.manager.views.ViewPackage"
            id="bpm.es.pack.manager.views.ViewPackage"
            name="Package Manager"
            restorable="true">
      </view>
      <view
            class="bpm.es.pack.manager.views.ViewHistoricImport"
            id="bpm.es.pack.manager.views.ViewHistoricImport"
            name="Historiques des imports"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="bpm.es.pack.manager.category"
            name="%package_manage">
      </category>
      <command
            categoryId="bpm.es.pack.manager.category"
            id="bpm.es.pack.manager.commands.ImportPackage"
            name="%package_import">
      </command>
      <command
            categoryId="bpm.es.pack.manager.category"
            id="bpm.es.pack.manager.command.ExportPackage"
            name="%package_export">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="bpm.es.pack.manager.handlers.ImportPackageHandler"
            commandId="bpm.es.pack.manager.commands.ImportPackage">
      </handler>
      <handler
            class="bpm.es.pack.manager.handlers.ExportPackageHandler"
            commandId="bpm.es.pack.manager.command.ExportPackage">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?before=help">
         <menu
               id="bpm.es.pack.manager.menu"
               label="Package Manager">
            <command
                  commandId="bpm.es.pack.manager.commands.ImportPackage"
                  id="bpm.es.pack.manager.menu.ImportPackage"
                  style="push">
            </command>
            <command
                  commandId="bpm.es.pack.manager.command.ExportPackage"
                  id="bpm.es.pack.manager.menu.ExportPackage"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
