<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bpm.vanilla.platform.core.beans.User" table="users">
            <id name="id" type="java.lang.Integer">
                <column name="US_ID" />
                 <generator class="increment"/>
            </id>

			<property name="login" type="string">
                <column name="US_LOGIN"/>
            </property>

            <property name="name" type="string">
                <column name="US_NAME"/>
            </property>

            <property name="password" type="string">
                <column name="US_PASSWORD"/>
            </property>

            <property name="surname" type="string">
                <column name="US_SURNAME"/>
            </property>

            <property name="function" type="string">
                <column name="US_FONCTION"/>
            </property>

            <property name="telephone" type="string">
                <column name="US_TELEPHONE"/>
            </property>

            <property name="cellular" type="string">
                <column name="US_CELLULAR"/>
            </property>

            <property name="skypeName" type="string">
                <column name="US_SKYPE_NAME"/>
            </property>

            <property name="skypeNumber" type="string">
                <column name="US_SKYPE_NUMBER"/>
            </property>

            <property name="businessMail" type="string">
                <column name="US_BUSINESS_MAIL"/>
            </property>
            
            <property name="privateMail" type="string">
                <column name="US_PRIVATE_MAIL"/>
            </property>
            
            <property name="creation" type="date">
                <column name="US_CREATION_DATE"/>
            </property>
            
            <property name="image" type="string">
                <column name="US_IMAGE"/>
            </property>
            
             <property name="fmUserId" type="java.lang.Integer">
                <column name="US_FM_USER_ID"/>
            </property>
            
             <property name="superUser" type="java.lang.Boolean">
                <column name="IS_SUPER_USER"/>
            </property>
            
            <property name="version" type="java.lang.Integer">
                <column name="USER_VERSION"/>
            </property>
            <property name="dateStartActif" type="java.util.Date">
                <column name="USER_DATE_START_ACTIF"/>
            </property>
            <property name="dateStopActif" type="java.util.Date">
                <column name="USER_DATE_STOP_ACTIF"/>
            </property>
              <property name="actifField" type="java.lang.Integer">
                <column name="USER_ACTIF_FIELD"/>
            </property>
            <property name="passwordReset" type="java.lang.Integer">
                <column name="US_PASSWORD_TO_RESET"/>
            </property>
            
            <property name="passwordChange" type="java.lang.Integer">
                <column name="US_PASSWORD_TO_CHANGE"/>
            </property>
            
            <property name="vanillaTheme" type="string">
            	<column name="US_VANILLA_THEME"/>
            </property>

            <property name="aklaboxLogin" type="string">
                <column name="US_AKLABOX_LOGIN"/>
            </property>

            <property name="aklaboxPassword" type="string">
				<column name="US_AKLABOX_PASSWORD"/>
            </property>
            
            <property name="datePasswordModification" type="date">
                <column name="US_DATE_PASSWORD_MODIFICATION"/>
            </property>
            
            <property name="nbDayPasswordValidity" type="java.lang.Integer">
                <column name="US_PASSWORD_VALIDITY" not-null="true" default="0"/>
            </property>
            
            <property name="widget" type="java.lang.Boolean">
                <column name="IS_WIDGET" default="true"/>
            </property>
    </class>
</hibernate-mapping>